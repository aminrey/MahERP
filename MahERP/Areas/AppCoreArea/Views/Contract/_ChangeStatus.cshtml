@model ContractViewModel
@{
    Layout = null;
}

<div class="modal-header bg-primary">
    <h5 class="modal-title text-white">تغییر وضعیت قرارداد</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="py-3">
        <h4 class="text-center mb-3">انتخاب وضعیت جدید برای قرارداد</h4>
        <p class="text-muted text-center mb-4">
            قرارداد <strong>@Model.Title</strong> به نام <strong>@Model.StakeholderFullName</strong>
        </p>

        <form method="post" action="@Url.Action("ChangeStatusPost", "Contract")" id="changeStatusForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-4">
                <div class="d-flex flex-column gap-3">
                    <div class="form-check form-block">
                        <input class="form-check-input" type="radio" name="status" value="0" id="status-0" @(Model.Status == 0 ? "checked" : "")>
                        <label class="form-check-label" for="status-0">
                            <span class="d-block fw-semibold mb-1">پیش‌نویس</span>
                            <span class="d-block fs-sm text-muted">قرارداد در حالت پیش‌نویس است و نهایی نشده است.</span>
                        </label>
                    </div>
                    <div class="form-check form-block">
                        <input class="form-check-input" type="radio" name="status" value="1" id="status-1" @(Model.Status == 1 ? "checked" : "")>
                        <label class="form-check-label" for="status-1">
                            <span class="d-block fw-semibold mb-1">فعال</span>
                            <span class="d-block fs-sm text-muted">قرارداد فعال و در حال اجرا است.</span>
                        </label>
                    </div>
                    <div class="form-check form-block">
                        <input class="form-check-input" type="radio" name="status" value="2" id="status-2" @(Model.Status == 2 ? "checked" : "")>
                        <label class="form-check-label" for="status-2">
                            <span class="d-block fw-semibold mb-1">تمام شده</span>
                            <span class="d-block fs-sm text-muted">قرارداد با موفقیت به پایان رسیده است.</span>
                        </label>
                    </div>
                    <div class="form-check form-block">
                        <input class="form-check-input" type="radio" name="status" value="3" id="status-3" @(Model.Status == 3 ? "checked" : "")>
                        <label class="form-check-label" for="status-3">
                            <span class="d-block fw-semibold mb-1">لغو شده</span>
                            <span class="d-block fs-sm text-muted">قرارداد لغو شده و دیگر اعتبار ندارد.</span>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">انصراف</button>
    <button type="button" class="btn btn-primary" onclick="document.getElementById('changeStatusForm').submit();">
        <i class="fa fa-check me-1"></i> تغییر وضعیت
    </button>
</div>