@model MahERP.DataModelLayer.ViewModels.CrmViewModels.CrmLeadStatusViewModel
@{
    Layout = null;
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content modal-contents">
        <div class="block block-rounded block-themed block-transparent mb-0">
            <div class="block-header bg-info">
                <h3 class="block-title" style="color:white;">
                    <i class="fa fa-edit me-2"></i>ویرایش وضعیت Lead
                </h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>
            
            <form asp-area="AppCoreArea" asp-controller="CrmSettings" asp-action="SaveLeadStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="block-content">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Title" class="form-label">عنوان <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TitleEnglish" class="form-label">عنوان انگلیسی</label>
                            <input asp-for="TitleEnglish" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ColorCode" class="form-label">رنگ</label>
                            <input asp-for="ColorCode" type="color" class="form-control form-control-color w-100" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Icon" class="form-label">آیکون</label>
                            <input asp-for="Icon" class="form-control" placeholder="fa-circle" />
                            <small class="text-muted">مثال: fa-circle</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DisplayOrder" class="form-label">ترتیب نمایش</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" min="1" />
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="Description" class="form-label">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsDefault" type="checkbox" class="form-check-input" />
                                        <label asp-for="IsDefault" class="form-check-label">پیش‌فرض</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsFinal" type="checkbox" class="form-check-input" />
                                        <label asp-for="IsFinal" class="form-check-label">نهایی</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsPositive" type="checkbox" class="form-check-input" />
                                        <label asp-for="IsPositive" class="form-check-label">مثبت</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                        <label asp-for="IsActive" class="form-check-label">فعال</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="block-content block-content-full text-end bg-body">
                    <button class="btn btn-hero btn-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
                    <button class="btn btn-hero btn-info" data-save="modal-ajax-save" type="button">
                        <i class="fa fa-save me-1"></i>ذخیره تغییرات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
