@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationViewModel
@{
    ViewData["Title"] = "جزئیات - " + Model.DisplayName;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa fa-building me-2"></i>
            @ViewData["Title"]
        </h3>
        <div class="block-options">
            <a asp-action="Index" class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-right me-1"></i> بازگشت
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-alt-primary">
                <i class="fa fa-edit me-1"></i> ویرایش
            </a>
            <a asp-action="OrganizationChart" asp-route-organizationId="@Model.Id" class="btn btn-sm btn-alt-success">
                <i class="fa fa-sitemap me-1"></i> چارت سازمانی
            </a>
            <a asp-action="AddOrganizationContact" asp-route-organizationId="@Model.Id" class="btn btn-sm btn-alt-info">
                <i class="fa fa-user-plus me-1"></i> افزودن اعضا
            </a>
        </div>
    </div>

    <div class="block-content">
        <!-- آمار سریع -->
        @if (ViewBag.Statistics != null)
        {
            var stats = ViewBag.Statistics as MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationStatisticsViewModel;
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="block block-rounded bg-primary-light">
                        <div class="block-content text-center py-3">
                            <h3 class="mb-1">@stats.TotalDepartments</h3>
                            <small>بخش‌ها</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="block block-rounded bg-success-light">
                        <div class="block-content text-center py-3">
                            <h3 class="mb-1">@stats.TotalPositions</h3>
                            <small>سمت‌ها</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="block block-rounded bg-info-light">
                        <div class="block-content text-center py-3">
                            <h3 class="mb-1">@stats.TotalMembers</h3>
                            <small>اعضا</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="block block-rounded bg-warning-light">
                        <div class="block-content text-center py-3">
                            <h3 class="mb-1">@stats.TotalContacts</h3>
                            <small>افراد مرتبط</small>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <!-- اطلاعات اصلی -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <i class="fa fa-info-circle me-2"></i> اطلاعات اصلی
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="@Model.LogoPath" alt="@Model.DisplayName"
                                 class="img-fluid mb-3" style="max-height: 150px;" />
                        }
                        else
                        {
                            <div class="py-4 bg-primary-light rounded mb-3">
                                <i class="fa fa-building fa-4x text-primary"></i>
                            </div>
                        }

                        <h4 class="mb-1">@Model.Name</h4>

                        @if (!string.IsNullOrEmpty(Model.Brand))
                        {
                            <p class="text-muted mb-2">@Model.Brand</p>
                        }

                        <span class="badge bg-info mb-3">@Model.OrganizationTypeText</span>

                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">فعال</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">غیرفعال</span>
                        }
                    </div>
                </div>

                <!-- اطلاعات قانونی -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <i class="fa fa-file-contract me-2"></i> اطلاعات قانونی
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless table-sm mb-0">
                            @if (!string.IsNullOrEmpty(Model.RegistrationNumber))
                            {
                                <tr>
                                    <td class="fw-bold" style="width: 45%;">شماره ثبت:</td>
                                    <td>@Model.RegistrationNumber</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.EconomicCode))
                            {
                                <tr>
                                    <td class="fw-bold">کد اقتصادی:</td>
                                    <td>@Model.EconomicCode</td>
                                </tr>
                            }
                            @if (Model.RegistrationDate.HasValue)
                            {
                                <tr>
                                    <td class="fw-bold">تاریخ ثبت:</td>
                                    <td>@Model.RegistrationDatePersian</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.LegalRepresentative))
                            {
                                <tr>
                                    <td class="fw-bold">نماینده قانونی:</td>
                                    <td>@Model.LegalRepresentative</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <!-- اطلاعات سیستمی -->
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-info-circle me-2"></i> اطلاعات سیستمی
                    </div>
                    <div class="card-body">
                        <div class="row small">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong>تاریخ ایجاد:</strong><br />
                                    @Model.CreatedDatePersian
                                </p>
                                <p class="mb-0">
                                    <strong>ایجاد کننده:</strong><br />
                                    @Model.CreatorName
                                </p>
                            </div>
                            @if (Model.LastUpdateDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <p class="mb-0">
                                        <strong>آخرین بروزرسانی:</strong><br />
                                        @Model.LastUpdateDatePersian
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>


            </div>

            <!-- اطلاعات تماس و سایر بخش‌ها -->
            <div class="col-md-8">
                <!-- ⭐⭐⭐ شماره‌های تماس (از جدول OrganizationPhone) ⭐⭐⭐ -->
                @if (Model.Phones != null && Model.Phones.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <i class="fa fa-phone me-2"></i> شماره‌های تماس
                            <span class="badge bg-white text-info float-end">@Model.Phones.Count شماره</span>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width: 50px;">#</th>
                                            <th>شماره تماس</th>
                                            <th>نوع</th>
                                            <th>داخلی</th>
                                            <th class="text-center">وضعیت</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int phoneRowNumber = 1;
                                        }
                                        @foreach (var phone in Model.Phones.OrderByDescending(p => p.IsDefault).ThenBy(p => p.DisplayOrder))
                                        {
                                            <tr class="@(phone.IsDefault ? "table-warning" : "")">
                                                <td class="text-center">@phoneRowNumber</td>
                                                <td>
                                                    <strong dir="ltr" class="d-inline-block">
                                                        <i class="fa fa-phone text-primary me-2"></i>
                                                        @phone.FormattedNumber
                                                    </strong>
                                                    @if (phone.IsDefault)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-2">
                                                            <i class="fa fa-star"></i> پیش‌فرض
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-@(phone.PhoneType switch
                                                          {
                                                              0 => "success",
                                                              1 => "primary",
                                                              2 => "info",
                                                              _ => "secondary"
                                                          })">
                                                        @phone.PhoneTypeText
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(phone.Extension))
                                                    {
                                                        <span class="badge bg-light text-dark" dir="ltr">
                                                            داخلی: @phone.Extension
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (phone.IsActive)
                                                    {
                                                        <span class="badge bg-success">فعال</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">غیرفعال</span>
                                                    }
                                                </td>
                                            </tr>
                                            phoneRowNumber++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <i class="fa fa-phone me-2"></i> شماره‌های تماس
                        </div>
                        <div class="card-body text-center py-4">
                            <i class="fa fa-phone fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">هیچ شماره تماسی ثبت نشده است</h5>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info mt-3">
                                <i class="fa fa-plus me-1"></i> افزودن شماره
                            </a>
                        </div>
                    </div>
                }

                <!-- اطلاعات تماس دیگر -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <i class="fa fa-envelope me-2"></i> اطلاعات تماس دیگر
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted">ایمیل</h6>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <i class="fa fa-envelope text-primary me-2"></i>
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted">وب‌سایت</h6>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <i class="fa fa-globe text-primary me-2"></i>
                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-muted">آدرس</h6>
                                <p>
                                    <i class="fa fa-map-marker-alt text-primary me-2"></i>
                                    @(Model.Address ?? "-")
                                </p>
                                @if (!string.IsNullOrEmpty(Model.PostalCode))
                                {
                                    <p class="small text-muted">کد پستی: @Model.PostalCode</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- توضیحات -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <i class="fa fa-sticky-note me-2"></i> توضیحات
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    </div>
                }

                <!-- ⭐⭐⭐ NEW: اعضای سازمان ⭐⭐⭐ -->
                @if (Model.Contacts != null)
                {

                    if (Model.Contacts?.Any() ?? false)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <i class="fa fa-users me-2"></i> اعضای سازمان
                                <span class="badge bg-white text-info float-end">@Model.Contacts.Count() نفر</span>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead>
                                            <tr>
                                                <th style="width: 50px;">#</th>
                                                <th>نام و نام خانوادگی</th>
                                                <th>نوع رابطه</th>
                                                <th>شماره تماس</th>
                                                <th class="text-center">وضعیت</th>
                                                <th class="text-center" style="width: 120px;">عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var orgContact in Model.Contacts.OrderByDescending(c => c.IsPrimary).ThenByDescending(c => c.ImportanceLevel))
                                            {
                                                <tr class="@(orgContact.IsPrimary ? "table-warning" : "")">
                                                    <td class="text-center">@orgContact.Id</td>
                                                    <td>
                                                        <strong>@orgContact.Contact.FullName</strong>
                                                        @if (orgContact.IsPrimary)
                                                        {
                                                            <span class="badge bg-warning text-dark ms-2">
                                                                <i class="fa fa-star"></i> اصلی
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-@(orgContact.RelationType switch
                                                              {
                                                                  0 => "primary",
                                                                  1 => "success",
                                                                  2 => "info",
                                                                  3 => "warning",
                                                                  4 => "secondary",
                                                                  _ => "light"
                                                              })">
                                                            @(orgContact.RelationType switch
                                                            {
                                                                0 => "مدیرعامل",
                                                                1 => "مدیر",
                                                                2 => "حسابدار",
                                                                3 => "کارمند",
                                                                _ => "سایر"
                                                            })
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @if (orgContact.Contact.Phones?.Any() == true)
                                                        {
                                                            var defaultPhone = orgContact.Contact.Phones.FirstOrDefault(p => p.IsDefault);
                                                            <span dir="ltr">
                                                                @(defaultPhone?.FormattedNumber ?? orgContact.Contact.Phones.First().FormattedNumber)
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                   
                                                    <td class="text-center">
                                                        @if (orgContact.IsActive)
                                                        {
                                                            <span class="badge bg-success">فعال</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">غیرفعال</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-sm">
                                                            <a asp-controller="Contacts"
                                                               asp-action="Details"
                                                               asp-route-id="@orgContact.ContactId"
                                                               class="btn btn-sm btn-alt-info"
                                                               title="جزئیات">
                                                                <i class="fa fa-eye"></i>
                                                            </a>
                                                            <button type="button"
                                                                    class="btn btn-sm btn-alt-danger"
                                                                    title="حذف از سازمان"
                                                                    onclick="removeOrganizationContact(@orgContact.Id, '@orgContact.Contact.FullName')">
                                                                <i class="fa fa-times"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <i class="fa fa-users me-2"></i> اعضای سازمان
                            </div>
                            <div class="card-body text-center py-4">
                                <i class="fa fa-users fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">هیچ عضوی به این سازمان اضافه نشده است</h5>
                                <a asp-action="AddOrganizationContact" asp-route-organizationId="@Model.Id" class="btn btn-info mt-3">
                                    <i class="fa fa-plus me-1"></i> افزودن اولین عضو
                                </a>
                            </div>
                        </div>
                    }
                }

                <!-- بخش‌های سازمانی -->
                @if (Model.Departments?.Any() == true)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <i class="fa fa-sitemap me-2"></i> بخش‌های سازمانی
                            <a asp-action="OrganizationChart" asp-route-organizationId="@Model.Id"
                               class="btn btn-sm btn-light float-end">
                                مشاهده چارت
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>عنوان بخش</th>
                                            <th>کد</th>
                                            <th>مدیر</th>
                                            <th class="text-center">تعداد اعضا</th>
                                            <th class="text-center">وضعیت</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var dept in Model.Departments.OrderBy(d => d.Level).ThenBy(d => d.DisplayOrder))
                                        {
                                            <tr>
                                                <td>
                                                    @for (int i = 0; i < dept.Level; i++)
                                                    {
                                                        <span class="text-muted">└─</span>
                                                    }
                                                    @dept.Title
                                                </td>
                                                <td>@(dept.Code ?? "-")</td>
                                                <td>@(dept.ManagerName ?? "-")</td>
                                                <td class="text-center">
                                                    <span class="badge bg-primary">@dept.ActiveMembersCount</span>
                                                </td>
                                                <td class="text-center">
                                                    @if (dept.IsActive)
                                                    {
                                                        <span class="badge bg-success">فعال</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">غیرفعال</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

               
               
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeOrganizationContact(contactId, contactName) {
            Swal.fire({
                title: 'حذف عضو',
                text: `آیا از حذف "${contactName}" از این سازمان اطمینان دارید؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'بله، حذف شود',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    // ارسال درخواست حذف به سرور
                    $.ajax({
                        url: '@Url.Action("RemoveOrganizationContact", "Organizations")',
                        type: 'POST',
                        data: {
                            id: contactId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.status === 'success' || response.status === 'redirect') {
                                Swal.fire('حذف شد!', 'عضو با موفقیت حذف شد.', 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطا!', response.message || 'خطا در حذف عضو', 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('خطا!', 'خطا در ارتباط با سرور', 'error');
                        }
                    });
                }
            });
        }
    </script>
}