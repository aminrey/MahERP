@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.PositionViewModel
@{
    ViewData["Title"] = "ویرایش سمت";
    var categories = ViewBag.Categories as List<string>;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1">
                                <i class="fas fa-edit text-warning"></i>
                                ویرایش سمت: @Model.Title
                            </h4>
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle"></i>
                                ویرایش اطلاعات سمت رایج سازمانی
                            </p>
                        </div>
                        <div>
                            <a asp-action="PositionIndex" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right"></i>
                                بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <form asp-action="EditPosition" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />

                <!-- Basic Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle text-primary"></i>
                            اطلاعات پایه
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- Title -->
                            <div class="col-md-6">
                                <label asp-for="Title" class="form-label">
                                    عنوان سمت (فارسی) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- TitleEnglish -->
                            <div class="col-md-6">
                                <label asp-for="TitleEnglish" class="form-label">
                                    عنوان انگلیسی
                                </label>
                                <input asp-for="TitleEnglish" class="form-control" dir="ltr" />
                                <span asp-validation-for="TitleEnglish" class="text-danger"></span>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">
                                    دسته‌بندی <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Category" class="form-control" list="categoryList" />
                                <datalist id="categoryList">
                                    @if (categories != null)
                                    {
                                        foreach (var cat in categories)
                                        {
                                            <option value="@cat"></option>
                                        }
                                    }
                                </datalist>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <!-- Level -->
                            <div class="col-md-3">
                                <label asp-for="Level" class="form-label">
                                    سطح سازمانی <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Level" class="form-select">
                                    <option value="0">مدیریت عالی</option>
                                    <option value="1">مدیریت میانی</option>
                                    <option value="2">کارشناس ارشد</option>
                                    <option value="3">کارشناس</option>
                                    <option value="4">کارمند عملیاتی</option>
                                </select>
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>

                            <!-- DefaultPowerLevel -->
                            <div class="col-md-3">
                                <label asp-for="DefaultPowerLevel" class="form-label">
                                    سطح قدرت (0-100)
                                </label>
                                <input asp-for="DefaultPowerLevel" type="number" min="0" max="100" 
                                       class="form-control" id="powerLevelInput" />
                                <span asp-validation-for="DefaultPowerLevel" class="text-danger"></span>
                                <div class="progress mt-2" style="height: 8px;">
                                    <div id="powerLevelBar" class="progress-bar bg-warning" 
                                         style="width: @(100 - Model.DefaultPowerLevel)%"></div>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    توضیحات و شرح وظایف
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Requirements -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-clipboard-check text-info"></i>
                            الزامات و شرایط
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- RequiresDegree -->
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input asp-for="RequiresDegree" class="form-check-input" 
                                           type="checkbox" id="requiresDegreeSwitch" />
                                    <label class="form-check-label" for="requiresDegreeSwitch">
                                        <i class="fas fa-graduation-cap"></i>
                                        نیاز به مدرک تحصیلی دارد
                                    </label>
                                </div>
                            </div>

                            <!-- MinimumDegree -->
                            <div class="col-md-4" id="degreeSection" style="display: @(Model.RequiresDegree ? "block" : "none");">
                                <label asp-for="MinimumDegree" class="form-label">
                                    حداقل مدرک
                                </label>
                                <select asp-for="MinimumDegree" class="form-select">
                                    <option value="">انتخاب کنید</option>
                                    <option value="0">دیپلم</option>
                                    <option value="1">کاردانی</option>
                                    <option value="2">کارشناسی</option>
                                    <option value="3">کارشناسی ارشد</option>
                                    <option value="4">دکترا</option>
                                </select>
                            </div>

                            <!-- MinimumExperienceYears -->
                            <div class="col-md-4">
                                <label asp-for="MinimumExperienceYears" class="form-label">
                                    حداقل سابقه کار (سال)
                                </label>
                                <input asp-for="MinimumExperienceYears" type="number" min="0" class="form-control" />
                            </div>

                            <!-- Salary Range -->
                            <div class="col-md-6">
                                <label asp-for="SuggestedMinSalary" class="form-label">
                                    حداقل حقوق پیشنهادی (ریال)
                                </label>
                                <input asp-for="SuggestedMinSalary" type="number" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SuggestedMaxSalary" class="form-label">
                                    حداکثر حقوق پیشنهادی (ریال)
                                </label>
                                <input asp-for="SuggestedMaxSalary" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Settings -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-cog text-secondary"></i>
                            تنظیمات
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- IsCommon -->
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsCommon" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsCommon" class="form-check-label">
                                        <i class="fas fa-star"></i>
                                        سمت رایج
                                    </label>
                                </div>
                            </div>

                            <!-- CanHireSubordinates -->
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input asp-for="CanHireSubordinates" class="form-check-input" type="checkbox" />
                                    <label asp-for="CanHireSubordinates" class="form-check-label">
                                        <i class="fas fa-users"></i>
                                        می‌تواند زیردست استخدام کند
                                    </label>
                                </div>
                            </div>

                            <!-- IsActive -->
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        <i class="fas fa-check-circle"></i>
                                        فعال
                                    </label>
                                </div>
                            </div>

                            <!-- DisplayOrder -->
                            <div class="col-md-6">
                                <label asp-for="DisplayOrder" class="form-label">
                                    ترتیب نمایش
                                </label>
                                <input asp-for="DisplayOrder" type="number" min="1" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a asp-action="PositionIndex" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                                انصراف
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i>
                                ذخیره تغییرات
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Power Level Slider
        $('#powerLevelInput').on('input', function () {
            const value = $(this).val();
            const percentage = 100 - value;
            $('#powerLevelBar').css('width', percentage + '%');

            if (value <= 20) {
                $('#powerLevelBar').removeClass('bg-warning bg-danger').addClass('bg-success');
            } else if (value <= 50) {
                $('#powerLevelBar').removeClass('bg-success bg-danger').addClass('bg-warning');
            } else {
                $('#powerLevelBar').removeClass('bg-success bg-warning').addClass('bg-danger');
            }
        });

        // Degree Toggle
        $('#requiresDegreeSwitch').on('change', function () {
            if ($(this).is(':checked')) {
                $('#degreeSection').slideDown();
            } else {
                $('#degreeSection').slideUp();
                $('#MinimumDegree').val('');
            }
        });

        // Set initial power bar color
        $(document).ready(function () {
            const value = $('#powerLevelInput').val();
            if (value <= 20) {
                $('#powerLevelBar').addClass('bg-success');
            } else if (value <= 50) {
                $('#powerLevelBar').addClass('bg-warning');
            } else {
                $('#powerLevelBar').addClass('bg-danger');
            }
        });
    </script>
}
