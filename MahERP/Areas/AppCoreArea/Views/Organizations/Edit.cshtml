@model OrganizationViewModel
@{
    ViewData["Title"] = "ویرایش - " + Model.DisplayName;
}

<!-- Hero -->
<div class="bg-image" style="background-image: url('/assets/media/photos/photo16@2x.jpg');">
    <div class="bg-primary-dark-op">
        <div class="content content-full text-center">
            <div class="my-3">
                <i class="fa fa-building-edit fa-3x text-white-75"></i>
            </div>
            <h1 class="h2 text-white mb-2">ویرایش اطلاعات سازمان</h1>
            <h2 class="h5 fw-normal text-white-75">
                @Model.DisplayName
            </h2>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-full">
    <form asp-action="Edit" method="post" id="organizationEditForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- نمایش خطاها -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none mb-3"></div>

        <!-- دکمه‌های بالای فرم -->
        <div class="block block-rounded mb-2">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="fa fa-save me-1"></i>
                            ذخیره تغییرات
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- ستون راست: اطلاعات اصلی -->
            <div class="col-lg-8">

                <!-- ========== اطلاعات اصلی ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-info-circle me-2 text-primary"></i>
                            اطلاعات اصلی
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Name">
                                        نام سازمان
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name"
                                           class="form-control form-control-lg"
                                           placeholder="نام سازمان"
                                           required />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Brand">
                                        نام برند
                                        <span class="text-muted small">(اختیاری)</span>
                                    </label>
                                    <input asp-for="Brand"
                                           class="form-control form-control-lg"
                                           placeholder="نام برند" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="OrganizationType">
                                        نوع سازمان
                                        <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="OrganizationType" class="form-select" required>
                                        <option value="">-- انتخاب کنید --</option>
                                        <option value="0">شرکت</option>
                                        <option value="1">سازمان</option>
                                        <option value="2">موسسه</option>
                                        <option value="3">نهاد</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="LegalRepresentative">
                                        نماینده قانونی
                                    </label>
                                    <input asp-for="LegalRepresentative"
                                           class="form-control"
                                           placeholder="نام نماینده قانونی" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== اطلاعات قانونی ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-file-contract me-2 text-success"></i>
                            اطلاعات قانونی
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="RegistrationNumber">
                                        <i class="fa fa-id-badge me-1"></i>
                                        شماره ثبت
                                        <span class="text-muted small">(11 رقم)</span>
                                    </label>
                                    <input asp-for="RegistrationNumber"
                                           type="text"
                                           maxlength="11"
                                           class="form-control"
                                           placeholder="00000000000"
                                           dir="ltr" />
                                    <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="EconomicCode">
                                        <i class="fa fa-barcode me-1"></i>
                                        کد اقتصادی
                                        <span class="text-muted small">(12 رقم)</span>
                                    </label>
                                    <input asp-for="EconomicCode"
                                           type="text"
                                           maxlength="12"
                                           class="form-control"
                                           placeholder="000000000000"
                                           dir="ltr" />
                                    <span asp-validation-for="EconomicCode" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="RegistrationDatePersian">
                                        <i class="fa fa-calendar me-1"></i>
                                        تاریخ ثبت
                                    </label>
                                    <input asp-for="RegistrationDatePersian"
                                           type="text"
                                           class="form-control js-flatpickr"
                                           placeholder="1400/01/01"
                                           readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Website">
                                        <i class="fa fa-globe me-1"></i>
                                        وب‌سایت
                                    </label>
                                    <input asp-for="Website"
                                           type="url"
                                           class="form-control"
                                           placeholder="https://example.com"
                                           dir="ltr" />
                                    <span asp-validation-for="Website" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== شماره‌های تماس ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-phone me-2 text-info"></i>
                            شماره‌های تماس
                            <span class="text-muted small">(اختیاری)</span>
                        </h3>
                        <div class="block-options">
                            <button type="button" class="btn btn-sm btn-alt-info" onclick="addPhoneRow()">
                                <i class="fa fa-plus me-1"></i>
                                افزودن شماره
                            </button>
                        </div>
                    </div>
                    <div class="block-content">
                        <div id="phonesContainer">
                            @* TODO: Load existing phones here *@
                            <div class="phone-row mb-3 p-3 border rounded" data-index="0">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <label class="form-label small">شماره تماس</label>
                                        <input name="Phones[0].PhoneNumber"
                                               type="tel"
                                               class="form-control"
                                               placeholder="02112345678"
                                               dir="ltr" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label small">نوع</label>
                                        <select name="Phones[0].PhoneType" class="form-select">
                                            <option value="1" selected>ثابت</option>
                                            <option value="0">موبایل</option>
                                            <option value="2">کاری</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label small d-block">تنظیمات</label>
                                        <div class="form-check form-check-inline">
                                            <input type="checkbox"
                                                   name="Phones[0].IsDefault"
                                                   class="form-check-input default-check"
                                                   checked />
                                            <label class="form-check-label small">پیش‌فرض</label>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <button type="button" class="btn btn-sm btn-danger" onclick="removePhoneRow(0)">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info d-flex align-items-center">
                            <i class="fa fa-info-circle fa-2x me-3"></i>
                            <div>
                                <strong>نکته:</strong>
                                شماره تماس اختیاری است. می‌توانید چندین شماره اضافه کنید.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== آدرس و ایمیل ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-map-marker-alt me-2 text-warning"></i>
                            آدرس و اطلاعات تماس
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="mb-4">
                            <label class="form-label" for="Email">
                                <i class="fa fa-envelope me-1"></i>
                                ایمیل
                            </label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="info@example.com"
                                   dir="ltr" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="Address">آدرس کامل</label>
                            <textarea asp-for="Address"
                                      class="form-control"
                                      rows="3"
                                      placeholder="استان، شهر، خیابان، پلاک..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="PostalCode">کد پستی</label>
                            <input asp-for="PostalCode"
                                   type="text"
                                   maxlength="10"
                                   class="form-control"
                                   placeholder="0000000000"
                                   dir="ltr" />
                        </div>
                    </div>
                </div>

            </div>

            <!-- ستون چپ: توضیحات و تنظیمات -->
            <div class="col-lg-4">

                <!-- ========== توضیحات ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-sticky-note me-2 text-warning"></i>
                            توضیحات
                        </h3>
                    </div>
                    <div class="block-content">
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="5"
                                  placeholder="توضیحات اضافی..."></textarea>
                    </div>
                </div>

                <!-- ========== وضعیت ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-cog me-2"></i>
                            تنظیمات
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive"
                                   type="checkbox"
                                   class="form-check-input"
                                   id="IsActive" />
                            <label class="form-check-label" for="IsActive">
                                <strong>فعال</strong>
                                <small class="d-block text-muted">سازمان در سیستم فعال باشد</small>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- ========== دسترسی سریع ========== -->
                <div class="block block-rounded block-bordered">
                    <div class="block-header bg-success">
                        <h3 class="block-title text-white">
                            <i class="fa fa-link me-2"></i>
                            دسترسی سریع
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" 
                               class="btn btn-alt-primary">
                                <i class="fa fa-eye me-1"></i>
                                مشاهده جزئیات
                            </a>
                            <a asp-action="OrganizationChart" asp-route-organizationId="@Model.Id" 
                               class="btn btn-alt-info">
                                <i class="fa fa-sitemap me-1"></i>
                                چارت سازمانی
                            </a>
                            <a asp-action="Index" class="btn btn-alt-secondary">
                                <i class="fa fa-list me-1"></i>
                                لیست سازمان‌ها
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- دکمه‌های پایین فرم -->
        <div class="block block-rounded">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100 btn-lg" id="submitBtn">
                            <i class="fa fa-save me-1"></i>
                            ذخیره تغییرات
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- END Page Content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let phoneIndex = 1;

        $(document).ready(function() {
            // Persian Date Picker
            Dashmix.helpersOnLoad(['js-flatpickr']);
            
            setTimeout(function() {
                if (typeof window.initPersianDatePicker === 'function') {
                    window.initPersianDatePicker($('body'));
                }
            }, 100);

            // فقط اعداد برای شماره ثبت و کد اقتصادی
            $('#RegistrationNumber, #EconomicCode, #PostalCode').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // مدیریت checkbox های IsDefault
            $(document).on('change', '.default-check', function() {
                if ($(this).is(':checked')) {
                    $('.default-check').not(this).prop('checked', false);
                }
            });

            // Focus
            $('#Name').focus();

            // Form validation
            $('#organizationEditForm').on('submit', function(e) {
                const name = $('#Name').val().trim();

                if (!name) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'danger',
                        icon: 'fa fa-times',
                        message: 'نام سازمان الزامی است'
                    });
                    $('#Name').focus();
                    return false;
                }

                // Loading state
                const submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fa fa-spinner fa-spin me-1"></i> در حال ذخیره...');
            });
        });

        // افزودن شماره جدید
        function addPhoneRow() {
            const container = document.getElementById('phonesContainer');
            const html = `
                <div class="phone-row mb-3 p-3 border rounded bg-light" data-index="${phoneIndex}" id="phone-${phoneIndex}">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <label class="form-label small">شماره تماس</label>
                            <input name="Phones[${phoneIndex}].PhoneNumber"
                                   type="tel"
                                   class="form-control"
                                   placeholder="02112345678"
                                   dir="ltr" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">نوع</label>
                            <select name="Phones[${phoneIndex}].PhoneType" class="form-select">
                                <option value="1">ثابت</option>
                                <option value="0">موبایل</option>
                                <option value="2">کاری</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small d-block">تنظیمات</label>
                            <div class="form-check form-check-inline">
                                <input type="checkbox"
                                       name="Phones[${phoneIndex}].IsDefault"
                                       class="form-check-input default-check" />
                                <label class="form-check-label small">پیش‌فرض</label>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-sm btn-danger" onclick="removePhoneRow(${phoneIndex})">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
            phoneIndex++;

            $(`#phone-${phoneIndex - 1}`).hide().fadeIn(300);
        }

        // حذف شماره
        function removePhoneRow(index) {
            $(`#phone-${index}`).fadeOut(300, function() {
                $(this).remove();
            });
        }
    </script>
}

@section Styles {
    <style>
        .form-control-lg {
            font-size: 1.05rem;
            padding: 0.75rem 1rem;
        }

        input[dir="ltr"] {
            text-align: left;
            font-family: 'Courier New', monospace;
        }

        .phone-row {
            transition: all 0.3s ease;
        }

        .phone-row:hover {
            background-color: #f8f9fa !important;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .block-bordered {
            border: 2px solid #e9ecef;
        }

        .bg-image {
            background-size: cover;
            background-position: center;
        }

        .bg-primary-dark-op {
            background-color: rgba(var(--bs-primary-rgb), 0.85);
        }

        .js-flatpickr {
            cursor: pointer;
            background-color: white !important;
        }

        .js-flatpickr:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

        @@media (max-width: 768px) {
            .phone-row .row > div {
                margin-bottom: 0.75rem;
            }
        }
    </style>
}