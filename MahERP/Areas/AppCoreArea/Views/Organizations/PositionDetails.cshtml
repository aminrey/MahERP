@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.PositionViewModel
@{
    ViewData["Title"] = "جزئیات سمت";
    var usageCount = ViewBag.UsageCount as int? ?? 0;
    var isInUse = ViewBag.IsInUse as bool? ?? false;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1">
                                <i class="fas fa-user-tie text-primary"></i>
                                @Model.Title
                                @if (!string.IsNullOrEmpty(Model.TitleEnglish))
                                {
                                    <small class="text-muted">(@Model.TitleEnglish)</small>
                                }
                            </h4>
                            <p class="text-muted mb-0">
                                <span class="badge bg-primary me-2">@Model.Category</span>
                                <span class="badge bg-info">
                                    <i class="fas fa-layer-group"></i>
                                    @Model.LevelText
                                </span>
                                @if (Model.IsCommon)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="fas fa-star"></i>
                                        سمت رایج
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="btn-group">
                            <a asp-action="EditPosition" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i>
                                ویرایش
                            </a>
                            <a asp-action="PositionIndex" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right"></i>
                                بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Basic Information -->
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle text-primary"></i>
                                اطلاعات پایه
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <td class="text-muted" style="width: 30%;">
                                            <i class="fas fa-id-badge"></i>
                                            عنوان فارسی:
                                        </td>
                                        <td><strong>@Model.Title</strong></td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.TitleEnglish))
                                    {
                                        <tr>
                                            <td class="text-muted">
                                                <i class="fas fa-language"></i>
                                                عنوان انگلیسی:
                                            </td>
                                            <td dir="ltr" class="text-start">@Model.TitleEnglish</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="text-muted">
                                            <i class="fas fa-folder"></i>
                                            دسته‌بندی:
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@Model.Category</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">
                                            <i class="fas fa-layer-group"></i>
                                            سطح سازمانی:
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@Model.LevelText</span>
                                            <small class="text-muted ms-2">(Level @Model.Level)</small>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">
                                            <i class="fas fa-chart-bar"></i>
                                            سطح قدرت:
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-3" style="height: 20px; max-width: 300px;">
                                                    <div class="progress-bar @(Model.DefaultPowerLevel <= 20 ? "bg-success" : Model.DefaultPowerLevel <= 50 ? "bg-warning" : "bg-danger")" 
                                                         style="width: @(100 - Model.DefaultPowerLevel)%">
                                                        <strong>@Model.DefaultPowerLevel</strong>
                                                    </div>
                                                </div>
                                                <small class="text-muted">
                                                    @(Model.DefaultPowerLevel <= 20 ? "قدرت بالا" : Model.DefaultPowerLevel <= 50 ? "قدرت متوسط" : "قدرت پایین")
                                                </small>
                                            </div>
                                        </td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <tr>
                                            <td class="text-muted align-top">
                                                <i class="fas fa-align-left"></i>
                                                شرح وظایف:
                                            </td>
                                            <td>
                                                <p class="mb-0">@Model.Description</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Requirements -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clipboard-check text-info"></i>
                                الزامات و شرایط
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-4">
                                <!-- Education -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-graduation-cap fa-2x text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">مدرک تحصیلی</h6>
                                            @if (Model.RequiresDegree && Model.MinimumDegree.HasValue)
                                            {
                                                <span class="badge bg-primary">@Model.MinimumDegreeText</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">نیازی نیست</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Experience -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-briefcase fa-2x text-success"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">سابقه کار</h6>
                                            @if (Model.MinimumExperienceYears.HasValue && Model.MinimumExperienceYears > 0)
                                            {
                                                <span class="badge bg-success">حداقل @Model.MinimumExperienceYears سال</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">نیازی نیست</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Salary Range -->
                                @if (Model.SuggestedMinSalary.HasValue || Model.SuggestedMaxSalary.HasValue)
                                {
                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded">
                                            <h6 class="mb-3">
                                                <i class="fas fa-money-bill-wave text-success"></i>
                                                محدوده حقوق پیشنهادی
                                            </h6>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <small class="text-muted">حداقل</small>
                                                    <div class="h5 mb-0">
                                                        @if (Model.SuggestedMinSalary.HasValue)
                                                        {
                                                            @Model.SuggestedMinSalary.Value.ToString("N0")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                        <small class="text-muted">ریال</small>
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <i class="fas fa-arrows-alt-h text-muted fa-2x"></i>
                                                </div>
                                                <div class="text-end">
                                                    <small class="text-muted">حداکثر</small>
                                                    <div class="h5 mb-0">
                                                        @if (Model.SuggestedMaxSalary.HasValue)
                                                        {
                                                            @Model.SuggestedMaxSalary.Value.ToString("N0")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                        <small class="text-muted">ریال</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-md-4">
                    <!-- Status & Settings -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-cog text-secondary"></i>
                                وضعیت و تنظیمات
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        <i class="fas fa-check-circle"></i>
                                        وضعیت:
                                    </span>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        <i class="fas fa-star"></i>
                                        سمت رایج:
                                    </span>
                                    @if (Model.IsCommon)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i>
                                            بله
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times"></i>
                                            خیر
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        <i class="fas fa-users"></i>
                                        استخدام زیردست:
                                    </span>
                                    @if (Model.CanHireSubordinates)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-check"></i>
                                            مجاز
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times"></i>
                                            غیرمجاز
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        <i class="fas fa-sort-numeric-down"></i>
                                        ترتیب نمایش:
                                    </span>
                                    <span class="badge bg-light text-dark">@Model.DisplayOrder</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Usage Statistics -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie text-warning"></i>
                                آمار استفاده
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fas fa-building fa-3x text-primary mb-2"></i>
                                <h2 class="mb-1">@usageCount</h2>
                                <p class="text-muted mb-0">استفاده در بخش‌های سازمانی</p>
                            </div>

                            @if (isInUse)
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    این سمت در حال استفاده است و قابل حذف نیست
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i>
                                    این سمت هنوز استفاده نشده است
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Timestamps -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clock text-info"></i>
                                تاریخچه
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.CreatedDate != default(DateTime))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-plus"></i>
                                        تاریخ ایجاد:
                                    </small>
                                    <div>@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</div>
                                </div>
                            }

                            @if (Model.LastUpdateDate.HasValue)
                            {
                                <div>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-check"></i>
                                        آخرین بروزرسانی:
                                    </small>
                                    <div>@Model.LastUpdateDate.Value.ToString("yyyy/MM/dd HH:mm")</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
