@model List<Branch>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fa fa-sitemap me-2 text-warning"></i>شعبه‌های زیرمجموعه</h4>
    <a href="@Url.Action("AddBranch", "Branch", new { parentId = ViewContext.RouteData.Values["id"] })" 
       class="btn btn-sm btn-success">
        <i class="fa fa-plus me-1"></i> افزودن شعبه
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-vcenter">
            <thead>
                <tr>
                    <th>نام شعبه</th>
                    <th>مدیر</th>
                    <th>تلفن</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var childBranch in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Branch", new { id = childBranch.Id })">
                                <i class="fa fa-building me-1"></i>@childBranch.Name
                            </a>
                        </td>
                        <td>@(string.IsNullOrEmpty(childBranch.ManagerName) ? "-" : childBranch.ManagerName)</td>
                        <td>@(string.IsNullOrEmpty(childBranch.Phone) ? "-" : childBranch.Phone)</td>
                        <td class="text-center">
                            <span class="badge bg-@(childBranch.IsActive ? "success" : "danger")">
                                @(childBranch.IsActive ? "فعال" : "غیرفعال")
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "Branch", new { id = childBranch.Id })" 
                               class="btn btn-sm btn-alt-secondary" title="مشاهده">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="@Url.Action("EditBranch", "Branch", new { id = childBranch.Id })" 
                               class="btn btn-sm btn-alt-primary" title="ویرایش">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fa fa-sitemap fa-3x text-muted mb-3"></i>
        <p class="text-muted">هیچ شعبه زیرمجموعه‌ای وجود ندارد</p>
    </div>
}