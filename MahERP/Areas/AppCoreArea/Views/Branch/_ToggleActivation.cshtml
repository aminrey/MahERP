@model Branch
@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 50%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header @(Model.IsActive ? "bg-danger-dark" : "bg-success-dark")">
                <h3 class="block-title">@(Model.IsActive ? "غیرفعال کردن شعبه" : "فعال کردن شعبه")</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="toggle-activation-form" asp-action="ToggleActivationPost" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header @(Model.IsActive ? "bg-danger-light" : "bg-success-light")">
                        <h3 class="block-title">تأیید عملیات</h3>
                    </div>
                    <div class="block-content">
                        <div class="py-3 text-center">
                            @if (Model.IsActive)
                            {
                                <i class="fa fa-ban fa-3x text-danger mb-3"></i>
                                <h4>آیا از غیرفعال کردن این شعبه اطمینان دارید؟</h4>
                                <p class="text-muted mb-0">
                                    با غیرفعال کردن شعبه "<strong>@Model.Name</strong>"، دسترسی به آن محدود می‌شود اما اطلاعات آن حذف نمی‌شود.
                                    <br>این عملیات قابل بازگشت است.
                                </p>
                            }
                            else
                            {
                                <i class="fa fa-check fa-3x text-success mb-3"></i>
                                <h4>آیا از فعال کردن این شعبه اطمینان دارید؟</h4>
                                <p class="text-muted mb-0">
                                    با فعال کردن شعبه "<strong>@Model.Name</strong>"، می‌توانید مجدداً از امکانات مربوط به آن استفاده کنید.
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            @if (Model.IsActive)
            {
                <button class="btn btn-sm btn-danger" data-save="modal-ajax-save" type="button">
                    <i class="fa fa-ban me-1"></i>غیرفعال کردن
                </button>
            }
            else
            {
                <button class="btn btn-sm btn-success" data-save="modal-ajax-save" type="button">
                    <i class="fa fa-check me-1"></i>فعال کردن
                </button>
            }
        </div>
    </div>
</div>