@model List<BranchOrganization>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>
        <i class="fa fa-building me-2 text-success"></i>
        سازمان‌های شعبه
        <span class="badge bg-success">@Model.Count سازمان</span>
    </h4>
    <button type="button" class="btn btn-sm btn-success"
            data-toggle="modal-ajax"
            href="@Url.Action("AddOrganizationToBranch", "Branch", new { branchId = ViewContext.RouteData.Values["id"] })">
        <i class="fa fa-plus me-1"></i> افزودن سازمان
    </button>
</div>

<div class="alert alert-success">
    <i class="fa fa-lightbulb me-2"></i>
    <strong>سازمان‌ها:</strong> با افزودن سازمان، می‌توانید تمام اعضای آن را به صورت خودکار در تسک‌های این شعبه در دسترس قرار دهید.
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-vcenter">
            <thead>
                <tr>
                    <th>نام سازمان</th>
                    <th>نوع رابطه</th>
                    <th class="text-center">تعداد بخش‌ها</th>
                    <th class="text-center">تعداد اعضا</th>
                    <th class="text-center">نمایش اعضا</th>
                    <th>تاریخ اختصاص</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="branchOrganizationsTableBody">
                @await Html.PartialAsync("_BranchOrganizationsTableRows", Model)
            </tbody>
        </table>
    </div>

    <div class="alert alert-warning mt-3">
        <i class="fa fa-info-circle me-2"></i>
        <strong>نکته:</strong> استفاده از سوئیچ "نمایش اعضا" می‌توانید کنترل کنید که اعضای هر سازمان در تسک‌ها نمایان باشند یا خیر.
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fa fa-building fa-3x text-muted mb-3"></i>
        <p class="text-muted">هیچ سازمانی به این شعبه اختصاص نیافته است</p>
        <button type="button" class="btn btn-success"
                data-toggle="modal-ajax"
                href="@Url.Action("AddOrganizationToBranch", "Branch", new { branchId = ViewContext.RouteData.Values["id"] })">
            <i class="fa fa-plus me-1"></i> افزودن اولین سازمان
        </button>
    </div>
}