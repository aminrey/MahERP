@model ContactViewModel
@{
    ViewData["Title"] = "ویرایش - " + Model.FullName;
}

<!-- Hero -->
<div class="bg-image" style="background-image: url('/assets/media/photos/photo14@2x.jpg');">
    <div class="bg-primary-dark-op">
        <div class="content content-full text-center">
            <div class="my-3">
                <i class="fa fa-user-edit fa-3x text-white-75"></i>
            </div>
            <h1 class="h2 text-white mb-2">ویرایش اطلاعات فرد</h1>
            <h2 class="h5 fw-normal text-white-75">
                @Model.FullName
            </h2>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-full">
    <form asp-action="Edit" method="post" id="contactEditForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- نمایش خطاها -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                    <i class="fa fa-exclamation-triangle me-2"></i>
                    خطاهای اعتبارسنجی
                </h5>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- دکمه‌های بالای فرم -->
        <div class="block block-rounded mb-2">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Details" asp-route-id="@Model.Id" 
                           class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="fa fa-save me-1"></i>
                            ذخیره تغییرات
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- ستون راست: اطلاعات اصلی -->
            <div class="col-lg-8">
                
                <!-- ========== اطلاعات شخصی ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-user me-2 text-primary"></i>
                            اطلاعات شخصی
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="row">
                            <!-- نام (اختیاری) -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="FirstName">
                                        نام
                                        <span class="text-muted small">(اختیاری)</span>
                                    </label>
                                    <input asp-for="FirstName"
                                           class="form-control form-control-lg"
                                           placeholder="نام" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- نام خانوادگی (الزامی) -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="LastName">
                                        نام خانوادگی
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="LastName"
                                           class="form-control form-control-lg"
                                           placeholder="نام خانوادگی"
                                           required />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- کد ملی -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="NationalCode">
                                        <i class="fa fa-id-card me-1"></i>
                                        کد ملی
                                        <span class="text-muted small">(10 رقم)</span>
                                    </label>
                                    <input asp-for="NationalCode"
                                           type="text"
                                           maxlength="10"
                                           class="form-control"
                                           placeholder="0000000000"
                                           dir="ltr" />
                                    <span asp-validation-for="NationalCode" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- جنسیت -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Gender">
                                        <i class="fa fa-venus-mars me-1"></i>
                                        جنسیت
                                    </label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">-- انتخاب کنید --</option>
                                        <option value="0">مرد</option>
                                        <option value="1">زن</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- تاریخ تولد -->
                        <div class="mb-4">
                            <label class="form-label" for="BirthDatePersian">
                                <i class="fa fa-birthday-cake me-1"></i>
                                تاریخ تولد (شمسی)
                            </label>
                            <input asp-for="BirthDatePersian"
                                   type="text"
                                   class="form-control js-flatpickr"
                                   placeholder="1370/01/01"
                                   readonly />
                        </div>

                        <!-- ایمیل -->
                        <div class="mb-4">
                            <label class="form-label" for="PrimaryEmail">
                                <i class="fa fa-envelope me-1"></i>
                                ایمیل
                            </label>
                            <input asp-for="PrimaryEmail"
                                   type="email"
                                   class="form-control"
                                   placeholder="email@example.com"
                                   dir="ltr" />
                            <span asp-validation-for="PrimaryEmail" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- ========== شماره‌های تماس ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-phone me-2 text-success"></i>
                            شماره‌های تماس
                            <span class="text-muted small">(اختیاری)</span>
                        </h3>
                        <div class="block-options">
                            <button type="button" class="btn btn-sm btn-alt-success" id="addPhoneBtn">
                                <i class="fa fa-plus me-1"></i>
                                افزودن شماره
                            </button>
                        </div>
                    </div>
                    <div class="block-content">
                        <div id="phonesContainer">
                            @if (Model.Phones?.Any() == true)
                            {
                                var phoneIndex = 0;
                                foreach (var phone in Model.Phones.OrderByDescending(p => p.IsDefault).ThenBy(p => p.DisplayOrder))
                                {
                                    <partial name="_PhoneRowPartial" model="phone" view-data='new ViewDataDictionary(ViewData) { { "Index", phoneIndex }, { "IsNew", false } }' />
                                    phoneIndex++;
                                }
                                <script>
                                    var phoneIndex = @phoneIndex;
                                </script>
                            }
                            else
                            {
                             
                                    var emptyPhone = new ContactPhoneViewModel
                                    {
                                        PhoneType = 0,
                                        IsDefault = true,
                                        IsSmsDefault = true
                                    };
                                
                                <partial name="_PhoneRowPartial" model="emptyPhone" view-data='new ViewDataDictionary(ViewData) { { "Index", 0 }, { "IsNew", false } }' />
                                <script>
                                    var phoneIndex = 1;
                                </script>
                            }
                        </div>

                        <div class="alert alert-info d-flex align-items-center">
                            <i class="fa fa-info-circle fa-2x me-3"></i>
                            <div>
                                <strong>نکته:</strong>
                                شماره تماس اختیاری است. می‌توانید چندین شماره اضافه کنید.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== آدرس ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-map-marker-alt me-2 text-info"></i>
                            آدرس
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="mb-4">
                            <label class="form-label" for="PrimaryAddress">آدرس کامل</label>
                            <textarea asp-for="PrimaryAddress"
                                      class="form-control"
                                      rows="3"
                                      placeholder="استان، شهر، خیابان، پلاک..."></textarea>
                        </div>
                    </div>
                </div>

            </div>

            <!-- ستون چپ: یادداشت‌ها و تنظیمات -->
            <div class="col-lg-4">
                
                <!-- ========== یادداشت‌ها ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-sticky-note me-2 text-warning"></i>
                            یادداشت‌ها
                        </h3>
                    </div>
                    <div class="block-content">
                        <textarea asp-for="Notes"
                                  class="form-control"
                                  rows="5"
                                  placeholder="یادداشت‌های مربوط به این فرد..."></textarea>
                    </div>
                </div>

                <!-- ========== وضعیت ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-cog me-2"></i>
                            تنظیمات
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive"
                                   type="checkbox"
                                   class="form-check-input"
                                   id="IsActive" />
                            <label class="form-check-label" for="IsActive">
                                <strong>فعال</strong>
                                <small class="d-block text-muted">فرد در سیستم فعال باشد</small>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- ========== راهنما ========== -->
                <div class="block block-rounded block-bordered">
                    <div class="block-header bg-info">
                        <h3 class="block-title text-white">
                            <i class="fa fa-lightbulb me-2"></i>
                            راهنما
                        </h3>
                    </div>
                    <div class="block-content">
                        <ul class="list-unstyled small">
                            <li class="mb-2">
                                <i class="fa fa-check-circle text-success me-1"></i>
                                <strong>نام خانوادگی</strong> الزامی است
                            </li>
                            <li class="mb-2">
                                <i class="fa fa-info-circle text-info me-1"></i>
                                کد ملی باید <strong>10 رقم</strong> باشد
                            </li>
                          
                        </ul>
                    </div>
                </div>

            </div>
        </div>

        <!-- دکمه‌های پایین فرم -->
        <div class="block block-rounded">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Details" asp-route-id="@Model.Id" 
                           class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100 btn-lg" id="submitBtn">
                            <i class="fa fa-save me-1"></i>
                            ذخیره تغییرات
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- END Page Content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // ⭐ Persian Date Picker
            Dashmix.helpersOnLoad(['js-flatpickr']);
            
            setTimeout(function() {
                if (typeof window.initPersianDatePicker === 'function') {
                    window.initPersianDatePicker($('body'));
                }
            }, 100);

            // ⭐ فقط اعداد برای کد ملی
            $('#NationalCode').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // ⭐ مدیریت checkbox های IsDefault
            $(document).on('change', '.default-check', function() {
                if ($(this).is(':checked')) {
                    $('.default-check').not(this).prop('checked', false);
                }
            });

            // ⭐ مدیریت checkbox های IsSmsDefault
            $(document).on('change', '.sms-check', function() {
                if ($(this).is(':checked')) {
                    $('.sms-check').not(this).prop('checked', false);
                }
            });

            // ⭐⭐⭐ افزودن شماره جدید با AJAX
            $('#addPhoneBtn').on('click', function() {
                const $btn = $(this);
                $btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("AddPhoneRowPartial", "Contacts")',
                    type: 'POST',
                    data: {
                        index: phoneIndex,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.status === 'update-view' && response.viewList) {
                            response.viewList.forEach(function(item) {
                                if (item.elementId === 'phonesContainer') {
                                    $('#' + item.elementId).append(item.view.result);
                                    
                                    // Animation
                                    $('#phone-' + phoneIndex).hide().fadeIn(300);
                                    
                                    phoneIndex++;
                                }
                            });
                        }
                        $btn.prop('disabled', false);
                    },
                    error: function(xhr) {
                        console.error('خطا در افزودن شماره:', xhr);
                        NotificationHelper.error('خطا در افزودن شماره');
                        $btn.prop('disabled', false);
                    }
                });
            });

            // Focus on FirstName
            $('#FirstName').focus();

            // ⭐ Form validation
            $('#contactEditForm').on('submit', function(e) {
                const lastName = $('#LastName').val().trim();

                if (!lastName) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'danger',
                        icon: 'fa fa-times',
                        message: 'نام خانوادگی الزامی است'
                    });
                    $('#LastName').focus();
                    return false;
                }

                // بررسی کد ملی
                const nationalCode = $('#NationalCode').val().trim();
                if (nationalCode && nationalCode.length !== 10) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'warning',
                        icon: 'fa fa-exclamation-triangle',
                        message: 'کد ملی باید 10 رقم باشد'
                    });
                    $('#NationalCode').focus();
                    return false;
                }

                // Loading state
                const submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fa fa-spinner fa-spin me-1"></i> در حال ذخیره...');
            });
        });

        // ⭐ حذف شماره
        function removePhoneRow(index) {
            $('#phone-' + index).fadeOut(300, function() {
                $(this).remove();
            });
        }
    </script>
}

@section Styles {
    <style>
        .form-control-lg {
            font-size: 1.05rem;
            padding: 0.75rem 1rem;
        }

        input[dir="ltr"], .font-monospace {
            text-align: left;
            font-family: 'Courier New', monospace;
        }

        .phone-row {
            transition: all 0.3s ease;
        }

        .phone-row:hover {
            background-color: #f8f9fa !important;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .block-bordered {
            border: 2px solid #e9ecef;
        }

        .bg-image {
            background-size: cover;
            background-position: center;
        }

        .bg-primary-dark-op {
            background-color: rgba(var(--bs-primary-rgb), 0.85);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        /* ⭐ استایل Persian DatePicker */
        .js-flatpickr {
            cursor: pointer;
            background-color: white !important;
        }

        .js-flatpickr:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

        @@media (max-width: 768px) {
            .phone-row .row > div {
                margin-bottom: 0.75rem;
            }

            .block-content {
                padding: 1rem;
            }
        }
    </style>
}