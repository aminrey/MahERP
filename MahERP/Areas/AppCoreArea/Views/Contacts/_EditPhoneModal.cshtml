@model MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactPhoneViewModel

<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <form asp-action="EditPhone" asp-controller="Contacts" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ContactId" />

            <div class="block block-rounded mb-0">
                <div class="block-header bg-warning text-white">
                    <h3 class="block-title text-white">
                        <i class="fa fa-edit me-2"></i>ویرایش شماره تماس
                    </h3>
                    <button type="button" class="btn-block-option" data-bs-dismiss="modal">
                        <i class="fa fa-times text-white"></i>
                    </button>
                </div>

                <div class="block-content">
                    <div class="row">
                        <!-- نوع شماره -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="PhoneType">نوع شماره *</label>
                            <select asp-for="PhoneType" class="form-select">
                                <option value="0">موبایل</option>
                                <option value="1">تلفن ثابت</option>
                                <option value="2">اضطراری</option>
                                <option value="3">کاری</option>
                                <option value="4">منزل</option>
                            </select>
                            <span asp-validation-for="PhoneType" class="text-danger"></span>
                        </div>

                        <!-- شماره تماس -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="PhoneNumber">شماره تماس *</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="09123456789" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- داخلی -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="Extension">داخلی (اختیاری)</label>
                            <input asp-for="Extension" class="form-control" placeholder="123" />
                            <span asp-validation-for="Extension" class="text-danger"></span>
                        </div>

                        <!-- ترتیب نمایش -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="DisplayOrder">ترتیب نمایش</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Checkboxes -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsDefault" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsDefault">
                                    شماره پیش‌فرض
                                </label>
                            </div>
                            <small class="text-muted">برای احراز هویت</small>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsSmsDefault" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsSmsDefault">
                                    شماره پیش‌فرض پیامک
                                </label>
                            </div>
                            <small class="text-muted">برای ارسال پیامک</small>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label class="form-check-label" asp-for="IsActive">
                                    فعال
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fa fa-info-circle me-2"></i>
                        <strong>توجه:</strong> اگر "شماره پیش‌فرض پیامک" را انتخاب کنید، سایر شماره‌ها به صورت خودکار غیرفعال می‌شوند.
                    </div>
                </div>

                <div class="block-content block-content-full text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i>انصراف
                    </button>
                    <button type="button" class="btn btn-warning" data-save="modal-ajax-save">
                        <i class="fa fa-check me-1"></i>ذخیره تغییرات
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
