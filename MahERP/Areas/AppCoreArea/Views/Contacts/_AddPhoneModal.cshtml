@{
    var groupId = ViewBag.GroupId;
    var groupTitle = ViewBag.GroupTitle;
    var availableContacts = ViewBag.AvailableContacts as List<Contact>;
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="block block-rounded mb-0">
            <div class="block-header bg-primary-dark">
                <h3 class="block-title text-white">
                    <i class="fa fa-user-plus me-2"></i>
                    افزودن عضو به گروه: @groupTitle
                </h3>
                <div class="block-options">
                    <button type="button" class="btn-block-option" data-bs-dismiss="modal">
                        <i class="fa fa-times text-white"></i>
                    </button>
                </div>
            </div>

            <form asp-action="AddMember" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="groupId" value="@groupId" />

                <div class="block-content">
                    @if (availableContacts != null && availableContacts.Any())
                    {
                        <div class="mb-4">
                            <div class="form-floating">
                                <select name="contactId" class="form-select" id="contactId" required>
                                    <option value="">-- انتخاب کنید --</option>
                                    @foreach (var contact in availableContacts)
                                    {
                                        <option value="@contact.Id">
                                            @contact.FullName
                                            @if (!string.IsNullOrEmpty(contact.PrimaryEmail))
                                            {
                                                <text> - @contact.PrimaryEmail</text>
                                            }
                                        </option>
                                    }
                                </select>
                                <label for="contactId">انتخاب فرد *</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea name="notes"
                                      class="form-control"
                                      id="notes"
                                      rows="3"
                                      style="height: 100px;"
                                      placeholder="توضیحات درباره افزودن این فرد..."></textarea>
                                <label for="notes">یادداشت (اختیاری)</label>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fa fa-exclamation-triangle fa-2x opacity-50"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p class="mb-0">
                                        تمام افراد فعال سیستم قبلاً به این گروه اضافه شده‌اند.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="block-content block-content-full text-end bg-body">
                    <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> انصراف
                    </button>
                    @if (availableContacts != null && availableContacts.Any())
                    {
                        <button type="button" class="btn btn-sm btn-primary" data-save="modal-ajax-save">
                            <i class="fa fa-check me-1"></i> افزودن
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}