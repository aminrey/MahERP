@model List<MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactPhoneViewModel>

@foreach (var phone in Model)
{
    <tr>
        <td class="text-center">@phone.Id</td>
        <td>
            <span class="badge bg-primary">@phone.PhoneTypeText</span>
        </td>
        <td class="fw-semibold " > <span dir="ltr" > @phone.FormattedNumber</span></td>
        <td>@(phone.Extension ?? "-")</td>
        <td class="text-center">
            @if (phone.IsDefault)
            {
                <span class="badge bg-success">
                    <i class="fa fa-check"></i> پیش‌فرض
                </span>
            }
            else
            {
                <button type="button" class="btn btn-sm btn-alt-primary" 
                        onclick="setDefaultPhone(@phone.Id)">
                    تنظیم
                </button>
            }
        </td>
       
        <td class="text-center">
            @if (phone.IsActive)
            {
                <span class="badge bg-success">فعال</span>
            }
            else
            {
                <span class="badge bg-secondary">غیرفعال</span>
            }
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-alt-danger" 
                    onclick="deletePhone(@phone.Id)">
                <i class="fa fa-trash"></i>
            </button>
        </td>
    </tr>
}

@Html.AntiForgeryToken()