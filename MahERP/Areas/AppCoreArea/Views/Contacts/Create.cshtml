@model ContactViewModel
@{
    ViewData["Title"] = "افزودن فرد جدید";
}

<!-- Hero -->
<div class="bg-image" style="background-image: url('/assets/media/photos/photo12@2x.jpg');">
    <div class="bg-primary-dark-op">
        <div class="content content-full text-center">
            <div class="my-3">
                <i class="fa fa-user-plus fa-3x text-white-75"></i>
            </div>
            <h1 class="h2 text-white mb-2">افزودن فرد جدید</h1>
            <h2 class="h5 fw-normal text-white-75">
                ثبت اطلاعات فرد در سیستم
            </h2>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-full">
    <form asp-action="Create" method="post" id="contactCreateForm">
        @Html.AntiForgeryToken()

        <!-- نمایش خطاها -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                    <i class="fa fa-exclamation-triangle me-2"></i>
                    خطاهای اعتبارسنجی
                </h5>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- دکمه‌های بالای فرم -->
        <div class="block block-rounded mb-2">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Index" class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success w-100 btn-lg">
                            <i class="fa fa-check me-1"></i>
                            ذخیره فرد
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- ستون راست: اطلاعات اصلی -->
            <div class="col-lg-8">
                
                <!-- ========== اطلاعات شخصی ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-user me-2 text-primary"></i>
                            اطلاعات شخصی
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="row">
                            <!-- نام (اختیاری) -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="FirstName">
                                        نام
                                        <span class="text-muted small">(اختیاری)</span>
                                    </label>
                                    <input asp-for="FirstName"
                                           class="form-control form-control-lg"
                                           placeholder="نام" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- نام خانوادگی (الزامی) -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="LastName">
                                        نام خانوادگی
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="LastName"
                                           class="form-control form-control-lg"
                                           placeholder="نام خانوادگی"
                                           required />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- کد ملی -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="NationalCode">
                                        <i class="fa fa-id-card me-1"></i>
                                        کد ملی
                                        <span class="text-muted small">(10 رقم)</span>
                                    </label>
                                    <input asp-for="NationalCode"
                                           type="text"
                                           maxlength="10"
                                           class="form-control"
                                           placeholder="0000000000"
                                           dir="ltr" />
                                    <span asp-validation-for="NationalCode" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- جنسیت -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Gender">
                                        <i class="fa fa-venus-mars me-1"></i>
                                        جنسیت
                                    </label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">-- انتخاب کنید --</option>
                                        <option value="0">مرد</option>
                                        <option value="1">زن</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- تاریخ تولد -->
                        <div class="mb-4">
                            <label class="form-label" for="BirthDatePersian">
                                <i class="fa fa-birthday-cake me-1"></i>
                                تاریخ تولد (شمسی)
                            </label>
                            <input asp-for="BirthDatePersian"
                                   type="text"
                                   class="form-control js-flatpickr"
                                   placeholder="1370/01/01"
                                   readonly />
                        </div>

                        <!-- ایمیل -->
                        <div class="mb-4">
                            <label class="form-label" for="PrimaryEmail">
                                <i class="fa fa-envelope me-1"></i>
                                ایمیل
                            </label>
                            <input asp-for="PrimaryEmail"
                                   type="email"
                                   class="form-control"
                                   placeholder="email@example.com"
                                   dir="ltr" />
                            <span asp-validation-for="PrimaryEmail" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- ========== شماره‌های تماس ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-phone me-2 text-success"></i>
                            شماره‌های تماس
                            <span class="text-muted small">(اختیاری)</span>
                        </h3>
                        <div class="block-options">
                            <button type="button" class="btn btn-sm btn-alt-success" onclick="addPhoneRow()">
                                <i class="fa fa-plus me-1"></i>
                                افزودن شماره
                            </button>
                        </div>
                    </div>
                    <div class="block-content">
                        <div id="phonesContainer">
                            <!-- ⭐ شماره اول (اختیاری) -->
                            <div class="phone-row mb-3 p-3 border rounded" data-index="0">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <label class="form-label small">شماره تماس</label>
                                        <input name="Phones[0].PhoneNumber"
                                               type="tel"
                                               class="form-control"
                                               placeholder="09123456789"
                                               dir="ltr" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label small">نوع</label>
                                        <select name="Phones[0].PhoneType" class="form-select">
                                            <option value="0" selected>موبایل</option>
                                            <option value="1">ثابت</option>
                                            <option value="2">کاری</option>
                                            <option value="3">منزل</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label small d-block">تنظیمات</label>
                                        <div class="form-check form-check-inline">
                                            <input type="checkbox"
                                                   name="Phones[0].IsDefault"
                                                   class="form-check-input default-check"
                                                   checked />
                                            <label class="form-check-label small">پیش‌فرض</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input type="checkbox"
                                                   name="Phones[0].IsSmsDefault"
                                                   class="form-check-input sms-check"
                                                   checked />
                                            <label class="form-check-label small">SMS</label>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <!-- اولین شماره حذف نمی‌شود -->
                                        <button type="button" class="btn btn-sm btn-alt-secondary" disabled>
                                            <i class="fa fa-lock"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info d-flex align-items-center">
                            <i class="fa fa-info-circle fa-2x me-3"></i>
                            <div>
                                <strong>نکته:</strong>
                                شماره تماس اختیاری است. می‌توانید چندین شماره اضافه کنید.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ========== آدرس ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-map-marker-alt me-2 text-info"></i>
                            آدرس
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="mb-4">
                            <label class="form-label" for="PrimaryAddress">آدرس کامل</label>
                            <textarea asp-for="PrimaryAddress"
                                      class="form-control"
                                      rows="3"
                                      placeholder="استان، شهر، خیابان، پلاک..."></textarea>
                        </div>
                    </div>
                </div>

            </div>

            <!-- ستون چپ: یادداشت‌ها و تنظیمات -->
            <div class="col-lg-4">
                
                <!-- ========== یادداشت‌ها ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-sticky-note me-2 text-warning"></i>
                            یادداشت‌ها
                        </h3>
                    </div>
                    <div class="block-content">
                        <textarea asp-for="Notes"
                                  class="form-control"
                                  rows="5"
                                  placeholder="یادداشت‌های مربوط به این فرد..."></textarea>
                    </div>
                </div>

                <!-- ========== وضعیت ========== -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-cog me-2"></i>
                            تنظیمات
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive"
                                   type="checkbox"
                                   class="form-check-input"
                                   id="IsActive"
                                   checked />
                            <label class="form-check-label" for="IsActive">
                                <strong>فعال</strong>
                                <small class="d-block text-muted">فرد بلافاصله در سیستم فعال شود</small>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- ========== راهنما ========== -->
                <div class="block block-rounded block-bordered">
                    <div class="block-header bg-info">
                        <h3 class="block-title text-white">
                            <i class="fa fa-lightbulb me-2"></i>
                            راهنما
                        </h3>
                    </div>
                    <div class="block-content">
                        <ul class="list-unstyled small">
                            <li class="mb-2">
                                <i class="fa fa-check-circle text-success me-1"></i>
                                <strong>نام خانوادگی</strong> الزامی است
                            </li>
                           
                            <li class="mb-2">
                                <i class="fa fa-info-circle text-info me-1"></i>
                                کد ملی باید <strong>10 رقم</strong> باشد
                            </li>
                     
                        </ul>
                    </div>
                </div>

            </div>
        </div>

        <!-- دکمه‌های پایین فرم -->
        <div class="block block-rounded">
            <div class="block-content bg-body-light p-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <a asp-action="Index" class="btn btn-alt-secondary w-100">
                            <i class="fa fa-times me-1"></i>
                            انصراف و بازگشت
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success w-100 btn-lg" id="submitBtn">
                            <i class="fa fa-check me-1"></i>
                            ذخیره فرد
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- END Page Content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let phoneIndex = 1;

        $(document).ready(function() {
            // ⭐ Persian Date Picker (مثل Modal)
            Dashmix.helpersOnLoad(['js-flatpickr']);
            
            setTimeout(function() {
                if (typeof window.initPersianDatePicker === 'function') {
                    window.initPersianDatePicker($('body'));
                }
            }, 100);

            // ⭐ فقط اعداد برای کد ملی
            $('#NationalCode').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // ⭐ مدیریت checkbox های IsDefault
            $(document).on('change', '.default-check', function() {
                if ($(this).is(':checked')) {
                    $('.default-check').not(this).prop('checked', false);
                }
            });

            // ⭐ مدیریت checkbox های IsSmsDefault
            $(document).on('change', '.sms-check', function() {
                if ($(this).is(':checked')) {
                    $('.sms-check').not(this).prop('checked', false);
                }
            });

            // Focus on LastName
            $('#LastName').focus();

            // ⭐ Form validation
            $('#contactCreateForm').on('submit', function(e) {
                const lastName = $('#LastName').val().trim();

                if (!lastName) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'danger',
                        icon: 'fa fa-times',
                        message: 'نام خانوادگی الزامی است'
                    });
                    $('#LastName').focus();
                    return false;
                }

                // بررسی کد ملی
                const nationalCode = $('#NationalCode').val().trim();
                if (nationalCode && nationalCode.length !== 10) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'warning',
                        icon: 'fa fa-exclamation-triangle',
                        message: 'کد ملی باید 10 رقم باشد'
                    });
                    $('#NationalCode').focus();
                    return false;
                }

                // Loading state
                const submitBtn = $('#submitBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fa fa-spinner fa-spin me-1"></i> در حال ذخیره...');
            });
        });

        // ⭐ افزودن شماره جدید
        function addPhoneRow() {
            const container = document.getElementById('phonesContainer');
            const html = `
                <div class="phone-row mb-3 p-3 border rounded bg-light" data-index="${phoneIndex}" id="phone-${phoneIndex}">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <label class="form-label small">شماره تماس</label>
                            <input name="Phones[${phoneIndex}].PhoneNumber"
                                   type="tel"
                                   class="form-control"
                                   placeholder="09123456789 یا 02112345678"
                                   dir="ltr" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small">نوع</label>
                            <select name="Phones[${phoneIndex}].PhoneType" class="form-select">
                                <option value="0">موبایل</option>
                                <option value="1">ثابت</option>
                                <option value="2">کاری</option>
                                <option value="3">منزل</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small d-block">تنظیمات</label>
                            <div class="form-check form-check-inline">
                                <input type="checkbox"
                                       name="Phones[${phoneIndex}].IsDefault"
                                       class="form-check-input default-check" />
                                <label class="form-check-label small">پیش‌فرض</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="checkbox"
                                       name="Phones[${phoneIndex}].IsSmsDefault"
                                       class="form-check-input sms-check" />
                                <label class="form-check-label small">SMS</label>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-sm btn-danger" onclick="removePhoneRow(${phoneIndex})">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
            phoneIndex++;

            // Animate
            $(`#phone-${phoneIndex - 1}`).hide().fadeIn(300);
        }

        // ⭐ حذف شماره
        function removePhoneRow(index) {
            $(`#phone-${index}`).fadeOut(300, function() {
                $(this).remove();
            });
        }
    </script>
}

@section Styles {
    <style>
        .form-control-lg {
            font-size: 1.05rem;
            padding: 0.75rem 1rem;
        }

        input[dir="ltr"] {
            text-align: left;
            font-family: 'Courier New', monospace;
        }

        .phone-row {
            transition: all 0.3s ease;
        }

        .phone-row:hover {
            background-color: #f8f9fa !important;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .block-bordered {
            border: 2px solid #e9ecef;
        }

        .bg-image {
            background-size: cover;
            background-position: center;
        }

        .bg-primary-dark-op {
            background-color: rgba(var(--bs-primary-rgb), 0.85);
        }

        /* ⭐ استایل Persian DatePicker */
        .js-flatpickr {
            cursor: pointer;
            background-color: white !important;
        }

        .js-flatpickr:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

        @@media (max-width: 768px) {
            .phone-row .row > div {
                margin-bottom: 0.75rem;
            }
        }
    </style>
}