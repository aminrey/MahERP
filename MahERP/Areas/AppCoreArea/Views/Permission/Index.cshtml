@model List<Permission>
@{
    ViewData["Title"] = "مدیریت دسترسی‌ها";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-key text-primary me-2"></i>مدیریت دسترسی‌ها
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="AdminArea" asp-controller="Dashboard" asp-action="Index">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">دسترسی‌ها</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="block block-rounded mb-4">
        <div class="block-content block-content-full">
            <div class="row g-3">
                <div class="col-md-3">
                    <a asp-action="Create" class="btn btn-primary w-100 py-3">
                        <i class="fa fa-plus-circle fa-2x d-block mb-2"></i>
                        <strong>دسترسی جدید</strong>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-action="Tree" class="btn btn-info w-100 py-3">
                        <i class="fa fa-sitemap fa-2x d-block mb-2"></i>
                        <strong>نمای درختی</strong>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-area="AdminArea" asp-controller="Role" asp-action="Index" class="btn btn-success w-100 py-3">
                        <i class="fa fa-user-shield fa-2x d-block mb-2"></i>
                        <strong>مدیریت نقش‌ها</strong>
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-area="AdminArea" asp-controller="UserPermission" asp-action="Index" class="btn btn-warning w-100 py-3">
                        <i class="fa fa-users-cog fa-2x d-block mb-2"></i>
                        <strong>دسترسی کاربران</strong>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- ⭐⭐⭐ Import Permissions Section -->
    <div class="block block-rounded mb-4">
        <div class="block-header bg-warning text-dark">
            <h3 class="block-title text-dark mb-0">
                <i class="fa fa-download me-2"></i>بارگذاری دسترسی‌ها از فایل JSON
            </h3>
        </div>
        <div class="block-content">
            <div class="alert alert-info d-flex align-items-start">
                <i class="fa fa-info-circle fa-2x me-3"></i>
                <div>
                    <h6 class="mb-1">راهنما:</h6>
                    <p class="mb-0">
                        با استفاده از این ابزار می‌توانید دسترسی‌های استاندارد سیستم را از فایل
                        <code>Permissions.json</code> در مسیر <code>/Data/SeedData/</code> بارگذاری کنید.
                        <br />
                        <strong class="text-danger">توجه:</strong> این عملیات دسترسی‌های تکراری را به‌روزرسانی می‌کند
                        و دسترسی‌های جدید را اضافه می‌نماید.
                    </p>
                </div>
            </div>
            <div class="text-center">
                <!-- ⭐ استفاده از onclick به جای data-bs-toggle -->
                <button type="button"
                        class="btn btn-warning btn-lg px-5"
                        onclick="showImportPermissionsConfirmation()">
                    <i class="fa fa-file-import fa-lg me-2"></i>
                    <strong>بارگذاری دسترسی‌ها از JSON</strong>
                </button>
            </div>
        </div>
    </div>

    <!-- Permissions List -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-list text-muted me-1"></i>لیست دسترسی‌ها
            </h3>
            <div class="block-options">
                <span class="badge bg-primary">@Model.Count دسترسی</span>
            </div>
        </div>
        <div class="block-content">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-vcenter">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>نام فارسی</th>
                                <th>نام انگلیسی</th>
                                <th>کد</th>
                                <th>دسترسی والد</th>
                                <th class="text-center">وضعیت</th>
                                <th class="text-center">نوع</th>
                                <th class="text-center" style="width: 150px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(p => p.DisplayOrder))
                            {
                                <tr id="permissionRow_@item.Id">
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Icon))
                                        {
                                            <i class="@item.Icon" style="color: @item.Color"></i>
                                        }
                                    </td>
                                    <td class="fw-semibold">@item.NameFa</td>
                                    <td>
                                        <code>@item.NameEn</code>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Code</span>
                                    </td>
                                    <td>
                                        @if (item.Parent != null)
                                        {
                                            <span class="badge bg-info">@item.Parent.NameFa</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fa fa-check me-1"></i>فعال
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fa fa-times me-1"></i>غیرفعال
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsSystemPermission)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fa fa-lock me-1"></i>سیستمی
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fa fa-user me-1"></i>سفارشی
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            @if (!item.IsSystemPermission)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-warning" title="ویرایش">
                                                    <i class="fa fa-pencil-alt"></i>
                                                </a>
                                                <button data-toggle="modal-ajax" type="button" class="btn btn-sm btn-danger"
                                                        asp-action="Delete" asp-route-id="@item.Id" title="حذف">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-secondary" disabled title="دسترسی سیستمی">
                                                    <i class="fa fa-lock"></i>
                                                </button>
                                            }
                                            <a asp-action="Create" asp-route-parentId="@item.Id"
                                               class="btn btn-sm btn-success" title="افزودن زیر دسترسی">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i>
                    هیچ دسترسی تعریف نشده است.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deletePermission(id) {
            if (confirm('آیا از حذف این دسترسی مطمئن هستید؟')) {
                window.location.href = '@Url.Action("Delete")' + '/' + id;
            }
        }

        /**
         * ⭐⭐⭐ نمایش تایید Import دسترسی‌ها
         * از توابع SweetAlert موجود در main.js استفاده می‌کند
         */
        async function showImportPermissionsConfirmation() {
            // استفاده از showConfirmationSwal از main.js
            const confirmed = await showConfirmationSwal({
                title: 'بارگذاری دسترسی‌ها از JSON',
                html: `
                    <div class="text-start">
                        <p class="mb-3">آیا از بارگذاری دسترسی‌ها از فایل JSON اطمینان دارید؟</p>
                        <div class="alert alert-warning">
                            <h6 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>هشدار مهم</h6>
                            <ul class="mb-0 text-start" style="font-size: 0.9rem;">
                                <li>دسترسی‌های تکراری (با همان Code) <strong>به‌روزرسانی</strong> می‌شوند</li>
                                <li>دسترسی‌های جدید به دیتابیس <strong>اضافه</strong> می‌شوند</li>
                                <li>دسترسی‌های موجود که در JSON نیستند <strong>حذف نمی‌شوند</strong></li>
                                <li>ساختار درختی (Parent-Child) حفظ خواهد شد</li>
                            </ul>
                        </div>
                    </div>
                `,
                icon: 'warning',
                confirmButtonText: '<i class="fa fa-check me-1"></i> بله، بارگذاری شود',
                cancelButtonText: '<i class="fa fa-times me-1"></i> خیر، انصراف',
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                width: '600px'
            });

            if (confirmed) {
                startImportProcess();
            }
        }

        /**
         * ⭐ شروع فرآیند Import
         */
        function startImportProcess() {
            // نمایش Loading با SweetAlert
            Swal.fire({
                title: 'در حال بارگذاری...',
                html: `
                    <div class="text-center">
                        <i class="fa fa-spinner fa-spin fa-3x text-primary mb-3"></i>
                        <p>لطفاً صبر کنید، در حال پردازش فایل JSON...</p>
                    </div>
                `,
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // ارسال درخواست AJAX
            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("ImportPermissionsFromJson", "Permission", new { area = "AdminArea" })',
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                data: {
                    __RequestVerificationToken: token
                },
                success: function(response) {
                    handleImportSuccess(response);
                },
                error: function(xhr, status, error) {
                    handleImportError(xhr, error);
                }
            });
        }

        /**
         * ⭐ مدیریت پاسخ موفق
         */
        function handleImportSuccess(response) {
            if (response.success) {
                // نمایش پیام موفقیت با جزئیات
                Swal.fire({
                    title: '<i class="fa fa-check-circle text-success"></i> بارگذاری موفق',
                    html: `
                        <div class="text-start">
                            <div class="alert alert-success mb-3">
                                <h6 class="mb-2"><i class="fa fa-info-circle me-1"></i>نتیجه عملیات:</h6>
                                <ul class="mb-0">
                                    <li><strong>تعداد کل پردازش شده:</strong> ${response.totalProcessed}</li>
                                    <li><strong>دسترسی‌های جدید:</strong> ${response.newPermissions}</li>
                                    <li><strong>دسترسی‌های به‌روزرسانی شده:</strong> ${response.updatedPermissions}</li>
                                    <li><strong>زمان پردازش:</strong> ${response.processingTime}</li>
                                </ul>
                            </div>
                            <p class="text-muted mb-0">صفحه برای نمایش تغییرات بارگذاری مجدد می‌شود...</p>
                        </div>
                    `,
                    icon: 'success',
                    confirmButtonText: '<i class="fa fa-sync me-1"></i> بارگذاری مجدد صفحه',
                    allowOutsideClick: false,
                    customClass: {
                        confirmButton: 'btn btn-success'
                    },
                    buttonsStyling: false
                }).then(() => {
                    // بارگذاری مجدد صفحه
                    location.reload();
                });

                // نمایش نوتیفیکیشن موفقیت (استفاده از NotificationHelper در main.js)
                if (typeof NotificationHelper !== 'undefined') {
                    NotificationHelper.success('دسترسی‌ها با موفقیت بارگذاری شدند');
                }
            } else {
                // نمایش خطا
                showErrorSwal(
                    'خطا در بارگذاری',
                    response.message || 'خطای نامشخص در بارگذاری دسترسی‌ها'
                );
            }
        }

        /**
         * ⭐ مدیریت خطا
         */
        function handleImportError(xhr, error) {
            let errorMessage = 'خطای نامشخص در ارتباط با سرور';

            if (xhr.responseJSON && xhr.responseJSON.message) {
                errorMessage = xhr.responseJSON.message;
            } else if (xhr.status === 404) {
                errorMessage = 'آدرس درخواست یافت نشد (404)';
            } else if (xhr.status === 500) {
                errorMessage = 'خطای داخلی سرور (500)';
            } else if (xhr.status === 403) {
                errorMessage = 'دسترسی مجاز نیست (403)';
            } else if (xhr.statusText) {
                errorMessage = xhr.statusText;
            }

            // استفاده از showErrorSwal از main.js
            showErrorSwal(
                'خطا در بارگذاری',
                errorMessage
            );

            // Log برای debugging
            console.error('Import Error:', {
                status: xhr.status,
                statusText: xhr.statusText,
                error: error,
                response: xhr.responseJSON
            });
        }
    </script>
}