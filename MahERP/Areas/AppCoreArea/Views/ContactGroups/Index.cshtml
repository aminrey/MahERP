@model List<ContactGroupViewModel>
@{
    ViewData["Title"] = "مدیریت گروه‌های افراد";
    var stats = ViewBag.Statistics as Dictionary<string, int>;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
            <div class="flex-grow-1">
                <h1 class="h3 fw-bold mb-1">
                    <i class="fa fa-layer-group me-2 text-primary"></i>
                    مدیریت گروه‌های افراد
                </h1>
                <h2 class="fs-base lh-base fw-medium text-muted mb-0">
                    دسته‌بندی و گروه‌بندی افراد سیستم
                </h2>
            </div>
            <nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-alt">
                    <li class="breadcrumb-item">
                        <a class="link-fx" href="@Url.Action("Index", "Home")">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="link-fx" href="@Url.Action("Index", "Contacts")">افراد</a>
                    </li>
                    <li class="breadcrumb-item" aria-current="page">گروه‌ها</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- آمار -->
    @if (stats != null)
    {
        <div class="row items-push mb-4">
            <div class="col-sm-6 col-xl-3">
                <div class="block block-rounded d-flex flex-column h-100 mb-0">
                    <div class="block-content block-content-full flex-grow-1 d-flex justify-content-between align-items-center">
                        <dl class="mb-0">
                            <dt class="fs-3 fw-bold">@stats.GetValueOrDefault("TotalGroups", 0)</dt>
                            <dd class="fs-sm fw-medium fs-sm fw-medium text-muted mb-0">کل گروه‌ها</dd>
                        </dl>
                        <div class="item item-rounded-lg bg-body-light">
                            <i class="fa fa-layer-group fs-3 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="block block-rounded d-flex flex-column h-100 mb-0">
                    <div class="block-content block-content-full flex-grow-1 d-flex justify-content-between align-items-center">
                        <dl class="mb-0">
                            <dt class="fs-3 fw-bold">@stats.GetValueOrDefault("TotalMembers", 0)</dt>
                            <dd class="fs-sm fw-medium fs-sm fw-medium text-muted mb-0">کل اعضا</dd>
                        </dl>
                        <div class="item item-rounded-lg bg-body-light">
                            <i class="fa fa-users fs-3 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="block block-rounded d-flex flex-column h-100 mb-0">
                    <div class="block-content block-content-full flex-grow-1 d-flex justify-content-between align-items-center">
                        <dl class="mb-0">
                            <dt class="fs-3 fw-bold">@stats.GetValueOrDefault("SystemGroups", 0)</dt>
                            <dd class="fs-sm fw-medium fs-sm fw-medium text-muted mb-0">گروه‌های سیستمی</dd>
                        </dl>
                        <div class="item item-rounded-lg bg-body-light">
                            <i class="fa fa-shield-alt fs-3 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="block block-rounded d-flex flex-column h-100 mb-0">
                    <div class="block-content block-content-full flex-grow-1 d-flex justify-content-between align-items-center">
                        <dl class="mb-0">
                            <dt class="fs-3 fw-bold">@stats.GetValueOrDefault("CustomGroups", 0)</dt>
                            <dd class="fs-sm fw-medium fs-sm fw-medium text-muted mb-0">گروه‌های سفارشی</dd>
                        </dl>
                        <div class="item item-rounded-lg bg-body-light">
                            <i class="fa fa-user-cog fs-3 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- دکمه افزودن -->
    <div class="block block-rounded mb-4">
        <div class="block-content block-content-full">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fa fa-plus me-1"></i>
                افزودن گروه جدید
            </a>
            <a href="@Url.Action("Index", "Contacts")" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i>
                بازگشت به لیست افراد
            </a>
        </div>
    </div>

    <!-- لیست گروه‌ها -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                لیست گروه‌ها
                <span class="badge bg-primary ms-2">@Model.Count گروه</span>
            </h3>
        </div>
        <div class="block-content">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-vcenter">
                        <thead>
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>عنوان گروه</th>
                                <th>کد</th>
                                <th>توضیحات</th>
                                <th class="text-center">تعداد اعضا</th>
                                <th class="text-center">نوع</th>
                                <th class="text-center">ترتیب</th>
                                <th class="text-center">وضعیت</th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.OrderBy(g => g.DisplayOrder))
                            {
                                <tr>
                                    <td class="text-center">
                                        <span class="badge" 
                                              style="background-color: @(group.ColorHex ?? "#6c757d"); width: 30px; height: 30px; display: inline-flex; align-items: center; justify-content: center;">
                                            <i class="fa @(group.IconClass ?? "fa-users") text-white"></i>
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@group.Title</td>
                                    <td>
                                        <code>@group.Code</code>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(group.Description ?? "-")</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@group.MembersCount نفر</span>
                                    </td>
                                    <td class="text-center">
                                        @if (group.IsSystemGroup)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fa fa-shield-alt me-1"></i>
                                                سیستمی
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">سفارشی</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">@group.DisplayOrder</span>
                                    </td>
                                    <td class="text-center">
                                        @if (group.IsActive)
                                        {
                                            <span class="badge bg-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("ManageMembers", new { groupId = group.Id })" 
                                               class="btn btn-sm btn-info" 
                                               title="مدیریت اعضا">
                                                <i class="fa fa-users"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = group.Id })" 
                                               class="btn btn-sm btn-warning" 
                                               title="ویرایش">
                                                <i class="fa fa-pencil-alt"></i>
                                            </a>
                                            @if (!group.IsSystemGroup)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-danger" 
                                                        onclick="deleteGroup(@group.Id, '@group.Title')"
                                                        title="حذف">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-layer-group fa-3x text-muted mb-3"></i>
                    <p class="text-muted">هیچ گروهی یافت نشد</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i>
                        افزودن اولین گروه
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- END Page Content -->

@section Scripts {
    <script>
        function deleteGroup(id, title) {
            if (confirm(`آیا از حذف گروه "${title}" اطمینان دارید؟\n\nتوجه: تمام اعضای این گروه نیز حذف خواهند شد.`)) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert('خطا: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('خطا در ارتباط با سرور');
                    }
                });
            }
        }
    </script>
}

@Html.AntiForgeryToken()