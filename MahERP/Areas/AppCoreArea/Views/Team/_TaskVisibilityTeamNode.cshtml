@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels
@model TeamTaskVisibilityNode

<div class="team-visibility-node" data-level="@Model.Level" data-team-id="@Model.TeamId">
    <div class="team-visibility-card">
        <!-- هدر تیم -->
        <div class="team-header mb-3">
            <h6 class="mb-1">
                <i class="fa fa-users me-2"></i>
                @Model.TeamTitle
            </h6>
            @if (!string.IsNullOrEmpty(Model.ManagerName))
            {
                <small class="opacity-75">
                    <i class="fa fa-user-tie me-1"></i>
                    مدیر: @Model.ManagerName
                </small>
            }
        </div>

        <!-- سمت‌ها و قدرت مشاهده -->
        @if (Model.Positions.Any())
        {
            <div class="positions-section mb-3">
                <h6 class="mb-2">
                    <i class="fa fa-briefcase me-1"></i>
                    سمت‌ها (@Model.Positions.Count)
                </h6>
                @foreach (var position in Model.Positions.OrderBy(p => p.PowerLevel))
                {
                    <div class="position-visibility-item @GetVisibilityClass(position)">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>@position.PositionTitle</strong>
                            <small class="opacity-75">سطح @position.PowerLevel</small>
                        </div>
                        
                        <!-- قدرت‌های مشاهده -->
                        <div class="visibility-permissions">
                            @if (position.CanViewSubordinateTasks)
                            {
                                <span class="badge bg-success me-1" data-bs-toggle="tooltip" 
                                      title="می‌تواند تسک‌های زیردستان را ببیند">
                                    <i class="fa fa-arrow-down me-1"></i>زیردستان
                                </span>
                            }
                            @if (position.CanViewPeerTasks)
                            {
                                <span class="badge bg-info me-1" data-bs-toggle="tooltip" 
                                      title="می‌تواند تسک‌های همسطح را ببیند">
                                    <i class="fa fa-arrows-alt-h me-1"></i>همسطح
                                </span>
                            }
                            @if (!position.CanViewSubordinateTasks && !position.CanViewPeerTasks)
                            {
                                <span class="badge bg-secondary" data-bs-toggle="tooltip" 
                                      title="فقط تسک‌های خود را می‌بیند">
                                    <i class="fa fa-eye-slash me-1"></i>محدود
                                </span>
                            }
                        </div>

                        <!-- اعضای سمت -->
                        @if (position.Members.Any())
                        {
                            <div class="position-members mt-2">
                                <small class="opacity-75 d-block mb-1">
                                    اعضا (@position.Members.Count):
                                </small>
                                @foreach (var member in position.Members)
                                {
                                    <div class="member-visibility-item">
                                        <span>
                                            <i class="fa fa-user visibility-icon"></i>
                                            @member.UserFullName
                                        </span>
                                        @if (member.VisibleTasksCount > 0)
                                        {
                                            <span class="visibility-stats">
                                                <i class="fa fa-tasks me-1"></i>@member.VisibleTasksCount
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }

        <!-- اعضای بدون سمت -->
        @if (Model.MembersWithoutPosition.Any())
        {
            <div class="members-without-position mb-3">
                <h6 class="mb-2 text-warning">
                    <i class="fa fa-exclamation-triangle me-1"></i>
                    اعضای بدون سمت (@Model.MembersWithoutPosition.Count)
                </h6>
                <div class="position-visibility-item no-view-permission">
                    @foreach (var member in Model.MembersWithoutPosition)
                    {
                        <div class="member-visibility-item">
                            <span>
                                <i class="fa fa-user visibility-icon"></i>
                                @member.UserFullName
                            </span>
                            <span class="visibility-stats text-muted">
                                <i class="fa fa-eye-slash me-1"></i>محدود
                            </span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- تبصره‌های خاص مربوط به این تیم -->
        @if (Model.RelatedSpecialPermissions.Any())
        {
            <div class="special-permissions mb-3">
                <h6 class="mb-2 text-primary">
                    <i class="fa fa-key me-1"></i>
                    تبصره‌های ویژه (@Model.RelatedSpecialPermissions.Count)
                </h6>
                <div class="special-permissions-container">
                    @foreach (var permission in Model.RelatedSpecialPermissions.Take(3)) // فقط ۳ تای اول را نشان بده
                    {
                        <div class="mini-permission-card">
                            <div class="mini-permission-user">
                                <i class="fa fa-user me-1"></i>
                                <strong>@permission.GranteeUserName</strong>
                            </div>
                            <div class="mini-permission-status">
                                @if (permission.IsExpired)
                                {
                                    <span class="badge bg-danger badge-sm">منقضی</span>
                                }
                                else if (permission.IsActive)
                                {
                                    <span class="badge bg-success badge-sm">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary badge-sm">غیرفعال</span>
                                }
                            </div>
                        </div>
                    }
                    @if (Model.RelatedSpecialPermissions.Count > 3)
                    {
                        <div class="mini-permission-card more-permissions">
                            <small class="text-muted">
                                <i class="fa fa-ellipsis-h me-1"></i>
                                @(Model.RelatedSpecialPermissions.Count - 3) تبصره دیگر...
                            </small>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- دکمه مدیریت تبصره‌ها -->
        <div class="team-actions text-center">
            <button type="button" class="btn btn-sm btn-outline-primary"
                    data-toggle="modal-ajax"
                    href="@Url.Action("ManageTaskViewersModal", "Team", new { teamId = Model.TeamId })"
                    data-bs-toggle="tooltip" title="مدیریت تبصره‌های این تیم">
                <i class="fa fa-eye me-1"></i>
                مدیریت تبصره‌ها
            </button>
        </div>
    </div>

    <!-- زیرتیم‌ها -->
    @if (Model.SubTeams.Any())
    {
        <div class="child-teams-visibility">
            @foreach (var subTeam in Model.SubTeams)
            {
                @await Html.PartialAsync("_TaskVisibilityTeamNode", subTeam)
            }
        </div>
    }
</div>

@functions {
    private string GetVisibilityClass(PositionTaskVisibilityInfo position)
    {
        if (position.CanViewSubordinateTasks && position.CanViewPeerTasks)
            return "can-view-both";
        else if (position.CanViewSubordinateTasks)
            return "can-view-subordinates";
        else if (position.CanViewPeerTasks)
            return "can-view-peers";
        else
            return "no-view-permission";
    }
}

<style>
    .mini-permission-card {
        background: rgba(0, 123, 255, 0.1);
        border-radius: 6px;
        padding: 6px 10px;
        margin-bottom: 4px;
        border-left: 3px solid #007bff;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .mini-permission-card.more-permissions {
        background: rgba(108, 117, 125, 0.1);
        border-left-color: #6c757d;
        justify-content: center;
    }

    .mini-permission-user {
        font-size: 0.85em;
    }

    .badge-sm {
        font-size: 0.7em;
        padding: 2px 6px;
    }

    .special-permissions-container {
        max-height: 150px;
        overflow-y: auto;
    }

    .team-actions {
        margin-top: 15px;
        padding-top: 10px;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
</style>