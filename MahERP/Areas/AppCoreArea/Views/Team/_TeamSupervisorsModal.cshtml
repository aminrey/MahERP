@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.TeamSupervisorsViewModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-info text-white">
            <h5 class="modal-title">
                <i class="fa fa-users-cog me-2"></i>
                ناظران خودکار تیم: @Model.TeamTitle
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="بستن"></button>
        </div>
        
        <div class="modal-body">
            @if (Model.HasSupervisors)
            {
                <div class="alert alert-info mb-3">
                    <i class="fa fa-info-circle me-2"></i>
                    <strong>توضیح:</strong> این ناظران به صورت خودکار تسک‌های اعضای این تیم را مشاهده می‌کنند بر اساس سمت و نقش‌شان در تیم.
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-vcenter">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 35%">نام و نام خانوادگی</th>
                                <th style="width: 25%">نوع نظارت</th>
                                <th style="width: 20%">ایمیل</th>
                                <th style="width: 15%">تلفن</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 1; }
                            @foreach (var supervisor in Model.Supervisors)
                            {
                                <tr>
                                    <td class="text-center fw-bold">@counter</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(supervisor.ProfileImagePath))
                                            {
                                                <img src="@supervisor.ProfileImagePath" 
                                                     alt="@supervisor.FullName" 
                                                     class="rounded-circle me-2" 
                                                     style="width: 32px; height: 32px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="avatar-placeholder rounded-circle me-2 bg-primary text-white d-flex align-items-center justify-content-center" 
                                                     style="width: 32px; height: 32px; font-size: 14px;">
                                                    @supervisor.FullName.Substring(0, 1)
                                                </div>
                                            }
                                            <strong>@supervisor.FullName</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (supervisor.SupervisionType.Contains("مدیر تیم"))
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fa fa-crown me-1"></i>
                                                @supervisor.SupervisionType
                                            </span>
                                        }
                                        else if (supervisor.SupervisionType.Contains("ناظر تیم"))
                                        {
                                            <span class="badge bg-success">
                                                <i class="fa fa-eye me-1"></i>
                                                @supervisor.SupervisionType
                                            </span>
                                        }
                                        else if (supervisor.SupervisionType.Contains("سمت بالاتر"))
                                        {
                                            <span class="badge bg-info">
                                                <i class="fa fa-level-up-alt me-1"></i>
                                                @supervisor.SupervisionType
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                @supervisor.SupervisionType
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(supervisor.Email))
                                        {
                                            <small>@supervisor.Email</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(supervisor.PhoneNumber))
                                        {
                                            <small dir="ltr">@supervisor.PhoneNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-light border mt-3">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <i class="fa fa-users fa-2x text-info mb-2"></i>
                            <div class="fw-bold">@Model.TotalSupervisors</div>
                            <div class="small text-muted">تعداد ناظران</div>
                        </div>
                        <div class="col-md-4">
                            <i class="fa fa-crown fa-2x text-primary mb-2"></i>
                            <div class="fw-bold">@Model.Supervisors.Count(s => s.SupervisionType.Contains("مدیر"))</div>
                            <div class="small text-muted">مدیران</div>
                        </div>
                        <div class="col-md-4">
                            <i class="fa fa-eye fa-2x text-success mb-2"></i>
                            <div class="fw-bold">@Model.Supervisors.Count(s => s.SupervisionType.Contains("ناظر"))</div>
                            <div class="small text-muted">ناظران رسمی</div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <h6 class="fw-bold mb-2">
                        <i class="fa fa-question-circle text-info me-2"></i>
                        راهنمای انواع نظارت:
                    </h6>
                    <ul class="small mb-0">
                        <li><strong>مدیر تیم:</strong> مدیر رسمی تیم که به صورت خودکار تمام تسک‌های اعضا را مشاهده می‌کند</li>
                        <li><strong>ناظر تیم:</strong> افرادی که با <code>MembershipType=1</code> به عنوان ناظر تیم تعریف شده‌اند</li>
                        <li><strong>سمت بالاتر:</strong> افرادی که دارای سمتی با <code>PowerLevel</code> پایین‌تر و قدرت نظارت (<code>CanViewSubordinateTasks=true</code>) هستند</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-users-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">هیچ ناظر خودکاری یافت نشد</h5>
                    <p class="text-muted mb-0">
                        برای این تیم هیچ ناظر خودکاری تعریف نشده است.
                        <br>
                        می‌توانید با تنظیم مدیر تیم، اضافه کردن ناظران یا تعریف سمت‌ها، ناظران خودکار ایجاد کنید.
                    </p>
                </div>
            }
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fa fa-times me-1"></i>
                بستن
            </button>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-placeholder {
            min-width: 32px;
            min-height: 32px;
        }
        
        .table-vcenter td {
            vertical-align: middle;
        }
        
        .badge {
            font-size: 0.8rem;
            padding: 0.35em 0.65em;
        }
    </style>
}
