@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationalChartViewModel
@{
    ViewData["Title"] = "چارت سازمانی - " + Model.BranchName;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">@ViewData["Title"]</h3>
        <div class="block-options">
            @if (!string.IsNullOrEmpty(ViewBag.NoBranchMessage as string))
            {
                <!-- در صورت عدم وجود شعبه، دکمه‌ها نمایش داده نمی‌شوند -->
            }
            else
            {
                <div class="dropdown">
                    <button type="button" class="btn btn-sm btn-alt-primary dropdown-toggle" id="branchDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-building me-1"></i> @Model.BranchName
                    </button>
                    <div class="dropdown-menu" aria-labelledby="branchDropdown">
                        @foreach (var branch in ViewBag.UserBranches as SelectList)
                        {
                            <a class="dropdown-item" href="@Url.Action("OrganizationalChart", new { branchId = branch.Value })">
                                @branch.Text
                            </a>
                        }
                    </div>
                </div>

                <!-- دکمه جدید برای چارت قدرت مشاهده -->
                <a asp-action="TaskVisibilityChart" asp-route-branchId="@Model.BranchId" class="btn btn-sm btn-alt-info">
                    <i class="fa fa-eye opacity-50 me-1"></i> چارت قدرت مشاهده تسک‌ها
                </a>

                <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-sm btn-alt-success">
                    <i class="fa fa-plus opacity-50 me-1"></i> تیم جدید
                </a>
            }
        </div>
    </div>
    
    <div class="block-content">
        <div class="row">
            <div class="col-12">
                <!-- اضافه شدن wrapper برای اسکرول افقی -->
                <div class="org-chart-scroll-wrapper">
                    <div id="org-chart-container" class="text-center">
                        @if (!string.IsNullOrEmpty(ViewBag.NoBranchMessage as string))
                        {
                            <!-- نمایش پیام عدم وجود شعبه -->
                            <div class="no-branch-state py-5">
                                <i class="fa fa-building fa-4x text-warning mb-4"></i>
                                <h3 class="text-warning mb-3">عدم دسترسی به شعبه</h3>
                                <p class="text-muted fs-5 mb-4">@ViewBag.NoBranchMessage</p>
                                <div class="alert alert-info mx-auto" style="max-width: 600px;">
                                    <i class="fa fa-info-circle me-2"></i>
                                    <strong>راهنمایی:</strong> برای مشاهده چارت سازمانی، ابتدا باید به حداقل یک شعبه دسترسی داشته باشید.
                                </div>
                                <div class="mt-4">
                                    <a href="@Url.Action("Index", "Branch")" class="btn btn-primary me-2">
                                        <i class="fa fa-list me-1"></i> مشاهده شعب
                                    </a>
                                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                                        <i class="fa fa-home me-1"></i> بازگشت به داشبورد
                                    </a>
                                </div>
                            </div>
                        }
                        else if (Model.RootTeams.Any())
                        {
                            @foreach (var rootTeam in Model.RootTeams)
                            {
                                @await Html.PartialAsync("_TeamNode", rootTeam)
                            }
                        }
                        else
                        {
                            <div class="empty-state py-5">
                                <i class="fa fa-sitemap fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">هیچ تیمی تعریف نشده است</h4>
                                <p class="text-muted">برای شروع، یک تیم جدید ایجاد کنید</p>
                                <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-primary">
                                    <i class="fa fa-plus me-1"></i> ایجاد اولین تیم
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* ⭐ اضافه شده: wrapper برای اسکرول افقی */
        .org-chart-scroll-wrapper {
            overflow-x: auto;
            overflow-y: visible;
            padding: 20px 10px;
            margin: -20px -10px;
            /* استایل اسکرول بار */
            scrollbar-width: thin;
            scrollbar-color: #667eea #f1f1f1;
        }

        /* استایل اسکرول بار برای webkit browsers */
        .org-chart-scroll-wrapper::-webkit-scrollbar {
            height: 10px;
        }

        .org-chart-scroll-wrapper::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .org-chart-scroll-wrapper::-webkit-scrollbar-thumb {
            background: #667eea;
            border-radius: 10px;
        }

        .org-chart-scroll-wrapper::-webkit-scrollbar-thumb:hover {
            background: #764ba2;
        }

        .org-chart-container {
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            min-width: fit-content; /* ⭐ اضافه شده: اجازه رشد افقی */
            display: inline-block; /* ⭐ اضافه شده */
            width: 100%;
        }

        .team-node {
            display: inline-block;
            margin: 10px;
            position: relative;
            vertical-align: top;
        }

        .team-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 20px;
            color: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            min-width: 250px;
            max-width: 300px; /* ⭐ اضافه شده: محدود کردن عرض کارت */
            position: relative;
            overflow: hidden;
            white-space: normal; /* ⭐ اضافه شده: اجازه شکستن متن */
        }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* اضافه کردن استایل برای دکمه جدید */
        .btn-alt-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

        .btn-alt-info:hover {
            background-color: #138496;
            border-color: #117a8b;
            color: white;
        }

        /* استایل جدید برای حالت عدم وجود شعبه */
        .no-branch-state {
            background: white;
            border-radius: 12px;
            border: 2px dashed #ffc107;
            min-height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .no-branch-state .alert {
            border-radius: 8px;
            text-align: right;
        }

        /* باقی CSS بدون تغییر */
        .team-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);    
        }

        .team-title {
            font-size: 1.1em;
            font-weight: bold;
            margin-bottom: 8px;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            word-wrap: break-word; /* ⭐ اضافه شده */
        }

        .team-manager {
            font-size: 0.9em;
            opacity: 0.9;
            margin-bottom: 12px;
            word-wrap: break-word; /* ⭐ اضافه شده */
        }

        .team-actions {
            display: flex;
            gap: 5px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .team-actions .btn {
            padding: 4px 8px;
            font-size: 0.8em;
            border-radius: 6px;
        }

        .child-teams {
            margin-top: 30px;
            position: relative;
            display: flex;
            flex-direction: row;
            justify-content: center;
            flex-wrap: nowrap; /* ⭐ تغییر از wrap به nowrap */
            gap: 20px;
            min-width: fit-content; /* ⭐ اضافه شده */
        }

        .child-teams::before {
            content: '';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 15px;
            background: #dee2e6;
        }

        .child-teams::after {
            content: '';
            position: absolute;
            top: -15px;
            left: 0;
            right: 0;
            height: 2px;
            background: #dee2e6;
            z-index: -1;
        }

        .child-teams > .team-node::before {
            content: '';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 15px;
            background: #dee2e6;
        }

        .team-node:not(:has(.child-teams)) .team-card {
            margin-bottom: 0;
        }

        .empty-state {
            background: white;
            border-radius: 12px;
            border: 2px dashed #dee2e6;
        }

        .manager-empty {
            color: rgba(255, 255, 255, 0.7);
            font-style: italic;
        }

        @@media (max-width: 768px) {
            .team-card {
                min-width: 200px;
                max-width: 250px;
                padding: 15px;
            }
            
            .team-actions {
                flex-direction: column;
            }

            .child-teams {
                flex-wrap: wrap; /* ⭐ در موبایل wrap می‌شود */
                justify-content: center;
            }

            .child-teams::after {
                display: none;
            }

            .no-branch-state {
                padding: 2rem 1rem;
            }

            .no-branch-state .alert {
                margin: 0 1rem;
            }

            /* ⭐ اضافه شده: کاهش padding در موبایل */
            .org-chart-scroll-wrapper {
                padding: 10px 5px;
            }
        }

        .team-node[data-level="0"] .team-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .team-node[data-level="1"] .team-card {
            background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        }

        .team-node[data-level="2"] .team-card {
            background: linear-gradient(135deg, #45b7d1 0%, #96c93d 100%);
        }

        .team-node[data-level="3"] .team-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        /* ⭐ اضافه شده: نمایش راهنما برای اسکرول */
        .org-chart-scroll-wrapper::after {
            content: '← برای مشاهده تیم‌های بیشتر اسکرول کنید →';
            position: sticky;
            left: 50%;
            transform: translateX(-50%);
            display: block;
            text-align: center;
            padding: 10px;
            background: rgba(102, 126, 234, 0.1);
            border-radius: 6px;
            color: #667eea;
            font-size: 0.85em;
            margin-top: 10px;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .org-chart-scroll-wrapper:hover::after {
            opacity: 1;
        }

        /* ⭐ مخفی کردن راهنما در موبایل */
        @@media (max-width: 768px) {
            .org-chart-scroll-wrapper::after {
                content: '← اسکرول →';
                font-size: 0.75em;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function refreshChart() {
            location.reload();
        }
        
        function updateChartNode(teamId) {
            refreshChart();
        }

        // ⭐ اضافه شده: smooth scroll با mouse wheel افقی
        $(document).ready(function() {
            const scrollWrapper = $('.org-chart-scroll-wrapper');
            
            if (scrollWrapper.length) {
                // فعال‌سازی اسکرول افقی با mouse wheel
                scrollWrapper.on('wheel', function(e) {
                    // اگر محتوا از عرض صفحه بیشتر است
                    if (this.scrollWidth > this.clientWidth) {
                        e.preventDefault();
                        this.scrollLeft += e.originalEvent.deltaY;
                    }
                });

                // نمایش راهنما فقط در اولین بار
                if (scrollWrapper[0].scrollWidth > scrollWrapper[0].clientWidth) {
                    scrollWrapper.addClass('has-scroll');
                    
                    // مخفی کردن راهنما بعد از 3 ثانیه
                    setTimeout(() => {
                        scrollWrapper.find('::after').css('opacity', '0');
                    }, 3000);
                }
            }
        });
    </script>
}