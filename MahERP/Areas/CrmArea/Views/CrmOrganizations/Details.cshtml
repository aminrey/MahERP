@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationViewModel
@{
    ViewData["Title"] = "جزئیات سازمان";
    var branchId = ViewBag.BranchId as int?;
    var branchName = ViewBag.BranchName as string;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-building text-primary me-2"></i>
                @Model.Name
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">CRM</li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" asp-route-branchId="@branchId">سازمان‌ها</a>
                    </li>
                    <li class="breadcrumb-item active">جزئیات</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <div class="row">
        <div class="col-lg-8">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-info-circle me-1"></i>
                        اطلاعات سازمان
                    </h3>
                    <div class="block-options">
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-branchId="@branchId" class="btn btn-sm btn-warning">
                            <i class="fa fa-pencil-alt me-1"></i>
                            ویرایش
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>نام سازمان:</strong>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <strong>برند:</strong>
                            <p>@(Model.Brand ?? "-")</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>شماره ثبت:</strong>
                            <p>@(Model.RegistrationNumber ?? "-")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>کد اقتصادی:</strong>
                            <p>@(Model.EconomicCode ?? "-")</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div class="mb-3">
                            <strong>وب‌سایت:</strong>
                            <p><a href="@Model.Website" target="_blank">@Model.Website</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="block block-rounded">
                <div class="block-header block-header-default bg-primary-light">
                    <h3 class="block-title text-primary">
                        <i class="fa fa-building me-1"></i>
                        شعبه
                    </h3>
                </div>
                <div class="block-content">
                    <p class="fw-bold fs-5">@branchName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="block block-rounded">
        <div class="block-content bg-body-light">
            <a asp-action="Index" asp-route-branchId="@branchId" class="btn btn-alt-secondary">
                <i class="fa fa-arrow-right me-1"></i>
                بازگشت
            </a>
        </div>
    </div>
</div>
