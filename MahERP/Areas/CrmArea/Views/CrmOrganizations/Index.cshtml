@model List<MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationViewModel>
@using MahERP.DataModelLayer.ViewModels.UserViewModels
@{
    ViewData["Title"] = "مدیریت سازمان‌ها - CRM";
    var userBranches = ViewBag.UserBranches as List<BranchViewModel>;
    var selectedBranchId = ViewBag.SelectedBranchId as int?;
    var selectedBranchName = ViewBag.SelectedBranchName as string;
    var showBranchSelection = ViewBag.ShowBranchSelection as bool? ?? false;
    var hasSingleBranch = ViewBag.HasSingleBranch as bool? ?? false;
    var groupedOrganizations = ViewBag.GroupedOrganizations as Dictionary<string, List<MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationViewModel>>;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-building text-primary me-2"></i>
                مدیریت سازمان‌ها
                @if (!string.IsNullOrEmpty(selectedBranchName))
                {
                    <small class="text-muted">- @selectedBranchName</small>
                }
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">CRM</li>
                    <li class="breadcrumb-item active">سازمان‌ها</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    @if (showBranchSelection)
    {
        <!-- انتخاب شعبه -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-sitemap me-2"></i>
                            انتخاب شعبه
                        </h3>
                    </div>
                    <div class="block-content block-content-full">
                        <div class="alert alert-info d-flex align-items-center mb-4">
                            <i class="fa fa-info-circle fa-2x me-3"></i>
                            <div>
                                <strong>انتخاب شعبه</strong>
                                <p class="mb-0">برای مشاهده و مدیریت سازمان‌ها، ابتدا یک شعبه انتخاب کنید.</p>
                            </div>
                        </div>

                        @if (userBranches != null && userBranches.Any())
                        {
                            <div class="row">
                                @foreach (var branch in userBranches)
                                {
                                    <div class="col-md-6 mb-3">
                                        <a href="@Url.Action("Index", new { branchId = branch.Id })" 
                                           class="block block-link-shadow text-center">
                                            <div class="block-content block-content-full">
                                                <div class="py-3">
                                                    <i class="fa fa-building fa-3x text-primary mb-3"></i>
                                                    <h4 class="fw-bold mb-0">@branch.Name</h4>
                                                    @if (!string.IsNullOrEmpty(branch.Description))
                                                    {
                                                        <p class="text-muted mb-0 mt-2">@branch.Description</p>
                                                    }
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle me-2"></i>
                                شما به هیچ شعبه‌ای دسترسی ندارید.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Toolbar -->
        <div class="block block-rounded">
            <div class="block-content block-content-full">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <form method="get" asp-action="Index" class="mb-0">
                            <input type="hidden" name="branchId" value="@selectedBranchId" />
                            <div class="input-group">
                                <input type="text" name="searchTerm" class="form-control" placeholder="جستجو (نام، برند، شماره ثبت)" value="@Context.Request.Query["searchTerm"]" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 text-end mt-3 mt-md-0">
                        @if (!hasSingleBranch)
                        {
                            <a asp-action="Index" class="btn btn-alt-secondary me-2">
                                <i class="fa fa-exchange-alt me-1"></i>
                                تغییر شعبه
                            </a>
                        }
                        <a asp-action="Create" asp-route-branchId="@selectedBranchId" class="btn btn-success">
                            <i class="fa fa-plus me-1"></i>
                            سازمان جدید
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- آمار -->
        <div class="row">
            <div class="col-6 col-md-3 col-lg-6 col-xl-3">
                <a class="block block-rounded block-link-shadow text-center" href="javascript:void(0)">
                    <div class="block-content block-content-full">
                        <div class="fs-2 fw-semibold text-primary">@totalCount</div>
                    </div>
                    <div class="block-content py-2 bg-body-light">
                        <p class="fw-medium fs-sm text-muted mb-0">
                            تعداد کل سازمان‌ها
                        </p>
                    </div>
                </a>
            </div>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="block block-rounded">
                <div class="block-content block-content-full text-center py-5">
                    <i class="fa fa-building fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">هیچ سازمانی یافت نشد</h4>
                    <a asp-action="Create" asp-route-branchId="@selectedBranchId" class="btn btn-success mt-3">
                        <i class="fa fa-plus me-1"></i>
                        افزودن اولین سازمان
                    </a>
                </div>
            </div>
        }
        else
        {
            @foreach (var group in groupedOrganizations.OrderBy(g => g.Key))
            {
                <div class="block block-rounded">
                    <div class="block-header block-header-default bg-primary-light">
                        <h3 class="block-title text-primary fw-bold">@group.Key</h3>
                        <div class="block-options">
                            <span class="badge bg-primary">@group.Value.Count سازمان</span>
                        </div>
                    </div>
                    <div class="block-content block-content-full p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-vcenter mb-0">
                                <thead class="bg-body-light">
                                    <tr>
                                        <th style="width: 50px;"></th>
                                        <th>نام سازمان</th>
                                        <th>برند</th>
                                        <th>شماره ثبت</th>
                                        <th>تلفن</th>
                                        <th class="text-center" style="width: 150px;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var org in group.Value)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <i class="fa fa-building fa-2x text-primary"></i>
                                            </td>
                                            <td>
                                                <strong>@org.Name</strong>
                                            </td>
                                            <td>@(org.Brand ?? "-")</td>
                                            <td>@(org.RegistrationNumber ?? "-")</td>
                                            <td>@(org.PrimaryPhone ?? "-")</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@org.Id" asp-route-branchId="@selectedBranchId" 
                                                       class="btn btn-sm btn-alt-secondary" title="جزئیات">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@org.Id" asp-route-branchId="@selectedBranchId" 
                                                       class="btn btn-sm btn-alt-warning" title="ویرایش">
                                                        <i class="fa fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-alt-danger" 
                                                            onclick="deleteOrganization(@org.Id, '@org.Name')" title="حذف">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

@section Scripts {
    <script>
        function deleteOrganization(id, name) {
            if (confirm('آیا از حذف "' + name + '" از این شعبه اطمینان دارید؟')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: id,
                        branchId: @(selectedBranchId ?? 0),
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            Dashmix.helpers('jq-notify', {
                                type: 'success',
                                message: response.message
                            });
                            location.reload();
                        } else {
                            Dashmix.helpers('jq-notify', {
                                type: 'danger',
                                message: response.message
                            });
                        }
                    },
                    error: function() {
                        Dashmix.helpers('jq-notify', {
                            type: 'danger',
                            message: 'خطا در حذف سازمان'
                        });
                    }
                });
            }
        }
    </script>
}
