@model MahERP.DataModelLayer.Entities.Crm.LeadStageStatus
@{
    var themeClass = ViewBag.ThemeClass ?? "bg-danger";
    var viewTitle = ViewBag.ViewTitle ?? "حذف مرحله";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <form asp-action="DeleteLeadStage" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            
            <div class="modal-header @themeClass">
                <h5 class="modal-title text-white">
                    <i class="fa fa-trash me-1"></i>
                    @viewTitle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body text-center py-4">
                <i class="fa fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h4 class="mb-2">آیا از حذف این مرحله مطمئن هستید؟</h4>
                <p class="text-muted mb-0">
                    <strong>@Model.Title</strong>
                </p>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <small class="text-muted">@Model.Description</small>
                }
                <div class="alert alert-warning mt-3 mb-0 text-start">
                    <i class="fa fa-info-circle me-1"></i>
                    این عملیات قابل بازگشت نیست.
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>
                    انصراف
                </button>
                <button type="button" class="btn btn-danger" data-save="modal-ajax-save">
                    <i class="fa fa-trash me-1"></i>
                    حذف
                </button>
            </div>
        </form>
    </div>
</div>
