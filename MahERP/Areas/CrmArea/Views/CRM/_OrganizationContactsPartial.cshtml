@{
    var contacts = ViewBag.Contacts as List<MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactViewModel> 
                   ?? Model?.Contacts as List<MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactViewModel>;
}

@if (contacts != null && contacts.Any())
{
    <div class="table-responsive">
        <table class="table table-sm table-hover mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام و نام خانوادگی</th>
                    <th>کد ملی</th>
                    <th>تلفن</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (contact, index) in contacts.Select((c, i) => (c, i + 1)))
                {
                    <tr>
                        <td class="fw-bold">@index</td>
                        <td>
                            <i class="fa fa-user text-primary me-1"></i>
                            <strong>@contact.LastName @contact.FirstName</strong>
                        </td>
                        <td dir="ltr">@(contact.NationalCode ?? "-")</td>
                        <td dir="ltr">@(contact.PrimaryPhone ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning mb-0">
        <i class="fa fa-exclamation-triangle me-1"></i>
        این سازمان عضوی ندارد
    </div>
}
