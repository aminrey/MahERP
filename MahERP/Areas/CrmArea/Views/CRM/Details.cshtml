@model CRMInteractionViewModel
@{
    ViewData["Title"] = "جزئیات تعامل CRM";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">جزئیات تعامل CRM</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">تعاملات CRM</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">جزئیات</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row push">
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="Edit" asp-route-id="@Model.Id">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-primary mb-1">
                        <i class="fa fa-pencil-alt"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                        ویرایش تعامل
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="javascript:void(0)" onclick="openModal('@Url.Action("AddComment", new { crmInteractionId = Model.Id })')">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-success mb-1">
                        <i class="fa fa-comment-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                        افزودن نظر
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="javascript:void(0)" onclick="openModal('@Url.Action("AddParticipant", new { crmInteractionId = Model.Id })')">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-info mb-1">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                        افزودن شرکت کننده
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="javascript:void(0)" onclick="openModal('@Url.Action("ToggleActiveStatus", new { id = Model.Id })')">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-@(Model.IsActive ? "warning" : "success") mb-1">
                        <i class="fa fa-@(Model.IsActive ? "ban" : "check")"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-@(Model.IsActive ? "warning" : "success") text-uppercase mb-0">
                        @(Model.IsActive ? "غیرفعال کردن" : "فعال کردن")
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->

    <div class="row">
        <div class="col-md-8">
            <!-- CRM Interaction Details -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-handshake text-muted me-1"></i> جزئیات تعامل
                    </h3>
                    <div class="block-options">
                        <div class="dropdown">
                            <button type="button" class="btn btn-alt-secondary" id="dropdown-default-alt-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-fw fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-default-alt-secondary">
                                <!-- Replace openModal function calls with data-toggle="modal-ajax" -->
                                <a class="dropdown-item" href="@Url.Action("ToggleActiveStatus", new { id = Model.Id })" data-toggle="modal-ajax">
                                    <i class="fa fa-fw @(Model.IsActive ? "fa-ban text-warning" : "fa-check text-success") me-1"></i> @(Model.IsActive ? "غیرفعال‌سازی" : "فعال‌سازی")
                                </a>
                                <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = Model.Id })" data-toggle="modal-ajax">
                                    <i class="fa fa-fw fa-trash-alt me-1"></i> حذف
                                </a>

                                <!-- Remove the old openModal function -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="block-content">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="mb-1">@Model.Title</h2>
                            <div class="fs-sm text-muted">
                                <span class="badge bg-primary">@Model.CRMCode</span> | 
                                <span>ایجاد: @(ConvertDateTime.ConvertMiladiToShamsi(Model.CreateDate, "yyyy/MM/dd"))</span>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="mb-2">
                                @switch (Model.Result)
                                {
                                    case 0:
                                        <span class="badge bg-danger p-2">بی نتیجه</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-success p-2">موفق</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-warning p-2">نیاز به پیگیری</span>
                                        break;
                                }
                            </div>
                            @if (Model.NextFollowUpDate.HasValue)
                            {
                                <div class="fs-sm">
                                    <span class="fw-bold">پیگیری بعدی:</span>
                                    <span class="@(Model.NextFollowUpDate.Value < DateTime.Now ? "text-danger" : "")">
                                        @(ConvertDateTime.ConvertMiladiToShamsi(Model.NextFollowUpDate, "yyyy/MM/dd"))
                                    </span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h4>توضیحات</h4>
                            <div class="p-2 bg-body-light rounded">
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="text-muted">توضیحاتی ثبت نشده است.</p>
                                }
                                else
                                {
                                    <p>@Html.Raw(Model.Description.Replace("\n", "<br/>"))</p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- CRM Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>اطلاعات تعامل</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">نوع تعامل</th>
                                        <td class="text-center">
                                            @switch (Model.CRMType)
                                            {
                                                case 0:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-primary-light text-primary">تماس تلفنی</span>
                                                    break;
                                                case 1:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">جلسه حضوری</span>
                                                    break;
                                                case 2:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-warning-light text-warning">ایمیل</span>
                                                    break;
                                                case 3:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-secondary-light text-secondary">پیامک</span>
                                                    break;
                                                case 4:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-dark-light text-dark">سایر</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">جهت تماس</th>
                                        <td class="text-center">
                                            @switch (Model.Direction)
                                            {
                                                case 0:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">ورودی</span>
                                                    break;
                                                case 1:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-primary-light text-primary">خروجی</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">طرف حساب</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.StakeholderName) ? "ندارد" : Model.StakeholderName)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">شخص مرتبط</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.StakeholderContactName) ? "ندارد" : Model.StakeholderContactName)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">ایجاد کننده</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.CreatorName) ? "نامشخص" : Model.CreatorName)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h4>جزئیات تماس</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">مدت زمان</th>
                                        <td class="text-center">
                                            @(Model.Duration.HasValue ? $"{Model.Duration.Value} دقیقه" : "-")
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">شماره تماس</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">آدرس ایمیل</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.EmailAddress) ? "-" : Model.EmailAddress)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">محل جلسه</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.MeetingLocation) ? "-" : Model.MeetingLocation)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">زمان شروع</th>
                                        <td class="text-center">
                                            @(Model.StartTime.HasValue ? ConvertDateTime.ConvertMiladiToShamsi(Model.StartTime, "yyyy/MM/dd") + " - " + Model.StartTime.Value.ToString("HH:mm") : "-")
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">زمان پایان</th>
                                        <td class="text-center">
                                            @(Model.EndTime.HasValue? ConvertDateTime.ConvertMiladiToShamsi(Model.EndTime, "yyyy/MM/dd") + " - " + Model.EndTime.Value.ToString("HH:mm") : "-")
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END CRM Interaction Details -->

            <!-- Comments -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-comments text-muted me-1"></i> نظرات
                    </h3>
                    <div class="block-options">
                        <button type="button" class="btn btn-sm btn-alt-primary" onclick="openModal('@Url.Action("AddComment", new { crmInteractionId = Model.Id })')">
                            <i class="fa fa-plus opacity-50 me-1"></i> افزودن نظر
                        </button>
                    </div>
                </div>
                <div class="block-content">
                    @if (Model.Comments == null || !Model.Comments.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ نظری برای این تعامل ثبت نشده است.
                        </div>
                    }
                    else
                    {
                        @foreach (var comment in Model.Comments.OrderBy(c => c.CreateDate))
                        {
                            <div class="d-flex push">
                                <div class="flex-shrink-0 me-3">
                                    <img class="img-avatar img-avatar48" src="/assets/media/avatars/avatar10.jpg" alt="@comment.CreatorName">
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-semibold">@comment.CreatorName</span>
                                        <small class="text-muted">@(ConvertDateTime.ConvertMiladiToShamsi(comment.CreateDate, "yyyy/MM/dd"))</small>
                                    </div>
                                    <p class="mb-0">@Html.Raw(comment.CommentText.Replace("\n", "<br/>"))</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- END Comments -->
        </div>

        <div class="col-md-4">
            <!-- Participants -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-users text-muted me-1"></i> شرکت‌کنندگان
                    </h3>
                    <div class="block-options">
                        <button type="button" class="btn btn-sm btn-alt-primary" onclick="openModal('@Url.Action("AddParticipant", new { crmInteractionId = Model.Id })')">
                            <i class="fa fa-user-plus opacity-50 me-1"></i> افزودن
                        </button>
                    </div>
                </div>
                <div class="block-content">
                    @if (Model.Participants == null || !Model.Participants.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ شرکت‌کننده‌ای تعریف نشده است.
                        </div>
                    }
                    else
                    {
                        <div class="list-group push">
                            @foreach (var participant in Model.Participants)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-semibold">@participant.DisplayName</span>
                                        <div class="fs-sm text-muted">@participant.ParticipantTypeText</div>
                                        @if (!string.IsNullOrEmpty(participant.Title))
                                        {
                                            <div class="fs-sm text-muted">@participant.Title</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- END Participants -->

            <!-- Attachments -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-paperclip text-muted me-1"></i> پیوست‌ها
                    </h3>
                </div>
                <div class="block-content">
                    @if (Model.Attachments == null || !Model.Attachments.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ پیوستی برای این تعامل بارگذاری نشده است.
                        </div>
                    }
                    else
                    {
                        <div class="list-group push">
                            @foreach (var attachment in Model.Attachments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-semibold">@attachment.FileName</span>
                                        <div class="fs-sm text-muted">
                                            @attachment.FormattedFileSize | @(ConvertDateTime.ConvertMiladiToShamsi(attachment.UploadDate, "yyyy/MM/dd"))
                                        </div>
                                        @if (!string.IsNullOrEmpty(attachment.Description))
                                        {
                                            <div class="fs-sm text-muted">@attachment.Description</div>
                                        }
                                    </div>
                                    <a href="@Url.Action("DownloadAttachment", new { id = attachment.Id })" class="btn btn-sm btn-alt-primary" data-bs-toggle="tooltip" title="دانلود">
                                        <i class="fa fa-download"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- END Attachments -->

            <!-- Follow Up -->
            @if (Model.NextFollowUpDate.HasValue)
            {
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">
                            <i class="fa fa-clock text-muted me-1"></i> پیگیری بعدی
                        </h3>
                    </div>
                    <div class="block-content">
                        <div class="alert alert-warning">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fa fa-calendar-alt fa-2x text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="alert-heading">@(ConvertDateTime.ConvertMiladiToShamsi(Model.NextFollowUpDate, "yyyy/MM/dd"))</h5>
                                    @if (!string.IsNullOrEmpty(Model.NextFollowUpNote))
                                    {
                                        <p class="mb-0">@Model.NextFollowUpNote</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- END Page Content -->

<!-- Modal Container for dynamic content -->
<div class="modal fade" id="modal-crm" tabindex="-1" role="dialog" aria-labelledby="modal-crm" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- Dynamic content will be loaded here -->
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i>
                    <h3 class="mt-2 mb-3">در حال بارگذاری...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Function to open modal and load content
        function openModal(url) {
            $('#modal-crm .modal-content').html('<div class="modal-body text-center"><i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i><h3 class="mt-2 mb-3">در حال بارگذاری...</h3></div>');
            $('#modal-crm').modal('show');

            // Load content via AJAX
            $.get(url, function(data) {
                $('#modal-crm .modal-content').html(data);
            });
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>

}