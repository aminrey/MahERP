@model CRMInteractionViewModel

<div class="block-content block-content-full">
    <div class="row g-4">
        <!-- یادداشت پیگیری -->
        <div class="col-12">
            <label class="form-label fw-semibold">
                <i class="fa fa-sticky-note text-warning me-1"></i>
                یادداشت پیگیری
            </label>
            <textarea asp-for="NextFollowUpNote" 
                      class="form-control" 
                      rows="4" 
                      placeholder="یادداشت‌های مربوط به پیگیری‌های آینده را وارد کنید..."
                      maxlength="1000"></textarea>
            <div class="form-text">
                <i class="fa fa-info-circle me-1"></i>
                نکات کلیدی برای پیگیری‌های بعدی را یادداشت کنید
            </div>
            <span asp-validation-for="NextFollowUpNote" class="text-danger"></span>
        </div>

        <!-- وضعیت فعال بودن -->
        <div class="col-12">
            <div class="form-check form-switch form-check-lg">
                <input asp-for="IsActive" 
                       class="form-check-input" 
                       type="checkbox" 
                       checked />
                <label asp-for="IsActive" class="form-check-label fw-semibold">
                    <i class="fa fa-toggle-on text-success me-1"></i>
                    تعامل فعال است
                </label>
            </div>
            <div class="form-text">
                <i class="fa fa-info-circle me-1"></i>
                تعاملات غیرفعال در گزارش‌ها نمایش داده نمی‌شوند
            </div>
        </div>
    </div>

    <!-- دکمه‌های ناوبری -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-alt-secondary" onclick="goToTab('stakeholder-info')">
                    <i class="fa fa-arrow-right me-1"></i>
                    مرحله قبل
                </button>
                <button type="button" class="btn btn-primary" onclick="goToTab('attachments')">
                    مرحله بعد
                    <i class="fa fa-arrow-left ms-1"></i>
                </button>
            </div>
        </div>
    </div>
</div>
