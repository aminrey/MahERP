    @@media (max-width: 768px) {
        .nav-tabs-block .nav-link {
            padding: 0.5rem 0.75rem;
            font-size: 0.9rem;
        }

        .nav-tabs-block .nav-link i {
            display: none;
        }
    }

    /* ⭐⭐⭐ اضافه: Fix برای تمام المان‌هایی که hover دارند */
    [class*="bg-"]:hover,
    [class*="bg-"]:hover * {
        transition: all 0.2s ease;
    }

    /* ⭐⭐⭐ Box/Card با بکگراند رنگی */
    .bg-primary,
    .bg-info,
    .bg-warning,
    .bg-success,
    .bg-danger {
        color: #fff !important;
    }

    .bg-primary *,
    .bg-info *,
    .bg-warning *,
    .bg-success *,
    .bg-danger * {
        color: #fff !important;
    }

    /* ⭐⭐⭐ List Group Items with Hover */
    .list-group-item:hover {
        background-color: rgba(102, 126, 234, 0.1);
        color: #2c3e50;
    }

