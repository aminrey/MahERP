@model CRMInteractionViewModel
@{
    ViewData["Title"] = "افزودن تعامل CRM جدید";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">افزودن تعامل CRM جدید</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">تعاملات CRM</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">افزودن جدید</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">@ViewData["Title"]</h3>
            <div class="block-options">
                <a asp-action="Index" class="btn btn-sm btn-alt-secondary">
                    <i class="fa fa-arrow-left opacity-50 me-1"></i> بازگشت به لیست
                </a>
            </div>
        </div>
        <div class="block-content">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CRMCode" class="form-label">کد تعامل</label>
                            <input asp-for="CRMCode" class="form-control" readonly />
                            <span asp-validation-for="CRMCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CRMType" class="form-label">نوع تعامل</label>
                            <select asp-for="CRMType" class="form-select">
                                <option value="0">تماس تلفنی</option>
                                <option value="1">جلسه حضوری</option>
                                <option value="2">ایمیل</option>
                                <option value="3">پیامک</option>
                                <option value="4">سایر</option>
                            </select>
                            <span asp-validation-for="CRMType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Title" class="form-label">عنوان تعامل</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label">توضیحات</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StakeholderId" class="form-label">طرف حساب</label>
                            <select asp-for="StakeholderId" asp-items="ViewBag.Stakeholders" class="form-select" id="stakeholder-select">
                                <option value="">-- انتخاب طرف حساب --</option>
                            </select>
                            <span asp-validation-for="StakeholderId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StakeholderContactId" class="form-label">شخص مرتبط</label>
                            <select asp-for="StakeholderContactId" class="form-select" id="contact-select">
                                <option value="">-- ابتدا طرف حساب را انتخاب کنید --</option>
                            </select>
                            <span asp-validation-for="StakeholderContactId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Direction" class="form-label">جهت تماس</label>
                            <select asp-for="Direction" class="form-select">
                                <option value="0">ورودی (مشتری تماس گرفته)</option>
                                <option value="1">خروجی (ما تماس گرفتیم)</option>
                            </select>
                            <span asp-validation-for="Direction" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Result" class="form-label">نتیجه تعامل</label>
                            <select asp-for="Result" class="form-select">
                                <option value="0">بی نتیجه</option>
                                <option value="1">موفق</option>
                                <option value="2">نیاز به پیگیری</option>
                            </select>
                            <span asp-validation-for="Result" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Duration" class="form-label">مدت زمان (دقیقه)</label>
                            <input asp-for="Duration" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="EmailAddress" class="form-label">آدرس ایمیل</label>
                            <input asp-for="EmailAddress" class="form-control" type="email" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="MeetingLocation" class="form-label">محل جلسه</label>
                            <input asp-for="MeetingLocation" class="form-control" />
                            <span asp-validation-for="MeetingLocation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="StartTime" class="form-label">زمان شروع</label>
                            <input asp-for="StartTime" class="form-control js-datepicker" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="EndTime" class="form-label">زمان پایان</label>
                            <input asp-for="EndTime" class="form-control js-datepicker" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NextFollowUpDate" class="form-label">تاریخ پیگیری بعدی</label>
                            <input asp-for="NextFollowUpDate" class="form-control js-datepicker" />
                            <span asp-validation-for="NextFollowUpDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="UploadFiles" class="form-label">فایل‌های پیوست</label>
                            <input type="file" name="UploadFiles" multiple class="form-control" />
                            <span asp-validation-for="UploadFiles" class="text-danger"></span>
                            <div class="fs-sm text-muted mt-1">می‌توانید چند فایل را همزمان انتخاب کنید.</div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="NextFollowUpNote" class="form-label">یادداشت پیگیری</label>
                    <textarea asp-for="NextFollowUpNote" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="NextFollowUpNote" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">فعال</label>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-alt-primary">
                            <i class="fa fa-check opacity-50 me-1"></i> ثبت تعامل
                        </button>
                        <a asp-action="Index" class="btn btn-alt-secondary">
                            <i class="fa fa-times opacity-50 me-1"></i> انصراف
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- END Page Content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function() {
            // Initialize Persian datepickers
            $('.js-datepicker').each(function() {
                new mds.MdsPersianDateTimePicker(this, {
                    targetTextSelector: this,
                    enableTimePicker: true,
                    textFormat: 'yyyy/MM/dd HH:mm',
                    targetDateFormat: 'yyyy-MM-dd HH:mm:ss',
                });
            });

            // Handle stakeholder change to load contacts
            $('#stakeholder-select').change(function() {
                var stakeholderId = $(this).val();
                var contactSelect = $('#contact-select');
                
                contactSelect.html('<option value="">-- در حال بارگذاری... --</option>');
                
                if (stakeholderId) {
                    $.ajax({
                        url: '@Url.Action("GetStakeholderContacts", "Stakeholder")',
                        type: 'GET',
                        data: { stakeholderId: stakeholderId },
                        success: function(contacts) {
                            contactSelect.html('<option value="">-- انتخاب شخص مرتبط --</option>');
                            $.each(contacts, function(index, contact) {
                                contactSelect.append('<option value="' + contact.id + '">' + contact.firstName + ' ' + contact.lastName + '</option>');
                            });
                        },
                        error: function() {
                            contactSelect.html('<option value="">-- خطا در بارگذاری --</option>');
                        }
                    });
                } else {
                    contactSelect.html('<option value="">-- ابتدا طرف حساب را انتخاب کنید --</option>');
                }
            });
        });
    </script>
}