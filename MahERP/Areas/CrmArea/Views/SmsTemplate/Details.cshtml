@model SmsTemplateDetailViewModel
@{
    ViewData["Title"] = "جزئیات قالب پیامک";
}

<main id="main-container">
    <!-- Hero -->
    <div class="bg-image" style="background-image: url('/assets/media/photos/photo13@2x.jpg');">
        <div class="bg-black-50">
            <div class="content content-full">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="fw-bold my-2 text-white">
                        <i class="fa fa-file-alt me-2"></i>
                        @Model.Title
                    </h1>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fa fa-edit me-1"></i> ویرایش
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-1"></i> بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- آمار کلی -->
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-primary">@Model.TotalRecipients</div>
                        <div class="text-muted">تعداد مخاطبین</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-info">@Model.TotalSent</div>
                        <div class="text-muted">تعداد ارسال</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-success">@Model.SuccessfulSent</div>
                        <div class="text-muted">ارسال موفق</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-danger">@Model.FailedSent</div>
                        <div class="text-muted">ارسال ناموفق</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="block block-rounded">
            <ul class="nav nav-tabs nav-tabs-block" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">
                        <i class="fa fa-info-circle me-1"></i> اطلاعات قالب
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-recipients">
                        <i class="fa fa-users me-1"></i> مخاطبین (@Model.TotalRecipients)
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-logs">
                        <i class="fa fa-history me-1"></i> لاگ ارسال‌ها (@Model.TotalSent)
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-send">
                        <i class="fa fa-paper-plane me-1"></i> ارسال سریع
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Tab 1: اطلاعات قالب -->
                <div class="tab-pane fade show active" id="tab-info" role="tabpanel">
                    <div class="block-content">
                        <table class="table table-borderless">
                            <tr>
                                <th style="width: 200px;">عنوان:</th>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <th>نوع قالب:</th>
                                <td><span class="badge bg-info">@Model.TemplateTypeText</span></td>
                            </tr>
                            <tr>
                                <th>وضعیت:</th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>متن قالب:</th>
                                <td>
                                    <div class="alert alert-secondary">
                                        @Model.MessageTemplate
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>توضیحات:</th>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <th>تاریخ ایجاد:</th>
                                <td>@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</td>
                            </tr>
                            <tr>
                                <th>ایجادکننده:</th>
                                <td>@Model.CreatorName</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Tab 2: مخاطبین -->
                <div class="tab-pane fade" id="tab-recipients" role="tabpanel">
                    <div class="block-content">
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-add-recipients">
                                <i class="fa fa-plus me-1"></i> افزودن مخاطب
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 15%;">نوع</th>
                                        <th style="width: 30%;">نام</th>
                                        <th style="width: 20%;">شماره/ایمیل</th>
                                        <th style="width: 15%;">تاریخ افزودن</th>
                                        <th style="width: 10%;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Recipients.Any())
                                    {
                                        int counter = 1;
                                        foreach (var recipient in Model.Recipients)
                                        {
                                            <tr>
                                                <td>@counter</td>
                                                <td>
                                                    @if (recipient.RecipientType == 0)
                                                    {
                                                        <span class="badge bg-info">شخص</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">سازمان</span>
                                                    }
                                                </td>
                                                <td>@recipient.RecipientName</td>
                                                <td>@recipient.RecipientContact</td>
                                                <td>@recipient.AddedDate.ToString("yyyy/MM/dd")</td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-danger remove-recipient" data-id="@recipient.Id">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">
                                                هنوز مخاطبی اضافه نشده است
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tab 3: لاگ ارسال‌ها -->
                <div class="tab-pane fade" id="tab-logs" role="tabpanel">
                    <div class="block-content">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 15%;">شماره</th>
                                        <th style="width: 20%;">گیرنده</th>
                                        <th style="width: 10%;">وضعیت ارسال</th>
                                        <th style="width: 10%;">وضعیت تحویل</th>
                                        <th style="width: 15%;">تاریخ ارسال</th>
                                        <th style="width: 15%;">Provider</th>
                                        <th style="width: 10%;">جزئیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentLogs.Any())
                                    {
                                        int counter = 1;
                                        foreach (var log in Model.RecentLogs)
                                        {
                                            <tr>
                                                <td>@counter</td>
                                                <td>@log.PhoneNumber</td>
                                                <td>@log.RecipientName</td>
                                                <td>
                                                    @if (log.IsSuccess)
                                                    {
                                                        <span class="badge bg-success">موفق</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">ناموفق</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (log.IsDelivered)
                                                    {
                                                        <span class="badge bg-success">تحویل شده</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">@log.DeliveryStatusText</span>
                                                    }
                                                </td>
                                                <td>@log.SendDate.ToString("yyyy/MM/dd HH:mm")</td>
                                                <td>@log.ProviderName</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                                    {
                                                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="@log.ErrorMessage">
                                                            <i class="fa fa-info-circle"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                هنوز پیامکی ارسال نشده است
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tab 4: ارسال سریع -->
                <div class="tab-pane fade" id="tab-send" role="tabpanel">
                    <div class="block-content">
                        <form id="form-quick-send">
                            <input type="hidden" name="templateId" value="@Model.Id" />

                            <div class="alert alert-info">
                                <i class="fa fa-info-circle me-2"></i>
                                با استفاده از این فرم می‌توانید این قالب را به تمام مخاطبین ثبت شده ارسال کنید.
                            </div>

                            <div class="mb-3">
                                <label class="form-label">پیام نهایی (پیش‌نمایش)</label>
                                <textarea class="form-control" rows="4" readonly>@Model.MessageTemplate</textarea>
                            </div>

                            <div class="mb-3 form-check">
                                <input class="form-check-input" type="checkbox" name="useQueue" id="useQueue" checked />
                                <label class="form-check-label" for="useQueue">
                                    افزودن به صف (ارسال در پس‌زمینه)
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-paper-plane me-1"></i>
                                ارسال به تمام مخاطبین (@Model.TotalRecipients نفر)
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Modal: افزودن مخاطب -->
<div class="modal fade" id="modal-add-recipients" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">افزودن مخاطب به قالب</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="form-add-recipients">
                    <div class="mb-3">
                        <label class="form-label">انتخاب افراد</label>
                        <select class="form-select" id="select-contacts" multiple></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">انتخاب سازمان‌ها</label>
                        <select class="form-select" id="select-organizations" multiple></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-primary" id="btn-save-recipients">
                    <i class="fa fa-check me-1"></i> ذخیره
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('#select-contacts').select2({
                placeholder: 'جستجو و انتخاب افراد',
                ajax: {
                    url: '@Url.Action("SearchContacts", "SmsTemplate")',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return { search: params.term };
                    },
                    processResults: function (data) {
                        return { results: data };
                    }
                }
            });

            $('#select-organizations').select2({
                placeholder: 'جستجو و انتخاب سازمان‌ها',
                ajax: {
                    url: '@Url.Action("SearchOrganizations", "SmsTemplate")',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return { search: params.term };
                    },
                    processResults: function (data) {
                        return { results: data };
                    }
                }
            });

            // ذخیره مخاطبین
            $('#btn-save-recipients').on('click', function () {
                const contactIds = $('#select-contacts').val() || [];
                const organizationIds = $('#select-organizations').val() || [];

                if (contactIds.length === 0 && organizationIds.length === 0) {
                    toastr.warning('لطفا حداقل یک مخاطب انتخاب کنید');
                    return;
                }

                $.post('@Url.Action("AddRecipients")', {
                    templateId: @Model.Id,
                    contactIds: contactIds,
                    organizationIds: organizationIds
                }).done(function (response) {
                    if (response.success) {
                        Swal.fire('موفق', response.message, 'success')
                            .then(() => location.reload());
                    } else {
                        Swal.fire('خطا', response.message, 'error');
                    }
                });
            });

            // حذف مخاطب
            $('.remove-recipient').on('click', function () {
                const recipientId = $(this).data('id');

                Swal.fire({
                    title: 'تایید حذف',
                    text: 'آیا از حذف این مخاطب اطمینان دارید؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'بله',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("RemoveRecipient")', { recipientId: recipientId })
                            .done(function (response) {
                                if (response.success) {
                                    Swal.fire('حذف شد', response.message, 'success')
                                        .then(() => location.reload());
                                } else {
                                    Swal.fire('خطا', response.message, 'error');
                                }
                            });
                    }
                });
            });

            // ارسال سریع
            $('#form-quick-send').on('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'تایید ارسال',
                    text: 'آیا می‌خواهید این قالب را به @Model.TotalRecipients مخاطب ارسال کنید؟',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'بله، ارسال شود',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("SendToTemplateRecipients", "SmsSend")', {
                            templateId: @Model.Id,
                            useQueue: $('#useQueue').is(':checked')
                        }).done(function (response) {
                            if (response.success) {
                                Swal.fire('موفق', response.message, 'success');
                            } else {
                                Swal.fire('خطا', response.message, 'error');
                            }
                        });
                    }
                });
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}