@model SmsTemplateDetailViewModel
@{
    ViewData["Title"] = "جزئیات قالب پیامک";
}

<main id="main-container">
    <!-- Hero -->
    <div class="bg-image" style="background-image: url('/assets/media/photos/photo13@2x.jpg');">
        <div class="bg-black-50">
            <div class="content content-full">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="fw-bold my-2 text-white">
                        <i class="fa fa-file-alt me-2"></i>
                        @Model.Title
                    </h1>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fa fa-edit me-1"></i> ویرایش
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-1"></i> بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- آمار کلی -->
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-primary">@Model.TotalRecipients</div>
                        <div class="text-muted">تعداد مخاطبین</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-info">@Model.TotalSent</div>
                        <div class="text-muted">تعداد ارسال</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-success">@Model.SuccessfulSent</div>
                        <div class="text-muted">ارسال موفق</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="block block-rounded text-center">
                    <div class="block-content">
                        <div class="fs-1 fw-bold text-danger">@Model.FailedSent</div>
                        <div class="text-muted">ارسال ناموفق</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="block block-rounded">
            <ul class="nav nav-tabs nav-tabs-block" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">
                        <i class="fa fa-info-circle me-1"></i> اطلاعات قالب
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-recipients">
                        <i class="fa fa-users me-1"></i> مخاطبین (@Model.TotalRecipients)
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-logs">
                        <i class="fa fa-history me-1"></i> لاگ ارسال‌ها (@Model.TotalSent)
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-send">
                        <i class="fa fa-paper-plane me-1"></i> ارسال سریع
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Tab 1: اطلاعات قالب -->
                <div class="tab-pane fade show active" id="tab-info" role="tabpanel">
                    <div class="block-content">
                        <table class="table table-borderless">
                            <tr>
                                <th style="width: 200px;">عنوان:</th>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <th>نوع قالب:</th>
                                <td><span class="badge bg-info">@Model.TemplateTypeText</span></td>
                            </tr>
                            <tr>
                                <th>وضعیت:</th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>متن قالب:</th>
                                <td>
                                    <div class="alert alert-secondary">
                                        @Model.MessageTemplate
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>توضیحات:</th>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <th>تاریخ ایجاد:</th>
                                <td>@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</td>
                            </tr>
                            <tr>
                                <th>ایجادکننده:</th>
                                <td>@Model.CreatorName</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Tab 2: مخاطبین -->
                <div class="tab-pane fade" id="tab-recipients" role="tabpanel">
                    <div class="block-content">
                        <div class="alert alert-info mb-3">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="fa fa-info-circle fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="alert-heading mb-1">راهنمای افزودن مخاطب</h5>
                                    <p class="mb-0">
                                        می‌توانید افراد یا سازمان‌ها را به این قالب اضافه کنید.
                                        <br>
                                        <strong>توجه:</strong> برای هر فرد، شماره تماس پیش‌فرض پیامک به صورت خودکار انتخاب می‌شود.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <a href="@Url.Action("ShowAddRecipientsModal", new { id = Model.Id })" 
                               class="btn btn-primary"
                               data-bs-target="#modal-block-select2"
                               data-toggle="modal-ajax">
                                <i class="fa fa-plus me-1"></i> افزودن مخاطب جدید
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 10%;">نوع</th>
                                        <th style="width: 25%;">نام</th>
                                        <th style="width: 25%;">شماره تماس</th>
                                        <th style="width: 15%;">تاریخ افزودن</th>
                                        <th style="width: 15%;">افزوده شده توسط</th>
                                        <th style="width: 5%;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Recipients.Any())
                                    {
                                        int counter = 1;
                                        foreach (var recipient in Model.Recipients)
                                        {
                                            <tr>
                                                <td class="text-center">@counter</td>
                                                <td>
                                                    @if (recipient.RecipientType == 0)
                                                    {
                                                        <span class="badge bg-primary">
                                                            <i class="fa fa-user"></i> شخص
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="fa fa-building"></i> سازمان
                                                        </span>
                                                    }
                                                </td>
                                                <td class="fw-semibold">@recipient.RecipientName</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(recipient.RecipientContact))
                                                    {
                                                        <span dir="ltr" class="d-inline-block">@recipient.RecipientContact</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @recipient.AddedDate.ToString("yyyy/MM/dd HH:mm")
                                                    </small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@recipient.AddedByName</small>
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm btn-danger remove-recipient" data-id="@recipient.Id" title="حذف">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center py-5">
                                                <i class="fa fa-users fa-3x text-muted mb-3 d-block"></i>
                                                <p class="text-muted mb-3">هنوز مخاطبی اضافه نشده است</p>
                                                <a href="@Url.Action("ShowAddRecipientsModal", new { id = Model.Id })" 
                                                   class="btn btn-primary"
                                                   data-bs-target="#modal-block-select2"
                                                   data-toggle="modal-ajax">
                                                    <i class="fa fa-plus me-1"></i> افزودن اولین مخاطب
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tab 3: لاگ ارسال‌ها -->
                <div class="tab-pane fade" id="tab-logs" role="tabpanel">
                    <div class="block-content">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 15%;">شماره</th>
                                        <th style="width: 20%;">گیرنده</th>
                                        <th style="width: 10%;">وضعیت ارسال</th>
                                        <th style="width: 10%;">وضعیت تحویل</th>
                                        <th style="width: 15%;">تاریخ ارسال</th>
                                        <th style="width: 15%;">Provider</th>
                                        <th style="width: 10%;">جزئیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentLogs.Any())
                                    {
                                        int counter = 1;
                                        foreach (var log in Model.RecentLogs)
                                        {
                                            <tr>
                                                <td>@counter</td>
                                                <td>@log.PhoneNumber</td>
                                                <td>@log.RecipientName</td>
                                                <td>
                                                    @if (log.IsSuccess)
                                                    {
                                                        <span class="badge bg-success">موفق</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">ناموفق</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (log.IsDelivered)
                                                    {
                                                        <span class="badge bg-success">تحویل شده</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">@log.DeliveryStatusText</span>
                                                    }
                                                </td>
                                                <td>@log.SendDate.ToString("yyyy/MM/dd HH:mm")</td>
                                                <td>@log.ProviderName</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                                    {
                                                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="@log.ErrorMessage">
                                                            <i class="fa fa-info-circle"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                هنوز پیامکی ارسال نشده است
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tab 4: ارسال سریع -->
                <div class="tab-pane fade" id="tab-send" role="tabpanel">
                    <div class="block-content">
                        <form id="form-quick-send">
                            <input type="hidden" name="templateId" value="@Model.Id" />

                            <div class="alert alert-info">
                                <i class="fa fa-info-circle me-2"></i>
                                با استفاده از این فرم می‌توانید این قالب را به تمام مخاطبین ثبت شده ارسال کنید.
                            </div>

                            <div class="mb-3">
                                <label class="form-label">پیام نهایی (پیش‌نمایش)</label>
                                <textarea class="form-control" rows="4" readonly>@Model.MessageTemplate</textarea>
                            </div>

                            <div class="mb-3 form-check">
                                <input class="form-check-input" type="checkbox" name="useQueue" id="useQueue" checked />
                                <label class="form-check-label" for="useQueue">
                                    افزودن به صف (ارسال در پس‌زمینه)
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-paper-plane me-1"></i>
                                ارسال به تمام مخاطبین (@Model.TotalRecipients نفر)
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            // حذف مخاطب
            $('.remove-recipient').on('click', function () {
                const recipientId = $(this).data('id');

                Swal.fire({
                    title: 'تایید حذف',
                    text: 'آیا از حذف این مخاطب اطمینان دارید؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'بله',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("RemoveRecipient")', { 
                            recipientId: recipientId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        }).done(function (response) {
                            if (response.success) {
                                Swal.fire('حذف شد', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطا', response.message, 'error');
                            }
                        });
                    }
                });
            });

            // ارسال سریع
            $('#form-quick-send').on('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'تایید ارسال',
                    text: 'آیا می‌خواهید این قالب را به @Model.TotalRecipients مخاطب ارسال کنید؟',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'بله، ارسال شود',
                    cancelButtonText: 'خیر'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("SendToTemplateRecipients", "SmsSend")', {
                            templateId: @Model.Id,
                            useQueue: $('#useQueue').is(':checked'),
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        }).done(function (response) {
                            if (response.success) {
                                Swal.fire('موفق', response.message, 'success');
                            } else {
                                Swal.fire('خطا', response.message, 'error');
                            }
                        });
                    }
                });
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}