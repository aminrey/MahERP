@model List<MahERP.DataModelLayer.ViewModels.CrmViewModels.InteractionTypeViewModel>
@{
    ViewData["Title"] = "انواع تعامل";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-tags text-primary me-2"></i>
                انواع تعامل
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">CRM</li>
                    <li class="breadcrumb-item">تنظیمات</li>
                    <li class="breadcrumb-item active">انواع تعامل</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-list me-1"></i>
                لیست انواع تعامل
            </h3>
            <div class="block-options">
                <button type="button" class="btn btn-sm btn-alt-primary" onclick="openAddInteractionTypeModal()">
                    <i class="fa fa-plus me-1"></i>
                    نوع تعامل جدید
                </button>
            </div>
        </div>
        <div class="block-content">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-vcenter">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 60px">#</th>
                                <th>عنوان</th>
                                <th>مرحله قیف فروش</th>
                                <th class="text-center" style="width: 80px">ترتیب</th>
                                <th class="text-center" style="width: 100px">وضعیت</th>
                                <th class="text-center" style="width: 120px">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                    <td class="text-center fw-semibold">@item.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Icon))
                                            {
                                                <span class="me-2" style="color: @(item.ColorCode ?? "#6c757d")">
                                                    <i class="fa @item.Icon"></i>
                                                </span>
                                            }
                                            else if (!string.IsNullOrEmpty(item.ColorCode))
                                            {
                                                <span class="badge rounded-pill me-2" style="background-color: @item.ColorCode; width: 20px; height: 20px;"></span>
                                            }
                                            <div>
                                                <span class="fw-semibold">@item.Title</span>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <br /><small class="text-muted">@item.Description</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: @(item.LeadStageStatusColor ?? "#6c757d")">
                                            @(item.LeadStageStatusTitle ?? "تعیین نشده")
                                        </span>
                                    </td>
                                    <td class="text-center">@item.DisplayOrder</td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غیرفعال</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-alt-primary" onclick="openEditInteractionTypeModal(@item.Id)" title="ویرایش">
                                                <i class="fa fa-pencil-alt"></i>
                                            </button>
                                            @if (item.IsActive)
                                            {
                                                <button class="btn btn-alt-danger" onclick="openDeleteInteractionTypeModal(@item.Id)" title="غیرفعال کردن">
                                                    <i class="fa fa-ban"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-tags fa-3x text-muted mb-3"></i>
                    <p class="text-muted">هیچ نوع تعاملی تعریف نشده است</p>
                    <button type="button" class="btn btn-primary" onclick="openAddInteractionTypeModal()">
                        <i class="fa fa-plus me-1"></i>
                        اولین نوع تعامل را ایجاد کنید
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- راهنما -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-lightbulb me-1"></i>
                راهنما
            </h3>
            <div class="block-options">
                <button type="button" class="btn-block-option" data-toggle="block-option" data-action="content_toggle"></button>
            </div>
        </div>
        <div class="block-content">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="fw-semibold">نوع تعامل چیست؟</h6>
                    <p class="small text-muted">
                        هر تعامل با مشتری یک نوع دارد که مشخص می‌کند چه نوع ارتباطی با مشتری برقرار شده است.
                    </p>
                    <ul class="small text-muted">
                        <li><strong>تماس تلفنی:</strong> مکالمه تلفنی با مشتری</li>
                        <li><strong>جلسه حضوری:</strong> ملاقات حضوری با مشتری</li>
                        <li><strong>ایمیل:</strong> ارسال یا دریافت ایمیل</li>
                        <li><strong>پیامک:</strong> ارسال پیامک تبلیغاتی یا اطلاع‌رسانی</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6 class="fw-semibold">ارتباط با قیف فروش</h6>
                    <p class="small text-muted">
                        هر نوع تعامل می‌تواند به یک مرحله از قیف فروش مرتبط باشد:
                    </p>
                    <ul class="small text-muted">
                        <li><strong>آگاهی:</strong> اولین آشنایی با مشتری</li>
                        <li><strong>علاقه‌مندی:</strong> مشتری علاقه‌مند شده</li>
                        <li><strong>ارزیابی:</strong> مشتری در حال بررسی است</li>
                        <li><strong>تصمیم‌گیری:</strong> مشتری آماده تصمیم است</li>
                        <li><strong>خرید:</strong> مشتری خرید کرده</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Page Content -->

@section Scripts {
    <script>
        function openAddInteractionTypeModal() {
            createAndShowModal({
                url: '@Url.Action("AddModal", "InteractionType", new { area = "CrmArea" })',
                onHidden: function() {
                    location.reload();
                }
            });
        }

        function openEditInteractionTypeModal(id) {
            createAndShowModal({
                url: '@Url.Action("EditModal", "InteractionType", new { area = "CrmArea" })' + '?id=' + id,
                onHidden: function() {
                    location.reload();
                }
            });
        }

        function openDeleteInteractionTypeModal(id) {
            createAndShowModal({
                url: '@Url.Action("DeleteModal", "InteractionType", new { area = "CrmArea" })' + '?id=' + id,
                onHidden: function() {
                    location.reload();
                }
            });
        }
    </script>
}
