@model List<MahERP.DataModelLayer.Entities.Contacts.Organization>
@{
    var branchId = ViewBag.BranchId as int?;
    var branchName = ViewBag.BranchName as string;
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header bg-success text-white">
            <h5 class="modal-title">
                <i class="fa fa-building me-2"></i>
                انتخاب سازمان
                @if (!string.IsNullOrEmpty(branchName))
                {
                    <small class="opacity-75">- شعبه @branchName</small>
                }
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            <div class="mb-3">
                <input type="text" id="organizationSearch" class="form-control" placeholder="جستجو در سازمان‌ها..." onkeyup="filterOrganizations()" />
            </div>

            <div id="organizationList" style="max-height: 400px; overflow-y: auto;">
                @if (Model != null && Model.Any())
                {
                    <div class="list-group">
                        @foreach (var org in Model)
                        {
                            <a href="@Url.Action("Create", "Goal", new { area = "CrmArea", organizationId = org.Id })" 
                               class="list-group-item list-group-item-action organization-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fa fa-building text-success me-2"></i>
                                        <strong>@org.Name</strong>
                                    </div>
                                    <i class="fa fa-chevron-left"></i>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fa fa-exclamation-triangle me-2"></i>
                        هیچ سازمانی در این شعبه یافت نشد
                    </div>
                }
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fa fa-times me-1"></i>
                بستن
            </button>
        </div>
    </div>
</div>

<script>
    function filterOrganizations() {
        const searchTerm = $('#organizationSearch').val().toLowerCase();
        $('.organization-item').each(function() {
            const text = $(this).text().toLowerCase();
            $(this).toggle(text.includes(searchTerm));
        });
    }
</script>
