@model List<MahERP.DataModelLayer.ViewModels.CrmViewModels.GoalViewModel>
@{
    ViewData["Title"] = "اهداف فروش " + ViewBag.OrganizationName;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-bullseye text-success me-2"></i>
                اهداف فروش
                <span class="text-success">@ViewBag.OrganizationName</span>
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">CRM</li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Organization" asp-action="Index" asp-area="ContactArea">سازمان‌ها</a>
                    </li>
                    <li class="breadcrumb-item active">اهداف</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-times-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- لیست اهداف -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-list me-1"></i>
                لیست اهداف
                <span class="badge bg-success ms-1">@Model.Count</span>
            </h3>
            <div class="block-options">
                <a asp-action="Create" asp-route-organizationId="@ViewBag.OrganizationId" class="btn btn-sm btn-alt-success">
                    <i class="fa fa-plus me-1"></i>
                    هدف جدید
                </a>
            </div>
        </div>
        <div class="block-content">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var goal in Model)
                    {
                        <div class="col-md-6 col-xl-4">
                            <div class="block block-rounded block-bordered @(goal.IsConverted ? "block-mode-success" : goal.IsActive ? "" : "block-mode-muted")">
                                @if (goal.IsConverted)
                                {
                                    <div class="block-header block-header-default bg-success">
                                        <h3 class="block-title text-white">
                                            <i class="fa fa-check-double me-1"></i>
                                            تبدیل شده
                                        </h3>
                                    </div>
                                }
                                else if (!goal.IsActive)
                                {
                                    <div class="block-header block-header-default bg-secondary">
                                        <h3 class="block-title text-white">
                                            <i class="fa fa-pause-circle me-1"></i>
                                            غیرفعال
                                        </h3>
                                    </div>
                                }
                                <div class="block-content">
                                    <h4 class="mb-2">@goal.Title</h4>

                                    @if (!string.IsNullOrEmpty(goal.ProductName))
                                    {
                                        <p class="mb-2">
                                            <i class="fa fa-box text-muted me-1"></i>
                                            @goal.ProductName
                                        </p>
                                    }

                                    @if (!string.IsNullOrEmpty(goal.Description))
                                    {
                                        <p class="text-muted small mb-3">
                                            @(goal.Description.Length > 80 ? goal.Description.Substring(0, 80) + "..." : goal.Description)
                                        </p>
                                    }

                                    @if (goal.CurrentLeadStageStatusTitle != null)
                                    {
                                        <div class="mb-3">
                                            <span class="badge" style="background-color: @(goal.CurrentLeadStageStatusColor ?? "#6c757d")">
                                                @goal.CurrentLeadStageStatusTitle
                                            </span>
                                        </div>
                                    }

                                    @if (goal.EstimatedValue.HasValue)
                                    {
                                        <div class="mb-2">
                                            <i class="fa fa-coins text-warning me-1"></i>
                                            <strong>@goal.EstimatedValueFormatted</strong>
                                            <small class="text-muted">ریال</small>
                                        </div>
                                    }

                                    @if (goal.IsConverted && goal.ActualValue.HasValue)
                                    {
                                        <div class="mb-2">
                                            <i class="fa fa-money-bill-wave text-success me-1"></i>
                                            <strong class="text-success">@goal.ActualValueFormatted</strong>
                                            <small class="text-muted">ریال (واقعی)</small>
                                        </div>
                                    }

                                    <hr />

                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fa fa-calendar me-1"></i>
                                            @goal.CreatedDatePersian
                                        </small>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@goal.Id" class="btn btn-sm btn-alt-primary" title="جزئیات">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            @if (!goal.IsConverted && goal.IsActive)
                                            {
                                                <form asp-action="MarkAsConverted" asp-route-id="@goal.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('آیا این هدف به خرید تبدیل شده است؟');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-alt-success" title="تبدیل به خرید">
                                                        <i class="fa fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-bullseye fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-3">هیچ هدفی برای این سازمان تعریف نشده است</p>
                    <a asp-action="Create" asp-route-organizationId="@ViewBag.OrganizationId" class="btn btn-success">
                        <i class="fa fa-plus me-1"></i>
                        تعریف اولین هدف
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- END Page Content -->
