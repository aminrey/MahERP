@model MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderGoalsPageViewModel

<!-- اطلاعات مخاطب -->
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa @(Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Contact ? "fa-user" : "fa-building") me-1"></i>
            @(Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Contact ? Model.ContactName : Model.OrganizationName)
        </h3>
        <div class="block-options">
            @if (Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Contact && Model.ContactId.HasValue)
            {
                <a asp-action="Create" asp-route-contactId="@Model.ContactId" class="btn btn-sm btn-alt-primary">
                    <i class="fa fa-plus me-1"></i>
                    هدف جدید
                </a>
            }
            else if (Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Organization && Model.OrganizationId.HasValue)
            {
                <a asp-action="Create" asp-route-organizationId="@Model.OrganizationId" class="btn btn-sm btn-alt-primary">
                    <i class="fa fa-plus me-1"></i>
                    هدف جدید
                </a>
            }
        </div>
    </div>
    <div class="block-content">
        <!-- آمار سریع -->
        <div class="row g-sm mb-3">
            <div class="col-4">
                <div class="p-3 bg-body-light rounded text-center">
                    <div class="fs-4 fw-semibold text-primary">@Model.TotalGoals</div>
                    <div class="small text-muted">کل</div>
                </div>
            </div>
            <div class="col-4">
                <div class="p-3 bg-body-light rounded text-center">
                    <div class="fs-4 fw-semibold text-info">@Model.ActiveGoals</div>
                    <div class="small text-muted">فعال</div>
                </div>
            </div>
            <div class="col-4">
                <div class="p-3 bg-body-light rounded text-center">
                    <div class="fs-4 fw-semibold text-success">@Model.ConvertedGoals</div>
                    <div class="small text-muted">تبدیل شده</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- لیست اهداف -->
@if (Model.HasGoals)
{
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-list me-1"></i>
                لیست اهداف
                <span class="badge bg-primary ms-1">@Model.TotalGoals مورد</span>
            </h3>
        </div>
        <div class="block-content p-0">
            <div class="table-responsive">
                <table class="table table-hover table-vcenter mb-0">
                    <thead class="bg-body-light">
                        <tr>
                            <th style="width: 50px;" class="text-center">#</th>
                            <th>عنوان</th>
                            <th style="width: 150px;">محصول/خدمت</th>
                            <th style="width: 150px;" class="text-center">ارزش تخمینی</th>
                            <th style="width: 120px;" class="text-center">مرحله</th>
                            <th style="width: 100px;" class="text-center">وضعیت</th>
                            <th style="width: 100px;" class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var goal in Model.Goals)
                        {
                            <tr class="@(!goal.IsActive ? "table-secondary" : goal.IsConverted ? "table-success-light" : "")">
                                <td class="text-center fw-semibold text-muted">@goal.Id</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@goal.Id" class="fw-semibold text-decoration-none">
                                        <i class="fa fa-bullseye fa-fw text-primary me-1"></i>
                                        @goal.Title
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(goal.ProductName))
                                    {
                                        <small class="text-muted">
                                            <i class="fa fa-box fa-fw me-1"></i>
                                            @goal.ProductName
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (goal.EstimatedValue.HasValue)
                                    {
                                        <span class="fw-semibold" dir="ltr">@goal.EstimatedValueFormatted</span>
                                        <br />
                                        <small class="text-muted">تومان</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(goal.CurrentLeadStageStatusTitle))
                                    {
                                        <span class="badge" style="background-color: @(goal.CurrentLeadStageStatusColor ?? "#6c757d")">
                                            @goal.CurrentLeadStageStatusTitle
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">نامشخص</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (goal.IsConverted)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fa fa-check-double me-1"></i>
                                            تبدیل شده
                                        </span>
                                    }
                                    else if (goal.IsActive)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fa fa-play me-1"></i>
                                            فعال
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fa fa-pause me-1"></i>
                                            غیرفعال
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@goal.Id" class="btn btn-sm btn-alt-primary" title="جزئیات">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        @if (!goal.IsConverted && goal.IsActive)
                                        {
                                            <button type="button" 
                                                    class="btn btn-sm btn-alt-success" 
                                                    title="تبدیل به خرید"
                                                    onclick="confirmConversion(@goal.Id)">
                                                <i class="fa fa-check"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="block block-rounded">
        <div class="block-content text-center py-5">
            <i class="fa fa-bullseye fa-4x text-muted mb-3"></i>
            <h4 class="text-muted mb-2">هیچ هدفی یافت نشد</h4>
            <p class="text-muted mb-4">برای این مخاطب در این شعبه هدفی تعریف نشده است</p>
            @if (Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Contact && Model.ContactId.HasValue)
            {
                <a asp-action="Create" asp-route-contactId="@Model.ContactId" class="btn btn-primary">
                    <i class="fa fa-plus me-1"></i>
                    ایجاد اولین هدف
                </a>
            }
            else if (Model.StakeholderType == MahERP.DataModelLayer.ViewModels.CrmViewModels.StakeholderType.Organization && Model.OrganizationId.HasValue)
            {
                <a asp-action="Create" asp-route-organizationId="@Model.OrganizationId" class="btn btn-primary">
                    <i class="fa fa-plus me-1"></i>
                    ایجاد اولین هدف
                </a>
            }
        </div>
    </div>
}

<style>
    .table-success-light {
        background-color: rgba(25, 135, 84, 0.1) !important;
    }
</style>

<script>
    // تایید تبدیل به خرید
    function confirmConversion(goalId) {
        showConfirmationSwal({
            title: 'تبدیل به خرید',
            text: 'آیا این هدف به خرید تبدیل شده است؟',
            icon: 'question',
            confirmButtonText: 'بله، تبدیل شود',
            cancelButtonText: 'خیر، انصراف'
        }).then(function(confirmed) {
            if (confirmed) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("MarkAsConverted", "Goal", new { area = "CrmArea" })' + '?id=' + goalId;
                
                var token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    var tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    form.appendChild(tokenInput);
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>
