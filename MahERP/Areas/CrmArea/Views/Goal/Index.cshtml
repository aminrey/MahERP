@model MahERP.DataModelLayer.ViewModels.CrmViewModels.GoalListViewModel
@{
    ViewData["Title"] = "لیست اهداف فروش";
    Layout = "~/Areas/CrmArea/Views/Shared/_CrmLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fa fa-bullseye me-2"></i>
                    لیست اهداف فروش
                </h4>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- فیلترها -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">جستجو</label>
                        <input type="text" name="Filters.SearchTerm" value="@Model.Filters?.SearchTerm" class="form-control" placeholder="جستجو در عنوان یا محصول..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">وضعیت</label>
                        <select name="Filters.Status" class="form-select">
                            <option value="">همه</option>
                            <option value="Active">فعال</option>
                            <option value="Converted">تبدیل شده</option>
                            <option value="Inactive">غیرفعال</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">مرحله</label>
                        <select name="Filters.LeadStageStatusId" class="form-select">
                            <option value="">همه</option>
                            @* باید از دیتابیس پر شود *@
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">از تاریخ</label>
                        <input type="text" name="Filters.FromDatePersian" value="@Model.Filters?.FromDatePersian" class="form-control date-picker" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">تا تاریخ</label>
                        <input type="text" name="Filters.ToDatePersian" value="@Model.Filters?.ToDatePersian" class="form-control date-picker" />
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="fa fa-filter"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- آمار کلی -->
    @if (Model.Statistics != null)
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">کل اهداف</h6>
                                <h3 class="mb-0">@Model.Statistics.TotalGoals</h3>
                            </div>
                            <div class="text-primary">
                                <i class="fa fa-bullseye fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">اهداف فعال</h6>
                                <h3 class="mb-0">@Model.Statistics.ActiveGoals</h3>
                            </div>
                            <div class="text-info">
                                <i class="fa fa-play-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">تبدیل شده</h6>
                                <h3 class="mb-0">@Model.Statistics.ConvertedGoals</h3>
                            </div>
                            <div class="text-success">
                                <i class="fa fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">نرخ تبدیل</h6>
                                <h3 class="mb-0">@Model.Statistics.ConversionRate%</h3>
                            </div>
                            <div class="text-warning">
                                <i class="fa fa-chart-line fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- لیست اهداف -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Goals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px">#</th>
                                <th>عنوان</th>
                                <th>فرد/سازمان</th>
                                <th>محصول</th>
                                <th>مرحله</th>
                                <th>ارزش تخمینی</th>
                                <th>وضعیت</th>
                                <th>تاریخ ایجاد</th>
                                <th style="width: 120px">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Goals)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <strong>@item.Title</strong>
                                    </td>
                                    <td>
                                        @item.TargetName
                                        <br />
                                        <small class="text-muted">@item.TargetType</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ProductName))
                                        {
                                            @item.ProductName
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.CurrentLeadStageStatusTitle != null)
                                        {
                                            <span class="badge" style="background-color: @(item.CurrentLeadStageStatusColor ?? "#6c757d")">
                                                @item.CurrentLeadStageStatusTitle
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.EstimatedValue.HasValue)
                                        {
                                            <span dir="ltr">@item.EstimatedValueFormatted</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsConverted)
                                        {
                                            <span class="badge bg-success">تبدیل شده</span>
                                        }
                                        else if (item.IsActive)
                                        {
                                            <span class="badge bg-primary">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غیرفعال</span>
                                        }
                                    </td>
                                    <td>@item.CreatedDatePersian</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="جزئیات">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            @if (!item.IsConverted && item.IsActive)
                                            {
                                                <form asp-action="MarkAsConverted" asp-route-id="@item.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('آیا این هدف به خرید تبدیل شده است؟');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success" title="تبدیل به خرید">
                                                        <i class="fa fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalCount > Model.PageSize)
                {
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fa fa-inbox fa-3x mb-3"></i>
                    <p>هیچ هدفی یافت نشد</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".date-picker").persianDatepicker({
            format: 'YYYY/MM/DD',
            autoClose: true
        });
    </script>
}
