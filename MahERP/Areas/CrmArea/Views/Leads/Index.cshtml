@model MahERP.DataModelLayer.ViewModels.CrmViewModels.CrmLeadListViewModel
@{
    ViewData["Title"] = "مدیریت سرنخ‌ها";
    var statuses = ViewBag.Statuses as SelectList;
}

<!-- Main Container -->
<main id="main-container">
    <!-- Hero -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
                <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                    <i class="fa fa-users text-primary me-2"></i>
                    مدیریت سرنخ‌ها
                </h1>
                <nav aria-label="breadcrumb" class="flex-shrink-0 my-2 my-sm-0 ms-sm-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="CrmArea" asp-controller="Dashboard" asp-action="Index">CRM</a>
                        </li>
                        <li aria-current="page" class="breadcrumb-item active">سرنخ‌ها</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero -->

    <!-- Page Content -->
    <div class="content">
        <!-- آمار کلی -->
        @if (Model.Statistics != null)
        {
            <div class="row mb-4">
                <div class="col-6 col-lg-3">
                    <a class="block block-rounded block-link-shadow text-center" href="javascript:void(0)">
                        <div class="block-content block-content-full">
                            <div class="fs-1 fw-bold text-primary">@Model.Statistics.TotalLeads</div>
                            <div class="fs-sm fw-semibold text-uppercase text-muted">کل سرنخ‌ها</div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-lg-3">
                    <a class="block block-rounded block-link-shadow text-center" href="javascript:void(0)">
                        <div class="block-content block-content-full">
                            <div class="fs-1 fw-bold text-info">@Model.Statistics.NewLeads</div>
                            <div class="fs-sm fw-semibold text-uppercase text-muted">سرنخ جدید</div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-lg-3">
                    <a class="block block-rounded block-link-shadow text-center" href="javascript:void(0)">
                        <div class="block-content block-content-full">
                            <div class="fs-1 fw-bold text-success">@Model.Statistics.ConvertedLeads</div>
                            <div class="fs-sm fw-semibold text-uppercase text-muted">تبدیل شده</div>
                        </div>
                    </a>
                </div>
                <div class="col-6 col-lg-3">
                    <a class="block block-rounded block-link-shadow text-center" href="javascript:void(0)">
                        <div class="block-content block-content-full">
                            <div class="fs-1 fw-bold text-warning">@Model.Statistics.ConversionRate.ToString("F1")%</div>
                            <div class="fs-sm fw-semibold text-uppercase text-muted">نرخ تبدیل</div>
                        </div>
                    </a>
                </div>
            </div>
        }

        <!-- فیلترها -->
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-filter me-1"></i>
                    فیلترها
                </h3>
                <div class="block-options">
                    <button type="button" class="btn-block-option" data-toggle="block-option" data-action="content_toggle">
                        <i class="si si-arrow-up"></i>
                    </button>
                </div>
            </div>
            <div class="block-content">
                <form id="filterForm" method="get" asp-action="Index">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">جستجو</label>
                            <input type="text" class="form-control" name="SearchText" 
                                   value="@Model.Filters?.SearchText" placeholder="نام، تلفن، ایمیل..." />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">وضعیت</label>
                            <select class="form-select" name="StatusId">
                                <option value="">همه وضعیت‌ها</option>
                                @if (statuses != null)
                                {
                                    @foreach (var status in statuses)
                                    {
                                        <option value="@status.Value" 
                                                selected="@(Model.Filters?.StatusId?.ToString() == status.Value)">
                                            @status.Text
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">منبع</label>
                            <select class="form-select" name="Source">
                                <option value="">همه منابع</option>
                                @if (ViewBag.SuggestedSources != null)
                                {
                                    foreach (var source in (List<string>)ViewBag.SuggestedSources)
                                    {
                                        <option value="@source" 
                                                selected="@(Model.Filters?.Source == source)">
                                            @source
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">نیاز به پیگیری</label>
                            <select class="form-select" name="NeedsFollowUp">
                                <option value="">همه</option>
                                <option value="true" selected="@(Model.Filters?.NeedsFollowUp == true)">
                                    نیاز به پیگیری
                                </option>
                                <option value="false" selected="@(Model.Filters?.NeedsFollowUp == false)">
                                    بدون نیاز به پیگیری
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fa fa-undo me-1"></i>
                                پاک کردن فیلترها
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search me-1"></i>
                                جستجو
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- لیست سرنخ‌ها -->
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-list me-1"></i>
                    لیست سرنخ‌ها
                    <span class="badge bg-primary ms-1">@Model.TotalCount</span>
                </h3>
                <div class="block-options">
                    <a asp-action="Create" class="btn btn-sm btn-success">
                        <i class="fa fa-plus me-1"></i>
                        سرنخ جدید
                    </a>
                    <a asp-controller="LeadStatus" asp-action="Index" class="btn btn-sm btn-secondary ms-1">
                        <i class="fa fa-tags me-1"></i>
                        وضعیت‌ها
                    </a>
                </div>
            </div>
            <div class="block-content block-content-full" id="LeadsListContainer">
                @await Html.PartialAsync("_LeadListPartial", Model)
            </div>
        </div>
    </div>
    <!-- END Page Content -->
</main>
<!-- END Main Container -->

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select2 برای فیلترها
            $('select[name="StatusId"], select[name="Source"]').select2({
                theme: 'bootstrap-5',
                width: '100%',
                allowClear: true,
                placeholder: 'انتخاب کنید...'
            });
        });
    </script>
}
