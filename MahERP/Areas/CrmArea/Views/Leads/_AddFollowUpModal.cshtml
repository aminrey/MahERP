@model MahERP.DataModelLayer.ViewModels.CrmViewModels.CrmFollowUpViewModel
@{
    var followUpTypes = new List<SelectListItem>
    {
        new SelectListItem { Value = "0", Text = "تماس تلفنی" },
        new SelectListItem { Value = "1", Text = "ارسال ایمیل" },
        new SelectListItem { Value = "2", Text = "جلسه حضوری" },
        new SelectListItem { Value = "3", Text = "ارسال پیامک" },
        new SelectListItem { Value = "4", Text = "ارسال پیشنهاد قیمت" },
        new SelectListItem { Value = "5", Text = "پیگیری سفارش" },
        new SelectListItem { Value = "6", Text = "یادآوری" },
        new SelectListItem { Value = "7", Text = "سایر" }
    };

    var priorities = new List<SelectListItem>
    {
        new SelectListItem { Value = "0", Text = "کم", Selected = false },
        new SelectListItem { Value = "1", Text = "متوسط", Selected = true },
        new SelectListItem { Value = "2", Text = "زیاد", Selected = false },
        new SelectListItem { Value = "3", Text = "فوری", Selected = false }
    };
}

<!-- Modal افزودن پیگیری -->
<div class="modal fade" id="addFollowUpModal" tabindex="-1" aria-labelledby="addFollowUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addFollowUpForm" asp-action="AddFollowUp" asp-controller="Leads" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="LeadId" id="followUpLeadId" value="@Model?.LeadId" />

                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="addFollowUpModalLabel">
                        <i class="fa fa-bell me-2"></i>
                        ایجاد پیگیری جدید
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <!-- نوع پیگیری -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fa fa-tag text-primary me-1"></i>
                                نوع پیگیری <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" name="FollowUpType" id="followUpType" required>
                                @foreach (var type in followUpTypes)
                                {
                                    <option value="@type.Value">@type.Text</option>
                                }
                            </select>
                        </div>

                        <!-- اولویت -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fa fa-flag text-danger me-1"></i>
                                اولویت
                            </label>
                            <select class="form-select" name="Priority" id="followUpPriority">
                                @foreach (var priority in priorities)
                                {
                                    <option value="@priority.Value" selected="@priority.Selected">@priority.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <!-- تاریخ پیگیری -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fa fa-calendar text-success me-1"></i>
                                تاریخ پیگیری <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control persian-datepicker" 
                                   name="DueDatePersian" id="followUpDueDate" required
                                   placeholder="انتخاب تاریخ..." />
                        </div>

                        <!-- ساعت پیگیری -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fa fa-clock text-warning me-1"></i>
                                ساعت پیگیری
                            </label>
                            <input type="time" class="form-control" name="DueTime" id="followUpDueTime" />
                        </div>
                    </div>

                    <!-- عنوان -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fa fa-heading text-primary me-1"></i>
                            عنوان <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" name="Title" id="followUpTitle" 
                               required maxlength="200" placeholder="عنوان پیگیری را وارد کنید..." />
                    </div>

                    <!-- توضیحات -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fa fa-align-left text-muted me-1"></i>
                            توضیحات
                        </label>
                        <textarea class="form-control" name="Description" id="followUpDescription" 
                                  rows="3" placeholder="جزئیات پیگیری را شرح دهید..."></textarea>
                    </div>

                    <!-- تنظیمات یادآور -->
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="card-title mb-3">
                                <i class="fa fa-bell text-warning me-1"></i>
                                تنظیمات یادآور
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="sendEmailReminder" 
                                               name="SendEmailReminder">
                                        <label class="form-check-label" for="sendEmailReminder">
                                            <i class="fa fa-envelope text-info me-1"></i>
                                            یادآور ایمیلی
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="sendSmsReminder" 
                                               name="SendSmsReminder">
                                        <label class="form-check-label" for="sendSmsReminder">
                                            <i class="fa fa-sms text-success me-1"></i>
                                            یادآور پیامکی
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label small">یادآوری قبل از موعد (دقیقه)</label>
                                    <select class="form-select form-select-sm" name="ReminderMinutesBefore" id="reminderMinutes">
                                        <option value="15">15 دقیقه قبل</option>
                                        <option value="30" selected>30 دقیقه قبل</option>
                                        <option value="60">1 ساعت قبل</option>
                                        <option value="120">2 ساعت قبل</option>
                                        <option value="1440">1 روز قبل</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i>
                        انصراف
                    </button>
                    <button type="submit" class="btn btn-warning" id="btnSaveFollowUp">
                        <i class="fa fa-save me-1"></i>
                        ذخیره پیگیری
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // فرم ثبت پیگیری
    $('#addFollowUpForm').on('submit', function(e) {
        e.preventDefault();
        
        var form = $(this);
        var btn = $('#btnSaveFollowUp');
        var originalText = btn.html();
        
        btn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin me-1"></i>در حال ذخیره...');
        
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            success: function(response) {
                if (response.success) {
                    $('#addFollowUpModal').modal('hide');
                    Swal.fire({
                        icon: 'success',
                        title: 'موفق',
                        text: response.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(function() {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'خطا',
                        text: response.message
                    });
                }
            },
            error: function() {
                Swal.fire({
                    icon: 'error',
                    title: 'خطا',
                    text: 'خطا در ارتباط با سرور'
                });
            },
            complete: function() {
                btn.prop('disabled', false).html(originalText);
            }
        });
    });

    // Reset form on modal show
    $('#addFollowUpModal').on('show.bs.modal', function() {
        $('#addFollowUpForm')[0].reset();
        
        // تنظیم تاریخ فردا به صورت پیش‌فرض
        var tomorrow = new persianDate().add('day', 1).format('YYYY/MM/DD');
        $('#followUpDueDate').val(tomorrow);
        
        // تنظیم ساعت پیش‌فرض
        $('#followUpDueTime').val('10:00');
    });
</script>
