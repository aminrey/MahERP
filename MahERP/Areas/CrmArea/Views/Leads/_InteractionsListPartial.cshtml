@model List<MahERP.DataModelLayer.ViewModels.CrmViewModels.CrmLeadInteractionViewModel>
@{
    var interactions = Model ?? new List<MahERP.DataModelLayer.ViewModels.CrmViewModels.CrmLeadInteractionViewModel>();
}

<div class="interactions-list">
    @if (!interactions.Any())
    {
        <div class="text-center py-4 text-muted">
            <i class="fa fa-comments fa-3x mb-3 opacity-50"></i>
            <p>هنوز تعاملی ثبت نشده است</p>
            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addInteractionModal">
                <i class="fa fa-plus me-1"></i>
                ثبت اولین تعامل
            </button>
        </div>
    }
    else
    {
        <div class="timeline">
            @foreach (var interaction in interactions.OrderByDescending(i => i.InteractionDate))
            {
                var iconClass = interaction.InteractionType switch
                {
                    0 => "fa-phone text-success",      // تماس تلفنی
                    1 => "fa-envelope text-info",      // ایمیل
                    2 => "fa-users text-primary",      // جلسه
                    3 => "fa-sms text-warning",        // پیامک
                    4 => "fa-share-alt text-purple",   // شبکه اجتماعی
                    5 => "fa-comments text-cyan",      // چت
                    6 => "fa-globe text-secondary",    // فرم وب
                    _ => "fa-circle text-muted"        // سایر
                };

                var resultBadge = interaction.Result switch
                {
                    0 => "bg-success",      // موفق
                    1 => "bg-danger",       // ناموفق
                    2 => "bg-secondary",    // بدون پاسخ
                    3 => "bg-warning",      // در انتظار
                    4 => "bg-info",         // نیاز به پیگیری
                    _ => "bg-light text-dark"
                };

                var directionIcon = interaction.Direction == 0 ? "fa-arrow-down text-success" : "fa-arrow-up text-primary";

                <div class="timeline-item mb-3">
                    <div class="d-flex">
                        <div class="timeline-icon me-3">
                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" 
                                 style="width: 40px; height: 40px;">
                                <i class="fa @iconClass"></i>
                            </div>
                        </div>
                        <div class="timeline-content flex-grow-1">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body py-2 px-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1 fw-semibold">
                                                @interaction.Subject
                                                <i class="fa @directionIcon ms-1 small" 
                                                   title="@(interaction.Direction == 0 ? "ورودی" : "خروجی")"></i>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fa fa-calendar me-1"></i>
                                                @interaction.InteractionDatePersian
                                                @if (!string.IsNullOrEmpty(interaction.InteractionTime))
                                                {
                                                    <span class="ms-2">
                                                        <i class="fa fa-clock me-1"></i>
                                                        @interaction.InteractionTime
                                                    </span>
                                                }
                                                @if (interaction.DurationMinutes > 0)
                                                {
                                                    <span class="ms-2">
                                                        <i class="fa fa-hourglass-half me-1"></i>
                                                        @interaction.DurationMinutes دقیقه
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                        <div>
                                            <span class="badge @resultBadge">@interaction.ResultTitle</span>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(interaction.Description))
                                    {
                                        <p class="mb-2 small text-muted">
                                            @interaction.Description
                                        </p>
                                    }

                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fa fa-user me-1"></i>
                                            @interaction.CreatorName
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-link btn-sm text-primary p-0 me-2" 
                                                    onclick="editInteraction(@interaction.Id)" title="ویرایش">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-link btn-sm text-danger p-0" 
                                                    onclick="deleteInteraction(@interaction.Id)" title="حذف">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .timeline {
        position: relative;
        padding-right: 20px;
    }
    .timeline::before {
        content: '';
        position: absolute;
        right: 19px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e9ecef;
    }
    .timeline-item {
        position: relative;
    }
    .timeline-icon {
        position: relative;
        z-index: 1;
    }
</style>
