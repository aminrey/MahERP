@{
    var activeJobs = ViewBag.ActiveJobs as List<MahERP.DataModelLayer.Entities.BackgroundJobs.BackgroundJob>;
    var recentJobs = ViewBag.RecentJobs as List<MahERP.DataModelLayer.Entities.BackgroundJobs.BackgroundJob>;
}

<!-- Active Jobs -->
@if (activeJobs != null && activeJobs.Any())
{
    <div class="p-3 bg-primary-light border-bottom">
        <h6 class="mb-0 fw-semibold">
            <i class="fa fa-spinner fa-spin me-2"></i>
            کارهای در حال اجرا (@activeJobs.Count)
        </h6>
    </div>

    <div class="p-2">
        @foreach (var job in activeJobs)
        {
            <div class="job-item p-3 border rounded mb-2">
                <!-- Job Header -->
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="flex-grow-1">
                        <div class="fw-semibold">@job.Title</div>
                        <small class="text-muted">@job.JobTypeText</small>
                    </div>
                    <span class="badge @job.StatusBadgeClass">@job.StatusText</span>
                </div>

                <!-- Progress Bar -->
                <div class="mb-2">
                    <div class="progress" style="height: 6px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated @(job.Progress < 100 ? "bg-primary" : "bg-success")" 
                             role="progressbar" 
                             style="width: @job.Progress%"
                             data-job-id="@job.Id">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-1">
                        <small class="text-muted">@job.Progress%</small>
                        <small class="text-muted">
                            @job.ProcessedItems / @job.TotalItems
                        </small>
                    </div>
                </div>

                <!-- Stats -->
                <div class="d-flex gap-3">
                    <small>
                        <i class="fa fa-check-circle text-success me-1"></i>
                        موفق: @job.SuccessCount
                    </small>
                    <small>
                        <i class="fa fa-times-circle text-danger me-1"></i>
                        ناموفق: @job.FailedCount
                    </small>
                </div>

                <!-- Time -->
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fa fa-clock me-1"></i>
                        شروع: @job.StartDate.ToString("HH:mm:ss")
                    </small>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="p-4 text-center text-muted">
        <i class="fa fa-check-circle fa-3x mb-3 d-block"></i>
        <p class="mb-0">هیچ کار در حال اجرایی وجود ندارد</p>
    </div>
}

<!-- Recent Jobs -->
@if (recentJobs != null && recentJobs.Any())
{
    <div class="border-top">
        <div class="p-3 bg-body-light">
            <h6 class="mb-0 fw-semibold">
                <i class="fa fa-history me-2"></i>
                کارهای اخیر
            </h6>
        </div>

        <div class="p-2" style="max-height: 300px; overflow-y: auto;">
            @foreach (var job in recentJobs.Take(5))
            {
                <div class="job-history-item p-2 border-bottom d-flex justify-content-between align-items-center">
                    <div class="flex-grow-1">
                        <div class="fw-semibold fs-sm">@job.Title</div>
                        <small class="text-muted">
                            @job.StartDate.ToString("yyyy/MM/dd HH:mm")
                        </small>
                    </div>
                    <div class="text-end">
                        <span class="badge @job.StatusBadgeClass mb-1">@job.StatusText</span>
                        @if (job.Status == 2)
                        {
                            <div>
                                <small class="text-success">
                                    <i class="fa fa-check me-1"></i>@job.SuccessCount
                                </small>
                                @if (job.FailedCount > 0)
                                {
                                    <small class="text-danger ms-2">
                                        <i class="fa fa-times me-1"></i>@job.FailedCount
                                    </small>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

<style>
    .job-item {
        transition: all 0.3s ease;
        background: white;
    }

    .job-item:hover {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .job-history-item {
        transition: background 0.2s ease;
    }

    .job-history-item:hover {
        background-color: #f8f9fa;
    }

    .bg-primary-light {
        background-color: rgba(13, 110, 253, 0.1);
    }
</style>
