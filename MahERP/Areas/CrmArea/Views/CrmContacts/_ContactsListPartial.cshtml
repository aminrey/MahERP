@model List<MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactViewModel>
@using MahERP.DataModelLayer.Enums
@{
    var selectedBranchId = ViewBag.SelectedBranchId as int?;
    var selectedBranchName = ViewBag.SelectedBranchName as string;
    var groupedContacts = ViewBag.GroupedContacts as Dictionary<string, List<MahERP.DataModelLayer.ViewModels.ContactViewModels.ContactViewModel>>;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var searchTerm = ViewBag.SearchTerm as string;
    var genderFilter = ViewBag.GenderFilter as byte?;
}

<!-- Filter Toolbar -->
<div class="block block-rounded">
    <div class="block-content block-content-full bg-body-light">
        <div class="row">
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <div class="d-flex align-items-center">
                        <span class="me-2">جستجو برای:</span>
                        <span class="badge bg-primary p-2">@searchTerm</span>
                        <a href="javascript:void(0)" onclick="loadBranchContacts(@selectedBranchId)" class="btn btn-sm btn-alt-secondary ms-2">
                            <i class="fa fa-times"></i> حذف فیلتر
                        </a>
                    </div>
                }
                @if (genderFilter.HasValue)
                {
                    <div class="d-flex align-items-center">
                        <span class="me-2">جنسیت:</span>
                        <span class="badge bg-primary p-2">@(genderFilter == 0 ? "مرد" : "زن")</span>
                        <a href="javascript:void(0)" onclick="loadBranchContacts(@selectedBranchId)" class="btn btn-sm btn-alt-secondary ms-2">
                            <i class="fa fa-times"></i> حذف فیلتر
                        </a>
                    </div>
                }
            </div>
            <div class="col-md-6 text-md-end">
                <div class="dropdown d-inline-block">
                    <button type="button" class="btn btn-sm btn-alt-secondary" id="gender-filter-dropdown" data-bs-toggle="dropdown">
                        <i class="fa fa-fw fa-filter"></i> جنسیت
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="gender-filter-dropdown">
                        <a class="dropdown-item" href="javascript:void(0)" onclick="filterByGender(@selectedBranchId, 0)">
                            مرد
                            <span class="badge bg-info">@Model.Count(c => c.Gender == 0)</span>
                        </a>
                        <a class="dropdown-item" href="javascript:void(0)" onclick="filterByGender(@selectedBranchId, 1)">
                            زن
                            <span class="badge bg-info">@Model.Count(c => c.Gender == 1)</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contacts List -->
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">لیست افراد - @selectedBranchName</h3>
        <div class="block-options">
            <span class="badge bg-primary">تعداد: @totalCount</span>
        </div>
    </div>
    <div class="block-content">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="fa fa-users fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">هیچ فردی یافت نشد</h4>
                <p class="text-muted">
                    @if (string.IsNullOrEmpty(searchTerm))
                    {
                        <span>در این شعبه هنوز هیچ فردی ثبت نشده است.</span>
                    }
                    else
                    {
                        <span>نتیجه‌ای برای جستجوی شما یافت نشد.</span>
                    }
                </p>
                <a asp-action="Create" asp-route-branchId="@selectedBranchId" class="btn btn-success mt-3">
                    <i class="fa fa-plus me-1"></i>
                    افزودن اولین فرد
                </a>
            </div>
        }
        else
        {
            @foreach (var group in groupedContacts.OrderBy(g => g.Key))
            {
                <div class="block block-rounded mb-3">
                    <div class="block-header block-header-default bg-primary-light">
                        <h3 class="block-title text-primary fw-bold">@group.Key</h3>
                        <div class="block-options">
                            <span class="badge bg-primary">@group.Value.Count نفر</span>
                        </div>
                    </div>
                    <div class="block-content block-content-full p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-vcenter mb-0">
                                <thead class="bg-body-light">
                                    <tr>
                                        <th style="width: 50px;"></th>
                                        <th>نام و نام خانوادگی</th>
                                        <th>ایمیل</th>
                                        <th>شماره تلفن</th>
                                        <th style="width: 100px;">نوع</th>
                                        <th class="text-center" style="width: 150px;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in group.Value)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <i class="fa fa-user-circle fa-2x text-muted"></i>
                                            </td>
                                            <td>
                                                <strong>@contact.FullName</strong>
                                                @if (!string.IsNullOrEmpty(contact.NationalCode))
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        <i class="fa fa-id-card me-1"></i>
                                                        @contact.NationalCode
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.PrimaryEmail))
                                                {
                                                    <a href="mailto:@contact.PrimaryEmail">@contact.PrimaryEmail</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (contact.Phones != null && contact.Phones.Any())
                                                {
                                                    var defaultPhone = contact.Phones.FirstOrDefault(p => p.IsDefault) ?? contact.Phones.First();
                                                    <span dir="ltr">@defaultPhone.PhoneNumber</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var typeColor = (contact.ContactType ?? ContactType.Other) switch
                                                    {
                                                        ContactType.Lead => "warning",
                                                        ContactType.Customer => "success",
                                                        ContactType.Partner => "info",
                                                        _ => "secondary"
                                                    };
                                                    var typeName = (contact.ContactType ?? ContactType.Other) switch
                                                    {
                                                        ContactType.Lead => "سرنخ",
                                                        ContactType.Customer => "مشتری",
                                                        ContactType.Partner => "شریک",
                                                        _ => "سایر"
                                                    };
                                                }
                                                <span class="badge bg-@typeColor">@typeName</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@contact.Id" asp-route-branchId="@selectedBranchId"
                                                       class="btn btn-sm btn-alt-secondary" title="جزئیات">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@contact.Id" asp-route-branchId="@selectedBranchId"
                                                       class="btn btn-sm btn-alt-warning" title="ویرایش">
                                                        <i class="fa fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-alt-danger"
                                                            onclick="deleteContact(@contact.Id, '@contact.FullName', @selectedBranchId)" title="حذف">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
