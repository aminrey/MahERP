@model AddToMyDayViewModel
<style>
    .modal {
        --bs-modal-width: 40%;
        transition: 0.3s;
    }
</style>
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form asp-action="AddToMyDay" asp-controller="MyDayTask" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TaskAssignmentId" />
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="FromList" />

            <div class="block block-rounded mb-0">
                <div class="block-header bg-primary text-white">
                    <h3 class="block-title text-white">
                        <i class="fa fa-calendar-plus me-2"></i>افزودن به روز من
                    </h3>
                    <button type="button" class="btn-block-option" data-bs-dismiss="modal">
                        <i class="fa fa-times text-white"></i>
                    </button>
                </div>

                <div class="block-content">
                    <!-- ⭐⭐⭐ تاریخ برنامه‌ریزی با Persian DatePicker -->
                    <div class="mb-3">
                        <label asp-for="PlannedDateString" class="form-label"></label>
                        <input asp-for="PlannedDateString"
                               type="text"
                               class="form-control  persian-datepicker"
                               data-persian-picker="true"
                               data-format="yyyy/MM/dd"
                               placeholder="انتخاب تاریخ..."
                               inputmode="none"
                               readonly />
                        <span asp-validation-for="PlannedDateString" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PlanNote" class="form-label"></label>
                        <textarea asp-for="PlanNote" class="form-control" rows="3" 
                                  placeholder="مثال: شروع از ساعت 10 صبح"></textarea>
                    </div>
                </div>

                <div class="block-content block-content-full text-end border-top">
                    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                        انصراف
                    </button>
                    <button type="button" class="btn btn-primary" data-save="modal-ajax-save">
                        <i class="fa fa-check me-1"></i>افزودن
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function() {
        console.log('📅 Modal opened - Initializing Persian DatePicker...');
        
        // ⭐⭐⭐ تاخیر کوتاه برای اطمینان از بارگذاری کامل مودال
        setTimeout(function() {
            // فراخوانی تابع سراسری initPersianDatePicker
            if (typeof window.initPersianDatePicker === 'function') {
                window.initPersianDatePicker();
                console.log('✅ Persian DatePicker initialized in modal');
            } else {
                console.warn('⚠️ initPersianDatePicker function not found');
            }
        }, 300);
    });
</script>
