@model TaskSettingsViewModel

<div class="block block-rounded block-fx-shadow">
    <div class="block-header bg-primary text-white">
        <h3 class="block-title text-white mb-0">
            <i class="fa fa-cog me-2"></i>تنظیمات دسترسی تسک
        </h3>
        <div class="block-options">
            @if (Model.CanEdit)
            {
                <span class="badge bg-light text-primary">
                    <i class="fa fa-edit me-1"></i>قابل ویرایش
                </span>
            }
            else
            {
                <span class="badge bg-light text-dark">
                    <i class="fa fa-eye me-1"></i>فقط مشاهده
                </span>
            }
        </div>
    </div>

    <form asp-action="SaveTaskSettingsSubmit" method="post" id="task-settings-form">
        @Html.AntiForgeryToken()
        <input type="hidden" name="TaskId" value="@Model.TaskId" />

        <div class="block-content">
            <!-- نقش فعلی کاربر -->
            <div class="alert alert-info mb-4">
                <div class="d-flex align-items-center">
                    <i class="fa fa-user-shield fa-2x me-3"></i>
                    <div class="flex-grow-1">
                        <strong>نقش شما در این تسک:</strong> @Model.CurrentUserRoleText
                        @if (!Model.CanEdit)
                        {
                            <span class="badge bg-warning ms-2">فقط مشاهده</span>
                        }
                    </div>
                </div>
            </div>

            <!-- وضعیت وراثت -->
            @if (Model.IsInherited)
            {
                <div class="alert alert-secondary mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <i class="fa fa-link me-2"></i>
                            این تسک از <strong>@Model.InheritedFromText</strong> استفاده می‌کند
                        </div>
                        @if (Model.CanEdit)
                        {
                            <button type="button" class="btn btn-sm btn-outline-secondary" 
                                    onclick="toggleCustomSettings(false)">
                                <i class="fa fa-edit me-1"></i>سفارشی‌سازی
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <i class="fa fa-exclamation-triangle me-2"></i>
                            این تسک تنظیمات سفارشی دارد
                        </div>
                        @if (Model.CanEdit)
                        {
                            <button type="button" class="btn btn-sm btn-outline-warning" 
                                    onclick="resetToDefaultSettings()">
                                <i class="fa fa-undo me-1"></i>بازگشت به پیش‌فرض
                            </button>
                        }
                    </div>
                </div>
            }

            <hr class="my-4" />

            <!-- تنظیمات 5 گانه -->
            <div id="settings-container" class="@(Model.CanEdit ? "" : "disabled-settings")">
                
                <!-- تنظیم 1: کامنت -->
                <div class="setting-item mb-4">
                    <div class="setting-header">
                        <h5 class="mb-2">
                            <i class="fa fa-comment text-primary me-2"></i>
                            @Model.CommentSetting.Title
                        </h5>
                        <p class="text-muted mb-3">@Model.CommentSetting.Description</p>
                    </div>
                    <div class="setting-roles">
                        @foreach (var role in Model.CommentSetting.AvailableRoles)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       name="CanCommentRoles" 
                                       value="@role.RoleCode"
                                       id="comment_@role.RoleCode"
                                       @(role.IsChecked ? "checked" : "")
                                       @(role.IsDisabled || !Model.CanEdit ? "disabled" : "") />
                                <label class="form-check-label" for="comment_@role.RoleCode">
                                    @role.RoleText
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-3" />

                <!-- تنظیم 2: افزودن عضو -->
                <div class="setting-item mb-4">
                    <div class="setting-header">
                        <h5 class="mb-2">
                            <i class="fa fa-user-plus text-success me-2"></i>
                            @Model.AddMembersSetting.Title
                        </h5>
                        <p class="text-muted mb-3">@Model.AddMembersSetting.Description</p>
                    </div>
                    <div class="setting-roles">
                        @foreach (var role in Model.AddMembersSetting.AvailableRoles)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       name="CanAddMembersRoles" 
                                       value="@role.RoleCode"
                                       id="addmember_@role.RoleCode"
                                       @(role.IsChecked ? "checked" : "")
                                       @(role.IsDisabled || !Model.CanEdit ? "disabled" : "") />
                                <label class="form-check-label" for="addmember_@role.RoleCode">
                                    @role.RoleText
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-3" />

                <!-- تنظیم 3: حذف عضو -->
                <div class="setting-item mb-4">
                    <div class="setting-header">
                        <h5 class="mb-2">
                            <i class="fa fa-user-minus text-danger me-2"></i>
                            @Model.RemoveMembersSetting.Title
                        </h5>
                        <p class="text-muted mb-3">@Model.RemoveMembersSetting.Description</p>
                    </div>
                    <div class="setting-roles">
                        @foreach (var role in Model.RemoveMembersSetting.AvailableRoles)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       name="CanRemoveMembersRoles" 
                                       value="@role.RoleCode"
                                       id="removemember_@role.RoleCode"
                                       @(role.IsChecked ? "checked" : "")
                                       @(role.IsDisabled || !Model.CanEdit ? "disabled" : "") />
                                <label class="form-check-label" for="removemember_@role.RoleCode">
                                    @role.RoleText
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-3" />

                <!-- تنظیم 4: ویرایش پس از اتمام -->
                <div class="setting-item mb-4">
                    <div class="setting-header">
                        <h5 class="mb-2">
                            <i class="fa fa-edit text-warning me-2"></i>
                            @Model.EditAfterCompletionSetting.Title
                        </h5>
                        <p class="text-muted mb-3">@Model.EditAfterCompletionSetting.Description</p>
                    </div>
                    <div class="setting-roles">
                        @foreach (var role in Model.EditAfterCompletionSetting.AvailableRoles)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       name="CanEditAfterCompletionRoles" 
                                       value="@role.RoleCode"
                                       id="editafter_@role.RoleCode"
                                       @(role.IsChecked ? "checked" : "")
                                       @(role.IsDisabled || !Model.CanEdit ? "disabled" : "") />
                                <label class="form-check-label" for="editafter_@role.RoleCode">
                                    @role.RoleText
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <hr class="my-3" />

                <!-- تنظیم 5: حذف/ویرایش سازنده -->
                <div class="setting-item mb-4">
                    <div class="setting-header">
                        <h5 class="mb-2">
                            <i class="fa fa-shield-alt text-danger me-2"></i>
                            @Model.CreatorEditDeleteSetting.Title
                        </h5>
                        <p class="text-muted mb-3">@Model.CreatorEditDeleteSetting.Description</p>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" 
                               type="checkbox" 
                               id="CreatorCanEditDelete" 
                               name="CreatorCanEditDelete"
                               @(Model.CreatorEditDeleteSetting.IsEnabled ? "checked" : "")
                               @(Model.CreatorEditDeleteSetting.IsReadOnly || !Model.CanEdit ? "disabled" : "") />
                        <label class="form-check-label" for="CreatorCanEditDelete">
                            سازنده می‌تواند تسک را ویرایش/حذف کند
                        </label>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.CreatorEditDeleteSetting.DisabledReason))
                    {
                        <small class="text-muted d-block mt-2">
                            <i class="fa fa-info-circle me-1"></i>@Model.CreatorEditDeleteSetting.DisabledReason
                        </small>
                    }
                </div>
            </div>

            <!-- دکمه‌های عملیات -->
            @if (Model.CanEdit)
            {
                <hr class="my-4" />
                
                <div class="d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
                        <i class="fa fa-times me-1"></i>انصراف
                    </button>
                    <div>
                        <button type="button" class="btn btn-warning me-2" onclick="resetToDefaultSettings()">
                            <i class="fa fa-undo me-1"></i>بازنشانی
                        </button>
                        <button type="submit" class="btn btn-primary" data-save="modal-ajax-save">
                            <i class="fa fa-save me-1"></i>ذخیره تنظیمات
                        </button>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

<script>
    // تابع بازگشت به تنظیمات پیش‌فرض
    async function resetToDefaultSettings() {
        const confirmed = await showConfirmationSwal({
            title: 'بازگشت به تنظیمات پیش‌فرض',
            text: 'آیا از بازگشت به تنظیمات پیش‌فرض اطمینان دارید؟',
            icon: 'question',
            confirmButtonText: 'بله، بازگردان',
            cancelButtonText: 'خیر'
        });

        if (!confirmed) return;

        const taskId = $('#task-settings-form input[name="TaskId"]').val();

        $.ajax({
            url: '@Url.Action("ResetTaskSettings", "Tasks")',
            type: 'POST',
            data: {
                taskId: taskId,
                __RequestVerificationToken: getAntiForgeryToken()
            },
            success: function(response) {
                if (response.success) {
                    SendResposeMessage(response.message);
                    
                    // بروزرسانی مجدد تب
                    loadTaskSettings();
                } else {
                    SendResposeMessage(response.message);
                }
            },
            error: function(xhr) {
                console.error('Error resetting settings:', xhr);
                showErrorSwal('خطا', 'خطا در بازنشانی تنظیمات');
            }
        });
    }

    // تابع فعال‌سازی تنظیمات سفارشی
    function toggleCustomSettings(enable) {
        if (enable) {
            $('#settings-container').removeClass('disabled-settings');
            $('#settings-container input').prop('disabled', false);
        } else {
            $('#settings-container').addClass('disabled-settings');
            $('#settings-container input').prop('disabled', true);
        }
    }
</script>

<style>
    .setting-item {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        background: #f8f9fa;
    }

    .setting-header h5 {
        font-weight: 600;
        margin-bottom: 8px;
    }

    .setting-roles {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 15px;
    }

    .form-check-inline {
        position: relative;
        min-width: 120px;
    }

    .disabled-settings {
        opacity: 0.6;
        pointer-events: none;
    }

    .form-check-input:disabled + label {
        opacity: 0.6;
        cursor: not-allowed;
    }

    @@media (max-width: 768px) {
        .setting-roles {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>
