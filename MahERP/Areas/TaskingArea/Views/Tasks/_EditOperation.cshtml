@model TaskOperationViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 60%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-primary-dark">
                <h3 class="block-title">ویرایش عملیات</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="edit-operation-form" asp-action="EditOperation" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TaskId" />
                <input type="hidden" asp-for="OperationOrder" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CompletedByUserId" />
                <input type="hidden" asp-for="CompletionDate" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header bg-primary-light">
                        <h3 class="block-title">اطلاعات عملیات</h3>
                    </div>
                    <div class="block-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Title" class="form-control" id="Title" placeholder="عنوان عملیات" />
                                    <label asp-for="Title" class="form-label input-label" for="Title">عنوان عملیات</label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="توضیحات عملیات..."></textarea>
                                    <label asp-for="Description" class="form-label input-label" for="Description">توضیحات</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" id="IsCompleted" />
                                        <label asp-for="IsCompleted" class="form-check-label" for="IsCompleted">تکمیل شده</label>
                                    </div>
                                    @if (Model.IsCompleted && Model.CompletionDate.HasValue)
                                    {
                                        <div class="mt-2 fs-sm text-muted">
                                            <i class="fa fa-info-circle me-1"></i>
                                            این عملیات در تاریخ @ConvertDateTime.ConvertMiladiToShamsi(Model.CompletionDate.Value, "yyyy/MM/dd") تکمیل شده است.
                                            @if (!string.IsNullOrEmpty(Model.CompletedByUserName))
                                            {
                                                <span> توسط @Model.CompletedByUserName</span>
                                            }
                                        </div>
                                    }
                                </div>

                                <div class="alert alert-info">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fa fa-info-circle fa-2x text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">این عملیات مربوط به تسک <strong>@ViewBag.TaskTitle</strong> است.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            <button class="btn btn-sm btn-primary" data-save="modal-ajax-save" type="button">
                <i class="fa fa-check me-1"></i>ذخیره تغییرات
            </button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // تنظیم فوکوس روی فیلد عنوان
        $('#Title').focus();

        // Event handler برای موفقیت
        $('[data-save="modal-ajax-save"]').on('ajaxFormSuccess', function(event, response) {
            if (response && response.success) {
                if (response.message && response.message.length > 0) {
                    toastr.success(response.message[0].text);
                }
                $('.modal').modal('hide');
                $('.modal').on('hidden.bs.modal', function () {
                    location.reload();
                });
            }
        });
    });
</script>