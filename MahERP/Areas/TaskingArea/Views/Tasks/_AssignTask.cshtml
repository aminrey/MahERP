@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels
@model TaskAssignmentViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 60%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-dark">
                <h3 class="block-title">اختصاص تسک به کاربر</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="assign-task-form" asp-action="AssignTask" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TaskId" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header bg-secondary-light">
                        <h3 class="block-title">انتخاب کاربر</h3>
                    </div>
                    <div class="block-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <select asp-for="AssignedUserId" asp-items="ViewBag.Users" class="js-select2 form-control" id="AssignedUserId" data-placeholder="انتخاب کاربر...">
                                        <option value="">انتخاب کاربر...</option>
                                    </select>
                                    <label asp-for="AssignedUserId" class="form-label input-label" for="AssignedUserId">کاربر</label>
                                    <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="توضیحات اختصاص..."></textarea>
                                    <label asp-for="Description" class="form-label input-label" for="Description">توضیحات</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="alert alert-info">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fa fa-info-circle fa-2x text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">تسک <strong>@ViewBag.TaskTitle</strong> به کاربر انتخاب شده اختصاص داده خواهد شد.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            <button class="btn btn-sm btn-dark" data-save="modal-ajax-save" type="button">
                <i class="fa fa-user-plus me-1"></i>اختصاص تسک
            </button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        Dashmix.helpersOnLoad(['jq-select2']);

        // Event handler برای موفقیت
        $('[data-save="modal-ajax-save"]').on('ajaxFormSuccess', function(event, response) {
            if (response && response.success) {
                if (response.message && response.message.length > 0) {
                    toastr.success(response.message[0].text);
                }
                $('.modal').modal('hide');
                $('.modal').on('hidden.bs.modal', function () {
                    location.reload();
                });
            }
        });
    });
</script>