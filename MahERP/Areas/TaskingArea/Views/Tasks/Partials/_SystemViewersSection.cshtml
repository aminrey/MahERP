@model TaskViewModel

<!-- بخش 1: ناظرین خودکار سیستمی -->
<div class="col-lg-6">
    <div class="block block-rounded">
        <div class="block-header bg-primary text-white">
            <h3 class="block-title text-white mb-0">
                <i class="fa fa-robot me-2"></i>ناظرین خودکار
            </h3>
            <div class="block-options">
                <span class="badge bg-white text-primary" id="system-viewers-count">0</span>
            </div>
        </div>
        <div class="block-content p-3">
            <div id="system-viewers-list">
                <!-- محتوا به صورت دینامیک بروز می‌شود -->
                <div class="text-center py-4 text-muted">
                    <i class="fa fa-users-slash fa-3x mb-3 opacity-25"></i>
                    <p class="mb-1">ناظران خودکار پس از انتخاب کاربران منتصب نمایش داده می‌شوند</p>
                    <small>شامل: سازنده، کاربران منتصب، مدیر تیم و سرپرستان</small>
                </div>
            </div>
        </div>
    </div>
</div>
