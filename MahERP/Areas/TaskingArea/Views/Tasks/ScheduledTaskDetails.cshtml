@model MahERP.Areas.TaskingArea.Controllers.TaskControllers.ScheduledTaskDetailViewModel
@{
    ViewData["Title"] = "جزئیات تسک زمان‌بندی شده";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .detail-card {
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .detail-section {
            border-bottom: 1px solid #e9ecef;
            padding: 1.5rem 0;
        }

        .detail-section:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1rem;
            color: #212529;
        }

        .schedule-timeline {
            position: relative;
            padding-left: 30px;
        }

        .schedule-timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #0d6efd 0%, #6c757d 100%);
        }

        .timeline-item {
            position: relative;
            padding-bottom: 1.5rem;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -24px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #0d6efd;
            border: 3px solid white;
            box-shadow: 0 0 0 2px #0d6efd;
        }

        .badge-lg {
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
        }

        .info-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }
    </style>
}

<div class="container-fluid py-4">
    @* Header *@
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="d-flex align-items-center mb-2">
                        <a href="@Url.Action("Index", "ScheduledTasks")" class="btn btn-sm btn-outline-secondary me-3">
                            <i class="fas fa-arrow-right me-1"></i>
                            بازگشت
                        </a>
                        <h3 class="mb-0">@Model.Schedule.ScheduleTitle</h3>
                    </div>
                    <p class="text-muted mb-0">
                        <i class="fas fa-tasks me-2"></i>
                        @Model.TaskModel.Title
                    </p>
                </div>
                <div>
                    @if (Model.CanEdit)
                    {
                        <a href="@Url.Action("Edit", "ScheduledTasks", new { id = Model.Schedule.Id })" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>
                            ویرایش
                        </a>
                    }
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="toggleScheduleStatus(@Model.Schedule.Id)">
                                <i class="fas fa-@(Model.Schedule.IsScheduleEnabled ? "pause" : "play")-circle me-2"></i>
                                @(Model.Schedule.IsScheduleEnabled ? "غیرفعال کردن" : "فعال کردن")
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="deleteSchedule(@Model.Schedule.Id)">
                                <i class="fas fa-trash me-2"></i>
                                حذف
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @* Main Content *@
        <div class="col-lg-8">
            @* Status Cards *@
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card detail-card border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="info-icon bg-@(Model.Schedule.IsScheduleEnabled && Model.Schedule.IsActive ? "success" : "secondary") bg-opacity-10 me-3">
                                    <i class="fas fa-circle text-@(Model.Schedule.IsScheduleEnabled && Model.Schedule.IsActive ? "success" : "secondary")"></i>
                                </div>
                                <div>
                                    <div class="detail-label">وضعیت</div>
                                    <div class="detail-value">
                                        @(Model.Schedule.IsExecuted ? "اجرا شده" : Model.Schedule.IsScheduleEnabled && Model.Schedule.IsActive ? "فعال" : "غیرفعال")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card detail-card border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="info-icon bg-primary bg-opacity-10 me-3">
                                    <i class="fas fa-sync-alt text-primary"></i>
                                </div>
                                <div>
                                    <div class="detail-label">تعداد اجرا</div>
                                    <div class="detail-value">
                                        @Model.Schedule.ExecutionCount
                                        @if (Model.Schedule.MaxOccurrences.HasValue)
                                        {
                                            <span class="text-muted">/ @Model.Schedule.MaxOccurrences</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card detail-card border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="info-icon bg-info bg-opacity-10 me-3">
                                    <i class="fas fa-@(Model.Schedule.ScheduleType == 0 ? "clock" : Model.Schedule.ScheduleType == 1 ? "calendar-day" : Model.Schedule.ScheduleType == 2 ? "calendar-week" : "calendar-alt") text-info"></i>
                                </div>
                                <div>
                                    <div class="detail-label">نوع تکرار</div>
                                    <div class="detail-value">
                                        @(Model.Schedule.ScheduleType == 0 ? "یکبار" : 
                                          Model.Schedule.ScheduleType == 1 ? "روزانه" : 
                                          Model.Schedule.ScheduleType == 2 ? "هفتگی" : "ماهانه")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Schedule Details *@
            <div class="card detail-card border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                        جزئیات زمان‌بندی
                    </h5>

                    <div class="detail-section">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-label">ساعت اجرا</div>
                                <div class="detail-value">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    @(Model.Schedule.ScheduledTime ?? "تنظیم نشده")
                                </div>
                            </div>

                            @if (Model.Schedule.ScheduleType == 2 && !string.IsNullOrEmpty(Model.Schedule.ScheduledDaysOfWeek))
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="detail-label">روزهای هفته</div>
                                    <div class="detail-value">
                                        @{
                                            var days = Model.Schedule.ScheduledDaysOfWeek.Split(',');
                                            var dayNames = new[] { "یکشنبه", "دوشنبه", "سه‌شنبه", "چهارشنبه", "پنج‌شنبه", "جمعه", "شنبه" };
                                            foreach (var day in days)
                                            {
                                                if (int.TryParse(day.Trim(), out int dayIndex) && dayIndex >= 0 && dayIndex < 7)
                                                {
                                                    <span class="badge bg-primary me-1">@dayNames[dayIndex]</span>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            }

                            @if (Model.Schedule.ScheduleType == 3 && Model.Schedule.ScheduledDayOfMonth.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="detail-label">روز ماه</div>
                                    <div class="detail-value">
                                        <span class="badge bg-warning">روز @Model.Schedule.ScheduledDayOfMonth ام هر ماه</span>
                                    </div>
                                </div>
                            }

                            @* ⭐⭐⭐ نمایش چند روز در ماه *@
                            @if (Model.Schedule.ScheduleType == 3 && !string.IsNullOrEmpty(Model.Schedule.ScheduledDaysOfMonth))
                            {
                                <div class="col-md-12 mb-3">
                                    <div class="detail-label">روزهای ماه</div>
                                    <div class="detail-value">
                                        @{
                                            var monthDays = Model.Schedule.ScheduledDaysOfMonth.Split(',');
                                            foreach (var day in monthDays)
                                            {
                                                <span class="badge bg-warning me-1">روز @day</span>
                                            }
                                        }
                                        <small class="text-muted d-block mt-2">
                                            <i class="fas fa-calendar-check me-1"></i>
                                            تسک در روزهای @Model.Schedule.ScheduledDaysOfMonth هر ماه ایجاد می‌شود
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="detail-section">
                        <div class="row">
                            @if (Model.Schedule.StartDate.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="detail-label">تاریخ شروع</div>
                                    <div class="detail-value">
                                        @MahERP.CommonLayer.PublicClasses.ConvertDateTime.ConvertMiladiToShamsi(Model.Schedule.StartDate.Value, "yyyy/MM/dd HH:mm")
                                    </div>
                                </div>
                            }

                            @if (Model.Schedule.EndDate.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="detail-label">تاریخ پایان</div>
                                    <div class="detail-value">
                                        @MahERP.CommonLayer.PublicClasses.ConvertDateTime.ConvertMiladiToShamsi(Model.Schedule.EndDate.Value, "yyyy/MM/dd HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Schedule.ScheduleDescription))
                    {
                        <div class="detail-section">
                            <div class="detail-label">توضیحات زمان‌بندی</div>
                            <div class="detail-value">@Model.Schedule.ScheduleDescription</div>
                        </div>
                    }
                </div>
            </div>

            @* Task Details *@
            <div class="card detail-card border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-tasks text-success me-2"></i>
                        جزئیات تسک
                    </h5>

                    <div class="detail-section">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-label">عنوان تسک</div>
                                <div class="detail-value">@Model.TaskModel.Title</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="detail-label">کد تسک</div>
                                <div class="detail-value">
                                    <code>@(Model.TaskModel.TaskCode ?? "خودکار")</code>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="detail-label">اولویت</div>
                                <div class="detail-value">
                                    <span class="badge bg-@(Model.TaskModel.Priority == 0 ? "secondary" : Model.TaskModel.Priority == 1 ? "warning" : "danger")">
                                        @(Model.TaskModel.Priority == 0 ? "عادی" : Model.TaskModel.Priority == 1 ? "مهم" : "فوری")
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="detail-label">نوع تسک</div>
                                <div class="detail-value">
                                    @(Model.TaskModel.TaskType == 0 ? "تسک" : Model.TaskModel.TaskType == 1 ? "پروژه" : "مایلستون")
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="detail-label">مهم</div>
                                <div class="detail-value">
                                    @if (Model.TaskModel.Important)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                        <span>بله</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">خیر</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TaskModel.Description))
                    {
                        <div class="detail-section">
                            <div class="detail-label">توضیحات تسک</div>
                            <div class="detail-value">@Model.TaskModel.Description</div>
                        </div>
                    }

                    @* Task Assignments *@
                    @if (Model.TaskModel.AssignmentsTaskUser != null && Model.TaskModel.AssignmentsTaskUser.Any())
                    {
                        <div class="detail-section">
                            <div class="detail-label mb-3">افراد منتصب شده</div>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var user in Model.TaskModel.AssignmentsTaskUser)
                                {
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-user me-1"></i>
                                        @user.AssignedUserName
                                    </span>
                                }
                            </div>
                        </div>
                    }

                    @* Task Operations *@
                    @if (Model.TaskModel.Operations != null && Model.TaskModel.Operations.Any())
                    {
                        <div class="detail-section">
                            <div class="detail-label mb-3">عملیات‌های تسک (@Model.TaskModel.Operations.Count)</div>
                            <ul class="list-group">
                                @foreach (var operation in Model.TaskModel.Operations)
                                {
                                    <li class="list-group-item">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        @operation.Title
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Sidebar *@
        <div class="col-lg-4">
            @* Timeline *@
            <div class="card detail-card border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-history text-info me-2"></i>
                        زمان‌بندی اجراها
                    </h5>

                    <div class="schedule-timeline">
                        @if (Model.Schedule.NextExecutionDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="detail-label">اجرای بعدی</div>
                                <div class="detail-value mb-1">
                                    @MahERP.CommonLayer.PublicClasses.ConvertDateTime.ConvertMiladiToShamsi(Model.Schedule.NextExecutionDate.Value, "yyyy/MM/dd HH:mm")
                                </div>
                                <small class="text-muted">
                                    @{
                                        var daysUntil = (Model.Schedule.NextExecutionDate.Value.Date - DateTime.UtcNow.Date).Days;
                                        var daysText = daysUntil < 0 ? "گذشته" :
                                                       daysUntil == 0 ? "امروز" :
                                                       daysUntil == 1 ? "فردا" :
                                                       $"{daysUntil} روز دیگر";
                                    }
                                    <i class="fas fa-clock me-1"></i>@daysText
                                </small>
                            </div>
                        }

                        @if (Model.Schedule.LastExecutionDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="detail-label">آخرین اجرا</div>
                                <div class="detail-value">
                                    @MahERP.CommonLayer.PublicClasses.ConvertDateTime.ConvertMiladiToShamsi(Model.Schedule.LastExecutionDate.Value, "yyyy/MM/dd HH:mm")
                                </div>
                            </div>
                        }

                        <div class="timeline-item">
                            <div class="detail-label">تاریخ ایجاد</div>
                            <div class="detail-value">
                                @MahERP.CommonLayer.PublicClasses.ConvertDateTime.ConvertMiladiToShamsi(Model.Schedule.CreatedDate, "yyyy/MM/dd HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Progress Card *@
            @if (Model.Schedule.MaxOccurrences.HasValue && Model.Schedule.MaxOccurrences.Value > 0)
            {
                <div class="card detail-card border-0 mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-chart-line text-warning me-2"></i>
                            پیشرفت
                        </h5>
                        @{
                            var progressPercentage = (int)((Model.Schedule.ExecutionCount / (double)Model.Schedule.MaxOccurrences.Value) * 100);
                        }
                        <div class="progress mb-2" style="height: 20px;">
                            <div class="progress-bar @(progressPercentage >= 100 ? "bg-success" : "bg-primary")" 
                                 role="progressbar" 
                                 style="width: @progressPercentage%"
                                 aria-valuenow="@progressPercentage" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                @progressPercentage%
                            </div>
                        </div>
                        <small class="text-muted">
                            @Model.Schedule.ExecutionCount از @Model.Schedule.MaxOccurrences اجرا انجام شده
                        </small>
                    </div>
                </div>
            }

            @* Creator Info *@
            <div class="card detail-card border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-info-circle text-secondary me-2"></i>
                        اطلاعات بیشتر
                    </h5>
                    <div class="detail-label">ایجادکننده</div>
                    <div class="detail-value mb-3">
                        <i class="fas fa-user me-2"></i>
                        @Model.Schedule.CreatedByUser?.FirstName @Model.Schedule.CreatedByUser?.LastName
                    </div>

                    @if (Model.Schedule.Branch != null)
                    {
                        <div class="detail-label">شعبه</div>
                        <div class="detail-value">
                            <i class="fas fa-building me-2"></i>
                            @Model.Schedule.Branch.Name
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleScheduleStatus(scheduleId) {
            if (!confirm('آیا از تغییر وضعیت این تسک اطمینان دارید؟')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ToggleStatus", "ScheduledTasks")',
                type: 'POST',
                data: {
                    id: scheduleId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        showToast('success', response.message);
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast('error', response.message);
                    }
                },
                error: function () {
                    showToast('error', 'خطا در تغییر وضعیت');
                }
            });
        }

        function deleteSchedule(scheduleId) {
            if (!confirm('آیا از حذف این تسک زمان‌بندی شده اطمینان دارید؟')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("Delete", "ScheduledTasks")',
                type: 'POST',
                data: {
                    id: scheduleId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        showToast('success', response.message);
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Index", "ScheduledTasks")';
                        }, 1000);
                    } else {
                        showToast('error', response.message);
                    }
                },
                error: function () {
                    showToast('error', 'خطا در حذف تسک');
                }
            });
        }

        function showToast(type, message) {
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: type === 'success' ? 'success' : 'error',
                    title: message,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
            } else {
                alert(message);
            }
        }
    </script>
}
