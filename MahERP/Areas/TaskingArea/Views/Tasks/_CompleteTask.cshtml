@model CompleteTaskViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 60%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-success-dark">
                <h3 class="block-title">تکمیل تسک</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="complete-task-form" asp-action="CompleteTaskPost" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TaskId" />
                <input type="hidden" asp-for="TaskCode" />
                <input type="hidden" asp-for="TaskTitle" />
                <input type="hidden" asp-for="FromList" />
                <input type="hidden" asp-for="rowNum" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header bg-success-light">
                        <h3 class="block-title">تأیید عملیات</h3>
                    </div>
                    <div class="block-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row justify-content-center">
                            <!-- نمایش اطلاعات تسک -->
                            <div class="col-12 mb-4">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle me-1"></i>
                                    <strong>تسک:</strong> @Model.TaskTitle
                                    @if (!string.IsNullOrEmpty(Model.TaskCode))
                                    {
                                        <span class="badge bg-primary ms-2">@Model.TaskCode</span>
                                    }
                                </div>
                            </div>

                            <!-- پیام تکمیل تسک -->
                            <div class="col-12 mb-4">
                                <div class="alert alert-success">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fa fa-check-circle fa-2x text-success"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5 class="alert-heading mb-2">تکمیل تسک</h5>
                                            <p class="mb-2">آیا از تکمیل تسک <strong>@Model.TaskTitle</strong> اطمینان دارید؟</p>
                                            <hr class="my-2">
                                            <div class="small">
                                                <strong>با تکمیل تسک:</strong>
                                                <ul class="mb-0 mt-1">
                                                    <li>وضعیت تسک به "تکمیل شده" تغییر می‌کند</li>
                                                    <li>تمام یادآوری‌های فعال غیرفعال می‌شوند</li>
                                                    <li>تاریخ تکمیل ثبت می‌شود</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                       
                            <!-- فیلد یادداشت -->
                            <div class="col-12 mb-3">
                                <label class="form-label" for="CompletionReport">
                                    <i class="fa fa-sticky-note text-muted me-1"></i>
                                    یادداشت تکمیل (اختیاری)
                                </label>
                                <textarea class="form-control"
                                          asp-for="CompletionReport"
                                          rows="4"
                                          placeholder="یادداشت خود را در مورد تکمیل این تسک بنویسید..."></textarea>
                                <span asp-validation-for="CompletionReport" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">
                <i class="fa fa-times me-1"></i>انصراف
            </button>
            <button class="btn btn-sm btn-success" data-save="modal-ajax-save" type="button">
                <i class="fa fa-check me-1"></i>تکمیل تسک
            </button>
        </div>
    </div>
</div>

