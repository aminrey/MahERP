@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels.ScheduledTaskListViewModel

@{
    ViewData["Title"] = "تسک‌های زمان‌بندی شده";
}

<div class="content">
    <!-- ⭐ Header با آمار -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-calendar-alt me-1 text-primary"></i>
                تسک‌های زمان‌بندی شده
            </h3>
            <div class="block-options">
                <a asp-action="CreateNewTask" class="btn btn-sm btn-alt-success">
                    <i class="fa fa-plus me-1"></i>ایجاد تسک زمان‌بندی جدید
                </a>
            </div>
        </div>

        <!-- ⭐ آمار سریع -->
        <div class="block-content">
            <div class="row g-sm text-center">
                <div class="col-6 col-md-3">
                    <div class="p-3 bg-body-light rounded hover-lift">
                        <div class="fs-3 fw-semibold text-primary">@Model.Stats.TotalScheduled</div>
                        <div class="text-muted small">کل زمان‌بندی‌ها</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 bg-body-light rounded hover-lift">
                        <div class="fs-3 fw-semibold text-success">@Model.Stats.ActiveCount</div>
                        <div class="text-muted small">فعال</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 bg-body-light rounded hover-lift">
                        <div class="fs-3 fw-semibold text-warning">@Model.Stats.TodayCount</div>
                        <div class="text-muted small">امروز</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 bg-body-light rounded hover-lift">
                        <div class="fs-3 fw-semibold text-info">@Model.Stats.ThisWeekCount</div>
                        <div class="text-muted small">این هفته</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ⭐ لیست تسک‌های زمان‌بندی شده -->
    @if (!Model.ScheduledTasks.Any())
    {
        <div class="block block-rounded">
            <div class="block-content text-center py-5">
                <i class="fa fa-calendar-times fa-4x text-muted opacity-25 mb-4"></i>
                <h4 class="text-muted">هیچ تسک زمان‌بندی شده‌ای وجود ندارد</h4>
                <p class="text-muted mb-4">برای ایجاد اولین تسک زمان‌بندی، از دکمه زیر استفاده کنید</p>
                <a asp-action="CreateNewTask" class="btn btn-primary">
                    <i class="fa fa-plus me-2"></i>ایجاد تسک زمان‌بندی جدید
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model.ScheduledTasks)
            {
                <div class="col-12 col-lg-6 col-xl-4">
                    <div class="block block-rounded block-link-shadow h-100 mb-4">
                        <!-- ⭐ هدر با وضعیت -->
                        <div class="block-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-bottom: 3px solid rgba(0,0,0,0.1);">
                            <div class="d-flex justify-content-between align-items-center w-100">
                                <div>
                                    <span class="badge @task.StatusBadgeClass">@task.StatusText</span>
                                    <span class="badge bg-white bg-opacity-25 text-white ms-1">@task.ScheduleTypeText</span>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("ScheduledTaskDetails", new { id = task.Id })" 
                                       class="btn btn-sm text-white" 
                                       style="background: rgba(255,255,255,0.2);"
                                       title="جزئیات">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("EditScheduledTask", new { id = task.Id })" 
                                       class="btn btn-sm text-white" 
                                       style="background: rgba(255,255,255,0.2);"
                                       title="ویرایش">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm text-white toggle-schedule-btn" 
                                            style="background: rgba(255,255,255,0.2);"
                                            data-schedule-id="@task.Id"
                                            data-current-status="@task.IsScheduleEnabled.ToString().ToLower()"
                                            title="@(task.IsScheduleEnabled ? "غیرفعال کردن" : "فعال کردن")">
                                        <i class="fa @(task.IsScheduleEnabled ? "fa-pause" : "fa-play")"></i>
                                    </button>
                                    <button type="button" 
                                            class="btn btn-sm text-white delete-schedule-btn" 
                                            style="background: rgba(255,255,255,0.2);"
                                            data-schedule-id="@task.Id"
                                            data-schedule-title="@task.ScheduleTitle"
                                            title="حذف">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- ⭐ محتوای کارت -->
                        <div class="block-content">
                            <!-- عنوان -->
                            <h5 class="mb-2 fw-bold">
                                <a href="@Url.Action("ScheduledTaskDetails", new { id = task.Id })" 
                                   class="text-dark text-decoration-none">
                                    @task.ScheduleTitle
                                </a>
                            </h5>

                            <!-- توضیحات -->
                            @if (!string.IsNullOrEmpty(task.ScheduleDescription))
                            {
                                <p class="text-muted small mb-3">@task.ScheduleDescription</p>
                            }

                            <!-- اطلاعات تسک -->
                            <div class="mb-3 p-2 bg-body-light rounded">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fa fa-tasks text-primary me-2"></i>
                                    <strong class="me-2">تسک:</strong>
                                    <span class="text-muted">@task.TaskTitle</span>
                                </div>
                                @if (!string.IsNullOrEmpty(task.TaskCode))
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-hashtag text-info me-2"></i>
                                        <strong class="me-2">کد:</strong>
                                        <span class="text-muted">@task.TaskCode</span>
                                    </div>
                                }
                            </div>

                            <!-- جزئیات زمان‌بندی -->
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fa fa-clock text-success me-2"></i>
                                    <strong class="me-2">ساعت اجرا:</strong>
                                    <span class="badge bg-success-light text-success">@task.ScheduledTime</span>
                                </div>

                                @if (task.ScheduleType == 2 && !string.IsNullOrEmpty(task.ScheduledDaysOfWeek))
                                {
                                    <div class="d-flex align-items-start mb-2">
                                        <i class="fa fa-calendar-week text-info me-2 mt-1"></i>
                                        <div>
                                            <strong class="d-block">روزهای هفته:</strong>
                                            <div class="mt-1">
                                                @{
                                                    var days = task.ScheduledDaysOfWeek.Split(',');
                                                    var dayNames = new Dictionary<string, string>
                                                    {
                                                        {"0", "یکشنبه"}, {"1", "دوشنبه"}, {"2", "سه‌شنبه"},
                                                        {"3", "چهارشنبه"}, {"4", "پنج‌شنبه"}, {"5", "جمعه"}, {"6", "شنبه"}
                                                    };
                                                    foreach (var day in days)
                                                    {
                                                        if (dayNames.ContainsKey(day.Trim()))
                                                        {
                                                            <span class="badge bg-info me-1">@dayNames[day.Trim()]</span>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (task.ScheduleType == 3 && task.ScheduledDayOfMonth.HasValue)
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fa fa-calendar-day text-warning me-2"></i>
                                        <strong class="me-2">روز ماه:</strong>
                                        <span class="badge bg-warning">@task.ScheduledDayOfMonth</span>
                                    </div>
                                }

                                <!-- اجرای بعدی -->
                                @if (!string.IsNullOrEmpty(task.NextExecutionDatePersian))
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-arrow-left text-danger me-2"></i>
                                        <strong class="me-2">اجرای بعدی:</strong>
                                        <span class="text-danger fw-bold">@task.NextExecutionDatePersian</span>
                                        @if (task.DaysUntilNextExecution.HasValue)
                                        {
                                            <span class="badge bg-danger ms-2">@task.DaysUntilNextExecutionText</span>
                                        }
                                    </div>
                                }
                            </div>

                            <!-- آمار اجرا -->
                            <div class="row g-2 text-center">
                                <div class="col-6">
                                    <div class="p-2 bg-body-light rounded">
                                        <div class="fs-4 fw-bold text-primary">@task.ExecutionCount</div>
                                        <small class="text-muted">تعداد اجرا</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 bg-body-light rounded">
                                        <div class="fs-4 fw-bold text-success">
                                            @(task.MaxOccurrences.HasValue ? task.MaxOccurrences.Value.ToString() : "∞")
                                        </div>
                                        <small class="text-muted">حداکثر</small>
                                    </div>
                                </div>
                            </div>

                            <!-- پیشرفت -->
                            @if (task.MaxOccurrences.HasValue && task.MaxOccurrences.Value > 0)
                            {
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">پیشرفت</small>
                                        <small class="text-muted">@task.ProgressPercentage%</small>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-success" 
                                             role="progressbar" 
                                             style="width: @task.ProgressPercentage%"></div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Footer -->
                        <div class="block-content block-content-full bg-body-light">
                            <div class="row align-items-center">
                                <div class="col-7">
                                    <small class="text-muted">
                                        <i class="fa fa-user me-1"></i>@task.CreatedByUserName
                                    </small>
                                </div>
                                <div class="col-5 text-end">
                                    <small class="text-muted">
                                        <i class="fa fa-calendar me-1"></i>@task.CreatedDatePersian
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // ⭐ فعال/غیرفعال کردن
            $('.toggle-schedule-btn').on('click', function() {
                const $btn = $(this);
                const scheduleId = $btn.data('schedule-id');
                const currentStatus = $btn.data('current-status') === 'true';

                if (!confirm(`آیا از ${currentStatus ? 'غیرفعال' : 'فعال'} کردن این زمان‌بندی اطمینان دارید؟`)) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("ToggleSchedule", "Tasks")',
                    type: 'POST',
                    data: {
                        scheduleId: scheduleId,
                        __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            if (typeof toastr !== 'undefined') {
                                toastr.success(response.message);
                            }
                            location.reload();
                        } else {
                            if (typeof toastr !== 'undefined') {
                                toastr.error(response.message);
                            }
                        }
                    },
                    error: function() {
                        if (typeof toastr !== 'undefined') {
                            toastr.error('خطا در تغییر وضعیت');
                        }
                    }
                });
            });

            // ⭐ حذف
            $('.delete-schedule-btn').on('click', function() {
                const $btn = $(this);
                const scheduleId = $btn.data('schedule-id');
                const scheduleTitle = $btn.data('schedule-title');

                if (!confirm(`آیا از حذف زمان‌بندی "${scheduleTitle}" اطمینان دارید؟\nتوجه: این عملیات غیرقابل بازگشت است.`)) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("DeleteScheduledTask", "Tasks")',
                    type: 'POST',
                    data: {
                        scheduleId: scheduleId,
                        __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            if (typeof toastr !== 'undefined') {
                                toastr.success(response.message);
                            }
                            location.reload();
                        } else {
                            if (typeof toastr !== 'undefined') {
                                toastr.error(response.message);
                            }
                        }
                    },
                    error: function() {
                        if (typeof toastr !== 'undefined') {
                            toastr.error('خطا در حذف زمان‌بندی');
                        }
                    }
                });
            });
        });
    </script>
}

<style>
    .hover-lift {
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .hover-lift:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.1) !important;
    }

    .block-link-shadow {
        transition: all 0.3s ease;
    }

    .block-link-shadow:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        transform: translateY(-3px);
    }
</style>
