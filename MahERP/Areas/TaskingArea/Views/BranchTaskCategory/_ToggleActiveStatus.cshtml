@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels
@model TaskViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 50%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header @(Model.IsActive ? "bg-warning-dark" : "bg-success-dark")">
                <h3 class="block-title">@(Model.IsActive ? "غیرفعال کردن تسک" : "فعال کردن تسک")</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="toggle-status-form" asp-action="ToggleActiveStatusPost" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header @(Model.IsActive ? "bg-warning-light" : "bg-success-light")">
                        <h3 class="block-title">تأیید عملیات</h3>
                    </div>
                    <div class="block-content">
                        <div class="py-3 text-center">
                            @if (Model.IsActive)
                            {
                                <div class="alert alert-warning">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fa fa-exclamation-circle fa-2x text-warning"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5 class="alert-heading mb-2">غیرفعال کردن تسک</h5>
                                            <p class="mb-2">آیا از غیرفعال کردن تسک <strong>@Model.Title</strong> اطمینان دارید؟</p>
                                            <hr class="my-2">
                                            <div class="small">
                                                با این کار، تسک در وضعیت غیرفعال قرار می‌گیرد و کاربران نمی‌توانند آن را تغییر دهند.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fa fa-check-circle fa-2x text-success"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5 class="alert-heading mb-2">فعال کردن تسک</h5>
                                            <p class="mb-2">آیا از فعال کردن تسک <strong>@Model.Title</strong> اطمینان دارید؟</p>
                                            <hr class="my-2">
                                            <div class="small">
                                                با این کار، تسک در وضعیت فعال قرار می‌گیرد و کاربران می‌توانند روی آن کار کنند.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            <button class="btn btn-sm @(Model.IsActive ? "btn-warning" : "btn-success")" data-save="modal-ajax-save" type="button">
                <i class="fa @(Model.IsActive ? "fa-ban" : "fa-check") me-1"></i>@(Model.IsActive ? "غیرفعال کردن" : "فعال کردن")
            </button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Event handler برای موفقیت
        $('[data-save="modal-ajax-save"]').on('ajaxFormSuccess', function(event, response) {
            if (response && response.success) {
                if (response.message && response.message.length > 0) {
                    toastr.success(response.message[0].text);
                }
                $('.modal').modal('hide');
                $('.modal').on('hidden.bs.modal', function () {
                    location.reload();
                });
            }
        });
    });
</script>