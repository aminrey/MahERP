@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels.ScheduledTaskListViewModel
@{
    ViewData["Title"] = "تسک‌های زمان‌بندی شده";
}

@section styles {
    <style>
        .scheduled-task-card {
            transition: all 0.3s ease;
            border-right: 4px solid transparent;
        }

        .scheduled-task-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .scheduled-task-card.active {
            border-right-color: #28a745;
        }

        .scheduled-task-card.inactive {
            border-right-color: #6c757d;
            opacity: 0.7;
        }

        .scheduled-task-card.executed {
            border-right-color: #17a2b8;
        }

        .schedule-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .progress-mini {
            height: 4px;
            margin-top: 0.5rem;
        }

        .card-actions {
            opacity: 0;
            transition: opacity 0.2s;
        }

        .scheduled-task-card:hover .card-actions {
            opacity: 1;
        }
    </style>
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">
                        <i class="fas fa-clock text-primary me-2"></i>
                        تسک‌های زمان‌بندی شده
                    </h3>
                    <p class="text-muted mb-0">
                        مدیریت تسک‌هایی که به صورت خودکار ایجاد می‌شوند
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("CreateNewTask", "Tasks")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        ایجاد تسک زمان‌بندی شده
                    </a>
                    <a href="@Url.Action("Index", "Tasks")" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>
                        تسک‌های عادی
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    @if (Model.Stats != null)
    {
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar avatar-lg bg-primary bg-opacity-10">
                                    <i class="fas fa-calendar-alt text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">کل زمان‌بندی‌ها</h6>
                                <h3 class="mb-0">@Model.Stats.TotalScheduled</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar avatar-lg bg-success bg-opacity-10">
                                    <i class="fas fa-check-circle text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">فعال</h6>
                                <h3 class="mb-0">@Model.Stats.ActiveCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar avatar-lg bg-info bg-opacity-10">
                                    <i class="fas fa-history text-info"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">امروز</h6>
                                <h3 class="mb-0">@Model.Stats.TodayCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar avatar-lg bg-warning bg-opacity-10">
                                    <i class="fas fa-calendar-week text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">این هفته</h6>
                                <h3 class="mb-0">@Model.Stats.ThisWeekCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Tasks List -->
    <div class="row">
        <div class="col-12">
            @if (Model.ScheduledTasks == null || !Model.ScheduledTasks.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">هیچ تسک زمان‌بندی شده‌ای وجود ندارد</h5>
                        <p class="text-muted">برای ایجاد تسک زمان‌بندی شده، روی دکمه "ایجاد تسک زمان‌بندی شده" کلیک کنید</p>
                        <a href="@Url.Action("CreateNewTask", "Tasks")" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-2"></i>
                            ایجاد تسک جدید
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var schedule in Model.ScheduledTasks)
                    {
                        <div class="col-md-6 col-lg-4">
                            @await Html.PartialAsync("_ScheduledTaskCardPartial", schedule)
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Status
        function toggleScheduleStatus(scheduleId) {
            if (!confirm('آیا از تغییر وضعیت این تسک اطمینان دارید؟')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ToggleStatus", "ScheduledTasks")',
                type: 'POST',
                data: {
                    id: scheduleId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        showToast('success', response.message);
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        showToast('error', response.message);
                    }
                },
                error: function () {
                    showToast('error', 'خطا در تغییر وضعیت');
                }
            });
        }

        // Delete Schedule
        function deleteSchedule(scheduleId) {
            if (!confirm('آیا از حذف این تسک زمان‌بندی شده اطمینان دارید؟\nتمام تنظیمات زمان‌بندی حذف خواهد شد.')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("Delete", "ScheduledTasks")',
                type: 'POST',
                data: {
                    id: scheduleId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        showToast('success', response.message);
                        setTimeout(function () {
                            location.reload();
                        }, 1000);
                    } else {
                        showToast('error', response.message);
                    }
                },
                error: function () {
                    showToast('error', 'خطا در حذف تسک');
                }
            });
        }

        // Toast Helper
        function showToast(type, message) {
            // استفاده از سیستم Toast موجود در پروژه
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: type === 'success' ? 'success' : 'error',
                    title: message,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
            } else {
                alert(message);
            }
        }
    </script>
}
