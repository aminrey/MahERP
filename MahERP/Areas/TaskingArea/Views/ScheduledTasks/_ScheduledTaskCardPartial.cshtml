@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels.ScheduledTaskCardViewModel

@{
    var statusClass = Model.IsActive && Model.IsScheduleEnabled ? "active" : 
                      Model.IsExecuted ? "executed" : "inactive";
    
    var scheduleTypeText = Model.ScheduleType switch
    {
        0 => "یکبار",
        1 => "روزانه",
        2 => "هفتگی",
        3 => "ماهانه",
        4 => "تکرار با فاصله", // ⭐⭐⭐ جدید
        _ => "نامشخص"
    };

    var scheduleTypeBadge = Model.ScheduleType switch
    {
        0 => "badge-info",
        1 => "badge-success",
        2 => "badge-primary",
        3 => "badge-warning",
        4 => "badge-secondary", // ⭐⭐⭐ جدید
        _ => "badge-secondary"
    };
}

<div class="card scheduled-task-card @statusClass border-0 shadow-sm h-100">
    <div class="card-body">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="flex-grow-1">
                <h5 class="card-title mb-1">
                    <a href="@Url.Action("Details", "ScheduledTasks", new { id = Model.Id })" 
                       class="text-decoration-none text-dark">
                        @Model.ScheduleTitle
                    </a>
                </h5>
                <small class="text-muted">@Model.TaskTitle</small>
            </div>
            <div class="dropdown card-actions">
                <button class="btn btn-sm btn-link text-muted" type="button" 
                        data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Details", "ScheduledTasks", new { id = Model.Id })">
                            <i class="fas fa-eye me-2"></i>جزئیات
                        </a>
                    </li>
                    
                    @* ⭐⭐⭐ فقط برای تسک‌هایی که من سازنده‌شان هستم *@
                    @if (Model.IsCreatedByMe)
                    {
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Edit", "ScheduledTasks", new { id = Model.Id })">
                                <i class="fas fa-edit me-2"></i>ویرایش
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="javascript:void(0)" 
                               onclick="toggleScheduleStatus(@Model.Id)">
                                <i class="fas fa-toggle-on me-2"></i>
                                @(Model.IsScheduleEnabled ? "غیرفعال کردن" : "فعال کردن")
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="javascript:void(0)" 
                               onclick="deleteSchedule(@Model.Id)">
                                <i class="fas fa-trash me-2"></i>حذف
                            </a>
                        </li>
                    }
                    else
                    {
                        <li><hr class="dropdown-divider"></li>
                        <li class="dropdown-item-text text-muted small">
                            <i class="fas fa-lock me-1"></i>
                            فقط مشاهده (عضو تیم)
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.ScheduleDescription))
        {
            <p class="card-text text-muted small mb-3">
                @Model.ScheduleDescription
            </p>
        }

        <!-- Badges -->
        <div class="mb-3">
            <span class="badge @scheduleTypeBadge schedule-badge me-1">
                <i class="fas fa-sync-alt me-1"></i>
                @scheduleTypeText
            </span>

            @if (Model.IsScheduleEnabled)
            {
                <span class="badge bg-success schedule-badge me-1">
                    <i class="fas fa-check-circle me-1"></i>
                    فعال
                </span>
            }
            else
            {
                <span class="badge bg-secondary schedule-badge me-1">
                    <i class="fas fa-pause-circle me-1"></i>
                    غیرفعال
                </span>
            }

            @if (Model.MaxOccurrences.HasValue)
            {
                <span class="badge bg-info schedule-badge me-1">
                    <i class="fas fa-repeat me-1"></i>
                    @Model.ExecutionCount / @Model.MaxOccurrences
                </span>
            }
            
            @* ⭐⭐⭐ Badge برای تسک‌های تیمی *@
            @if (!Model.IsCreatedByMe)
            {
                <span class="badge bg-info schedule-badge">
                    <i class="fas fa-users me-1"></i>
                    عضو تیم
                </span>
            }
        </div>

        <!-- Schedule Info -->
        <div class="small">
            @if (!string.IsNullOrEmpty(Model.ScheduledTime))
            {
                <div class="mb-2">
                    <i class="fas fa-clock text-primary me-2"></i>
                    <span class="text-muted">ساعت اجرا:</span>
                    <strong>@Model.ScheduledTime</strong>
                </div>
            }

            @if (Model.NextExecutionDate.HasValue)
            {
                <div class="mb-2">
                    <i class="fas fa-calendar-alt text-success me-2"></i>
                    <span class="text-muted">اجرای بعدی:</span>
                    <strong>@Model.NextExecutionDatePersian</strong>
                </div>
            }
            else
            {
                <div class="mb-2">
                    <i class="fas fa-info-circle text-muted me-2"></i>
                    <span class="text-muted">اجرای بعدی تنظیم نشده</span>
                </div>
            }

            @if (Model.LastExecutionDate.HasValue)
            {
                <div class="mb-2">
                    <i class="fas fa-history text-info me-2"></i>
                    <span class="text-muted">آخرین اجرا:</span>
                    <strong>@Model.LastExecutionDatePersian</strong>
                </div>
            }
        </div>

        <!-- Progress (if MaxOccurrences exists) -->
        @if (Model.MaxOccurrences.HasValue && Model.MaxOccurrences.Value > 0)
        {
            var progressPercentage = (Model.ExecutionCount * 100.0 / Model.MaxOccurrences.Value);
            <div class="progress progress-mini">
                <div class="progress-bar" role="progressbar" 
                     style="width: @progressPercentage%;" 
                     aria-valuenow="@Model.ExecutionCount" 
                     aria-valuemin="0" 
                     aria-valuemax="@Model.MaxOccurrences">
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="card-footer bg-transparent border-top-0">
        <div class="d-flex justify-content-between align-items-center small text-muted">
            <div>
                <i class="fas fa-user me-1"></i>
                @Model.CreatedByUserName
            </div>
            <div>
                <i class="fas fa-building me-1"></i>
                @(Model.BranchName ?? "نامشخص")
            </div>
        </div>
    </div>
</div>

@* Anti-forgery token برای AJAX calls *@
@Html.AntiForgeryToken()
