@{
    Layout = null;
}

<!-- مودال راهنمای اتصال به تلگرام -->
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">

        <!-- هدر مودال -->
        <div class="modal-header bg-primary-dark">
            <h5 class="modal-title text-white">
                <i class="fab fa-telegram me-2"></i>
                اتصال به تلگرام
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- محتوای مودال -->
        <div class="modal-body">

            <!-- توضیح کوتاه -->
            <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fa fa-info-circle mt-1 me-2"></i>
                    <div class="fs-sm">
                        با اتصال به تلگرام، تمام اعلان‌های تسک و یادآوری‌ها را فوری دریافت کنید.
                    </div>
                </div>
            </div>

            <!-- مراحل به صورت compact -->
            <div class="card border-0 bg-light mb-3">
                <div class="card-body p-3">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="fa fa-tasks me-1"></i>
                        مراحل اتصال:
                    </h6>

                    <div class="steps-compact">
                        <div class="step-item-compact mb-2">
                            <span class="step-number">1</span>
                            <div class="step-content">
                                <span class="fw-semibold">ربات را باز کنید</span>
                                <a href="https://t.me/useridinfobot" target="_blank" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fab fa-telegram fa-sm"></i> باز کردن
                                </a>
                            </div>
                        </div>

                        <div class="step-item-compact mb-2">
                            <span class="step-number">2</span>
                            <div class="step-content">
                                <span class="fw-semibold">Chat ID را کپی کنید</span>
                                <small class="text-muted d-block">یک عدد 9-10 رقمی</small>
                            </div>
                        </div>

                        <div class="step-item-compact">
                            <span class="step-number">3</span>
                            <div class="step-content">
                                <span class="fw-semibold">در فرم زیر وارد کنید</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- فرم ثبت -->
            <form id="registerChatIdForm">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="chatIdInput" class="form-label fw-semibold">
                        <i class="fab fa-telegram text-primary me-1"></i>
                        Chat ID تلگرام
                    </label>
                    <input type="text"
                           class="form-control"
                           id="chatIdInput"
                           name="chatId"
                           placeholder="123456789"
                           required
                           pattern="[0-9]{9,10}"
                           inputmode="numeric">
                    <div class="form-text">
                        <i class="fa fa-info-circle me-1"></i>
                        از ربات <code dir="ltr">@@useridinfobot</code> دریافت کنید
                    </div>
                </div>

                <div id="registrationStatus" class="mb-3" style="display: none;"></div>

                <!-- ⭐ بخش نمایش لینک ربات (پس از ثبت موفق) -->
                <div id="botLinkSection" class="mb-3" style="display: none;">
                    <div class="card border-success">
                        <div class="card-body p-3  bg-opacity-10">
                            <h6 class="fw-bold text-success mb-2">
                                <i class="fa fa-check-circle me-1"></i>
                                مرحله نهایی - فعال‌سازی
                            </h6>
                            <p class="mb-2 fs-sm">
                                حالا به ربات اصلی ما بروید و دکمه <strong>Start</strong> را بزنید تا اتصال کامل شود:
                            </p>
                            <div class="d-grid gap-2">
                                <a id="botLinkButton" href="#" target="_blank" class="btn btn-success">
                                    <i class="fab fa-telegram me-2"></i>
                                    <span id="botLinkText">باز کردن ربات سیستم</span>
                                </a>
                            </div>
                            <small class="text-muted d-block mt-2 text-center">
                                <i class="fa fa-lightbulb me-1"></i>
                                بعد از زدن Start در ربات، اتصال کامل می‌شود
                            </small>
                        </div>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary" id="registerChatIdBtn">
                        <i class="fa fa-check me-2"></i>
                        ثبت و فعال‌سازی
                    </button>
                </div>
            </form>

        </div>

        <!-- فوتر -->
        <div class="modal-footer bg-light">
            <small class="text-muted">
                <i class="fa fa-shield-alt me-1"></i>
                Chat ID شما محرمانه بوده و قابل تغییر نیست
            </small>
        </div>

    </div>
</div>

<script>
    // ⭐ ثبت Chat ID
    document.getElementById('registerChatIdForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const chatIdInput = document.getElementById('chatIdInput');
        const statusDiv = document.getElementById('registrationStatus');
        const submitBtn = document.getElementById('registerChatIdBtn');
        const botLinkSection = document.getElementById('botLinkSection');
        const chatId = chatIdInput.value.trim();

        // اعتبارسنجی
        if (!chatId || chatId.length < 9 || chatId.length > 10 || !/^\d+$/.test(chatId)) {
            showStatusMessage('error', 'لطفاً یک Chat ID معتبر (9 یا 10 رقم) وارد کنید');
            return;
        }

        // غیرفعال کردن دکمه
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>در حال ثبت...';

        try {
            const token = getAntiForgeryToken();

            if (!token) {
                throw new Error('توکن امنیتی یافت نشد. لطفاً صفحه را رفرش کنید.');
            }

            const response = await fetch('@Url.Action("RegisterTelegramChatId", "UserManager", new { area = "TaskingArea" })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({
                    chatId: parseInt(chatId)
                })
            });

            const result = await response.json();

            if (result.success) {
                showStatusMessage('success',
                    `<i class="fa fa-check-circle me-1"></i>
                    <strong>موفق!</strong> Chat ID با موفقیت ثبت شد.`
                );

                // غیرفعال کردن فرم
                chatIdInput.disabled = true;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fa fa-check me-2"></i>ثبت شده';
                submitBtn.classList.remove('btn-primary');
                submitBtn.classList.add('btn-secondary');

                // ⭐⭐⭐ دریافت و نمایش لینک ربات
                await loadAndShowBotLink();

                // نوتیفیکیشن
                if (typeof Dashmix !== 'undefined') {
                    Dashmix.helpers('jq-notify', {
                        type: 'success',
                        icon: 'fa fa-check me-1',
                        message: 'Chat ID با موفقیت ثبت شد'
                    });
                }

            } else if (result.alreadyRegistered) {
                showStatusMessage('warning',
                    `<i class="fa fa-info-circle me-1"></i>
                    حساب شما قبلاً متصل شده است.`
                );

                chatIdInput.disabled = true;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fa fa-check me-2"></i>متصل شده';
                submitBtn.classList.remove('btn-primary');
                submitBtn.classList.add('btn-secondary');

                // نمایش لینک ربات برای کاربران قبلاً ثبت شده
                await loadAndShowBotLink();

            } else {
                throw new Error(result.message || 'خطا در ثبت Chat ID');
            }

        } catch (error) {
            console.error('❌ Error:', error);
            showStatusMessage('error',
                `<i class="fa fa-times-circle me-1"></i>
                <strong>خطا:</strong> ${error.message}`
            );

            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fa fa-check me-2"></i>تلاش مجدد';

            if (typeof Dashmix !== 'undefined') {
                Dashmix.helpers('jq-notify', {
                    type: 'danger',
                    icon: 'fa fa-times me-1',
                    message: 'خطا در ثبت Chat ID'
                });
            }
        }
    });

    // ⭐⭐⭐ تابع دریافت و نمایش لینک ربات
    async function loadAndShowBotLink() {
        try {
            const response = await fetch('@Url.Action("GetTelegramBotLink", "UserManager", new { area = "TaskingArea" })');
            const result = await response.json();

            console.log('📱 Bot link response:', result);

            if (result.success && result.botLink) {
                const botLinkSection = document.getElementById('botLinkSection');
                const botLinkButton = document.getElementById('botLinkButton');
                const botLinkText = document.getElementById('botLinkText');

                // تنظیم لینک و متن
                botLinkButton.href = result.botLink;
                if (result.botUsername) {
                    botLinkText.textContent = `باز کردن ربات (@@${result.botUsername})`;
                }

                // نمایش بخش لینک با انیمیشن
                botLinkSection.style.display = 'block';

                // اسکرول به پایین
                setTimeout(() => {
                    botLinkSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }, 100);

            } else {
                console.warn('⚠️ Bot link not available:', result.message);
                showStatusMessage('warning', 
                    `<i class="fa fa-exclamation-triangle me-1"></i>
                    <strong>توجه:</strong> لینک ربات در دسترس نیست. لطفاً با پشتیبانی تماس بگیرید.`
                );
            }
        } catch (error) {
            console.error('❌ Error loading bot link:', error);
            showStatusMessage('error',
                `<i class="fa fa-times-circle me-1"></i>
                خطا در دریافت لینک ربات. لطفاً با پشتیبانی تماس بگیرید.`
            );
        }
    }

    // تابع نمایش پیام
    function showStatusMessage(type, message) {
        const statusDiv = document.getElementById('registrationStatus');
        const alertClass = type === 'error' ? 'alert-danger' :
                          type === 'success' ? 'alert-success' :
                          type === 'warning' ? 'alert-warning' : 'alert-info';

        statusDiv.style.display = 'block';
        statusDiv.innerHTML = `<div class="alert ${alertClass} alert-dismissible fade show mb-0" role="alert">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>`;
    }
</script>

<style>
    /* استایل‌های سفارشی برای مودال کوچک و زیبا */
    .bg-primary-dark {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .steps-compact {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .step-item-compact {
        display: flex;
        align-items: start;
        gap: 0.75rem;
    }

    .step-number {
        flex-shrink: 0;
        width: 26px;
        height: 26px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.813rem;
        font-weight: 600;
    }

    .step-content {
        flex: 1;
        padding-top: 2px;
        font-size: 0.875rem;
    }

    /* حذف فلش‌های input number */
    input[type="text"][inputmode="numeric"]::-webkit-inner-spin-button,
    input[type="text"][inputmode="numeric"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* بهبود نمایش alert ها */
    .alert {
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
    }

        .alert i {
            font-size: 1rem;
        }

    /* کاهش padding modal */
    .modal-body {
        padding: 1.25rem;
    }

    .modal-footer {
        padding: 0.75rem 1.25rem;
        border-top: 1px solid #dee2e6;
    }

    /* استایل بخش لینک ربات */
    #botLinkSection {
        animation: slideDown 0.4s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* responsive */
    @@media (max-width: 576px) {
        .modal-dialog {
            margin: 0.5rem;
        }
    }
</style>