@model List<MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels.TaskCalendarViewModel>
@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels
@{
    ViewData["Title"] = @ViewBag.PageTitle;
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    var filterModel = ViewBag.FilterModel as TaskCalendarFilterViewModel;
}

<!-- Page Content -->
<div class="content">
    <!-- Hero -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
                <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">تقویم تسک‌ها</h1>
                <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="AdminArea" asp-controller="Home" asp-action="Dashboard">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="AdminArea" asp-controller="Tasks" asp-action="Index">تسک‌ها</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">تقویم</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero -->
    <!-- Calendar Section -->
    <div class="row g-0 flex-xl-grow-1">
        <div class="col-xl-3">
            <div class="content">
                <!-- Toggle Side Content -->
                <div class="d-xl-none push">
                    <button class="btn w-100 btn-alt-primary" data-class="d-none" data-target="#side-content" data-toggle="class-toggle" type="button">
                        گزینه‌های تقویم
                    </button>
                </div>
                <!-- END Toggle Side Content -->
                <!-- Side Content -->
                <div class="d-none d-xl-block push" id="side-content">
                    <!-- فیلترهای تقویم -->
                    <div class="block block-rounded">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">فیلترهای تقویم</h3>
                            <div class="block-options">
                                <button type="button" class="btn btn-sm btn-alt-secondary" id="clearFilters">
                                    <i class="fa fa-times me-1"></i> پاک کردن
                                </button>
                            </div>
                        </div>
                        <div class="block-content">
                            <!-- انتخاب شعبه - مرحله اول cascade -->
                            <div class="mb-3">
                                <label class="form-label fw-medium" for="FilterBranchId">انتخاب شعبه</label>
                                <select class="js-select2 form-select"
                                        id="FilterBranchId"
                                        data-placeholder="همه شعبه‌ها"
                                        data-url="@Url.Action("BranchTriggerSelectForCalendar", "Tasks")"
                                        data-toggle="multiplepartialview"
                                        data-target-divs="FilterUsersDiv,FilterStakeholdersDiv"
                                        data-param-name="branchId"
                                        style="width: 100%;">
                                    <option value="">همه شعبه‌ها</option>
                                    @if (filterModel?.BranchListInitial != null)
                                    {
                                        @foreach (var branch in filterModel.BranchListInitial)
                                        {
                                            <option value="@branch.Id">@branch.Name</option>
                                        }
                                    }
                                </select>
                                <small class="form-text text-muted">
                                    <i class="fa fa-info-circle me-1"></i>
                                    انتخاب شعبه باعث بروزرسانی کاربران و طرف حساب‌ها می‌شود
                                </small>
                            </div>

                            <!-- کاربران انتصابی - مرحله دوم cascade -->
                            <div class="mb-3">
                                <label class="form-label fw-medium" for="FilterAssignedUsers">کاربران انتصابی</label>
                                <div id="FilterUsersDiv">
                                    <select class="js-select2 form-select"
                                            id="FilterAssignedUsers"
                                            data-placeholder="ابتدا شعبه را انتخاب کنید"
                                            multiple="multiple"
                                            style="width: 100%;"
                                            disabled>
                                        <option value="">ابتدا شعبه را انتخاب کنید</option>
                                    </select>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fa fa-users me-1"></i>
                                    فیلتر بر اساس کاربران اختصاص یافته به تسک‌ها
                                </small>
                            </div>

                            <!-- طرف حساب - مرحله سوم cascade -->
                            <div class="mb-3">
                                <label class="form-label fw-medium" for="FilterStakeholderId">طرف حساب</label>
                                <div id="FilterStakeholdersDiv">
                                    <select class="js-select2 form-select"
                                            id="FilterStakeholderId"
                                            data-placeholder="ابتدا شعبه را انتخاب کنید"
                                            style="width: 100%;"
                                            disabled>
                                        <option value="">ابتدا شعبه را انتخاب کنید</option>
                                    </select>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fa fa-handshake me-1"></i>
                                    فیلتر بر اساس طرف حساب مرتبط با تسک‌ها
                                </small>
                            </div>

                            <!-- دکمه اعمال فیلتر -->
                            <div class="mb-3">
                                <button type="button" class="btn btn-primary w-100" id="applyFilters">
                                    <i class="fa fa-filter me-1"></i> اعمال فیلترها
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- END فیلترهای تقویم -->
                    <!-- Quick Actions -->
                    <div class="block block-rounded">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">عملیات سریع</h3>
                        </div>
                        <div class="block-content">
                            <div class="d-grid gap-2">
                                <a asp-area="AdminArea" asp-controller="Tasks" asp-action="CreateNewTask" class="btn btn-primary">
                                    <i class="fa fa-plus me-1"></i> تسک جدید
                                </a>
                                <a asp-area="AdminArea" asp-controller="Tasks" asp-action="Index" class="btn btn-alt-secondary">
                                    <i class="fa fa-list me-1"></i> لیست تسک‌ها
                                </a>
                                <a asp-area="AdminArea" asp-controller="Tasks" asp-action="MyTasks" class="btn btn-alt-secondary">
                                    <i class="fa fa-user me-1"></i> تسک‌های من
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- END Quick Actions -->
                    <!-- Calendar Legend -->
                    <div class="block block-rounded">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">راهنمای رنگ‌ها</h3>
                        </div>
                        <div class="block-content">
                            <div class="mb-2">
                                <span class="badge" style="background-color: #28a745; color: white;">■</span>
                                <span class="ms-2">تکمیل شده</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge" style="background-color: #dc3545; color: white;">■</span>
                                <span class="ms-2">عقب افتاده</span>
                            </div>
                            <div class="mb-2">
                                <span class="badge" style="background-color: #007bff; color: white;">■</span>
                                <span class="ms-2">در حال انجام</span>
                            </div>
                        </div>
                    </div>
                    <!-- END Calendar Legend -->
                    <!-- Task Statistics -->
                    <div class="block block-rounded">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">آمار تسک‌ها</h3>
                        </div>
                        <div class="block-content">
                            <div class="row text-center">
                                <div class="col-12 mb-2">
                                    <div class="fs-sm text-muted">کل تسک‌ها</div>
                                    <div class="fs-4 fw-bold text-primary" id="totalTasksCount">@Model.Count</div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="fs-sm text-muted">تکمیل شده</div>
                                    <div class="fs-5 fw-bold text-success" id="completedTasksCount">@Model.Count(t => t.IsCompleted)</div>
                                </div>
                                <div class="col-6 mb-2">
                                    <div class="fs-sm text-muted">عقب افتاده</div>
                                    <div class="fs-5 fw-bold text-danger" id="overdueTasksCount">@Model.Count(t => t.IsOverdue)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END Task Statistics -->
                </div>
                <!-- END Side Content -->
            </div>
        </div>

        <div class="col-xl-9 bg-body-dark">
            <div class="content">
                <div class="block block-rounded">
                    <div class="block-content block-content-full">
                        <!-- Calendar Container -->
                        <div class="p-xl-4" id="js-calendar-tasks"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Calendar Section -->
</div>
<!-- END Page Content -->
@section Scripts {
    <script>Dashmix.helpersOnLoad(['js-flatpickr', 'jq-datepicker', 'jq-maxlength', 'jq-select2', 'jq-rangeslider', 'jq-masked-inputs', 'jq-pw-strength']);</script>

    <!-- FullCalendar CSS & JS -->
    <link href="~/assets/js/plugins/fullcalendar/main.min.css" rel="stylesheet" />
    <script src="~/assets/js/plugins/fullcalendar/main.min.js"></script>

    <!-- Page JS Code (اختیاری - در صورت نیاز) -->
    <script src="~/assets/js/pages/be_comp_calendar.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('js-calendar-tasks');

            if (!calendarEl) {
                console.error('Calendar element not found');
                return;
            }

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fa',
                direction: 'rtl',
                height: 'auto',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                buttonText: {
                    today: 'امروز',
                    month: 'ماه',
                    week: 'هفته',
                    day: 'روز',
                    list: 'لیست'
                },
                events: function(info, successCallback, failureCallback) {
                    // دریافت مقادیر فیلترهای جاری
                    var currentFilters = getCurrentFilters();

                    var requestUrl = '@Url.Action("GetCalendarEvents", "Tasks", new { area = "AdminArea" })?' +
                          'start=' + info.startStr + '&end=' + info.endStr +
                          (currentFilters.branchId ? '&branchId=' + currentFilters.branchId : '') +
                          (currentFilters.assignedUserIds ? '&assignedUserIds=' + currentFilters.assignedUserIds : '') +
                          (currentFilters.stakeholderId ? '&stakeholderId=' + currentFilters.stakeholderId : '');

                    console.log('Loading calendar events with URL:', requestUrl);

                    fetch(requestUrl)
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                            console.log('Calendar events loaded:', data);
                            updateTaskStatistics(data);
                            successCallback(data);
                        })
                        .catch(error => {
                            console.error('Error loading calendar events:', error);
                            failureCallback(error);
                        });
                },
                eventClick: function(info) {
                    showTaskDetails(info.event);
                },
                eventDidMount: function(info) {
                    // افزودن tooltip
                    var tooltipText = info.event.title;
                    if (info.event.extendedProps.statusText) {
                        tooltipText += '\nوضعیت: ' + info.event.extendedProps.statusText;
                    }
                    if (info.event.extendedProps.categoryTitle) {
                        tooltipText += '\nدسته‌بندی: ' + info.event.extendedProps.categoryTitle;
                    }

                    info.el.setAttribute('title', tooltipText);
                },
                loading: function(bool) {
                    if (bool) {
                        console.log('Loading calendar events...');
                    } else {
                        console.log('Calendar events loaded successfully');
                    }
                }
            });

            calendar.render();

            // تابع دریافت فیلترهای جاری
            function getCurrentFilters() {
                return {
                    branchId: $('#FilterBranchId').val() || null,
                    assignedUserIds: $('#FilterAssignedUsers').val() ? $('#FilterAssignedUsers').val().join(',') : null,
                    stakeholderId: $('#FilterStakeholderId').val() || null
                };
            }

            // تابع بروزرسانی آمار تسک‌ها
            function updateTaskStatistics(events) {
                var totalTasks = events.length;
                var completedTasks = events.filter(e => e.extendedProps && e.extendedProps.isCompleted).length;
                var overdueTasks = events.filter(e => e.extendedProps && e.extendedProps.isOverdue).length;

                $('#totalTasksCount').text(totalTasks);
                $('#completedTasksCount').text(completedTasks);
                $('#overdueTasksCount').text(overdueTasks);
            }

            // رویداد اعمال فیلترها
            $('#applyFilters').on('click', function() {
                console.log('Applying filters and refreshing calendar...');
                calendar.refetchEvents();
            });

            // رویداد پاک کردن فیلترها
            $('#clearFilters').on('click', function() {
                console.log('Clearing all filters...');

                // پاک کردن مقادیر فیلترها
                $('#FilterBranchId').val('').trigger('change');
                $('#FilterAssignedUsers').val([]).trigger('change');
                $('#FilterStakeholderId').val('').trigger('change');

                // غیرفعال کردن فیلدهای وابسته
                $('#FilterAssignedUsers, #FilterStakeholderId').prop('disabled', true);

                // بروزرسانی تقویم
                calendar.refetchEvents();
            });

            // تابع نمایش جزئیات تسک
            function showTaskDetails(event) {
                // حذف مودال قبلی در صورت وجود
                var existingModal = document.getElementById('taskDetailModal');
                if (existingModal) {
                    existingModal.remove();
                }

                var modal = `
                    <div class="modal fade" id="taskDetailModal" tabindex="-1" role="dialog" aria-labelledby="taskDetailModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="taskDetailModalLabel">جزئیات تسک</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <strong>عنوان:</strong> <span>${event.title || 'ندارد'}</span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>کد تسک:</strong> <span>${event.extendedProps.taskCode || 'ندارد'}</span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>وضعیت:</strong>
                                            <span class="badge" style="background-color: ${event.backgroundColor || '#6c757d'}; color: white;">
                                                ${event.extendedProps.statusText || 'نامشخص'}
                                            </span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>دسته‌بندی:</strong> <span>${event.extendedProps.categoryTitle || 'ندارد'}</span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>طرف حساب:</strong> <span>${event.extendedProps.stakeholderName || 'ندارد'}</span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>شعبه:</strong> <span>${event.extendedProps.branchName || 'ندارد'}</span>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <strong>تاریخ مهلت:</strong> <span>${event.extendedProps.persianDateFull || 'ندارد'}</span>
                                        </div>
                                        ${event.extendedProps.description ?
                                            `<div class="col-12 mb-3">
                                                <strong>توضیحات:</strong> <span>${event.extendedProps.description}</span>
                                            </div>` : ''
                                        }
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    ${event.extendedProps.detailUrl ?
                                        `<a href="${event.extendedProps.detailUrl}" class="btn btn-primary">
                                            <i class="fa fa-eye me-1"></i> مشاهده جزئیات کامل
                                        </a>` : ''
                                    }
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                        <i class="fa fa-times me-1"></i> بستن
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                // افزودن مودال جدید
                document.body.insertAdjacentHTML('beforeend', modal);

                // نمایش مودال
                var modalElement = new bootstrap.Modal(document.getElementById('taskDetailModal'));
                modalElement.show();
            }

            // مدیریت فیلترهای cascade
            // رویداد تغییر شعبه - بروزرسانی کاربران و طرف حساب‌ها
            $(document).on('change', '#FilterBranchId', function() {
                var branchId = $(this).val();
                console.log('Filter branch changed:', branchId);

                if (branchId) {
                    // فعال کردن فیلدهای وابسته
                    $('#FilterAssignedUsers, #FilterStakeholderId').prop('disabled', false);

                    // پاک کردن انتخاب‌های قبلی
                    $('#FilterAssignedUsers').val([]).trigger('change');
                    $('#FilterStakeholderId').val('').trigger('change');

                    // بروزرسانی placeholder ها
                    $('#FilterAssignedUsers').attr('data-placeholder', 'کاربران را انتخاب کنید');
                    $('#FilterStakeholderId').attr('data-placeholder', 'طرف حساب را انتخاب کنید');

                    console.log('Branch selected for filter:', branchId);
                } else {
                    // غیرفعال کردن فیلدهای وابسته
                    $('#FilterAssignedUsers, #FilterStakeholderId').prop('disabled', true);

                    // پاک کردن انتخاب‌های قبلی
                    $('#FilterAssignedUsers').val([]).trigger('change');
                    $('#FilterStakeholderId').val('').trigger('change');

                    // بازنشانی placeholder ها
                    $('#FilterAssignedUsers').attr('data-placeholder', 'ابتدا شعبه را انتخاب کنید');
                    $('#FilterStakeholderId').attr('data-placeholder', 'ابتدا شعبه را انتخاب کنید');

                    console.log('Filter branch cleared');
                }
            });

            // کانفیگ سفارشی برای مدیریت Select2 های فیلتر
            if (typeof DynamicSelect2Manager !== 'undefined') {
                // تنظیمات برای کاربران فیلتر
                DynamicSelect2Manager.addSelectConfig('FilterUsersDiv', {
                    id: 'FilterAssignedUsers',
                    name: 'FilterAssignedUsers',
                    multiple: true,
                    placeholder: 'کاربران را انتخاب کنید'
                });

                // تنظیمات برای طرف حساب‌های فیلتر
                DynamicSelect2Manager.addSelectConfig('FilterStakeholdersDiv', {
                    id: 'FilterStakeholderId',
                    name: 'FilterStakeholderId',
                    multiple: false,
                    placeholder: 'طرف حساب را انتخاب کنید'
                });

                console.log('کانفیگ‌های فیلتر TaskCalendar به DynamicSelect2Manager اضافه شد');
            }

            // تابع global کردن showTaskDetails
            window.showTaskDetails = showTaskDetails;

            console.log('TaskCalendar با فیلترهای جدید آماده شد');
        });
    </script>
}