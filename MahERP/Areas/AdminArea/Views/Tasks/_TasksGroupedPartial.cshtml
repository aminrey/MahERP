    <div class="section-header bg-success-light p-3 rounded mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-success">
                <i class="fa fa-check-circle me-2"></i>
                گزارش تسک‌های انجام شده (5 روز اخیر)
            </h4>
            <span class="badge bg-success fs-5">
                @(Model.CompletedTasks?.Count ?? 0) تسک
            </span>
        </div>
    </div>

    @if (completedGrouped.Any())
    {
        @foreach (var teamGroup in completedGrouped.OrderBy(t => t.Key))
        {
            var teamId = teamGroup.Key.GetHashCode();
            var teamName = teamGroup.Key;
            var completedTeamTasks = teamGroup.Value.Sum(p => p.Value.Count);

            <div class="team-group mb-3 completed-team-group">
                <div class="team-header team-toggle bg-success-light"
                     data-bs-toggle="collapse"
                     data-bs-target="#team-completed-@teamId">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-chevron-down toggle-icon me-2 text-success"></i>
                            <i class="fa fa-users me-2 text-success"></i>
                            <h5 class="mb-0 text-success">@teamName</h5>
                        </div>
                        <span class="badge bg-success">@completedTeamTasks تسک تکمیل شده</span>
                    </div>
                </div>

                <div id="team-completed-@teamId" class="collapse">
                    @foreach (var personGroup in teamGroup.Value.OrderBy(p => p.Key))
                    {
                        var personId = personGroup.Key.GetHashCode();
                        var personName = personGroup.Key;
                        var completedPersonTasks = personGroup.Value;

                        <div class="person-group ms-3 mt-2">
                            <div class="person-header person-toggle bg-success-light"
                                 data-bs-toggle="collapse"
                                 data-bs-target="#person-completed-@teamId-@personId">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-chevron-down toggle-icon me-2 text-success"></i>
                                        <i class="fa fa-user-check me-2 text-success"></i>
                                        <strong class="text-success">@personName</strong>
                                    </div>
                                    <span class="badge bg-success">@completedPersonTasks.Count تسک</span>
                                </div>
                            </div>

                            <div id="person-completed-@teamId-@personId" class="collapse">
                                @await Html.PartialAsync("_TaskTablePartial", new
                                {
                                    Tasks = completedPersonTasks,
                                    CurrentUserId = currentUserId,
                                    PersonName = personName,
                                    IsCompleted = true
                                })
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-clipboard-check fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">تسک انجام شده‌ای در 5 روز اخیر یافت نشد</h5>
        </div>
    }
</div>

