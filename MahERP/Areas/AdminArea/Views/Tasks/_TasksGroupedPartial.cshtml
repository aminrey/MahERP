@model TaskIndexViewModel
@{
    var filterCounts = ViewBag.FilterCounts as MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels.TaskFilterCountsViewModel;
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

    // ⭐⭐⭐ گروه‌بندی مجدد Pending Tasks - اصلاح شده
    var pendingGrouped = new Dictionary<string, Dictionary<string, List<TaskViewModel>>>();
    
    if (Model.PendingTasks != null && Model.PendingTasks.Any())
    {
        var pendingFlat = Model.PendingTasks
            .Where(t => t.AssignmentsTaskUser != null)
            .SelectMany(t => t.AssignmentsTaskUser.Select(a => new 
            { 
                Task = t, 
                TeamName = a.AssignedInTeamName ?? "بدون تیم",
                PersonName = a.AssignedUserName ?? "نامشخص"
            }));

        pendingGrouped = pendingFlat
            .GroupBy(x => x.TeamName)
            .ToDictionary(
                g => g.Key,
                g => g.GroupBy(x => x.PersonName)
                      .ToDictionary(
                          pg => pg.Key, 
                          pg => pg.Select(x => x.Task).Distinct().ToList()
                      )
            );
    }

    // ⭐⭐⭐ گروه‌بندی مجدد Completed Tasks - اصلاح شده
    var completedGrouped = new Dictionary<string, Dictionary<string, List<TaskViewModel>>>();
    
    if (Model.CompletedTasks != null && Model.CompletedTasks.Any())
    {
        var completedFlat = Model.CompletedTasks
            .Where(t => t.AssignmentsTaskUser != null)
            .SelectMany(t => t.AssignmentsTaskUser.Select(a => new 
            { 
                Task = t, 
                TeamName = a.AssignedInTeamName ?? "بدون تیم",
                PersonName = a.AssignedUserName ?? "نامشخص"
            }));

        completedGrouped = completedFlat
            .GroupBy(x => x.TeamName)
            .ToDictionary(
                g => g.Key,
                g => g.GroupBy(x => x.PersonName)
                      .ToDictionary(
                          pg => pg.Key, 
                          pg => pg.Select(x => x.Task).Distinct().ToList()
                      )
            );
    }
}
@* ⭐⭐⭐ بخش اول: تسک‌های در حال انجام *@
<div class="pending-tasks-section mb-5">
    <div class="section-header bg-body-light p-3 rounded mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fa fa-tasks text-primary me-2"></i>
                تسک‌های در حال انجام
            </h4>
            <span class="badge bg-primary fs-5">
                @(Model.PendingTasks?.Count ?? 0) تسک
            </span>
        </div>
    </div>

    @if (pendingGrouped.Any())
    {
        @foreach (var teamGroup in pendingGrouped.OrderBy(t => t.Key))
        {
            var teamId = teamGroup.Key.GetHashCode();
            var teamName = teamGroup.Key;
            var pendingTeamTasks = teamGroup.Value.Sum(p => p.Value.Count);

            <div class="team-group mb-3">
                <div class="team-header team-toggle"
                     data-bs-toggle="collapse"
                     data-bs-target="#team-pending-@teamId">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-chevron-down toggle-icon me-2"></i>
                            <i class="fa fa-users me-2"></i>
                            <h5 class="mb-0">@teamName</h5>
                        </div>
                        <span class="badge bg-light text-dark">@pendingTeamTasks تسک</span>
                    </div>
                </div>

                <div id="team-pending-@teamId" class="collapse show">
                    @foreach (var personGroup in teamGroup.Value.OrderBy(p => p.Key))
                    {
                        var personId = personGroup.Key.GetHashCode();
                        var personName = personGroup.Key;
                        var pendingPersonTasks = personGroup.Value;

                        <div class="person-group ms-3 mt-2">
                            <div class="person-header person-toggle"
                                 data-bs-toggle="collapse"
                                 data-bs-target="#person-pending-@teamId-@personId">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-chevron-down toggle-icon me-2"></i>
                                        <i class="fa fa-user me-2 text-primary"></i>
                                        <strong>@personName</strong>
                                    </div>
                                    <span class="badge bg-secondary">@pendingPersonTasks.Count تسک</span>
                                </div>
                            </div>

                            <div id="person-pending-@teamId-@personId" class="collapse show">
                                @await Html.PartialAsync("_TaskTablePartial", new
                                {
                                    Tasks = pendingPersonTasks,
                                    CurrentUserId = currentUserId,
                                    PersonName = personName,
                                    IsCompleted = false
                                })
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">تسک انجام نشده‌ای یافت نشد</h5>
        </div>
    }
</div>

@* ⭐⭐⭐ بخش دوم: تسک‌های انجام شده (5 روز اخیر) *@
