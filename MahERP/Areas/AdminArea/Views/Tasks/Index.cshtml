@model TaskIndexViewModel
@{
    ViewData["Title"] = "مدیریت تسک‌ها";
}

<!-- صفحه اصلی مدیریت تسک‌ها با فیلترهای آماده -->
<div class="content">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-md-center py-2">
        <div class="flex-grow-1 mb-1 mb-md-0">
            <h1 class="h3 fw-bold mb-1">
                مدیریت تسک‌ها
            </h1>
            <p class="text-muted mb-0">
                نمایش و مدیریت تسک‌های سازمان
            </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="mt-3 mt-md-0">
            <div class="btn-group" role="group">
                <a asp-action="CreateNewTask" class="btn btn-success">
                    <i class="fa fa-plus me-1"></i> تسک جدید
                </a>
                <a asp-action="TaskCalendar" class="btn btn-outline-primary">
                    <i class="fa fa-calendar me-1"></i> تقویم
                </a>
                <button type="button" class="btn btn-outline-secondary" 
                        data-bs-toggle="modal" data-bs-target="#advancedFiltersModal">
                    <i class="fa fa-filter me-1"></i> فیلترهای پیشرفته
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Quick Filter Buttons -->
<div class="content">
    <div class="block block-rounded">
        <div class="block-content p-0">
            <div class="btn-group w-100 quick-filters" role="group">
                <!-- همه تسک‌ها -->
                <a href="@Url.Action("Index", new { filterType = QuickFilterType.AllVisible })" 
                   class="btn btn-filter @(Model.CurrentFilter == QuickFilterType.AllVisible ? "active" : "")"
                   data-filter="@((int)QuickFilterType.AllVisible)">
                    <div class="filter-content">
                        <i class="fa fa-list text-primary"></i>
                        <span class="filter-title">همه تسک‌ها</span>
                        <span class="badge bg-primary">@Model.FilterCounts.AllVisibleCount</span>
                    </div>
                </a>

                <!-- تسک‌های من -->
                <a href="@Url.Action("Index", new { filterType = QuickFilterType.MyAssigned })" 
                   class="btn btn-filter @(Model.CurrentFilter == QuickFilterType.MyAssigned ? "active" : "")"
                   data-filter="@((int)QuickFilterType.MyAssigned)">
                    <div class="filter-content">
                        <i class="fa fa-inbox text-success"></i>
                        <span class="filter-title">تسک‌های من</span>
                        <span class="badge bg-success">@Model.FilterCounts.MyAssignedCount</span>
                    </div>
                </a>

                <!-- واگذار شده به دیگران -->
                <a href="@Url.Action("Index", new { filterType = QuickFilterType.AssignedByMe })" 
                   class="btn btn-filter @(Model.CurrentFilter == QuickFilterType.AssignedByMe ? "active" : "")"
                   data-filter="@((int)QuickFilterType.AssignedByMe)">
                    <div class="filter-content">
                        <i class="fa fa-share text-info"></i>
                        <span class="filter-title">واگذار شده</span>
                        <span class="badge bg-info">@Model.FilterCounts.AssignedByMeCount</span>
                    </div>
                </a>

                <!-- تسک‌های تیم -->
                <a href="@Url.Action("Index", new { filterType = QuickFilterType.MyTeams })" 
                   class="btn btn-filter @(Model.CurrentFilter == QuickFilterType.MyTeams ? "active" : "")"
                   data-filter="@((int)QuickFilterType.MyTeams)">
                    <div class="filter-content">
                        <i class="fa fa-users text-warning"></i>
                        <span class="filter-title">تسک‌های تیم</span>
                        <span class="badge bg-warning">@Model.FilterCounts.MyTeamsCount</span>
                    </div>
                </a>

                <!-- تسک‌های نظارتی -->
                <a href="@Url.Action("Index", new { filterType = QuickFilterType.Supervised })" 
                   class="btn btn-filter @(Model.CurrentFilter == QuickFilterType.Supervised ? "active" : "")"
                   data-filter="@((int)QuickFilterType.Supervised)">
                    <div class="filter-content">
                        <i class="fa fa-eye text-danger"></i>
                        <span class="filter-title">نظارتی</span>
                        <span class="badge bg-danger">@Model.FilterCounts.SupervisedCount</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Tasks Content -->
<div class="content">
    <div class="block block-rounded">
        <div class="block-header block-header-default" id="tasks-header">
            <h3 class="block-title">
                <i class="fa fa-tasks me-1"></i>
                <span id="filter-name">@Model.FilterResult.FilterName</span>
                <small class="text-muted ms-2">(<span id="total-count">@Model.FilterResult.TotalCount</span> تسک)</small>
            </h3>
            <div class="block-options">
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="expandAllGroups()">
                    <i class="fa fa-expand me-1"></i> باز کردن همه
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="collapseAllGroups()">
                    <i class="fa fa-compress me-1"></i> بستن همه
                </button>
            </div>
        </div>
        
        <div class="block-content" id="tasks-container">
            @if (Model.FilterResult.TotalCount > 0)
            {
                <partial name="_TasksGroupedPartial" model="@Model.FilterResult" />
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">تسکی یافت نشد</h5>
                    <p class="text-muted">در این بخش هیچ تسکی وجود ندارد</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            initializeTaskFilters();
        });

        function initializeTaskFilters() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // AJAX filter change
            $('.btn-filter').on('click', function(e) {
                e.preventDefault();
                var filterType = $(this).data('filter');
                loadFilteredTasks(filterType);
            });
        }

        function loadFilteredTasks(filterType) {
            $('#tasks-container').html('<div class="text-center py-5"><div class="spinner-border text-primary"></div></div>');

            $.ajax({
                url: '@Url.Action("GetFilteredTasks")',
                type: 'GET',
                data: { filterType: filterType },
                success: function(response) {
                    // ⭐⭐⭐ بررسی نوع response
                    if (typeof response === 'object' && response.html && response.filterName && response.totalCount !== undefined) {
                        // اگر JSON برگشت
                        $('#tasks-container').html(response.html);
                        $('#filter-name').text(response.filterName);
                        $('#total-count').text(response.totalCount);

                        // بروزرسانی badge های فیلترها
                        if (response.filterCounts) {
                            $('[data-count-type="all"]').text(response.filterCounts.allVisibleCount);
                            $('[data-count-type="myAssigned"]').text(response.filterCounts.myAssignedCount);
                            $('[data-count-type="assignedByMe"]').text(response.filterCounts.assignedByMeCount);
                            $('[data-count-type="myTeams"]').text(response.filterCounts.myTeamsCount);
                            $('[data-count-type="supervised"]').text(response.filterCounts.supervisedCount);
                        }
                    } else {
                        // اگر HTML ساده برگشت
                        $('#tasks-container').html(response);
                    }

                    // Update active button
                    $('.btn-filter').removeClass('active');
                    $(`.btn-filter[data-filter="${filterType}"]`).addClass('active');
                },
                error: function() {
                    $('#tasks-container').html('<div class="alert alert-danger">خطا در بارگذاری تسک‌ها</div>');
                }
            });
        }

        function expandAllGroups() {
            $('.collapse').collapse('show');
            $('.team-toggle, .person-toggle').removeClass('collapsed');
        }

        function collapseAllGroups() {
            $('.collapse').collapse('hide');
            $('.team-toggle, .person-toggle').addClass('collapsed');
        }

        function toggleTeam(teamId) {
            $(`#team-${teamId}`).collapse('toggle');
        }

        function togglePerson(teamId, personId) {
            $(`#person-${teamId}-${personId}`).collapse('toggle');
        }
    </script>
}
@section Styles {
    <style>
        /* Quick Filter Buttons */
        .quick-filters {
            display: flex;
            overflow-x: auto;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
        }

        .btn-filter {
            flex: 1;
            min-width: 150px;
            padding: 1rem 0.5rem;
            border: none;
            border-bottom: 3px solid transparent;
            background: white;
            transition: all 0.3s ease;
            text-decoration: none;
            color: #333;
        }

        .btn-filter:hover {
            background: #f8f9fa;
            border-bottom-color: #dee2e6;
        }

        .btn-filter.active {
            background: #f8f9fa;
            font-weight: 600;
        }

        .btn-filter.active[data-filter="0"] {
            border-bottom-color: #0d6efd;
        }

        .btn-filter.active[data-filter="1"] {
            border-bottom-color: #198754;
        }

        .btn-filter.active[data-filter="2"] {
            border-bottom-color: #0dcaf0;
        }

        .btn-filter.active[data-filter="3"] {
            border-bottom-color: #ffc107;
        }

        .btn-filter.active[data-filter="4"] {
            border-bottom-color: #dc3545;
        }

        .filter-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .filter-content i {
            font-size: 1.5rem;
        }

        .filter-title {
            font-size: 0.9rem;
        }

        .filter-content .badge {
            font-size: 0.9rem;
            padding: 0.35rem 0.65rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .btn-filter {
                min-width: 120px;
                padding: 0.75rem 0.25rem;
            }

            .filter-content i {
                font-size: 1.25rem;
            }

            .filter-title {
                font-size: 0.8rem;
            }
        }

        /* Group Styles */
        .team-group {
            border-right: 3px solid #0d6efd;
            margin-bottom: 1.5rem;
            background: #f8f9fa;
        }

        .team-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .team-header:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }

        .person-group {
            border-right: 2px solid #6c757d;
            margin-bottom: 1rem;
            background: white;
        }

        .person-header {
            background: #e9ecef;
            padding: 0.75rem 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .person-header:hover {
            background: #dee2e6;
        }

        .toggle-icon {
            transition: transform 0.3s ease;
        }

        .collapsed .toggle-icon {
            transform: rotate(-90deg);
        }
    </style>
}