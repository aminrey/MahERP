                            toastr.error(result.message || 'خطا در تغییر وضعیت ستاره');
                        } else {
                            alert('خطا: ' + (result.message || 'خطا در تغییر وضعیت ستاره'));
                        }
                    }
                },
                error: function () {
                    if (typeof toastr !== 'undefined') {
                        toastr.error('خطا در ارتباط با سرور');
                    } else {
                        alert('خطا در ارتباط با سرور');
                    }
                }
            });
        }

        // تابع فیلتر عملیات
        function filterOperations(filterType) {
            const operations = $('.operation-item');
            
            operations.show();
            
            switch(filterType) {
                case 'starred':
                    operations.filter('[data-starred="false"]').hide();
                    break;
                case 'completed':
                    operations.filter('[data-completed="false"]').hide();
                    break;
                case 'pending':
                    operations.filter('[data-completed="true"]').hide();
                    break;
                case 'all':
                default:
                    // همه نمایش داده می‌شوند
                    break;
            }
            
            // بروزرسانی متن فیلتر
            updateFilterButtonText(filterType);
        }

        // بروزرسانی متن دکمه فیلتر
        function updateFilterButtonText(filterType) {
            const filterButton = $('.btn:contains("فیلتر")');
            const filterTexts = {
                'all': 'همه عملیات',
                'starred': 'ستاره‌دار',
                'completed': 'تکمیل شده',
                'pending': 'در انتظار'
            };
            
            if (filterTexts[filterType]) {
                filterButton.html('<i class="fa fa-filter me-1"></i> ' + filterTexts[filterType]);
            }
        }

        // سایر توابع موجود
        function approveBySupervisor(taskId) {
            $.ajax({
                url: '@Url.Action("ApproveTaskBySupervisor")',
                type: 'POST',
                data: { 
                    id: taskId,
                    __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {
                    if (result.success) {
