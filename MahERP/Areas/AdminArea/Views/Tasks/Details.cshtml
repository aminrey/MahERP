                                            <div class="fs-sm text-muted">@assignment.Description</div>
                                        }
                                        <div class="fs-sm text-muted">
                                            <i class="fa fa-calendar-check"></i> تاریخ تخصیص: @(ConvertDateTime.ConvertMiladiToShamsi(assignment.AssignDate, "yyyy/MM/dd"))
