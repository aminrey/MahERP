                    <h5>تاریخچه فعالیت</h5>
                    <ul class="timeline timeline-alt">
                        <li class="timeline-event">
                            <div class="timeline-event-icon bg-primary">
                                <i class="fa fa-plus"></i>
                            </div>
                            <div class="timeline-event-block block block-rounded">
                                <div class="block-header block-header-default">
                                    <h3 class="block-title">ایجاد تسک</h3>
                                    <div class="block-options">
                                        <div class="timeline-event-time block-options-item fs-sm">
                                            @(ConvertDateTime.ConvertMiladiToShamsi(Model.CreateDate, "yyyy/MM/dd"))
                                        </div>
                                    </div>
                                </div>
                                <div class="block-content">
                                    <p class="fw-semibold mb-2">
                                        تسک توسط @Model.CreatorName ایجاد شد.
                                    </p>
                                </div>
                            </div>
                        </li>
                        @if (Model.CompletionDate.HasValue)
                        {
                            <li class="timeline-event">
                                <div class="timeline-event-icon bg-success">
                                    <i class="fa fa-check"></i>
                                </div>
                                <div class="timeline-event-block block block-rounded">
                                    <div class="block-header block-header-default">
                                        <h3 class="block-title">تکمیل تسک</h3>
                                        <div class="block-options">
                                            <div class="timeline-event-time block-options-item fs-sm">
                                                @(ConvertDateTime.ConvertMiladiToShamsi(Model.CompletionDate, "yyyy/MM/dd"))
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-content">
                                        <p class="fw-semibold mb-2">
                                            تسک تکمیل شد.
                                        </p>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (Model.SupervisorApprovedDate.HasValue)
                        {
                            <li class="timeline-event">
                                <div class="timeline-event-icon bg-info">
                                    <i class="fa fa-check-double"></i>
                                </div>
                                <div class="timeline-event-block block block-rounded">
                                    <div class="block-header block-header-default">
                                        <h3 class="block-title">تایید سرپرست</h3>
                                        <div class="block-options">
                                            <div class="timeline-event-time block-options-item fs-sm">
                                                @(ConvertDateTime.ConvertMiladiToShamsi(Model.SupervisorApprovedDate, "yyyy/MM/dd"))
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-content">
                                        <p class="fw-semibold mb-2">
                                            تسک توسط سرپرست تایید شد.
                                        </p>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (Model.ManagerApprovedDate.HasValue)
                        {
                            <li class="timeline-event">
                                <div class="timeline-event-icon bg-modern">
                                    <i class="fa fa-award"></i>
                                </div>
                                <div class="timeline-event-block block block-rounded">
                                    <div class="block-header block-header-default">
                                        <h3 class="block-title">تایید مدیر</h3>
                                        <div class="block-options">
                                            <div class="timeline-event-time block-options-item fs-sm">
                                                @(ConvertDateTime.ConvertMiladiToShamsi(Model.ManagerApprovedDate, "yyyy/MM/dd"))
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-content">
                                        <p class="fw-semibold mb-2">
                                            تسک توسط مدیر تایید شد.
                                        </p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <!-- END Task Info -->
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // تابع تغییر وضعیت تکمیل عملیات
        function toggleOperationCompletion(operationId) {
            $.ajax({
                url: '@Url.Action("ToggleOperationCompletion")',
                type: 'POST',
                data: { 
                    id: operationId,
                    __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {
                    if (result.success) {
                        // نمایش پیام موفقیت
                        if (typeof toastr !== 'undefined') {
                            toastr.success(result.message || 'وضعیت عملیات با موفقیت تغییر کرد');
                        }
                        // بروزرسانی صفحه
                        location.reload();
                    } else {
                        if (typeof toastr !== 'undefined') {
                            toastr.error(result.message || 'خطا در تغییر وضعیت عملیات');
                        } else {
                            alert('خطا: ' + (result.message || 'خطا در تغییر وضعیت عملیات'));
                        }
                    }
                },
                error: function () {
                    if (typeof toastr !== 'undefined') {
                        toastr.error('خطا در ارتباط با سرور');
                    } else {
                        alert('خطا در ارتباط با سرور');
                    }
                }
            });
        }

        // تابع تغییر وضعیت ستاره عملیات
        function toggleOperationStar(operationId) {
            $.ajax({
                url: '@Url.Action("ToggleOperationStar")',
                type: 'POST',
                data: { 
                    id: operationId,
                    __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
                },
                success: function (result) {
                    if (result.success) {
