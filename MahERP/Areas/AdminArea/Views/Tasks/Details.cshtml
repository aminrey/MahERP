                                    </div>
                                    <!-- اصلاح شده: حذف onclick و اضافه کردن data-toggle="modal-ajax" -->
                                    <button type="button" class="btn btn-sm btn-alt-danger" data-toggle="modal-ajax" href="@Url.Action("RemoveAssignment", new { id = assignment.Id })" data-bs-toggle="tooltip" title="حذف تخصیص">
