@model TaskViewModel
@{
    ViewData["Title"] = "جزئیات تسک";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isAssignedToCurrentUser = Model.UsersInitial?.Any(a => a.Id == currentUserId) ?? false;
    var isManager = User.IsInRole("Admin") || User.IsInRole("Manager");
    var isSupervisor = User.IsInRole("Supervisor") || isManager;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">جزئیات تسک</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">تسک‌ها</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">جزئیات</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions - بروزرسانی شده -->
    <div class="row push">
        <div class="col-sm-6 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="Edit" asp-route-id="@Model.Id">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-primary mb-1">
                        <i class="fa fa-pencil-alt"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                        ویرایش تسک
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("CompleteTask", new { id = Model.Id })" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-@(Model.CompletionDate.HasValue ? "warning" : "success") mb-1">
                        <i class="fa fa-@(Model.CompletionDate.HasValue ? "redo" : "check")"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-@(Model.CompletionDate.HasValue ? "warning" : "success") text-uppercase mb-0">
                        @(Model.CompletionDate.HasValue ? "بازگشایی" : "تکمیل")
                    </p>
                </div>
            </a>
        </div>
        
        <!-- دکمه جدید: افزودن به روز من -->
        @if (isAssignedToCurrentUser)
        {
            <div class="col-sm-6 col-xl-2">
                <a class="block block-rounded block-link-shadow text-center h-100 mb-0" 
                   href="@Url.Action("AddToMyDayModal", new { taskId = Model.Id })" 
                   data-toggle="modal-ajax">
                    <div class="block-content py-5">
                        <div class="fs-3 fw-semibold text-info mb-1">
                            <i class="fa fa-calendar-plus"></i>
                        </div>
                        <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                            افزودن به روز من
                        </p>
                    </div>
                </a>
            </div>
        }

        <!-- دکمه جدید: ثبت کار انجام شده -->
        @if (isAssignedToCurrentUser)
        {
            <div class="col-sm-6 col-xl-2">
                <a class="block block-rounded block-link-shadow text-center h-100 mb-0" 
                   href="@Url.Action("LogWorkModal", new { taskId = Model.Id })" 
                   data-toggle="modal-ajax">
                    <div class="block-content py-5">
                        <div class="fs-3 fw-semibold text-success mb-1">
                            <i class="fa fa-clock"></i>
                        </div>
                        <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                            ثبت کار انجام شده
                        </p>
                    </div>
                </a>
            </div>
        }

        <div class="col-sm-6 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddOperation", new { taskId = Model.Id })" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-warning mb-1">
                        <i class="fa fa-plus-circle"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-warning text-uppercase mb-0">
                        افزودن عملیات
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AssignTask", new { taskId = Model.Id })" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-dark mb-1">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-dark text-uppercase mb-0">
                        اختصاص کاربر
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->

    <div class="row">
        <div class="col-md-8">
            <!-- Task Details -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-tasks text-muted me-1"></i> جزئیات تسک
                    </h3>
                    <div class="block-options">
                        <div class="dropdown">
                            <button type="button" class="btn btn-alt-secondary" id="dropdown-default-alt-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-fw fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-default-alt-secondary">
                                <!-- اصلاح شده: حذف onclick و اضافه کردن data-toggle="modal-ajax" -->
                                <a class="dropdown-item" href="@Url.Action("ToggleActiveStatus", new { id = Model.Id })" data-toggle="modal-ajax">
                                    <i class="fa fa-fw @(Model.IsActive ? "fa-ban text-warning" : "fa-check text-success") me-1"></i> @(Model.IsActive ? "غیرفعال‌سازی" : "فعال‌سازی")
                                </a>
                                <div class="dropdown-divider"></div>
                                <!-- اصلاح شده: حذف onclick و اضافه کردن data-toggle="modal-ajax" -->
                                <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = Model.Id })" data-toggle="modal-ajax">
                                    <i class="fa fa-fw fa-trash-alt me-1"></i> حذف
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="block-content">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="mb-1">@Model.Title</h2>
                            <div class="fs-sm text-muted">
                                <span class="badge bg-primary">@Model.TaskCode</span> |
                                <span>ایجاد: @ConvertDateTime.ConvertMiladiToShamsi(Model.CreateDate, "yyyy/MM/dd")</span>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="mb-2">
                                @if (Model.IsDeleted)
                                {
                                    <span class="badge bg-danger p-2">حذف شده</span>
                                }
                                else if (!Model.IsActive)
                                {
                                    <span class="badge bg-warning p-2">غیرفعال</span>
                                }
                                else if (Model.CompletionDate.HasValue && Model.ManagerApprovedDate.HasValue)
                                {
                                    <span class="badge bg-success p-2">تکمیل و تایید شده</span>
                                }
                                else if (Model.CompletionDate.HasValue && Model.SupervisorApprovedDate.HasValue)
                                {
                                    <span class="badge bg-info p-2">تایید سرپرست</span>
                                }
                                else if (Model.CompletionDate.HasValue)
                                {
                                    <span class="badge bg-primary p-2">تکمیل شده</span>
                                }
                                else if (Model.DueDate.HasValue && DateTime.Now > Model.DueDate.Value)
                                {
                                    <span class="badge bg-danger p-2">تاخیر</span>
                                }
                                else
                                {
                                    <span class="badge bg-info p-2">در حال انجام</span>
                                }
                            </div>
                            @if (Model.DueDate.HasValue)
                            {
                                <div class="fs-sm">
                                    <span class="fw-bold">مهلت انجام:</span>
                                    <span class="@(Model.DueDate.Value < DateTime.Now && !Model.CompletionDate.HasValue ? "text-danger" : "")">
                                        @ConvertDateTime.ConvertMiladiToShamsi(Model.DueDate.Value, "yyyy/MM/dd")
                                    </span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h4>توضیحات</h4>
                            <div class="p-2 bg-body-light rounded">
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="text-muted">توضیحاتی ثبت نشده است.</p>
                                }
                                else
                                {
                                    <p>@Html.Raw(Model.Description.Replace("\n", "<br/>"))</p>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Task Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>اطلاعات تسک</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">دسته‌بندی</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.CategoryTitle) ? "بدون دسته‌بندی" : Model.CategoryTitle)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">طرف حساب</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.StakeholderName) ? "ندارد" : Model.StakeholderName)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">ایجاد کننده</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.CreatorName) ? "نامشخص" : Model.CreatorName)</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">نوع تسک</th>
                                        <td class="text-center">
                                            @switch (Model.TaskType)
                                            {
                                                case 0:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">عادی</span>
                                                    break;
                                                case 1:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-warning-light text-warning">مهم</span>
                                                    break;
                                                case 2:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">اضطراری</span>
                                                    break;
                                                default:
                                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">عادی</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h4>وضعیت تکمیل</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">تکمیل شده</th>
                                        <td class="text-center">
                                            @if (Model.CompletionDate.HasValue)
                                            {
                                                <span class="text-success">بله - @ConvertDateTime.ConvertMiladiToShamsi(Model.CompletionDate.Value, "yyyy/MM/dd")</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">خیر</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">تایید سرپرست</th>
                                        <td class="text-center">
                                            @if (Model.SupervisorApprovedDate.HasValue)
                                            {
                                                <span class="text-success">بله - @ConvertDateTime.ConvertMiladiToShamsi(Model.SupervisorApprovedDate.Value, "yyyy/MM/dd")</span>
                                            }
                                            else if (Model.CompletionDate.HasValue && isSupervisor)
                                            {
                                                <button type="button" class="btn btn-sm btn-alt-success" onclick="approveBySupervisor(@Model.Id)">
                                                    <i class="fa fa-check opacity-50 me-1"></i> تایید
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-danger">خیر</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">تایید مدیر</th>
                                        <td class="text-center">
                                            @if (Model.ManagerApprovedDate.HasValue)
                                            {
                                                <span class="text-success">بله - @ConvertDateTime.ConvertMiladiToShamsi(Model.ManagerApprovedDate.Value, "yyyy/MM/dd")</span>
                                            }
                                            else if (Model.SupervisorApprovedDate.HasValue && isManager)
                                            {
                                                <button type="button" class="btn btn-sm btn-alt-success" onclick="approveByManager(@Model.Id)">
                                                    <i class="fa fa-check opacity-50 me-1"></i> تایید
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-danger">خیر</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">درصد پیشرفت</th>
                                        <td class="text-center">
                                            <div class="progress push mb-0">
                                                <div class="progress-bar progress-bar-striped @(Model.ProgressPercentage == 100 ? "bg-success" : "bg-primary")" role="progressbar"
                                                     style="width: @Model.ProgressPercentage%" aria-valuenow="@Model.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                                    <span class="fs-sm fw-semibold">@Model.ProgressPercentage%</span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END Task Details -->
                    <!-- Task Operations -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-cogs text-muted me-1"></i> عملیات‌های تسک
                    </h3>
                    <div class="block-options">
                        @if (isAssignedToCurrentUser)
                        {
                            <button type="button" class="btn btn-sm btn-alt-primary me-2" data-toggle="modal-ajax" href="@Url.Action("AddOperation", new { taskId = Model.Id })">
                                <i class="fa fa-plus opacity-50 me-1"></i> افزودن عملیات
                            </button>
                        }
                        <div class="dropdown">
                            <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-toggle="dropdown">
                                <i class="fa fa-filter me-1"></i> فیلتر
                            </button>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="#" onclick="filterOperations('all')">
                                    <i class="fa fa-list me-1"></i> همه عملیات
                                </a>
                                <a class="dropdown-item" href="#" onclick="filterOperations('starred')">
                                    <i class="fa fa-star text-warning me-1"></i> ستاره‌دار
                                </a>
                                <a class="dropdown-item" href="#" onclick="filterOperations('completed')">
                                    <i class="fa fa-check text-success me-1"></i> تکمیل شده
                                </a>
                                <a class="dropdown-item" href="#" onclick="filterOperations('pending')">
                                    <i class="fa fa-clock text-warning me-1"></i> در انتظار
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full">
                    @if (Model.Operations == null || !Model.Operations.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ عملیاتی برای این تسک تعریف نشده است.
                        </div>
                    }
                    else
                    {
                        <!-- آمار سریع عملیات -->
                        <div class="row mb-4">
                            <div class="col-6 col-md-3">
                                <div class="bg-primary-light p-3 rounded text-center">
                                    <div class="fs-3 fw-bold text-primary">@Model.Operations.Count()</div>
                                    <div class="fs-sm text-muted">کل عملیات</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="bg-success-light p-3 rounded text-center">
                                    <div class="fs-3 fw-bold text-success">@Model.Operations.Count(o => o.IsCompleted)</div>
                                    <div class="fs-sm text-muted">تکمیل شده</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="bg-warning-light p-3 rounded text-center">
                                    <div class="fs-3 fw-bold text-warning">@Model.Operations.Count(o => o.IsStarred)</div>
                                    <div class="fs-sm text-muted">ستاره‌دار</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="bg-info-light p-3 rounded text-center">
                                    <div class="fs-3 fw-bold text-info">@Model.Operations.Count(o => !string.IsNullOrEmpty(o.CompletionNote))</div>
                                    <div class="fs-sm text-muted">با گزارش</div>
                                </div>
                            </div>
                        </div>

                        <!-- لیست عملیات با کارت‌ها -->
                        <div class="row" id="operationsList">
                            @{
                                // مرتب‌سازی: ابتدا ستاره‌دار، سپس بر اساس ترتیب
                                var sortedOperations = Model.Operations
                                    .OrderByDescending(o => o.IsStarred)
                                    .ThenBy(o => o.OperationOrder)
                                    .ToList();
                            }
                            
                            @foreach (var operation in sortedOperations)
                            {
                                <div class="col-12 mb-3 operation-item" 
                                     data-starred="@operation.IsStarred.ToString().ToLower()" 
                                     data-completed="@operation.IsCompleted.ToString().ToLower()">
                                    <div class="card @(operation.IsStarred ? "border-warning" : "") @(operation.IsCompleted ? "bg-light" : "")">
                                        
                                        <!-- Header کارت -->
                                        <div class="card-header py-2 @(operation.IsStarred ? "bg-warning-light" : "bg-body-light")">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <!-- شماره ترتیب -->
                                                    <span class="badge @(operation.IsCompleted ? "bg-success" : "bg-secondary") me-2">
                                                        @operation.OperationOrder
                                                    </span>
                                                    
                                                    <!-- ستاره -->
                                                    @if (operation.IsStarred)
                                                    {
                                                        <i class="fa fa-star text-warning me-2" title="ستاره‌دار"></i>
                                                    }
                                                    
                                                    <!-- عنوان -->
                                                    <h6 class="mb-0 @(operation.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                                        @operation.Title
                                                    </h6>
                                                </div>
                                                
                                                <!-- وضعیت -->
                                                <div>
                                                    @if (operation.IsCompleted)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fa fa-check me-1"></i>تکمیل شده
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="fa fa-clock me-1"></i>در انتظار
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- محتوای کارت -->
                                        <div class="card-body py-3">
                                            <!-- توضیحات عملیات -->
                                            @if (!string.IsNullOrEmpty(operation.Description))
                                            {
                                                <p class="text-muted mb-2 @(operation.IsCompleted ? "text-decoration-line-through" : "")">
                                                    @operation.Description
                                                </p>
                                            }
                                            
                                            <!-- اطلاعات تکمیل -->
                                            @if (operation.IsCompleted && operation.CompletionDate.HasValue)
                                            {
                                                <div class="alert alert-success mb-2 py-2">
                                                    <div class="row align-items-center">
                                                        <div class="col-md-6">
                                                            <small>
                                                                <i class="fa fa-calendar-check me-1"></i>
                                                                تکمیل شده در: @ConvertDateTime.ConvertMiladiToShamsi(operation.CompletionDate.Value, "yyyy/MM/dd HH:mm")
                                                            </small>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(operation.CompletedByUserId))
                                                        {
                                                            <div class="col-md-6">
                                                                <small>
                                                                    <i class="fa fa-user me-1"></i>
                                                                    توسط: @(operation.CompletedByUserName)
                                                                </small>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            
                                            <!-- گزارش تکمیل -->
                                            @if (!string.IsNullOrEmpty(operation.CompletionNote))
                                            {
                                                <div class="alert alert-info mb-2 py-2">
                                                    <small class="fw-bold">گزارش:</small>
                                                    <div class="mt-1">@operation.CompletionNote</div>
                                                </div>
                                            }
                                            
                                            <!-- دکمه‌های عملیات -->
                                            @if (isAssignedToCurrentUser)
                                            {
                                                <div class="d-flex gap-1 flex-wrap">
                                                    
                                                    <!-- دکمه ستاره -->
                                                    <button type="button" 
                                                            class="btn btn-sm @(operation.IsStarred ? "btn-warning" : "btn-outline-warning")" 
                                                            onclick="toggleOperationStar(@operation.Id)"
                                                            data-bs-toggle="tooltip" 
                                                            title="@(operation.IsStarred ? "حذف ستاره" : "ستاره‌دار کردن")">
                                                        <i class="fa @(operation.IsStarred ? "fa-star" : "fa-star-o")"></i>
                                                    </button>
                                                    
                                                    <!-- دکمه تکمیل/بازگشت -->
                                                    <button type="button" 
                                                            class="btn btn-sm @(operation.IsCompleted ? "btn-outline-secondary" : "btn-success")" 
                                                            onclick="toggleOperationCompletion(@operation.Id)"
                                                            data-bs-toggle="tooltip" 
                                                            title="@(operation.IsCompleted ? "بازگشت به حالت انتظار" : "تکمیل عملیات")">
                                                        <i class="fa @(operation.IsCompleted ? "fa-undo" : "fa-check")"></i>
                                                        @(operation.IsCompleted ? "بازگشت" : "تکمیل")
                                                    </button>
                                                    
                                                    <!-- دکمه گزارش -->
                                                    <button type="button" 
                                                            class="btn btn-sm @(string.IsNullOrEmpty(operation.CompletionNote) ? "btn-outline-info" : "btn-info")" 
                                                            data-toggle="modal-ajax" 
                                                            href="@Url.Action("AddOperationNote", new { operationId = operation.Id })"
                                                            data-bs-toggle="tooltip" 
                                                            title="@(string.IsNullOrEmpty(operation.CompletionNote) ? "افزودن گزارش" : "ویرایش گزارش")">
                                                        <i class="fa @(string.IsNullOrEmpty(operation.CompletionNote) ? "fa-comment-slash text-danger" : "fa-comment")"></i>
                                                        گزارش
                                                    </button>
                                                    

                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <!-- END Task Operations -->
        </div>
        <div class="col-md-4">
            <!-- Task Assignments -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-users text-muted me-1"></i> کاربران اختصاص داده شده
                    </h3>
                    <div class="block-options">
                        <!-- اصلاح شده: حذف onclick و اضافه کردن data-toggle="modal-ajax" -->
                        <button type="button" class="btn btn-sm btn-alt-primary" data-toggle="modal-ajax" href="@Url.Action("AssignTask", new { taskId = Model.Id })">
                            <i class="fa fa-user-plus opacity-50 me-1"></i> اختصاص
                        </button>
                    </div>
                </div>
                <div class="block-content">
