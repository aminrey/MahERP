    $('#reminders-list-container').load('@Url.Action("GetTaskReminders", "Tasks", new { taskId = Model.Id })', function() {
        // ⭐ بعد از بارگذاری، دکمه‌ها را غیرفعال کن
        if (isTaskCompleted) {
            console.log('🔒 Disabling reminder actions after load');
            disableReminders();
        }
    });
}

// ⭐⭐⭐ تابع جدید: غیرفعال کردن یادآوری‌ها
function disableReminders() {
    setTimeout(function() {
        // غیرفعال کردن دکمه حذف یادآوری
        $('.delete-reminder-btn, [data-reminder-delete]').prop('disabled', true)
            .addClass('disabled')
            .css('cursor', 'not-allowed')
            .attr('onclick', 'return false;');
        
        // غیرفعال کردن دکمه ویرایش یادآوری
        $('.edit-reminder-btn, [data-reminder-edit]').prop('disabled', true)
            .addClass('disabled')
            .css('cursor', 'not-allowed')
            .attr('onclick', 'return false;');
        
        // غیرفعال کردن toggle وضعیت یادآوری
        $('.toggle-reminder-btn, [data-reminder-toggle]').prop('disabled', true)
            .addClass('disabled')
            .css('cursor', 'not-allowed')
            .attr('onclick', 'return false;');
        
        // مخفی کردن دکمه‌های خطرناک
        $('.delete-reminder-btn, [data-reminder-delete]').hide();
        
        // اضافه کردن نشان قفل
        $('.reminder-item').each(function() {
            if (!$(this).find('.lock-badge').length) {
                $(this).css('opacity', '0.7')
                    .prepend('<span class="badge bg-secondary lock-badge position-absolute top-0 end-0 m-2"><i class="fa fa-lock"></i></span>');
            }
        });
        
        console.log('✅ Reminders disabled successfully');
    }, 500); // تاخیر برای اطمینان از بارگذاری DOM
}

// ⭐ Override تابع dynamicToggleComplete
const originalToggleComplete = window.dynamicToggleComplete;
window.dynamicToggleComplete = function(checkbox, operationId) {
    const isTaskCompleted = @(Model.CompletionDate.HasValue ? "true" : "false");
    
    if (isTaskCompleted) {
        NotificationHelper.warning('این تسک تکمیل شده و قابل ویرایش نیست');
        if (checkbox) {
            checkbox.checked = !checkbox.checked;
        }
        return false;
    }
    
    if (typeof originalToggleComplete === 'function') {
        originalToggleComplete(checkbox, operationId);
    } else {
        DynamicOperationsManager.toggleComplete(operationId);
    }
};
