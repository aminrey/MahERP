@model TaskRemindersViewModel
@{
    ViewData["Title"] = ViewBag.Title ?? "یادآوری‌های تسک";
}

<!-- صفحه یادآوری‌های تسک -->
<div class="content">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-md-center py-2 text-center text-md-start">
        <div class="flex-grow-1 mb-1 mb-md-0">
            <h1 class="h3 fw-bold mb-1">
                @ViewData["Title"]
            </h1>
            <p class="text-muted mb-0">
                مجموع @Model.TotalCount یادآوری
            </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="mt-3 mt-md-0 ms-md-3">
            <div class="btn-group" role="group">
                @if (Model.Reminders.Any(r => !r.IsRead))
                {
                    <button type="button" class="btn btn-outline-primary" onclick="markAllAsRead()">
                        <i class="fa fa-check-double me-1"></i> علامت‌گذاری همه به عنوان خوانده شده
                    </button>
                }
                
                @if (Model.Reminders.Any(r => r.IsRead))
                {
                    <button type="button" class="btn btn-outline-danger" onclick="deleteReadReminders()">
                        <i class="fa fa-trash me-1"></i> حذف یادآوری‌های خوانده شده
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="content">
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <a href="javascript:filterReminders('pending')" class="text-decoration-none">
                <div class="block block-rounded block-link-shadow text-center @((Model.Filters.FilterType == "pending") ? "border-warning" : "")">
                    <div class="block-content">
                        <div class="fs-2 fw-bold text-warning">@Model.Stats.PendingCount</div>
                        <p class="text-muted mb-0">در انتظار ارسال</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <a href="javascript:filterReminders('sent')" class="text-decoration-none">
                <div class="block block-rounded block-link-shadow text-center @((Model.Filters.FilterType == "sent") ? "border-success" : "")">
                    <div class="block-content">
                        <div class="fs-2 fw-bold text-success">@Model.Stats.SentCount</div>
                        <p class="text-muted mb-0">ارسال شده</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <a href="javascript:filterReminders('overdue')" class="text-decoration-none">
                <div class="block block-rounded block-link-shadow text-center @((Model.Filters.FilterType == "overdue") ? "border-danger" : "")">
                    <div class="block-content">
                        <div class="fs-2 fw-bold text-danger">@Model.Stats.OverdueCount</div>
                        <p class="text-muted mb-0">عقب افتاده</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <a href="javascript:filterReminders('today')" class="text-decoration-none">
                <div class="block block-rounded block-link-shadow text-center @((Model.Filters.FilterType == "today") ? "border-info" : "")">
                    <div class="block-content">
                        <div class="fs-2 fw-bold text-info">@Model.Stats.TodayCount</div>
                        <p class="text-muted mb-0">امروز</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="content">
    <div class="block block-rounded">
        <div class="block-content p-0">
            <div class="nav nav-tabs nav-tabs-alt" role="tablist">
                <a href="javascript:filterReminders('all')" 
                   class="nav-item nav-link @(Model.Filters.FilterType == "all" || string.IsNullOrEmpty(Model.Filters.FilterType) ? "active" : "")" 
                   role="tab">
                    <i class="fa fa-list me-1"></i> همه یادآوری‌ها
                    <span class="badge bg-primary-light text-primary ms-1">@Model.TotalCount</span>
                </a>
                <a href="javascript:filterReminders('pending')" 
                   class="nav-item nav-link @(Model.Filters.FilterType == "pending" ? "active" : "")" 
                   role="tab">
                    <i class="fa fa-clock me-1"></i> در انتظار
                    <span class="badge bg-warning-light text-warning ms-1">@Model.Stats.PendingCount</span>
                </a>
                <a href="javascript:filterReminders('sent')" 
                   class="nav-item nav-link @(Model.Filters.FilterType == "sent" ? "active" : "")" 
                   role="tab">
                    <i class="fa fa-check me-1"></i> ارسال شده
                    <span class="badge bg-success-light text-success ms-1">@Model.Stats.SentCount</span>
                </a>
                <a href="javascript:filterReminders('today')" 
                   class="nav-item nav-link @(Model.Filters.FilterType == "today" ? "active" : "")" 
                   role="tab">
                    <i class="fa fa-calendar-day me-1"></i> امروز
                    <span class="badge bg-info-light text-info ms-1">@Model.Stats.TodayCount</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Reminders List -->
<div class="content">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-bell me-1"></i>
                یادآوری‌ها
                @if (Model.Reminders.Any())
                {
                    <small class="text-muted ms-2">(@Model.Reminders.Count یادآوری)</small>
                }
            </h3>
        </div>
        
        <div class="block-content">
            @if (Model.Reminders.Any())
            {
                <div class="row">
                    @foreach (var reminder in Model.Reminders)
                    {
                        <div class="col-12 mb-3">
                            <div class="card reminder-card @(reminder.IsRead ? "border-light bg-light" : "border-primary")">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="@reminder.EventTypeIcon text-@reminder.EventTypeColor me-2"></i>
                                                <h5 class="card-title mb-0 @(reminder.IsRead ? "text-muted" : "")">
                                                    @reminder.Title
                                                </h5>
                                                @if (!reminder.IsRead)
                                                {
                                                    <span class="badge bg-primary ms-2">جدید</span>
                                                }
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(reminder.Message))
                                            {
                                                <p class="card-text @(reminder.IsRead ? "text-muted" : "")">
                                                    @reminder.Message
                                                </p>
                                            }
                                            
                                            <div class="d-flex flex-wrap gap-2 align-items-center mt-2">
                                                @if (!string.IsNullOrEmpty(reminder.TaskCode))
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fa fa-tasks me-1"></i>
                                                        @reminder.TaskCode
                                                    </span>
                                                }
                                                
                                                <small class="text-muted">
                                                    <i class="fa fa-calendar me-1"></i>
                                                    @reminder.ScheduledDatePersian
                                                </small>
                                                
                                                @if (reminder.IsSent)
                                                {
                                                    <span class="badge bg-success">ارسال شده</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">در انتظار</span>
                                                }
                                            </div>
                                        </div>
                                        
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="fa fa-cog"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                @if (!reminder.IsRead)
                                                {
                                                    <li>
                                                        <a class="dropdown-item" href="javascript:markAsRead(@reminder.Id)">
                                                            <i class="fa fa-check me-2"></i>
                                                            علامت‌گذاری به عنوان خوانده شده
                                                        </a>
                                                    </li>
                                                }
                                                
                                                @if (!string.IsNullOrEmpty(reminder.TaskCode))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" 
                                                           href="@Url.Action("Details", "Tasks", new { id = reminder.TaskId })">
                                                            <i class="fa fa-eye me-2"></i>
                                                            مشاهده تسک
                                                        </a>
                                                    </li>
                                                }
                                                
                                                <li><hr class="dropdown-divider"></li>
                                                
                                                <li>
                                                    <a class="dropdown-item text-danger" 
                                                       href="javascript:deleteReminder(@reminder.Id)">
                                                        <i class="fa fa-trash me-2"></i>
                                                        حذف یادآوری
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="py-4 text-center">
                    <div class="mb-3">
                        <i class="fa fa-bell-slash fa-3x text-muted"></i>
                    </div>
                    <h4 class="h5 fw-medium">هیچ یادآوری‌ای وجود ندارد</h4>
                    <p class="fs-sm text-muted">در حال حاضر یادآوری فعالی برای شما تعریف نشده است</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function filterReminders(type) {
            window.location.href = '@Url.Action("TaskReminders")?FilterType=' + type;
        }

        function markAsRead(reminderId) {
            $.post('@Url.Action("MarkReminderAsRead")', { id: reminderId })
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        Swal.fire('خطا!', response.message || 'خطا در علامت‌گذاری یادآوری', 'error');
                    }
                })
                .fail(function() {
                    Swal.fire('خطا!', 'خطا در ارتباط با سرور', 'error');
                });
        }

        function markAllAsRead() {
            Swal.fire({
                title: 'علامت‌گذاری همه یادآوری‌ها',
                text: 'آیا تمام یادآوری‌ها را به عنوان خوانده شده علامت‌گذاری می‌کنید؟',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("MarkAllRemindersAsRead")')
                        .done(function(response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                Swal.fire('خطا!', response.message || 'خطا در علامت‌گذاری یادآوری‌ها', 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطا!', 'خطا در ارتباط با سرور', 'error');
                        });
                }
            });
        }

        function deleteReminder(reminderId) {
            Swal.fire({
                title: 'حذف یادآوری',
                text: 'آیا از حذف این یادآوری مطمئن هستید؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'حذف',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("DeleteReminder")', { id: reminderId })
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'حذف شد!',
                                    text: 'یادآوری با موفقیت حذف شد.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('خطا!', response.message || 'خطا در حذف یادآوری', 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطا!', 'خطا در ارتباط با سرور', 'error');
                        });
                }
            });
        }

        function deleteReadReminders() {
            Swal.fire({
                title: 'حذف یادآوری‌های خوانده شده',
                text: 'آیا از حذف تمام یادآوری‌های خوانده شده مطمئن هستید؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'حذف',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#d33',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("DeleteReadReminders")')
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'حذف شد!',
                                    text: 'یادآوری‌های خوانده شده با موفقیت حذف شدند.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('خطا!', response.message || 'خطا در حذف یادآوری‌ها', 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطا!', 'خطا در ارتباط با سرور', 'error');
                        });
                }
            });
        }
    </script>
}

@section Styles {
    <style>
        .reminder-card {
            transition: all 0.2s ease-in-out;
        }
        
        .reminder-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .block-link-shadow {
            transition: all 0.2s ease-in-out;
        }
        
        .block-link-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .nav-tabs-alt .nav-link {
            border: none;
            border-radius: 0;
            border-bottom: 2px solid transparent;
        }

        .nav-tabs-alt .nav-link.active {
            background: none;
            border-bottom-color: #0d6efd;
        }

        .bg-primary-light {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }
        
        .bg-success-light {
            background-color: rgba(25, 135, 84, 0.1) !important;
        }
        
        .bg-warning-light {
            background-color: rgba(255, 193, 7, 0.1) !important;
        }
        
        .bg-info-light {
            background-color: rgba(13, 202, 240, 0.1) !important;
        }
    </style>
}