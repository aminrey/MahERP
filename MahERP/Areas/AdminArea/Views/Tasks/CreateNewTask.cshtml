@section Scripts {
    <script>
        Dashmix.helpersOnLoad(['js-flatpickr', 'jq-datepicker', 'jq-maxlength', 'jq-select2', 'jq-rangeslider', 'jq-masked-inputs', 'jq-pw-strength']);
    </script>

    <script>
        // متغیرهای کمکی
        let operationsCounter = 0;
        let operationsList = [];
        let remindersCounter = 0;
        let remindersList = [];

        $(document).ready(function() {
            console.log('Document ready - شروع بارگذاری فرم');
            initializeForm();
            setupEventHandlers();
            initializeTasksManagement(); // راه‌اندازی مدیریت کارها
        });

        function initializeTasksManagement() {
            // راه‌اندازی سادۀ مدیریت کارها
            console.log('راه‌اندازی سیستم مدیریت کارها');

            // نمایش/مخفی کردن لیست خالی
            updateOperationsDisplay();

            // شمارش اولیه
            updateOperationsCount();
        }

        function initializeForm() {
            console.log('شروع راه‌اندازی فرم');

            // راه‌اندازی Select2
            $('.js-select2').select2({
                width: '100%',
                allowClear: true,
                dropdownAutoWidth: true,
                containerCssClass: 'select2-validation',
                escapeMarkup: function(markup) {
                    return markup;
                }
            });

            // راه‌اندازی تقویم شمسی
            $('.js-flatpickr').each(function() {
                try {
                    new mds.MdsPersianDateTimePicker(this, {
                        targetTextSelector: this,
                        enableTimePicker: true,
                        textFormat: 'yyyy/MM/dd HH:mm',
                        targetDateFormat: 'yyyy-MM-dd HH:mm:ss'
                    });
                } catch (e) {
                    console.warn('خطا در راه‌اندازی تقویم:', e);
                }
            });

            generateTaskCode();
            $('#createTaskForm').attr('novalidate', 'novalidate');

            console.log('راه‌اندازی فرم کامل شد');
        }

        function setupEventHandlers() {
            console.log('شروع تنظیم event handlers');

            // مدیریت Enter key برای اضافه کردن کار - اصلاح شده
            $('#js-task-input').on('keypress', function(e) {
                if (e.which === 13 || e.keyCode === 13) { // Enter key
                    e.preventDefault(); // جلوگیری از submit فرم
                    e.stopPropagation(); // جلوگیری از انتشار رویداد
                    addNewTask();
                    return false; // تضمین عدم ادامه رویداد
                }
            });

            // مدیریت keydown هم برای اطمینان بیشتر
            $('#js-task-input').on('keydown', function(e) {
                if (e.which === 13 || e.keyCode === 13) { // Enter key
                    e.preventDefault();
                    e.stopPropagation();
                    return false;
                }
            });

            // مدیریت کلیک دکمه اضافه کردن
            $('#addTaskBtn').on('click', function(e) {
                e.preventDefault();
                addNewTask();
                return false;
            });

            // مدیریت کلیک دکمه آلترناتیو
            $('#addOperationBtn').on('click', function(e) {
                e.preventDefault();
                addNewTask();
                return false;
            });

       

            $('#AssignmentsSelectedTaskUserArraysString, #AssignmentsSelectedTeamIds').on('change', function() {
                updateViewersList();
            });

            $('#Title').on('blur input', function() {
                validateMainInfo();
                if ($(this).val().trim()) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                }
            });

            $('#BranchIdSelected').on('change select2:select select2:unselect', function() {
                validateMainInfo();
                updateBranchDependentSelects();
                if ($(this).val()) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                }
            });

            $('#SuggestedStartDatePersian, #DueDatePersian, #EstimatedHours').on('change', updateTimePreview);

            $('#createTaskForm').on('submit', function(e) {
                e.preventDefault();

                if (!validateFormBeforeSubmit()) {
                    return false;
                }

                updateAllHiddenInputs();
                this.submit();
            });

            $('.nav-link').on('click', function() {
                const targetTab = $(this).data('bs-target');
                if (targetTab === '#viewers') {
                    updateViewersList();
                }

                if (targetTab === '#project-info') {
                    checkProjectTabRequirements();
                }
            });

            $(document).on('change', '#StakeholderId, #TaskCategoryIdSelected', function() {
                updateProjectStats();
            });

            $(document).on('change', '.reminder-type, .reminder-title, .reminder-time, #defaultReminder', function() {
                updateRemindersData();
                updateRemindersCount();
            });

            $(document).on('change', '#StakeholderId', function() {
                const stakeholderId = $(this).val();
                const branchId = $('#BranchIdSelected').val();

                if (stakeholderId && branchId) {
                    loadTaskCategoriesByStakeholder(branchId, stakeholderId);
                } else {
                    $('#TaskCategoryIdSelected').prop('disabled', true).attr('data-placeholder', 'ابتدا طرف حساب را انتخاب کنید');
                }
            });

            $('#manualTaskCode').on('input', function() {
                validateManualTaskCode();
            });

            $('#manualTaskCode').on('blur', function() {
                checkTaskCodeUniqueness();
            });

            console.log('تنظیم event handlers کامل شد');
        }

                // تابع بروزرسانی شمارش یادآوری‌ها - اصلاح شده
        function updateRemindersCount() {
            let count = 0;

            // شمارش یادآوری پیش‌فرض
            if ($('#defaultReminder').is(':checked')) {
                count++;
            }

            // شمارش یادآوری‌های سفارشی
            count += $('#customRemindersList .card').length;

            $('#reminders-count').text(count);

            // Debug
            console.log('تعداد کل یادآوری‌ها:', count);
        }
        // تابع اضافه کردن کار جدید
        function addNewTask() {
            const taskInput = $('#js-task-input');
            const taskText = taskInput.val().trim();

            if (!taskText) {
                console.log('متن کار خالی است');
                taskInput.focus();
                return false;
            }

            console.log('اضافه کردن کار:', taskText);

            operationsCounter++;
            const taskId = operationsCounter;

            const taskHtml = `
                <div class="js-task block block-rounded mb-2 animated fadeIn"
                     data-task-completed="false"
                     data-task-id="${taskId}"
                     data-task-starred="false">
                    <table class="table table-borderless table-vcenter mb-0">
                        <tr>
                            <td class="text-center pe-0" style="width: 38px;">
                                <div class="js-task-status form-check">
                                    <input class="form-check-input"
                                           id="task-cb-${taskId}"
                                           type="checkbox"
                                           onchange="toggleTaskCompletion(${taskId})">
                                    <label class="form-check-label" for="task-cb-${taskId}"></label>
                                </div>
                            </td>
                            <td class="js-task-content fw-semibold ps-0">
                                ${taskText}
                            </td>
                            <td class="text-end" style="width: 100px;">
                                <button class="btn btn-sm btn-link text-warning"
                                        type="button"
                                        onclick="toggleTaskStar(${taskId})"
                                        title="ستاره‌دار کردن">
                                    <i class="far fa-star fa-fw"></i>
                                </button>
                                <button class="btn btn-sm btn-link text-danger"
                                        type="button"
                                        onclick="removeTask(${taskId})"
                                        title="حذف کار">
                                    <i class="fa fa-times fa-fw"></i>
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
            `;

            $('#operationsList').append(taskHtml);

            // پاک کردن input
            taskInput.val('');

            // بروزرسانی نمایش
            updateOperationsDisplay();
            updateOperationsCount();

            // ⭐ فوری بروزرسانی داده‌های مخفی
            extractOperationsData();

            // فوکوس مجدد
            taskInput.focus();

            console.log(`کار "${taskText}" با موفقیت اضافه شد`);
            
            // Debug: چاپ محتوای JSON
            console.log('محتوای فعلی TaskOperationsJson:', $('#taskOperationsData').val());
            
            return false;
        }

        // تابع حذف کار - بهبود یافته
        function removeTask(taskId) {
            if (confirm('آیا از حذف این کار اطمینان دارید؟')) {
                $(`[data-task-id="${taskId}"]`).remove();
                updateOperationsDisplay();
                updateOperationsCount();
                
                // ⭐ فوری بروزرسانی داده‌های مخفی
                extractOperationsData();
                
                // Debug
                console.log('پس از حذف - محتوای TaskOperationsJson:', $('#taskOperationsData').val());
            }
        }

        // تابع تغییر وضعیت تکمیل - بهبود یافته
        function toggleTaskCompletion(taskId) {
            const $task = $(`[data-task-id="${taskId}"]`);
            const $checkbox = $task.find('.form-check-input');
            const isCompleted = $checkbox.is(':checked');

            $task.attr('data-task-completed', isCompleted);

            if (isCompleted) {
                $task.find('.table').addClass('bg-body');
                $task.find('.js-task-content').wrapInner('<del></del>');
            } else {
                $task.find('.table').removeClass('bg-body');
                $task.find('.js-task-content del').contents().unwrap();
            }
            
            // ⭐ فوری بروزرسانی داده‌های مخفی
            extractOperationsData();
        }

        // تابع تغییر وضعیت ستاره - بهبود یافته
        function toggleTaskStar(taskId) {
            const $task = $(`[data-task-id="${taskId}"]`);
            const $starBtn = $task.find('.btn-link.text-warning');
            const $starIcon = $starBtn.find('i');
            const isStarred = $starIcon.hasClass('fa');

            if (isStarred) {
                $starIcon.removeClass('fa fa-star').addClass('far fa-star');
                $task.attr('data-task-starred', 'false');
            } else {
                $starIcon.removeClass('far fa-star').addClass('fa fa-star');
                $task.attr('data-task-starred', 'true');
            }
            
            // ⭐ فوری بروزرسانی داده‌های مخفی
            extractOperationsData();
        }

        // استخراج داده‌های کارها - بهبود یافته
        function extractOperationsData() {
            const operationsList = [];

            $('#operationsList .js-task').each(function(index) {
                const $task = $(this);
