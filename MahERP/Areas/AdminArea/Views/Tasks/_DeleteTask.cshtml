@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels
@model TaskViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 50%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-danger-dark">
                <h3 class="block-title">حذف تسک</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="delete-task-form" asp-action="DeletePost" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header bg-danger-light">
                        <h3 class="block-title">تأیید حذف</h3>
                    </div>
                    <div class="block-content">
                        <div class="py-3 text-center">
                            <div class="alert alert-danger">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fa fa-exclamation-triangle fa-2x text-danger"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="alert-heading mb-2">حذف تسک</h5>
                                        <p class="mb-2">آیا از حذف تسک <strong>@Model.Title</strong> اطمینان دارید؟</p>
                                        <hr class="my-2">
                                        <div class="small">
                                            <strong>توجه:</strong> با حذف تسک، تمام عملیات‌ها و اختصاص‌های مرتبط با آن نیز از دسترس خارج می‌شوند.
                                            <br>این عملیات قابل بازگشت نیست.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            <button class="btn btn-sm btn-danger" data-save="modal-ajax-save" type="button">
                <i class="fa fa-trash me-1"></i>حذف تسک
            </button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Event handler برای موفقیت
        $('[data-save="modal-ajax-save"]').on('ajaxFormSuccess', function(event, response) {
            if (response && response.success) {
                if (response.message && response.message.length > 0) {
                    toastr.success(response.message[0].text);
                }
                $('.modal').modal('hide');
                $('.modal').on('hidden.bs.modal', function () {
                    // در صورت حذف تسک، به لیست تسک‌ها برگردانیم
                    window.location.href = '@Url.Action("Index", "Tasks")';
                });
            }
        });
    });
</script>