@model TaskWorkLogViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <form id="logWorkForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="TaskCode" />
            <input type="hidden" asp-for="TaskTitle" />

            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fa fa-clock me-2"></i>ثبت کار انجام شده
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fa fa-info-circle me-1"></i>تسک: @Model.TaskTitle
                            </h6>
                            <p class="mb-0">کد: <strong>@Model.TaskCode</strong></p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-4">
                            <label asp-for="WorkNote" class="form-label">
                                <i class="fa fa-comment me-1"></i>توضیحات کار انجام شده
                            </label>
                            <textarea asp-for="WorkNote" 
                                    class="form-control" 
                                    rows="4" 
                                    placeholder="توضیح مختصری از کاری که انجام دادید..."></textarea>
                            <span asp-validation-for="WorkNote" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="mb-4">
                            <label asp-for="WorkDurationMinutes" class="form-label">
                                <i class="fa fa-clock me-1"></i>مدت زمان کار (دقیقه)
                            </label>
                            <input asp-for="WorkDurationMinutes" 
                                   type="number" 
                                   class="form-control" 
                                   min="1" 
                                   max="480" 
                                   placeholder="مثال: 30" />
                            <span asp-validation-for="WorkDurationMinutes" class="text-danger"></span>
                            <div class="form-text">حداکثر 8 ساعت (480 دقیقه)</div>
                        </div>

                        @if (Model.IsAlreadyWorkedOn)
                        {
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle me-1"></i>
                                قبلاً روی این تسک کار کرده‌اید
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>انصراف
                </button>
                <button type="button" class="btn btn-success" data-save="modal-ajax-save" data-url="@Url.Action("LogWork")">
                    <i class="fa fa-check me-1"></i>ثبت کار انجام شده
                </button>
            </div>
        </form>
    </div>
</div>

<script>
$(document).ready(function() {
    // فوکوس روی فیلد اول
    $('#WorkNote').focus();

    // اضافه کردن event listener برای دکمه ثبت
    $('[data-save="modal-ajax-save"]').on('ajaxSuccess', function(event, response) {
        // بستن مودال در صورت موفقیت
        $('#@Model.TaskId').find('.btn-close').click();
        
        // بروزرسانی وضعیت دکمه در صورت نیاز
        updateTaskButtons(@Model.TaskId, true);
    });

    function updateTaskButtons(taskId, isWorkedOn) {
        const $taskRow = $(`[data-task-id="${taskId}"]`);
        if ($taskRow.length) {
            const $logWorkBtn = $taskRow.find('.btn-log-work');
            if (isWorkedOn) {
                $logWorkBtn.removeClass('btn-outline-success').addClass('btn-success');
                $logWorkBtn.html('<i class="fa fa-check me-1"></i>کار ثبت شده');
            }
        }
    }
});
</script>