@model TaskWorkLogViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <form id="logWorkForm" asp-action="LogWork" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="TaskCode" />
            <input type="hidden" asp-for="TaskTitle" />

            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fa fa-clock me-2"></i>ثبت کار انجام شده
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fa fa-info-circle me-1"></i>تسک: @Model.TaskTitle
                            </h6>
                            <p class="mb-0">کد: <strong>@Model.TaskCode</strong></p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-4">
                            <label asp-for="WorkNote" class="form-label">
                                <i class="fa fa-comment me-1"></i>توضیحات کار انجام شده
                            </label>
                            <textarea asp-for="WorkNote" 
                                    class="form-control" 
                                    rows="4" 
                                    placeholder="توضیح مختصری از کاری که انجام دادید..."></textarea>
                            <span asp-validation-for="WorkNote" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="mb-4">
                            <label asp-for="WorkDurationMinutes" class="form-label">
                                <i class="fa fa-clock me-1"></i>مدت زمان کار (دقیقه)
                            </label>
                            <input asp-for="WorkDurationMinutes" 
                                   type="number" 
                                   class="form-control" 
                                   min="1" 
                                   max="480" 
                                   placeholder="مثال: 30" />
                            <span asp-validation-for="WorkDurationMinutes" class="text-danger"></span>
                            <div class="form-text">حداکثر 8 ساعت (480 دقیقه)</div>
                        </div>

                        @if (Model.IsAlreadyWorkedOn)
                        {
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle me-1"></i>
                                قبلاً روی این تسک کار کرده‌اید
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>انصراف
                </button>
                <button type="button" class="btn btn-success" data-save="modal-ajax-save">
                    <i class="fa fa-check me-1"></i>ثبت کار انجام شده
                </button>
            </div>
        </form>
    </div>
</div>

<script>
$(document).ready(function() {
    // فوکوس روی فیلد اول
    $('#WorkNote').focus();

    // اضافه کردن event listener برای دکمه ثبت
    $('[data-save="modal-ajax-save"]').on('ajaxSuccess', function(event, response) {
        console.log('LogWork AJAX Success:', response);
        
        // اگر در صفحه MyDayTasks هستیم، نیازی به بستن دستی مودال نیست
        // چون main.js در صورت update-view مودال را می‌بندد
        
        // بروزرسانی دکمه‌های تسک در صورت نیاز
        updateTaskButtons(@Model.TaskId, true);
        
        // نمایش پیام موفقیت اضافی در صورت نیاز
        if (typeof Dashmix !== 'undefined') {
            Dashmix.helpers('jq-notify', {
                type: 'success',
                icon: 'fa fa-check me-1',
                message: 'کار با موفقیت ثبت شد و صفحه بروزرسانی شد'
            });
        }
    });

    // اضافه کردن event listener برای خطا
    $('[data-save="modal-ajax-save"]').on('ajaxError', function(event, xhr, status, error) {
        console.error('LogWork AJAX Error:', { xhr, status, error });
        
        // نمایش پیام خطا
        if (typeof Dashmix !== 'undefined') {
            Dashmix.helpers('jq-notify', {
                type: 'danger',
                icon: 'fa fa-times me-1',
                message: 'خطا در ثبت کار انجام شده'
            });
        }
    });

    function updateTaskButtons(taskId, isWorkedOn) {
        // بروزرسانی دکمه‌های تسک در صفحات مختلف
        const $taskElements = $(`[data-task-id="${taskId}"]`);
        
        $taskElements.each(function() {
            const $taskElement = $(this);
            const $logWorkBtn = $taskElement.find('.btn-log-work, button[onclick*="logWork(' + taskId + ')"]');
            
            if ($logWorkBtn.length && isWorkedOn) {
                $logWorkBtn.removeClass('btn-outline-success btn-success').addClass('btn-success');
                
                // تغییر متن دکمه اگر نیاز باشد
                const currentHtml = $logWorkBtn.html();
                if (currentHtml.indexOf('fa-play') !== -1) {
                    $logWorkBtn.html('<i class="fa fa-check me-1"></i>کار ثبت شده');
                } else if (currentHtml.indexOf('fa-edit') === -1) {
                    $logWorkBtn.html('<i class="fa fa-edit me-1"></i>ویرایش کار');
                }
            }
        });

        // بروزرسانی نشانگرهای بصری دیگر
        const $progressBars = $(`[data-task-id="${taskId}"] .progress-bar`);
        $progressBars.addClass('bg-success