@model ContactViewModel
@{
    ViewData["Title"] = "افزودن فرد جدید";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-user-plus text-success me-2"></i>
                افزودن فرد جدید
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index">افراد</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">افزودن فرد</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-id-card me-2"></i>
                    اطلاعات شخصی
                </h3>
            </div>

            <div class="block-content">
                <!-- نمایش خطاها -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading">
                            <i class="fa fa-exclamation-triangle me-2"></i>
                            خطاهای اعتبارسنجی
                        </h5>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row justify-content-center">
                    <div class="col-lg-10">

                        <!-- ========== نام و نام خانوادگی ========== -->
                        <div class="row">
                            <!-- نام (غیر اجباری) -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="FirstName">
                                    نام
                                    <small class="text-muted">(اختیاری)</small>
                                </label>
                                <input asp-for="FirstName"
                                       class="form-control form-control-lg"
                                       placeholder="نام کوچک" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <!-- نام خانوادگی (اجباری) -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="LastName">
                                    نام خانوادگی
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName"
                                       class="form-control form-control-lg"
                                       placeholder="نام خانوادگی"
                                       required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ========== اطلاعات تماس ========== -->
                        <div class="row">
                            <!-- ⭐ شماره تلفن اصلی (جدید) -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="PrimaryPhone">
                                    <i class="fa fa-phone me-1"></i>
                                    شماره تلفن
                                    <small class="text-muted">(اختیاری)</small>
                                </label>
                                <input asp-for="PrimaryPhone"
                                       type="tel"
                                       class="form-control form-control-lg"
                                       placeholder="09123456789 یا 02112345678"
                                       dir="ltr" />
                                <span asp-validation-for="PrimaryPhone" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="fa fa-info-circle me-1"></i>
                                    می‌توانید بعداً شماره‌های بیشتری اضافه کنید
                                </small>
                            </div>

                            <!-- ایمیل اصلی -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="PrimaryEmail">
                                    <i class="fa fa-envelope me-1"></i>
                                    ایمیل
                                    <small class="text-muted">(اختیاری)</small>
                                </label>
                                <input asp-for="PrimaryEmail"
                                       type="email"
                                       class="form-control form-control-lg"
                                       placeholder="email@example.com"
                                       dir="ltr" />
                                <span asp-validation-for="PrimaryEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ========== اطلاعات هویتی ========== -->
                        <div class="row">
                            <!-- کد ملی -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="NationalCode">
                                    <i class="fa fa-id-card me-1"></i>
                                    کد ملی
                                    <small class="text-muted">(اختیاری - 10 رقم)</small>
                                </label>
                                <input asp-for="NationalCode"
                                       type="text"
                                       maxlength="10"
                                       class="form-control"
                                       placeholder="0000000000"
                                       dir="ltr" />
                                <span asp-validation-for="NationalCode" class="text-danger"></span>
                            </div>

                            <!-- جنسیت -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="Gender">
                                    <i class="fa fa-venus-mars me-1"></i>
                                    جنسیت
                                </label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- انتخاب کنید --</option>
                                    <option value="0">مرد</option>
                                    <option value="1">زن</option>
                                    <option value="2">سایر</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ========== تاریخ تولد ========== -->
                        <div class="mb-4">
                            <label class="form-label" asp-for="BirthDatePersian">
                                <i class="fa fa-birthday-cake me-1"></i>
                                تاریخ تولد (شمسی)
                                <small class="text-muted">(اختیاری)</small>
                            </label>
                            <input asp-for="BirthDatePersian"
                                   type="text"
                                   class="form-control date-picker-shamsi"
                                   placeholder="1370/01/01"
                                   autocomplete="off" />
                            <span asp-validation-for="BirthDatePersian" class="text-danger"></span>
                        </div>

                        <!-- ========== آدرس‌ها ========== -->
                        <div class="mb-4">
                            <label class="form-label" asp-for="PrimaryAddress">
                                <i class="fa fa-map-marker-alt me-1"></i>
                                آدرس اصلی
                            </label>
                            <textarea asp-for="PrimaryAddress"
                                      class="form-control"
                                      rows="3"
                                      placeholder="آدرس کامل..."></textarea>
                            <span asp-validation-for="PrimaryAddress" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- کد پستی -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label" asp-for="PrimaryPostalCode">
                                    کد پستی
                                </label>
                                <input asp-for="PrimaryPostalCode"
                                       type="text"
                                       class="form-control"
                                       placeholder="0000000000"
                                       maxlength="10"
                                       dir="ltr" />
                                <span asp-validation-for="PrimaryPostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ========== یادداشت‌ها ========== -->
                        <div class="mb-4">
                            <label class="form-label" asp-for="Notes">
                                <i class="fa fa-sticky-note me-1"></i>
                                یادداشت‌ها
                            </label>
                            <textarea asp-for="Notes"
                                      class="form-control"
                                      rows="4"
                                      placeholder="یادداشت‌های اضافی..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- ========== وضعیت فعال ========== -->
                        <div class="mb-4">
                            <div class="form-check form-switch form-check-lg">
                                <input asp-for="IsActive"
                                       type="checkbox"
                                       class="form-check-input"
                                       checked />
                                <label class="form-check-label" asp-for="IsActive">
                                    <strong>فعال</strong>
                                    <small class="d-block text-muted">فرد بلافاصله پس از ایجاد فعال باشد</small>
                                </label>
                            </div>
                        </div>

                        <!-- ========== راهنما ========== -->
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fa fa-info-circle me-2"></i>
                                نکات مهم
                            </h6>
                            <ul class="mb-0 small">
                                <li><strong>نام خانوادگی</strong> تنها فیلد الزامی است</li>
                                <li>می‌توانید بعداً شماره‌های تماس بیشتری اضافه کنید</li>
                                <li>کد ملی و ایمیل باید یکتا باشند</li>
                                <li>تصویر پروفایل را می‌توانید در صفحه ویرایش آپلود کنید</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="block-content block-content-full block-content-sm bg-body-light">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-alt-secondary">
                                <i class="fa fa-arrow-right me-1"></i>
                                انصراف
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-check me-1"></i>
                                ذخیره فرد
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- END Page Content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // ⭐ فقط اعداد و خط تیره برای شماره تلفن
            $('#PrimaryPhone').on('input', function() {
                let value = $(this).val();
                // حذف تمام کاراکترها به جز اعداد و خط تیره
                value = value.replace(/[^\d-]/g, '');
                $(this).val(value);
            });

            // فقط اعداد برای کد ملی
            $('#NationalCode').on('input', function() {
                let value = $(this).val();
                value = value.replace(/\D/g, '');
                $(this).val(value);
            });

            // فقط اعداد برای کد پستی
            $('#PrimaryPostalCode').on('input', function() {
                let value = $(this).val();
                value = value.replace(/\D/g, '');
                $(this).val(value);
            });

            // Persian Date Picker
            if ($.fn.persianDatepicker) {
                $('.date-picker-shamsi').persianDatepicker({
                    format: 'YYYY/MM/DD',
                    initialValue: false,
                    autoClose: true,
                    calendar: {
                        persian: {
                            locale: 'fa'
                        }
                    }
                });
            }

            // Focus on first input
            $('#LastName').focus();

            // Form validation
            $('form').on('submit', function(e) {
                const lastName = $('#LastName').val().trim();

                if (!lastName) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'danger',
                        icon: 'fa fa-exclamation-triangle',
                        message: 'نام خانوادگی الزامی است'
                    });
                    $('#LastName').focus();
                    return false;
                }

                // Validate National Code if provided
                const nationalCode = $('#NationalCode').val().trim();
                if (nationalCode && nationalCode.length !== 10) {
                    e.preventDefault();
                    Dashmix.helpers('notify', {
                        type: 'warning',
                        icon: 'fa fa-exclamation-triangle',
                        message: 'کد ملی باید 10 رقم باشد'
                    });
                    $('#NationalCode').focus();
                    return false;
                }

                // Loading state
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fa fa-spinner fa-spin me-1"></i> در حال ذخیره...');
            });
        });
    </script>
}

@section Styles {
    <style>
        .form-control-lg {
            font-size: 1.1rem;
            padding: 0.75rem 1rem;
        }

        .form-check-lg .form-check-input {
            width: 3rem;
            height: 1.5rem;
        }

        input[dir="ltr"] {
            text-align: left;
        }

        .alert-info {
            border-left: 4px solid #0d6efd;
        }

        @@media (max-width: 768px) {
            .block-content {
                padding: 1rem;
            }
        }
    </style>
}