@model CRMCommentViewModel

<div class="modal-header block-header-default">
    <h3 class="modal-title">افزودن نظر جدید</h3>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
</div>
<form asp-action="AddComment" method="post">
    <div class="modal-body">
        <input type="hidden" asp-for="CRMInteractionId" />

        <div class="form-group mb-3">
            <label asp-for="CommentText" class="form-label">متن نظر</label>
            <textarea asp-for="CommentText" class="form-control" rows="5" placeholder="نظر خود را در اینجا بنویسید..."></textarea>
            <span asp-validation-for="CommentText" class="text-danger"></span>
        </div>

        <div class="alert alert-info">
            <div class="d-flex">
                <div class="flex-shrink-0">
                    <i class="fa fa-info-circle fa-2x text-info"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <p class="mb-0">این نظر به تعامل <strong>@ViewBag.CRMTitle</strong> اضافه خواهد شد.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-alt-primary">
            <i class="fa fa-check opacity-50 me-1"></i> افزودن نظر
        </button>
    </div>
</form>