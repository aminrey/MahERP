@model List<MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.OperationWorkLogViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa fa-info-circle me-2"></i>
        هنوز گزارش کاری ثبت نشده است
    </div>
}
else
{
    <div class="list-group">
        @foreach (var log in Model)
        {
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-start">
                    <div class="flex-grow-1">
                        <p class="mb-1">@log.WorkDescription</p>
                        <small class="text-muted">
                            <i class="fa fa-user me-1"></i>
                            @log.UserName
                        </small>
                    </div>
                    <div class="text-end">
                        <small class="text-muted d-block">
                            <i class="fa fa-calendar me-1"></i>
                            @log.WorkDatePersian
                        </small>
                        @if (log.DurationMinutes.HasValue)
                        {
                            <small class="text-muted d-block mt-1">
                                <i class="fa fa-clock me-1"></i>
                                @log.DurationMinutes دقیقه
                            </small>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}