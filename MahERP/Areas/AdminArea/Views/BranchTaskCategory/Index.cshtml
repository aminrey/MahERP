@model IEnumerable<MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.AcControl.BranchTaskCategoryStakeholderViewModel>

@{
    ViewData["Title"] = "دسته‌بندی‌های تسک شعبه";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<!-- لینک‌های CSS مورد نیاز -->
<style>
    .task-category-item {
        border-left: 4px solid #007bff;
        transition: all 0.3s ease;
    }
    
    .task-category-item:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .status-active {
        color: #28a745;
        font-weight: bold;
    }
    
    .status-inactive {
        color: #dc3545;
        font-weight: bold;
    }

    .stakeholder-badge {
        font-size: 0.85em;
        padding: 0.25em 0.5em;
        border-radius: 0.375rem;
        background-color: #e9ecef;
        color: #495057;
        display: inline-block;
        margin-top: 0.25rem;
    }

    .filter-section {
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
</style>

<!-- Main Container -->
<main id="main-container">
    <!-- Hero Content -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
                <div class="flex-grow-1">
                    <h1 class="h3 fw-bold mb-1">دسته‌بندی‌های تسک شعبه</h1>
                    <h2 class="fs-base lh-base fw-medium text-muted mb-0">مدیریت دسته‌بندی‌های تسک متصل به شعبه: @ViewBag.BranchName</h2>
                </div>
                <nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-alt">
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Home")">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Branch", new { area = "AdminArea" })">شعب</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">دسته‌بندی‌های تسک</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero Content -->

    <!-- Page Content -->
    <div class="content">
        <!-- فیلتر طرف حساب -->
        <div class="filter-section">
            <form method="get" action="@Url.Action("Index")">
                <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label class="form-label" for="stakeholderId">فیلتر بر اساس طرف حساب:</label>
                        <select name="stakeholderId" id="stakeholderId" class="form-select">
                            <option value="">همه طرف‌حساب‌ها</option>
                            @if (ViewBag.UniqueStakeholders != null)
                            {
                                @foreach (var stakeholder in ViewBag.UniqueStakeholders)
                                {
                                    var isSelected = ViewBag.SelectedStakeholderId?.ToString() == stakeholder.Id.ToString();
                                    <option value="@stakeholder.Id" selected="@isSelected">
                                        @stakeholder.DisplayName
                                        @if (!string.IsNullOrEmpty(stakeholder.CompanyName))
                                        {
                                            <text> - @stakeholder.CompanyName</text>
                                        }
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-filter me-1"></i>فیلتر
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Index", new { branchId = ViewBag.BranchId })" class="btn btn-secondary">
                            <i class="fa fa-times me-1"></i>پاک کردن فیلتر
                        </a>
                    </div>
                    <div class="col-md-4 text-end">
                        @if (ViewBag.SelectedStakeholderId != null)
                        {
                            <span class="badge bg-info">
                                نمایش برای: طرف حساب انتخاب شده
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">نمایش همه (@Model.Count() مورد)</span>
                        }
                    </div>
                </div>
            </form>
        </div>

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-list-alt me-1 text-muted"></i>
                    دسته‌بندی‌های تسک شعبه
                </h3>
                <div class="block-options">
                    <a href="@Url.Action("AddTaskCategoryToBranch", new { branchId = ViewBag.BranchId })" 
                       class="btn btn-sm btn-primary">
                        <i class="fa fa-plus me-1"></i>
                        افزودن دسته‌بندی جدید
                    </a>
                </div>
            </div>
            
            <div class="block-content">
                @if (Model.Any())
                {
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                                <div class="block block-rounded task-category-item h-100">
                                    <div class="block-header bg-light">
                                        <h3 class="block-title">@item.TaskCategoryTitle</h3>
                                        <div class="block-options">
                                            <div class="dropdown">
                                                <button type="button" class="btn-block-option" 
                                                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa fa-fw fa-ellipsis-v"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item" 
                                                       href="@Url.Action("EditBranchTaskCategory", new { id = item.Id })">
                                                        <i class="fa fa-fw fa-edit me-1"></i>ویرایش
                                                    </a>
                                                    <button class="dropdown-item" 
                                                            onclick="loadModal('@Url.Action("ToggleActiveStatus", new { id = item.Id })')">
                                                        <i class="fa fa-fw @(item.IsActive ? "fa-toggle-off" : "fa-toggle-on") me-1"></i>
                                                        @(item.IsActive ? "غیرفعال کردن" : "فعال کردن")
                                                    </button>
                                                    <div class="dropdown-divider"></div>
                                                    <button class="dropdown-item text-danger" 
                                                            onclick="loadModal('@Url.Action("RemoveTaskCategory", new { id = item.Id })')">
                                                        <i class="fa fa-fw fa-times me-1"></i>حذف
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-content">
                                        <!-- طرف حساب -->
                                        <div class="mb-3">
                                            <div class="stakeholder-badge">
                                                <i class="fa fa-user me-1"></i>
                                                @item.StakeholderName
                                            </div>
                                        </div>
                                        
                                        <!-- اطلاعات وضعیت و تاریخ -->
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <div class="border-end">
                                                    <div class="fs-sm fw-semibold text-uppercase text-muted">وضعیت</div>
                                                    <div class="fs-sm @(item.IsActive ? "status-active" : "status-inactive")">
                                                        @item.StatusText
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="fs-sm fw-semibold text-uppercase text-muted">تاریخ انتساب</div>
                                                <div class="fs-sm">@item.AssignDatePersian</div>
                                            </div>
                                        </div>
                                        
                                        <!-- اطلاعات تخصیص دهنده -->
                                        @if (!string.IsNullOrEmpty(item.AssignedByUserName))
                                        {
                                            <div class="mt-3 pt-3 border-top">
                                                <div class="fs-sm text-muted">
                                                    <i class="fa fa-user-cog me-1"></i>
                                                    انتساب توسط: @item.AssignedByUserName
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="display-4 text-muted mb-3">
                            <i class="fa fa-list-alt"></i>
                        </div>
                        <h3 class="fw-normal text-muted">
                            @if (ViewBag.SelectedStakeholderId != null)
                            {
                                <text>هیچ دسته‌بندی تسکی برای طرف حساب انتخاب شده یافت نشد</text>
                            }
                            else
                            {
                                <text>هیچ دسته‌بندی تسکی یافت نشد</text>
                            }
                        </h3>
                        <p class="fs-sm text-muted">
                            @if (ViewBag.SelectedStakeholderId != null)
                            {
                                <text>دسته‌بندی تسکی برای طرف حساب انتخاب شده به این شعبه متصل نشده است.</text>
                            }
                            else
                            {
                                <text>در حال حاضر هیچ دسته‌بندی تسکی به این شعبه متصل نشده است.</text>
                            }
                        </p>
                        <a href="@Url.Action("AddTaskCategoryToBranch", new { branchId = ViewBag.BranchId })" 
                           class="btn btn-primary">
                            <i class="fa fa-plus me-1"></i>افزودن دسته‌بندی جدید
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- END Page Content -->
</main>

<!-- مودال برای عملیات -->
<div class="modal fade" id="modal-block-normal" tabindex="-1" role="dialog" aria-labelledby="modal-block-normal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-content">
            <!-- محتوای مودال از طریق Ajax