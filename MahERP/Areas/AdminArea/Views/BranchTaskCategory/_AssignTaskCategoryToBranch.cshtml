@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.AcControl.BranchTaskCategoryViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 70%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-primary-dark">
                <h3 class="block-title">تخصیص دسته‌بندی تسک به شعبه</h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form id="assign-task-category-form" asp-controller="BranchTaskCategory" asp-action="AddTaskCategoryToBranch" asp-area="AdminArea" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="BranchId" />
                
                <div class="block block-themed block-rounded mt-1">
                    <div class="block-header bg-primary-light">
                        <h3 class="block-title">انتخاب دسته‌بندی‌های تسک</h3>
                    </div>
                    <div class="block-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row justify-content-center">
                            <!-- اطلاعات شعبه -->
                            <div class="col-12 mb-3">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle me-1"></i>
                                    <strong>شعبه:</strong> @Model.BranchName
                                </div>
                            </div>

                            @if (Model.TaskCategoriesInitial?.Any() == true)
                            {
                                <!-- انتخاب دسته‌بندی‌ها -->
                                <div class="col-12 mb-3">
                                    <label class="form-label">دسته‌بندی‌های تسک <span class="text-danger">*</span></label>
                                    
                                    <!-- انتخاب همه -->
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                        <label class="form-check-label fw-bold" for="selectAll">
                                            انتخاب همه دسته‌بندی‌ها
                                        </label>
                                    </div>
                                    
                                    <div class="row">
                                        @foreach (var category in Model.TaskCategoriesInitial)
                                        {
                                            <div class="col-md-6 col-lg-4 mb-2">
                                                <div class="form-check form-check-block">
                                                    <input class="form-check-input" type="checkbox" 
                                                           value="@category.Id" 
                                                           name="TaskCategoriesSelected" 
                                                           id="category_@category.Id"
                                                           @(Model.TaskCategoriesSelected?.Contains(category.Id) == true ? "checked" : "") />
                                                    <label class="form-check-label" for="category_@category.Id">
                                                        <span class="d-block fw-semibold">@category.Title</span>
                                                        @if (!string.IsNullOrEmpty(category.Description))
                                                        {
                                                            <span class="d-block fs-sm text-muted">@category.Description</span>
                                                        }
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <span asp-validation-for="TaskCategoriesSelected" class="text-danger"></span>
                                </div>

                                <!-- تنظیمات -->
                                <div class="col-12">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" checked />
                                        <label asp-for="IsActive" class="form-check-label" for="IsActive">وضعیت فعال</label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-12 text-center py-4">
                                    <div class="display-4 text-muted mb-3">
                                        <i class="fa fa-info-circle"></i>
                                    </div>
                                    <h5 class="text-muted">دسته‌بندی جدیدی برای افزودن موجود نیست</h5>
                                    <p class="fs-sm text-muted">
                                        همه دسته‌بندی‌های موجود قبلاً به این شعبه اضافه شده‌اند.
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="block-content block-content-full text-end bg-body">
            <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">انصراف</button>
            @if (Model.TaskCategoriesInitial?.Any() == true)
            {
                <button class="btn btn-sm btn-primary" data-save="modal-ajax-save" type="button">
                    <i class="fa fa-check me-1"></i>تخصیص دسته‌بندی‌ها
                </button>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // اجرای عملیات تخصیص
        $('[data-save="modal-ajax-save"]').click(function() {
            var selectedCategories = $('input[name="TaskCategoriesSelected"]:checked').length;
            
            if (selectedCategories === 0) {
                alert('لطفاً حداقل یک دسته‌بندی انتخاب کنید.');
                return false;
            }
            
            $('#assign-task-category-form').submit();
        });

        // انتخاب همه دسته‌بندی‌ها
        $('#selectAll').change(function() {
            $('input[name="TaskCategoriesSelected"]').prop('checked', this.checked);
        });
        
        // بررسی وضعیت انتخاب همه
        $('input[name="TaskCategoriesSelected"]').change(function() {
            var totalCheckboxes = $('input[name="TaskCategoriesSelected"]').length;
            var checkedCheckboxes = $('input[name="TaskCategoriesSelected"]:checked').length;
            
            $('#selectAll').prop('checked', totalCheckboxes === checkedCheckboxes);
            $('#selectAll').prop('indeterminate', checkedCheckboxes > 0 && checkedCheckboxes < totalCheckboxes);
        });

        // اولین بار هم چک کنیم
        $('input[name="TaskCategoriesSelected"]').trigger('change');
    });
</script>