@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.AcControl.BranchTaskCategoryViewModel

@{
    ViewData["Title"] = "افزودن دسته‌بندی تسک به شعبه";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Container -->
<main id="main-container">
    <!-- Hero Content -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
                <div class="flex-grow-1">
                    <h1 class="h3 fw-bold mb-1">افزودن دسته‌بندی تسک</h1>
                    <h2 class="fs-base lh-base fw-medium text-muted mb-0">انتصاب دسته‌بندی‌های تسک به شعبه: @Model.BranchName</h2>
                </div>
                <nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-alt">
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Home")">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Branch", new { area = "AdminArea" })">شعب</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", new { branchId = Model.BranchId })">دسته‌بندی‌های تسک</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">افزودن دسته‌بندی</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero Content -->

    <!-- Page Content -->
    <div class="content">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-plus me-1 text-muted"></i>
                    افزودن دسته‌بندی تسک به شعبه
                </h3>
                <div class="block-options">
                    <a href="@Url.Action("Index", new { branchId = Model.BranchId })" class="btn btn-sm btn-alt-secondary">
                        <i class="fa fa-arrow-right me-1"></i>بازگشت
                    </a>
                </div>
            </div>
            
            <div class="block-content">
                @if (Model.TaskCategoriesInitial?.Any() == true)
                {
                    <form asp-action="AddTaskCategoryToBranch" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="BranchId" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row justify-content-center">
                            <div class="col-xl-8 col-lg-10">
                                <!-- انتخاب دسته‌بندی‌ها -->
                                <div class="mb-4">
                                    <label class="form-label">دسته‌بندی‌های تسک <span class="text-danger">*</span></label>
                                    
                                    @if (Model.TaskCategoriesInitial.Any())
                                    {
                                        <!-- انتخاب همه -->
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="selectAll">
                                            <label class="form-check-label fw-bold" for="selectAll">
                                                انتخاب همه دسته‌بندی‌ها
                                            </label>
                                        </div>
                                        
                                        <div class="row">
                                            @foreach (var category in Model.TaskCategoriesInitial)
                                            {
                                                <div class="col-md-6 col-lg-4 mb-3">
                                                    <div class="form-check form-check-block">
                                                        <input class="form-check-input" type="checkbox" 
                                                               value="@category.Id" 
                                                               name="TaskCategoriesSelected" 
                                                               id="category_@category.Id"
                                                               @(Model.TaskCategoriesSelected?.Contains(category.Id) == true ? "checked" : "") />
                                                        <label class="form-check-label" for="category_@category.Id">
                                                            <span class="d-block fw-semibold">@category.Title</span>
                                                            @if (!string.IsNullOrEmpty(category.Description))
                                                            {
                                                                <span class="d-block fs-sm text-muted">@category.Description</span>
                                                            }
                                                        </label>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <span asp-validation-for="TaskCategoriesSelected" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle me-1"></i>
                                            همه دسته‌بندی‌های موجود قبلاً به این شعبه اضافه شده‌اند.
                                        </div>
                                    }
                                </div>

                                @if (Model.TaskCategoriesInitial.Any())
                                {
                                    <!-- تنظیمات -->
                                    <div class="block block-themed block-rounded">
                                        <div class="block-header bg-primary-light">
                                            <h3 class="block-title">تنظیمات انتصاب</h3>
                                        </div>
                                        <div class="block-content">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <div class="form-check form-switch">
                                                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                                                            <label asp-for="IsActive" class="form-check-label" for="IsActive">وضعیت فعال</label>
                                                        </div>
                                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- دکمه‌های عملیات -->
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-check me-1"></i>
                                            افزودن دسته‌بندی‌ها
                                        </button>
                                        <a href="@Url.Action("Index", new { branchId = Model.BranchId })" class="btn btn-alt-secondary">
                                            <i class="fa fa-times me-1"></i>
                                            انصراف
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="display-4 text-muted mb-3">
                            <i class="fa fa-info-circle"></i>
                        </div>
                        <h3 class="fw-normal text-muted">دسته‌بندی جدیدی برای افزودن موجود نیست</h3>
                        <p class="fs-sm text-muted">
                            همه دسته‌بندی‌های موجود قبلاً به این شعبه اضافه شده‌اند.
                        </p>
                        <a href="@Url.Action("Index", new { branchId = Model.BranchId })" class="btn btn-primary">
                            <i class="fa fa-arrow-right me-1"></i>بازگشت به لیست
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- END Page Content -->
</main>

@section Scripts {
    <script>
        $(document).ready(function() {
            // انتخاب همه دسته‌بندی‌ها
            $('#selectAll').change(function() {
                $('input[name="TaskCategoriesSelected"]').prop('checked', this.checked);
            });
            
            // بررسی وضعیت انتخاب همه
            $('input[name="TaskCategoriesSelected"]').change(function() {
                var totalCheckboxes = $('input[name="TaskCategoriesSelected"]').length;
                var checkedCheckboxes = $('input[name="TaskCategoriesSelected"]:checked').length;
                
                $('#selectAll').prop('checked', totalCheckboxes === checkedCheckboxes);
                $('#selectAll').prop('indeterminate', checkedCheckboxes > 0 && checkedCheckboxes < totalCheckboxes);
            });
        });
    </script>
}