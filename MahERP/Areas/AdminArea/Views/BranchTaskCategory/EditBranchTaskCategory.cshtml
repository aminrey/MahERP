@model MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.AcControl.BranchTaskCategoryStakeholderViewModel

@{
    ViewData["Title"] = "ویرایش انتصاب دسته‌بندی";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Container -->
<main id="main-container">
    <!-- Hero Content -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
                <div class="flex-grow-1">
                    <h1 class="h3 fw-bold mb-1">ویرایش انتصاب دسته‌بندی</h1>
                    <h2 class="fs-base lh-base fw-medium text-muted mb-0">ویرایش انتساب دسته‌بندی "@Model.TaskCategoryTitle" به شعبه "@Model.BranchName" و طرف حساب "@Model.StakeholderName"</h2>
                </div>
                <nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-alt">
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Home")">داشبورد</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", "Branch", new { area = "AdminArea" })">شعب</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a class="link-fx" href="@Url.Action("Index", new { branchId = Model.BranchId })">دسته‌بندی‌های تسک</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">ویرایش انتصاب</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero Content -->

    <!-- Page Content -->
    <div class="content">
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-edit me-1 text-muted"></i>
                    ویرایش انتصاب دسته‌بندی
                </h3>
                <div class="block-options">
                    <a href="@Url.Action("Index", new { branchId = Model.BranchId })" class="btn btn-sm btn-alt-secondary">
                        <i class="fa fa-arrow-right me-1"></i>بازگشت
                    </a>
                </div>
            </div>
            
            <div class="block-content">
                <form asp-action="EditBranchTaskCategory" method="post">
                    @Html.AntiForgeryToken()
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BranchId" />
                    <input type="hidden" asp-for="TaskCategoryIdSelected" />
                    <input type="hidden" asp-for="StakeholderId" />
                    <input type="hidden" asp-for="AssignDate" />
                    <input type="hidden" asp-for="AssignedByUserId" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- اطلاعات نمایشی -->
                            <div class="row mb-4">
                                <div class="col-sm-6">
                                    <div class="p-3 bg-body-light rounded">
                                        <h6 class="fw-semibold mb-1">شعبه</h6>
                                        <p class="mb-0">@Model.BranchName</p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="p-3 bg-body-light rounded">
                                        <h6 class="fw-semibold mb-1">دسته‌بندی تسک</h6>
                                        <p class="mb-0">@Model.TaskCategoryTitle</p>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-3">
                                    <div class="p-3 bg-body-light rounded">
                                        <h6 class="fw-semibold mb-1">طرف حساب</h6>
                                        <p class="mb-0">@Model.StakeholderName</p>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-3">
                                    <div class="p-3 bg-body-light rounded">
                                        <h6 class="fw-semibold mb-1">تاریخ تخصیص</h6>
                                        <p class="mb-0">@Model.AssignDatePersian</p>
                                    </div>
                                </div>
                            </div>

                            <!-- تنظیمات قابل ویرایش -->
                            <div class="form-group mb-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                                    <label asp-for="IsActive" class="form-check-label" for="IsActive">
                                        وضعیت فعال
                                    </label>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                                <small class="form-text text-muted">
                                    در صورت غیرفعال کردن، این دسته‌بندی در لیست دسته‌بندی‌های قابل انتخاب برای تسک‌های این شعبه و طرف حساب نمایش داده نخواهد شد.
                                </small>
                            </div>

                            <!-- دکمه‌های عملیات -->
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fa fa-check me-1"></i>ذخیره تغییرات
                                </button>
                                <a href="@Url.Action("Index", new { branchId = Model.BranchId })" class="btn btn-alt-secondary">
                                    <i class="fa fa-times me-1"></i>انصراف
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END Page Content -->
</main>
<!-- END Main Container -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}