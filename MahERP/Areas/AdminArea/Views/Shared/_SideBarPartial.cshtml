<!-- Modal Advanced Search -->
<div class="modal fade" id="modal-advanced-search" tabindex="-1" role="dialog" aria-labelledby="modal-advanced-search" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="advanced-search-content">
            <!-- Content will be loaded here via AJAX -->
        </div>
    </div>
</div>

<!-- Modal Advanced Search for Tasks -->
<div class="modal fade" id="modal-advanced-search-task" tabindex="-1" role="dialog" aria-labelledby="modal-advanced-search-task" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="advanced-search-task-content">
            <!-- Content will be loaded here via AJAX -->
        </div>
    </div>
</div>

<!-- JavaScript for Advanced Search Modal -->
<script>
    function loadAdvancedSearchModal() {
        $("#advanced-search-content").html('<div class="text-center p-3"><i class="fa fa-spinner fa-spin fa-3x"></i><p class="mt-2">در حال بارگذاری...</p></div>');

        $.ajax({
            url: '@Url.Action("AdvancedSearch", "Stakeholder", new { area = "AdminArea" })',
            type: 'GET',
            success: function (result) {
                $("#advanced-search-content").html(result);
            },
            error: function () {
                $("#advanced-search-content").html('<div class="text-center p-3 text-danger"><i class="fa fa-exclamation-triangle fa-3x"></i><p class="mt-2">خطا در بارگذاری فرم جستجو</p></div>');
            }
        });
    }

    function loadTaskAdvancedSearchModal() {
        $("#advanced-search-task-content").html('<div class="text-center p-3"><i class="fa fa-spinner fa-spin fa-3x"></i><p class="mt-2">در حال بارگذاری...</p></div>');

        $.ajax({
            url: '@Url.Action("AdvancedSearch", "Task", new { area = "AdminArea" })',
            type: 'GET',
            success: function (result) {
                $("#advanced-search-task-content").html(result);
            },
            error: function () {
                $("#advanced-search-task-content").html('<div class="text-center p-3 text-danger"><i class="fa fa-exclamation-triangle fa-3x"></i><p class="mt-2">خطا در بارگذاری فرم جستجو</p></div>');
            }
        });
    }
</script>