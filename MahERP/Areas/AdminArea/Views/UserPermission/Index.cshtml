@model List<AppUsers>
@{
    ViewData["Title"] = "مدیریت دسترسی کاربران";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                <i class="fa fa-users-cog text-primary me-2"></i>مدیریت دسترسی کاربران
            </h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="AdminArea" asp-controller="Dashboard" asp-action="Index">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">دسترسی کاربران</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Page Content -->
<div class="content">
    <!-- Search Box -->
    <div class="block block-rounded mb-4">
        <div class="block-content">
            <div class="input-group input-group-lg">
                <span class="input-group-text">
                    <i class="fa fa-search"></i>
                </span>
                <input type="text" class="form-control" id="searchBox" 
                       placeholder="جستجوی کاربر (نام، نام خانوادگی، ایمیل)...">
            </div>
        </div>
    </div>

    <!-- Users List -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-list text-muted me-1"></i>لیست کاربران
            </h3>
            <div class="block-options">
                <span class="badge bg-primary">@Model.Count کاربر</span>
            </div>
        </div>
        <div class="block-content">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-vcenter" id="usersTable">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 60px;">#</th>
                                <th>نام و نام خانوادگی</th>
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>سمت</th>
                                <th class="text-center">وضعیت</th>
                                <th class="text-center" style="width: 250px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.ProfileImagePath))
                                        {
                                            <img src="@user.ProfileImagePath" alt="@user.FirstName" 
                                                 class="rounded-circle" style="width: 40px; height: 40px;" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px;">
                                                <strong>@user.FirstName.Substring(0, 1)</strong>
                                            </div>
                                        }
                                    </td>
                                    <td class="fw-semibold">
                                        @user.FirstName @user.LastName
                                    </td>
                                    <td>
                                        <code>@user.UserName</code>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.Email))
                                        {
                                            <a href="mailto:@user.Email">@user.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.PositionName))
                                        {
                                            <span class="badge bg-info">@user.PositionName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fa fa-check me-1"></i>فعال
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fa fa-times me-1"></i>غیرفعال
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="ManageUserRoles" asp-route-userId="@user.Id" 
                                               class="btn btn-sm btn-primary" title="مدیریت نقش‌ها">
                                                <i class="fa fa-user-shield me-1"></i>نقش‌ها
                                            </a>
                                            <a asp-action="ManageUserPermissions" asp-route-userId="@user.Id" 
                                               class="btn btn-sm btn-success" title="مدیریت دسترسی‌ها">
                                                <i class="fa fa-key me-1"></i>دسترسی‌ها
                                            </a>
                                            <a asp-action="ViewPermissionLogs" asp-route-userId="@user.Id" 
                                               class="btn btn-sm btn-info" title="لاگ دسترسی‌ها">
                                                <i class="fa fa-history"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i>
                    هیچ کاربری یافت نشد.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchBox').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#usersTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}