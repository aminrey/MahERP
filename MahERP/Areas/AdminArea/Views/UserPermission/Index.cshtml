@model List<UserPermissionViewModel>
@{
    ViewData["Title"] = "مدیریت دسترسی کاربران";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">مدیریت دسترسی کاربران</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="AdminArea" asp-controller="Home" asp-action="Index">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">دسترسی کاربران</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="javascript:void(0)" onclick="loadModal('@Url.Action("AssignRolePattern")')">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-primary mb-1">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                        تخصیص الگوی نقش
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-controller="RolePattern" asp-action="Index">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-info mb-1">
                        <i class="fa fa-shield-alt"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                        مدیریت الگوهای نقش
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="PermissionLogs">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-warning mb-1">
                        <i class="fa fa-clipboard-list"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-warning text-uppercase mb-0">
                        لاگ دسترسی‌ها
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="block block-rounded text-center h-100 mb-0">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-success mb-1">
                        <i class="fa fa-users"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                        @Model.Count کاربر
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-users text-muted me-1"></i> لیست کاربران و دسترسی‌ها
            </h3>
            <div class="block-options">
                <button type="button" class="btn btn-sm btn-primary" onclick="loadModal('@Url.Action("AssignRolePattern")')">
                    <i class="fa fa-plus opacity-50 me-1"></i> تخصیص الگوی نقش
                </button>
            </div>
        </div>
        <div class="block-content block-content-full">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-vcenter js-dataTable-responsive">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 60px;">ردیف</th>
                                <th class="text-center">نام کاربر</th>
                                <th class="text-center d-none d-md-table-cell">ایمیل</th>
                                <th class="text-center d-none d-lg-table-cell">سمت</th>
                                <th class="text-center">نقش‌های سیستم</th>
                                <th class="text-center">الگوهای نقش</th>
                                <th class="text-center" style="width: 80px;">وضعیت</th>
                                <th class="text-center" style="width: 160px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td class="text-center fs-sm">
                                        <strong>@(i + 1)</strong>
                                    </td>
                                    <td class="text-center fw-semibold">
                                        <div>@Model[i].FullName</div>
                                        <div class="fs-sm text-muted">@Model[i].UserName</div>
                                    </td>
                                    <td class="text-center d-none d-md-table-cell fs-sm">
                                        @Model[i].Email
                                    </td>
                                    <td class="text-center d-none d-lg-table-cell fs-sm">
                                        @(string.IsNullOrEmpty(Model[i].PositionName) ? "-" : Model[i].PositionName)
                                    </td>
                                    <td class="text-center">
                                        @if (Model[i].SystemRoles.Any())
                                        {
                                            @foreach (var role in Model[i].SystemRoles)
                                            {
                                                <span class="badge bg-secondary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (Model[i].RolePatterns.Any())
                                        {
                                            @foreach (var pattern in Model[i].RolePatterns.Where(rp => rp.IsActive))
                                            {
                                                <span class="badge bg-primary me-1" data-bs-toggle="tooltip" title="تخصیص: @ConvertDateTime.ConvertMiladiToShamsi(pattern.AssignDate, "yyyy/MM/dd")">
                                                    @pattern.PatternName
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">هیچ الگوی نقشی تخصیص نیافته</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (Model[i].IsActive)
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-alt-secondary" asp-action="UserPermissions" asp-route-userId="@Model[i].UserId" data-bs-toggle="tooltip" title="مشاهده دسترسی‌ها">
                                                <i class="fa fa-fw fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-alt-secondary" href="@Url.Action("AssignRolePattern", "UserPermission", new { userId = Model[i].UserId })" data-bs-toggle="tooltip" title="تخصیص الگوی نقش">
                                                <i class="fa fa-fw fa-plus"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-alt-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-fw fa-ellipsis-v"></i>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-end fs-sm">
                                                @if (Model[i].RolePatterns.Any(rp => rp.IsActive))
                                                {
                                                    @foreach (var pattern in Model[i].RolePatterns.Where(rp => rp.IsActive))
                                                    {
                                                        <a class="dropdown-item text-danger" href="@Url.Action("RemoveRolePattern", "UserPermission", new { id = pattern.Id })">
                                                            <i class="fa fa-fw fa-times me-1"></i> حذف "@pattern.PatternName"
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="dropdown-item text-muted">هیچ الگوی نقشی برای حذف وجود ندارد</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i> هیچ کاربری یافت نشد.
                </div>
            }
        </div>
    </div>
</div>
<!-- END Page Content -->
<!-- Modal Container -->
<div class="modal fade" id="modal-userpermission" tabindex="-1" role="dialog" aria-labelledby="modal-userpermission" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i>
                    <h3 class="mt-2 mb-3">در حال بارگذاری...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadModal(url) {
            $('#modal-userpermission .modal-content').html('<div class="modal-body text-center"><i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i><h3 class="mt-2 mb-3">در حال بارگذاری...</h3></div>');
            $('#modal-userpermission').modal('show');

            $.get(url, function(data) {
                $('#modal-userpermission .modal-content').html(data);
            });
        }

        $(document).ready(function() {
            $('.js-dataTable-responsive').DataTable({
                language: {
                    url: '/assets/js/plugins/datatables/i18n/fa.json'
                },
                autoWidth: false,
                responsive: true,
                pageLength: 25,
                order: [[1, "asc"]] // Order by user name
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}