@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.CreateTeamPositionViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <i class="fa fa-plus text-success me-2"></i>
                تعریف سمت جدید برای تیم: @Model.TeamTitle
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
        </div>
        
        <form method="post" asp-action="CreatePositionSubmit" asp-controller="Team" asp-area="AdminArea">
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TeamId" />
                <input type="hidden" asp-for="TeamTitle" />

                <!-- سمت‌های پیشنهادی -->
                <div class="mb-4">
                    <h6 class="mb-3">
                        <i class="fa fa-lightbulb text-warning me-1"></i>
                        سمت‌های پیشنهادی
                    </h6>
                    <div class="row g-2" id="suggestedPositionsContainer">
                        <!-- دکمه‌ها با JavaScript اضافه می‌شوند -->
                    </div>
                </div>

                <div class="row">
                    <!-- عنوان سمت -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label required">عنوان سمت</label>
                        <input asp-for="Title" class="form-control" id="titleField" 
                               placeholder="عنوان سمت را وارد کنید" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- سطح قدرت -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="PowerLevel" class="form-label required">سطح قدرت</label>
                        <input asp-for="PowerLevel" type="number" class="form-control" id="powerLevelField" 
                               min="0" max="999" placeholder="عدد سطح قدرت (0 = بالاترین)" />
                        <small class="form-text text-muted">عدد کمتر = قدرت بیشتر</small>
                        <span asp-validation-for="PowerLevel" class="text-danger"></span>
                    </div>
                </div>

                <!-- توضیحات -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">توضیحات</label>
                    <textarea asp-for="Description" class="form-control" rows="3" 
                              placeholder="توضیحات اختیاری در مورد این سمت..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <!-- حداکثر اعضا -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaxMembers" class="form-label">حداکثر تعداد اعضا</label>
                        <input asp-for="MaxMembers" type="number" class="form-control" min="1" 
                               placeholder="بدون محدودیت" />
                        <small class="form-text text-muted">خالی بگذارید برای بدون محدودیت</small>
                        <span asp-validation-for="MaxMembers" class="text-danger"></span>
                    </div>

                    <!-- تنظیمات -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">تنظیمات</label>
                        <div class="form-check">
                            <input asp-for="IsDefault" class="form-check-input" id="isDefaultCheckbox" />
                            <label asp-for="IsDefault" class="form-check-label">سمت پیش‌فرض</label>
                            <div class="alert alert-warning mt-2" id="defaultWarning" style="display: none;">
                                <i class="fa fa-exclamation-triangle me-1"></i>
                                <small>تنها یک سمت در هر تیم می‌تواند پیش‌فرض باشد.</small>
                            </div>
                        </div>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">وضعیت فعال</label>
                        </div>
                    </div>
                </div>

                <!-- مجوزهای مشاهده تسک -->
                <div class="border rounded p-3 mb-3">
                    <h6 class="mb-3">
                        <i class="fa fa-eye text-info me-1"></i>
                        مجوزهای مشاهده تسک
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="CanViewSubordinateTasks" class="form-check-input" checked />
                                <label asp-for="CanViewSubordinateTasks" class="form-check-label">مشاهده تسک‌های زیردستان</label>
                                <small class="form-text text-muted d-block">
                                    مشاهده تسک‌های سمت‌های پایین‌تر
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="CanViewPeerTasks" class="form-check-input" />
                                <label asp-for="CanViewPeerTasks" class="form-check-label">مشاهده تسک‌های همسطح</label>
                                <small class="form-text text-muted d-block">
                                    مشاهده تسک‌های سمت‌های همسطح
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- راهنما -->
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i>
                    <strong>راهنما:</strong>
                    <ul class="mb-0 mt-2">
                        <li>سطح قدرت برای تعیین سلسله مراتب استفاده می‌شود (عدد کمتر = قدرت بیشتر)</li>
                        <li>سمت پیش‌فرض به طور خودکار به اعضای جدید اختصاص می‌یابد</li>
                        <li>مجوزهای مشاهده تسک برای کنترل دسترسی کاربران استفاده می‌شود</li>
                    </ul>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>
                    انصراف
                </button>
                <button type="submit" class="btn btn-success" data-save="modal-ajax-save">
                    <i class="fa fa-save me-1"></i>
                    ایجاد سمت
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
$(document).ready(function() {
    // سمت‌های پیشنهادی
    var suggestedPositions = [
        { title: 'مدیر تیم', powerLevel: 0, description: 'مسئول کل تیم' },
        { title: 'معاون', powerLevel: 1, description: 'کمک به مدیر' },
        { title: 'سرپرست', powerLevel: 2, description: 'نظارت بر بخش خاص' },
        { title: 'کارشناس ارشد', powerLevel: 3, description: 'کارهای تخصصی پیچیده' },
        { title: 'کارشناس', powerLevel: 4, description: 'کارهای تخصصی معمولی' },
        { title: 'کارشناس مبتدی', powerLevel: 5, description: 'یادگیری و کارهای ساده' },
        { title: 'کارمند', powerLevel: 6, description: 'کارهای عمومی' },
        { title: 'منشی', powerLevel: 7, description: 'پشتیبانی اداری' }
    ];

    // ایجاد دکمه‌های سمت‌های پیشنهادی
    function createSuggestedButtons() {
        var container = $('#suggestedPositionsContainer');
        container.empty();

        suggestedPositions.forEach(function(position, index) {
            var button = $(`
                <div class="col-md-3 col-sm-6">
                    <div class="form-check form-block">
                        <input class="form-check-input" id="suggested-${index}" name="suggested-position" type="radio" value="${index}"/>
                        <label class="form-check-label" for="suggested-${index}">
                            <span class="d-block fw-normal text-center py-2">
                                <span class="fw-semibold d-block">${position.title}</span>
                                <span class="fs-sm text-muted d-block">سطح ${position.powerLevel}</span>
                                <span class="fs-xs text-muted">${position.description}</span>
                            </span>
                        </label>
                    </div>
                </div>
            `);
            container.append(button);
        });

        // رویداد کلیک روی سمت‌های پیشنهادی
        container.on('change', 'input[name="suggested-position"]', function() {
            var index = parseInt($(this).val());
            var position = suggestedPositions[index];
            
            $('#titleField').val(position.title);
            $('#powerLevelField').val(position.powerLevel);
            
            // حذف انتخاب سمت پیشنهادی بعد از یک لحظه
            setTimeout(function() {
                $('input[name="suggested-position"]').prop('checked', false);
            }, 200);
        });
    }

    // نمایش/مخفی کردن هشدار سمت پیش‌فرض
    $('#isDefaultCheckbox').change(function() {
        if ($(this).is(':checked')) {
            $('#defaultWarning').slideDown();
        } else {
            $('#defaultWarning').slideUp();
        }
    });

    // اعتبارسنجی فرم
    $('form').on('submit', function(e) {
        var title = $('#titleField').val().trim();
        var powerLevel = $('#powerLevelField').val();

        if (!title) {
            e.preventDefault();
            alert('لطفاً عنوان سمت را وارد کنید.');
            $('#titleField').focus();
            return false;
        }

        if (!powerLevel || powerLevel < 0 || powerLevel > 999) {
            e.preventDefault();
            alert('لطفاً سطح قدرت معتبر (0 تا 999) وارد کنید.');
            $('#powerLevelField').focus();
            return false;
        }
    });

    // ایجاد دکمه‌های سمت‌های پیشنهادی
    createSuggestedButtons();
});
</script>

<style>
    .form-check.form-block {
        margin-bottom: 10px;
    }

    .form-check.form-block input[type="radio"]:checked + label {
        background-color: rgba(40, 167, 69, 0.1);
        border-color: #28a745;
        color: #155724;
    }

    .form-check.form-block label {
        cursor: pointer;
        border: 2px solid rgba(0,0,0,.125);
        border-radius: 8px;
        padding: 10px;
        transition: all 0.2s ease;
        background-color: white;
        width: 100%;
    }

    .form-check.form-block label:hover {
        border-color: rgba(40, 167, 69, 0.5);
        background-color: rgba(40, 167, 69, 0.05);
    }

    .required::after {
        content: " *";
        color: #dc3545;
    }

    #defaultWarning {
        background-color: rgba(255, 193, 7, 0.1);
        border-color: rgba(255, 193, 7, 0.2);
    }
</style>