@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.TeamViewModel
@{
    ViewData["Title"] = "ایجاد تیم جدید";
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">@ViewData["Title"]</h3>
        <div class="block-options">
            <a asp-action="Index" asp-route-branchId="@Model.BranchId" class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-left me-1"></i> بازگشت
            </a>
        </div>
    </div>
    <div class="block-content">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="BranchId" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label required"></label>
                        <input asp-for="Title" class="form-control" placeholder="نام تیم را وارد کنید" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ParentTeamId" class="form-label"></label>
                        <select asp-for="ParentTeamId" class="form-select" asp-items="ViewBag.ParentTeams">
                        </select>
                        <span asp-validation-for="ParentTeamId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ManagerUserId" class="form-label"></label>
                        <select asp-for="ManagerUserId" class="form-select" asp-items="ViewBag.AvailableUsers">
                        </select>
                        <span asp-validation-for="ManagerUserId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="AccessLevel" class="form-label"></label>
                        <select asp-for="AccessLevel" class="form-select" asp-items="ViewBag.AccessLevels">
                        </select>
                        <span asp-validation-for="AccessLevel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" min="1" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="توضیحات تیم (اختیاری)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ایجاد تیم
                </button>
                <a asp-action="Index" asp-route-branchId="@Model.BranchId" class="btn btn-secondary">
                    <i class="fa fa-times me-1"></i> انصراف
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}