@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.TeamViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title text-danger">
                <i class="fa fa-exclamation-triangle me-1"></i>
                تایید حذف
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        @if (ViewBag.CanDelete)
        {
            <form asp-action="DeleteSubmit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="modal-body">
                    <div class="text-center">
                        <i class="fa fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h5>@ViewBag.DeleteMessage</h5>
                        <p class="text-muted">این عمل قابل بازگشت نیست.</p>
                        
                        <div class="alert alert-warning">
                            <strong>تیم:</strong> @Model.Title<br>
                            <strong>شعبه:</strong> @Model.BranchName
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-danger" data-save="modal-ajax-save">
                        <i class="fa fa-trash me-1"></i> حذف تیم
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-ban fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">@ViewBag.DeleteMessage</h5>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        }
    </div>
</div>