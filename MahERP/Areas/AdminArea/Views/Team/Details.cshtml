@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.TeamViewModel
@{
    ViewData["Title"] = "جزئیات تیم - " + Model.Title;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">@ViewData["Title"]</h3>
        <div class="block-options">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-alt-primary">
                <i class="fa fa-edit me-1"></i> ویرایش
            </a>
            <a asp-action="OrganizationalChart" asp-route-branchId="@Model.BranchId" class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-left me-1"></i> بازگشت
            </a>
        </div>
    </div>
    <div class="block-content">
        <div class="row">
            <div class="col-md-8">
                <!-- Team Information -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">اطلاعات تیم</h3>
                    </div>
                    <div class="block-content">
                        <!-- Team info content -->
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>عنوان:</strong> @Model.Title</p>
                                <p><strong>شعبه:</strong> @Model.BranchName</p>
                                <p>
                                    <strong>سطح دسترسی:</strong>
                                    <span class="badge bg-@(Model.AccessLevel == 0 ? "primary" : "secondary")">@Model.AccessLevelText</span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <strong>تیم والد:</strong>
                                    @(string.IsNullOrEmpty(Model.ParentTeamTitle) ? "ریشه" : Model.ParentTeamTitle)
                                </p>
                                <p>
                                    <strong>وضعیت:</strong>
                                    <span class="badge bg-@(Model.IsActive ? "success" : "danger")">@(Model.IsActive ? "فعال" : "غیرفعال")</span>
                                </p>
                                <p><strong>ترتیب نمایش:</strong> @Model.DisplayOrder</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <hr>
                            <p><strong>توضیحات:</strong></p>
                            <p class="text-muted">@Model.Description</p>
                        }
                    </div>
                </div>

              <!-- Team Positions - بخش اصلاح شده -->
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">سمت‌های تیم</h3>
        <div class="block-options">
            <button type="button" class="btn btn-sm btn-alt-success"
                    data-toggle="modal-ajax"
                    href="@Url.Action("CreatePositionModal", "Team", new { teamId = Model.Id })">
                <i class="fa fa-plus me-1"></i> تعریف سمت جدید
            </button>
            <button type="button" class="btn btn-sm btn-alt-info"
                    data-toggle="modal-ajax"
                    href="@Url.Action("ManageTaskViewersModal", "Team", new { teamId = Model.Id })">
                <i class="fa fa-eye me-1"></i> مجوزهای مشاهده تسک
            </button>
        </div>
    </div>
    <div class="block-content">
        <div id="team-positions-hierarchy">
            @if (Model.TeamPositions?.Any() == true)
            {
               
                    // ایجاد TeamHierarchyViewModel برای نمایش
                    var hierarchyData = new TeamHierarchyViewModel
                    {
                        TeamId = Model.Id,
                        TeamTitle = Model.Title,
                        Positions = Model.TeamPositions.OrderBy(p => p.PowerLevel).Select(p => new TeamPositionHierarchyViewModel
                        {
                            Id = p.Id,
                            Title = p.Title,
                            Description = p.Description,
                            PowerLevel = p.PowerLevel,
                            CurrentMembers = p.Members?.Count(m => m.IsActive) ?? 0,
                            MaxMembers = p.MaxMembers,
                            CanAddMember = !p.MaxMembers.HasValue || (p.Members?.Count(m => m.IsActive) ?? 0) < p.MaxMembers.Value,
                            PowerLevelText = p.PowerLevel switch
                            {
                                0 => "مدیر تیم",
                                1 => "معاون/سرپرست", 
                                2 => "کارشناس ارشد",
                                3 => "کارشناس",
                                _ => $"سطح {p.PowerLevel}"
                            },
                            Members = p.Members?.Where(m => m.IsActive).ToList() ?? new List<TeamMemberViewModel>()
                        }).ToList(),
                        MembersWithoutPosition = Model.TeamMembers?.Where(m => m.IsActive && !m.PositionId.HasValue).ToList() ?? new List<TeamMemberViewModel>()
                    };
                
                @await Html.PartialAsync("_TeamPositionsHierarchy", hierarchyData)
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fa fa-briefcase fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">هیچ سمتی تعریف نشده است</h5>
                    <p class="text-muted">برای شروع، اولین سمت تیم را تعریف کنید</p>
                    <button type="button" class="btn btn-primary"
                            data-toggle="modal-ajax"
                            href="@Url.Action("CreatePositionModal", "Team", new { teamId = Model.Id })">
                        <i class="fa fa-plus me-1"></i> تعریف اولین سمت
                    </button>
                </div>
            }
        </div>
    </div>
</div>
                <!-- Team Members - بخش اصلاح شده -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">اعضای تیم (@Model.TeamMembers.Count)</h3>
                        <div class="block-options">
                            <button type="button" class="btn btn-sm btn-alt-success"
                                    data-toggle="modal-ajax"
                                    href="@Url.Action("AddMemberModal", new { teamId = Model.Id })">
                                <i class="fa fa-plus me-1"></i> اضافه کردن عضو
                            </button>
                        </div>
                    </div>
                    <div class="block-content">
                        <div id="team-members-table">
                            @{
                                ViewBag.TeamId = Model.Id;
                            }
                            @await Html.PartialAsync("_TeamMembersTable", Model.TeamMembers)
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Manager Information -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">مدیر تیم</h3>
                    </div>
                    <div class="block-content">
                        <div id="manager-info-card">
                            @await Html.PartialAsync("_ManagerCard", Model)
                        </div>
                    </div>
                </div>

                <!-- Audit Information -->
                <div class="block block-rounded">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">اطلاعات کنترلی</h3>
                    </div>
                    <div class="block-content">
                        <p>
                            <small class="text-muted">ایجاد شده:</small><br>
                            @ConvertDateTime.ConvertMiladiToShamsi(Model.CreateDate, "yyyy/MM/dd HH:mm")
                        </p>

                        @if (!string.IsNullOrEmpty(Model.CreatorName))
                        {
                            <p><small class="text-muted">ایجاد کننده:</small><br>@Model.CreatorName</p>
                        }

                        @if (Model.LastUpdateDate.HasValue)
                        {
                            <p>
                                <small class="text-muted">آخرین بروزرسانی:</small><br>
                                @ConvertDateTime.ConvertMiladiToShamsi(Model.LastUpdateDate.Value, "yyyy/MM/dd HH:mm")
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Model.LastUpdaterName))
                        {
                            <p><small class="text-muted">آخرین بروزرسان:</small><br>@Model.LastUpdaterName</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

