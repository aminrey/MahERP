@model ManageTeamTaskViewersViewModel

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">مدیریت مجوزهای مشاهده تسک‌ها - @Model.TeamTitle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
            <div class="alert alert-info">
                <h6><i class="fa fa-info-circle me-1"></i> اطلاعات تیم</h6>
                <p><strong>تیم:</strong> @Model.TeamTitle</p>
                <p><strong>تعداد اعضا:</strong> @Model.TeamMembers.Count()</p>
                <p><strong>کاربران در دسترس:</strong> @Model.AvailableUsers.Count()</p>
            </div>

            <!-- محتوای اصلی بعداً اضافه می‌شود -->
            <div class="text-center">
                <p class="text-muted">این بخش در حال توسعه است.</p>
                <button type="button" class="btn btn-primary" onclick="alert('عملکرد تست - مودال باز شد!')">
                    تست عملکرد
                </button>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
        </div>
    </div>
</div>