@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.OrganizationalChartViewModel
@{
    ViewData["Title"] = "چارت سازمانی - " + Model.BranchName;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">@ViewData["Title"]</h3>
        <div class="block-options">
            <div class="dropdown">
                <button type="button" class="btn btn-sm btn-alt-primary dropdown-toggle" id="branchDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-building me-1"></i> @Model.BranchName
                </button>
                <div class="dropdown-menu" aria-labelledby="branchDropdown">
                    @foreach (var branch in ViewBag.UserBranches as SelectList)
                    {
                        <a class="dropdown-item" href="@Url.Action("OrganizationalChart", new { branchId = branch.Value })">
                            @branch.Text
                        </a>
                    }
                </div>
            </div>

            <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-sm btn-alt-success">
                <i class="fa fa-plus opacity-50 me-1"></i> تیم جدید
            </a>
        </div>
    </div>
    <div class="block-content">
        <div class="row">
            <div class="col-12">
                <div id="org-chart-container" class="text-center">
                    @if (Model.RootTeams.Any())
                    {
                        @foreach (var rootTeam in Model.RootTeams)
                        {
                            @await Html.PartialAsync("_TeamNode", rootTeam)
                        }
                    }
                    else
                    {
                        <div class="empty-state py-5">
                            <i class="fa fa-sitemap fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">هیچ تیمی تعریف نشده است</h4>
                            <p class="text-muted">برای شروع، یک تیم جدید ایجاد کنید</p>
                            <a asp-action="Create" asp-route-branchId="@Model.BranchId" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> ایجاد اولین تیم
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .org-chart-container {
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .team-node {
            display: inline-block;
            margin: 10px;
            position: relative;
            vertical-align: top;
        }

        .team-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 20px;
            color: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            min-width: 250px;
            position: relative;
            overflow: hidden;
        }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .team-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);    
        }

        .team-title {
            font-size: 1.1em;
            font-weight: bold;
            margin-bottom: 8px;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        }

        .team-manager {
            font-size: 0.9em;
            opacity: 0.9;
            margin-bottom: 12px;
        }

        .team-actions {
            display: flex;
            gap: 5px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .team-actions .btn {
            padding: 4px 8px;
            font-size: 0.8em;
            border-radius: 6px;
        }

        .child-teams {
            margin-top: 30px;
            position: relative;
            display: flex;
            flex-direction: row;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .child-teams::before {
            content: '';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 15px;
            background: #dee2e6;
        }

        .child-teams::after {
            content: '';
            position: absolute;
            top: -15px;
            left: 0;
            right: 0;
            height: 2px;
            background: #dee2e6;
            z-index: -1;
        }

        .child-teams > .team-node::before {
            content: '';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 15px;
            background: #dee2e6;
        }

        .team-node:not(:has(.child-teams)) .team-card {
            margin-bottom: 0;
        }

        .empty-state {
            background: white;
            border-radius: 12px;
            border: 2px dashed #dee2e6;
        }

        .manager-empty {
            color: rgba(255, 255, 255, 0.7);
            font-style: italic;
        }

        @@media (max-width: 768px) {
            .team-card {
                min-width: 200px;
                padding: 15px;
            }
            
            .team-actions {
                flex-direction: column;
            }

            .child-teams {
                flex-direction: column;
                align-items: center;
            }

            .child-teams::after {
                display: none;
            }
        }

        .team-node[data-level="0"] .team-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .team-node[data-level="1"] .team-card {
            background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
        }

        .team-node[data-level="2"] .team-card {
            background: linear-gradient(135deg, #45b7d1 0%, #96c93d 100%);
        }

        .team-node[data-level="3"] .team-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
    </style>
}

@section Scripts {
    <script>
        function refreshChart() {
            location.reload();
        }
        
        function updateChartNode(teamId) {
            refreshChart();
        }
    </script>
}
