@model List<MahERP.DataModelLayer.ViewModels.OrganizationViewModels.TeamViewModel>
@{
    ViewData["Title"] = "مدیریت تیم‌ها - " + ViewBag.BranchName;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">@ViewData["Title"]</h3>
        <div class="block-options">
            <div class="dropdown">
                <button type="button" class="btn btn-sm btn-alt-primary dropdown-toggle" id="branchDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-building me-1"></i> @ViewBag.BranchName
                </button>
                <div class="dropdown-menu" aria-labelledby="branchDropdown">
                    @foreach (var branch in ViewBag.UserBranches as SelectList)
                    {
                        <a class="dropdown-item" href="@Url.Action("Index", new { branchId = branch.Value })">
                            @branch.Text
                        </a>
                    }
                </div>
            </div>
            <a asp-action="OrganizationalChart" asp-route-branchId="@ViewBag.BranchId" class="btn btn-sm btn-alt-info">
                <i class="fa fa-sitemap opacity-50 me-1"></i> چارت سازمانی
            </a>
            <a asp-action="Create" asp-route-branchId="@ViewBag.BranchId" class="btn btn-sm btn-alt-success">
                <i class="fa fa-plus opacity-50 me-1"></i> تیم جدید
            </a>
        </div>
    </div>
    <div class="block-content">
        <!-- Team Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="block block-rounded bg-primary-light">
                    <div class="block-content py-3">
                        <div class="fs-4 fw-semibold text-primary text-center">
                            @Model.Count
                        </div>
                        <div class="text-center">تعداد کل تیم‌ها</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block block-rounded bg-success-light">
                    <div class="block-content py-3">
                        <div class="fs-4 fw-semibold text-success text-center">
                            @Model.Count(t => t.HasManager)
                        </div>
                        <div class="text-center">تیم‌های دارای مدیر</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block block-rounded bg-warning-light">
                    <div class="block-content py-3">
                        <div class="fs-4 fw-semibold text-warning text-center">
                            @Model.Count(t => !t.HasManager)
                        </div>
                        <div class="text-center">تیم‌های بدون مدیر</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block block-rounded bg-info-light">
                    <div class="block-content py-3">
                        <div class="fs-4 fw-semibold text-info text-center">
                            @Model.Count(t => t.IsActive)
                        </div>
                        <div class="text-center">تیم‌های فعال</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Team Statistics -->

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 50px;">#</th>
                        <th class="text-center">عنوان تیم</th>
                        <th class="text-center">تیم والد</th>
                        <th class="text-center">مدیر تیم</th>
                        <th class="text-center">سطح دسترسی</th>
                        <th class="text-center" style="width: 80px;">وضعیت</th>
                        <th class="text-center" style="width: 200px;">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.Id</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="fw-semibold">
                                    @item.Title
                                </a>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br><small class="text-muted">@item.Description</small>
                                }
                            </td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ParentTeamTitle))
                                {
                                    <span class="badge bg-info">@item.ParentTeamTitle</span>
                                }
                                else
                                {
                                    <span class="text-muted">ریشه</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.HasManager)
                                {
                                    <span class="badge bg-success">
                                        <i class="fa fa-user me-1"></i>@item.ManagerFullName
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fa fa-user-slash me-1"></i>بدون مدیر
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-@(item.AccessLevel == 0 ? "primary" : "secondary")">
                                    @item.AccessLevelText
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غیرفعال</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip" title="جزئیات">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip" title="ویرایش">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip"
                                        title="@(item.IsActive ? "غیرفعال‌سازی" : "فعال‌سازی")"
                                        onclick="toggleTeamStatus(@item.Id)">
                                    <i class="fa @(item.IsActive ? "fa-ban" : "fa-check")"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-alt-danger" data-bs-toggle="tooltip" title="حذف"
                                        onclick="deleteTeam(@item.Id)">
                                    <i class="fa fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Initialize tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function toggleTeamStatus(teamId) {
            Swal.fire({
                title: 'تایید تغییر وضعیت',
                text: 'آیا از تغییر وضعیت این تیم اطمینان دارید؟',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، تغییر بده',
                cancelButtonText: 'انصراف'
            }).then((result) => {
                if (result.isConfirmed) {
                    const formData = new FormData();
                    formData.append('id', teamId);

                    fetch('@Url.Action("ToggleStatus")', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('موفق', data.message, 'success').then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('خطا', data.message, 'error');
                        }
                    })
                    .catch(error => {
                        Swal.fire('خطا', 'خطا در ارتباط با سرور', 'error');
                    });
                }
            });
        }

        function deleteTeam(teamId) {
            Swal.fire({
                title: 'تایید حذف',
                text: 'آیا از حذف این تیم اطمینان دارید؟ این عمل قابل بازگشت نیست.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'بله، حذف کن',
                cancelButtonText: 'انصراف',
                confirmButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    const formData = new FormData();
                    formData.append('id', teamId);

                    fetch('@Url.Action("Delete")', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('موفق', data.message, 'success').then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('خطا', data.message, 'error');
                        }
                    })
                    .catch(error => {
                        Swal.fire('خطا', 'خطا در ارتباط با سرور', 'error');
                    });
                }
            });
        }
    </script>
}