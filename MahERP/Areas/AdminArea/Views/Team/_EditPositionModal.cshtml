@model MahERP.DataModelLayer.ViewModels.OrganizationViewModels.CreateTeamPositionViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <i class="fa fa-edit text-warning me-2"></i>
                ویرایش سمت: @Model.Title
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
        </div>
        
        <form method="post" asp-action="EditPositionSubmit" asp-controller="Team" asp-area="AdminArea" 
              asp-route-id="@ViewBag.PositionId">
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TeamId" />
                <input type="hidden" asp-for="TeamTitle" />

                <div class="row">
                    <!-- عنوان سمت -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="مثال: مدیر، کارشناس، متخصص" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- سطح قدرت -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="PowerLevel" class="form-label"></label>
                        <input asp-for="PowerLevel" type="number" class="form-control" min="0" max="100" 
                               placeholder="0 تا 100" />
                        <small class="form-text text-muted">عدد بالاتر = قدرت بیشتر</small>
                        <span asp-validation-for="PowerLevel" class="text-danger"></span>
                    </div>
                </div>

                <!-- توضیحات -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" 
                              placeholder="توضیحات اختیاری در مورد این سمت..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <!-- حداکثر اعضا -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaxMembers" class="form-label"></label>
                        <input asp-for="MaxMembers" type="number" class="form-control" min="1" 
                               placeholder="بدون محدودیت" />
                        <small class="form-text text-muted">خالی بگذارید برای بدون محدودیت</small>
                        <span asp-validation-for="MaxMembers" class="text-danger"></span>
                    </div>

                    <!-- تنظیمات -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">تنظیمات</label>
                        <div class="form-check">
                            <input asp-for="IsDefault" class="form-check-input" />
                            <label asp-for="IsDefault" class="form-check-label"></label>
                        </div>
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <!-- مجوزهای مشاهده تسک -->
                <div class="border rounded p-3 mb-3">
                    <h6 class="mb-3">
                        <i class="fa fa-eye text-info me-1"></i>
                        مجوزهای مشاهده تسک
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="CanViewSubordinateTasks" class="form-check-input" />
                                <label asp-for="CanViewSubordinateTasks" class="form-check-label"></label>
                                <small class="form-text text-muted d-block">
                                    مشاهده تسک‌های سمت‌های پایین‌تر
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="CanViewPeerTasks" class="form-check-input" />
                                <label asp-for="CanViewPeerTasks" class="form-check-label"></label>
                                <small class="form-text text-muted d-block">
                                    مشاهده تسک‌های سمت‌های همسطح
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- هشدار تغییرات -->
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-triangle me-1"></i>
                    <strong>توجه:</strong>
                    تغییر سطح قدرت ممکن است بر روی مجوزهای مشاهده تسک اعضای این سمت تأثیر بگذارد.
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>
                    انصراف
                </button>
                <button type="submit" class="btn btn-warning" data-save="modal-ajax-save">
                    <i class="fa fa-save me-1"></i>
                    بروزرسانی سمت
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}