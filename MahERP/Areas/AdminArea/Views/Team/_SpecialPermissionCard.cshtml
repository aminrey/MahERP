        .permission-actions .btn {
            flex: 1;
            min-width: auto;
        }

        .permission-user {
            font-size: 1em;
        }

        .permission-details > div {
            flex-direction: column;
            align-items: flex-start;
            gap: 4px;
        }

        .permission-details i {
            margin-bottom: 2px;
        }
    }

    /* انیمیشن‌ها */
    @keyframes fadeInCard {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .special-permission-card {
        animation: fadeInCard 0.5s ease-out;
    }

    /* حالت بارگذاری */
    .special-permission-card.loading {
        opacity: 0.6;
        pointer-events: none;
        position: relative;
    }

    .special-permission-card.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        border: 2px solid #f3f3f3;
        border-top: 2px solid #3498db;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* تاکید بر تبصره‌های مهم */
    .special-permission-card.highlighted {
        border-left-width: 8px;
        background: linear-gradient(135deg, #fff9c4 0%, #ffffff 100%);
        box-shadow: 0 4px 15px rgba(255, 235, 59, 0.3);
    }

    .special-permission-card.highlighted::before {
        background: linear-gradient(90deg, #ffd700, #ffeb3b, #fff176);
        height: 3px;
    }
</style>