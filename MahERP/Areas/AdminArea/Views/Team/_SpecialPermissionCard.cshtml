@using MahERP.DataModelLayer.ViewModels.taskingModualsViewModels.TaskViewModels
@model SpecialTaskPermissionNode

<div class="special-permission-card @(Model.IsActive ? "active" : "inactive") @(Model.IsExpired ? "expired" : "")">
    <!-- Header کارت -->
    <div class="permission-header">
        <div class="permission-user">
            <i class="fa fa-user-tag me-2"></i>
            <strong>@Model.GranteeUserName</strong>
            @if (!string.IsNullOrEmpty(Model.GranteeTeamTitle))
            {
                <small class="text-muted">(@Model.GranteeTeamTitle)</small>
            }
        </div>

        <div class="permission-status">
            @if (Model.IsExpired)
            {
                <span class="badge bg-danger">منقضی شده</span>
            }
            else if (Model.IsActive)
            {
                <span class="badge bg-success">فعال</span>
            }
            else
            {
                <span class="badge bg-secondary">غیرفعال</span>
            }
        </div>
    </div>

    <!-- جزئیات تبصره -->
    <div class="permission-details">
        <div class="permission-type">
            <i class="fa fa-key me-1 text-primary"></i>
            <span class="type-text">@Model.PermissionTypeText</span>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.TargetTeamTitle))
        {
            <div class="permission-target">
                <i class="fa fa-bullseye me-1 text-info"></i>
                <span class="target-text">هدف: @Model.TargetTeamTitle</span>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.TargetUserName))
        {
            <div class="permission-target">
                <i class="fa fa-user-circle me-1 text-info"></i>
                <span class="target-text">کاربر هدف: @Model.TargetUserName</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="permission-description">
                <i class="fa fa-comment me-1 text-warning"></i>
                <span class="description-text">@Model.Description</span>
            </div>
        }
    </div>

    <!-- اطلاعات متا -->
    <div class="permission-meta">
        <div class="meta-info">
            <small class="text-muted">
                <i class="fa fa-calendar-plus me-1"></i>
                اعطا شده: @Model.AddedDate.ToString("yyyy/MM/dd")
                توسط @Model.AddedByUserName
            </small>
        </div>

        @if (Model.EndDate.HasValue)
        {
            <div class="meta-info">
                <small class="@(Model.IsExpired ? "text-danger" : "text-warning")">
                    <i class="fa fa-calendar-times me-1"></i>
                    انقضا: @Model.EndDate.Value.ToString("yyyy/MM/dd")
                </small>
            </div>
        }
        else
        {
            <div class="meta-info">
                <small class="text-success">
                    <i class="fa fa-infinity me-1"></i>
                    بدون محدودیت زمانی
                </small>
            </div>
        }
    </div>

    <!-- دکمه‌های عملیات -->
    <div class="permission-actions">
        @if (Model.IsActive && !Model.IsExpired)
        {
            <button type="button" class="btn btn-sm btn-outline-danger"
                    onclick="revokePermission(@Model.ViewerId)"
                    data-bs-toggle="tooltip" title="لغو این تبصره">
                <i class="fa fa-times me-1"></i> لغو
            </button>
        }

        <button type="button" class="btn btn-sm btn-outline-info"
                onclick="showPermissionDetails(@Model.ViewerId, '@Model.GranteeUserName', '@Model.PermissionTypeText')"
                data-bs-toggle="tooltip" title="مشاهده جزئیات کامل">
            <i class="fa fa-info-circle me-1"></i> جزئیات
        </button>

        @if (!Model.IsActive && !Model.IsExpired)
        {
            <button type="button" class="btn btn-sm btn-outline-success"
                    onclick="reactivatePermission(@Model.ViewerId)"
                    data-bs-toggle="tooltip" title="فعال‌سازی مجدد">
                <i class="fa fa-check me-1"></i> فعال‌سازی
            </button>
        }
    </div>
</div>

<script>
    function showPermissionDetails(viewerId, userName, permissionType) {
        // نمایش جزئیات در modal یا alert
        var details = `
            شناسه تبصره: ${viewerId}
            کاربر: ${userName}
            نوع: ${permissionType}
        `;
        
        // می‌توانید به جای alert از modal استفاده کنید
        alert('جزئیات تبصره:\n' + details);
    }

    function reactivatePermission(viewerId) {
        if (confirm('آیا از فعال‌سازی مجدد این تبصره اطمینان دارید؟')) {
            $.post('@Url.Action("ReactivateTaskViewerPermission", "Team")', {
                viewerId: viewerId,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            }).done(function(response) {
                if (response.success) {
                    showMessage('success', 'تبصره با موفقیت فعال شد');
                    // بروزرسانی صفحه یا بخش مربوطه
                    location.reload();
                } else {
                    showMessage('error', 'خطا در فعال‌سازی تبصره: ' + response.message);
                }
            }).fail(function() {
                showMessage('error', 'خطا در ارتباط با سرور');
            });
        }
    }
</script>

