@model RolePatternViewModel
@{
    ViewData["Title"] = "جزئیات الگوی نقش";
    var users = ViewBag.Users as List<AppUsers>;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">جزئیات الگوی نقش</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="AdminArea" asp-controller="Home" asp-action="Index">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index">الگوهای نقش</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">جزئیات</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row push">
        <div class="col-sm-6 col-xl-3">
            @if (!Model.IsSystemPattern)
            {
                <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="Edit" asp-route-id="@Model.Id">
                    <div class="block-content py-5">
                        <div class="fs-3 fw-semibold text-primary mb-1">
                            <i class="fa fa-pencil-alt"></i>
                        </div>
                        <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                            ویرایش الگو
                        </p>
                    </div>
                </a>
            }
            else
            {
                <div class="block block-rounded text-center h-100 mb-0">
                    <div class="block-content py-5">
                        <div class="fs-3 fw-semibold text-muted mb-1">
                            <i class="fa fa-lock"></i>
                        </div>
                        <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                            الگوی سیستمی
                        </p>
                    </div>
                </div>
            }
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="ManagePermissions" asp-route-id="@Model.Id">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-info mb-1">
                        <i class="fa fa-key"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                        مدیریت دسترسی‌ها
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-controller="UserPermission" asp-action="AssignRolePattern">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-success mb-1">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                        تخصیص به کاربر
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="block block-rounded text-center h-100 mb-0">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-warning mb-1">
                        <i class="fa fa-users"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-warning text-uppercase mb-0">
                        @Model.UsersCount کاربر
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- END Quick Actions -->

    <div class="row">
        <div class="col-md-8">
            <!-- Role Pattern Details -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-shield-alt text-muted me-1"></i> اطلاعات کلی
                    </h3>
                </div>
                <div class="block-content">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="mb-1">@Model.PatternName</h2>
                            <div class="fs-sm text-muted">
                                @if (Model.IsSystemPattern)
                                {
                                    <span class="badge bg-warning">الگوی سیستمی</span>
                                }
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غیرفعال</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="mb-2">
                                @switch (Model.AccessLevel)
                                {
                                    case 1:
                                        <span class="fs-xs fw-semibold d-inline-block py-2 px-4 rounded-pill bg-danger-light text-danger">مدیر سیستم</span>
                                        break;
                                    case 2:
                                        <span class="fs-xs fw-semibold d-inline-block py-2 px-4 rounded-pill bg-warning-light text-warning">مدیر</span>
                                        break;
                                    case 3:
                                        <span class="fs-xs fw-semibold d-inline-block py-2 px-4 rounded-pill bg-info-light text-info">سرپرست</span>
                                        break;
                                    case 4:
                                        <span class="fs-xs fw-semibold d-inline-block py-2 px-4 rounded-pill bg-primary-light text-primary">کارشناس</span>
                                        break;
                                    case 5:
                                        <span class="fs-xs fw-semibold d-inline-block py-2 px-4 rounded-pill bg-success-light text-success">کاربر عادی</span>
                                        break;
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h4>توضیحات</h4>
                            <div class="p-2 bg-body-light rounded">
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="text-muted">توضیحاتی ثبت نشده است.</p>
                                }
                                else
                                {
                                    <p>@Model.Description</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>اطلاعات ایجاد</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">تاریخ ایجاد</th>
                                        <td class="text-center">@ConvertDateTime.ConvertMiladiToShamsi(Model.CreateDate, "yyyy/MM/dd")</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">ایجاد کننده</th>
                                        <td class="text-center">@(string.IsNullOrEmpty(Model.CreatorName) ? "سیستم" : Model.CreatorName)</td>
                                    </tr>
                                    @if (Model.LastUpdateDate.HasValue)
                                    {
                                        <tr>
                                            <th class="text-center">آخرین بروزرسانی</th>
                                            <td class="text-center">@ConvertDateTime.ConvertMiladiToShamsi(Model.LastUpdateDate.Value, "yyyy/MM/dd")</td>
                                        </tr>
                                        <tr>
                                            <th class="text-center">بروزرسانی کننده</th>
                                            <td class="text-center">@(string.IsNullOrEmpty(Model.LastUpdaterName) ? "نامشخص" : Model.LastUpdaterName)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h4>آمار کاربران</h4>
                            <table class="table table-bordered table-striped table-vcenter">
                                <tbody>
                                    <tr>
                                        <th class="text-center" style="width: 40%;">کل کاربران</th>
                                        <td class="text-center">@Model.UsersCount</td>
                                    </tr>
                                    <tr>
                                        <th class="text-center">کاربران فعال</th>
                                        <td class="text-center">@Model.ActiveUsersCount</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END Role Pattern Details -->

            <!-- Permissions -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-key text-muted me-1"></i> دسترسی‌ها
                    </h3>
                    <div class="block-options">
                        <a class="btn btn-sm btn-alt-primary" asp-action="ManagePermissions" asp-route-id="@Model.Id">
                            <i class="fa fa-cog opacity-50 me-1"></i> مدیریت دسترسی‌ها
                        </a>
                    </div>
                </div>
                <div class="block-content block-content-full">
                    @if (Model.Details.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-vcenter">
                                <thead>
                                    <tr>
                                        <th class="text-center">کنترلر</th>
                                        <th class="text-center">عملیات</th>
                                        <th class="text-center">مشاهده</th>
                                        <th class="text-center">ایجاد</th>
                                        <th class="text-center">ویرایش</th>
                                        <th class="text-center">حذف</th>
                                        <th class="text-center">تایید</th>
                                        <th class="text-center">سطح داده</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.Details.Where(d => d.IsActive).OrderBy(d => d.ControllerName).ThenBy(d => d.ActionName))
                                    {
                                        <tr>
                                            <td class="text-center fw-semibold">@detail.ControllerDisplayName</td>
                                            <td class="text-center">@detail.ActionDisplayName</td>
                                            <td class="text-center">
                                                @if (detail.CanRead)
                                                {
                                                    <i class="fa fa-check text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-danger"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (detail.CanCreate)
                                                {
                                                    <i class="fa fa-check text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-danger"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (detail.CanEdit)
                                                {
                                                    <i class="fa fa-check text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-danger"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (detail.CanDelete)
                                                {
                                                    <i class="fa fa-check text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-danger"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (detail.CanApprove)
                                                {
                                                    <i class="fa fa-check text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-times text-danger"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @switch (detail.DataAccessLevel)
                                                {
                                                    case 0:
                                                        <span class="badge bg-warning">شخصی</span>
                                                        break;
                                                    case 1:
                                                        <span class="badge bg-info">شعبه</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-success">همه</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ دسترسی‌ای برای این الگو تعریف نشده است.
                            <a asp-action="ManagePermissions" asp-route-id="@Model.Id" class="btn btn-sm btn-primary ms-2">
                                <i class="fa fa-plus me-1"></i> تعریف دسترسی‌ها
                            </a>
                        </div>
                    }
                </div>
            </div>
            <!-- END Permissions -->
        </div>

        <div class="col-md-4">
            <!-- Assigned Users -->
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-users text-muted me-1"></i> کاربران تخصیص داده شده
                    </h3>
                    <div class="block-options">
                        <a class="btn btn-sm btn-alt-primary" asp-controller="UserPermission" asp-action="AssignRolePattern" asp-route-rolePatternId="@Model.Id">
                            <i class="fa fa-user-plus opacity-50 me-1"></i> تخصیص جدید
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    @if (users?.Any() == true)
                    {
                        <div class="list-group push">
                            @foreach (var user in users.Take(10))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-semibold">@($"{user.FirstName} {user.LastName}")</span>
                                        <div class="fs-sm text-muted">@user.UserName</div>
                                        @if (!string.IsNullOrEmpty(user.PositionName))
                                        {
                                            <div class="fs-sm text-muted">
                                                <i class="fa fa-briefcase"></i> @user.PositionName
                                            </div>
                                        }
                                    </div>
                                    <div>
                                        @if (user.IsActive && !user.IsRemoveUser)
                                        {
                                            <span class="badge bg-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غیرفعال</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (users.Count > 10)
                        {
                            <div class="text-center">
                                <a asp-controller="UserPermission" asp-action="Index" class="btn btn-sm btn-alt-secondary">
                                    مشاهده همه (@users.Count نفر)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle me-1"></i> هیچ کاربری به این الگو تخصیص داده نشده است.
                        </div>
                    }
                </div>
            </div>
            <!-- END Assigned Users -->
        </div>
    </div>
</div>
<!-- END Page Content -->