@model RolePatternViewModel

<div class="modal-header @ViewBag.themeclass">
    <h5 class="modal-title text-white">
        <i class="fa fa-exclamation-triangle me-1"></i> @ViewBag.ViewTitle
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="بستن"></button>
</div>
<div class="modal-body">
    <div class="text-center py-3">
        <div class="display-4 text-danger mb-3">
            <i class="fa fa-exclamation-triangle"></i>
        </div>
        <h4 class="mb-3">آیا از حذف این الگوی نقش اطمینان دارید؟</h4>
        <p class="mb-3">
            <strong>الگوی نقش:</strong> @Model.PatternName
        </p>
        @if (Model.UsersCount > 0)
        {
            <div class="alert alert-warning">
                <i class="fa fa-users me-1"></i>
                <strong>توجه:</strong> این الگوی نقش به @Model.UsersCount کاربر تخصیص داده شده است.
                با حذف این الگو، دسترسی‌های کاربران متأثر خواهد شد.
            </div>
        }
        <p class="text-muted">
            این عملیات قابل بازگشت نیست و الگوی نقش به صورت کامل حذف خواهد شد.
        </p>
    </div>
</div>
<div class="modal-footer">
    <form asp-action="DeletePost" method="post" class="d-inline">
        <input asp-for="Id" type="hidden" />
        <button type="submit" class="@ViewBag.ButonClass">
            <i class="fa fa-trash-alt me-1"></i> حذف الگوی نقش
        </button>
    </form>
    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
        <i class="fa fa-times me-1"></i> انصراف
    </button>
</div>