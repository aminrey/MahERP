@model List<RolePatternViewModel>
@{
    ViewData["Title"] = "مدیریت الگوهای نقش";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">مدیریت الگوهای نقش</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="AdminArea" asp-controller="Home" asp-action="Index">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">الگوهای نقش</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-action="Create">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-primary mb-1">
                        <i class="fa fa-plus-circle"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                        ایجاد الگوی نقش جدید
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-controller="UserPermission" asp-action="Index">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-info mb-1">
                        <i class="fa fa-users-cog"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                        مدیریت دسترسی کاربران
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" asp-controller="UserPermission" asp-action="PermissionLogs">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-warning mb-1">
                        <i class="fa fa-clipboard-list"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-warning text-uppercase mb-0">
                        لاگ دسترسی‌ها
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="block block-rounded text-center h-100 mb-0">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-success mb-1">
                        <i class="fa fa-shield-alt"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                        @Model.Count الگوی نقش
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Role Patterns Table -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">
                <i class="fa fa-shield-alt text-muted me-1"></i> لیست الگوهای نقش
            </h3>
            <div class="block-options">
                <a class="btn btn-sm btn-primary" asp-action="Create">
                    <i class="fa fa-plus opacity-50 me-1"></i> ایجاد الگوی جدید
                </a>
            </div>
        </div>
        <div class="block-content block-content-full">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-vcenter js-dataTable-responsive">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 60px;">ردیف</th>
                                <th class="text-center">نام الگو</th>
                                <th class="text-center d-none d-md-table-cell">توضیحات</th>
                                <th class="text-center" style="width: 120px;">سطح دسترسی</th>
                                <th class="text-center" style="width: 100px;">کاربران</th>
                                <th class="text-center" style="width: 80px;">وضعیت</th>
                                <th class="text-center d-none d-lg-table-cell" style="width: 150px;">تاریخ ایجاد</th>
                                <th class="text-center" style="width: 160px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td class="text-center fs-sm">
                                        <strong>@(i + 1)</strong>
                                    </td>
                                    <td class="text-center fw-semibold">
                                        <a asp-action="Details" asp-route-id="@Model[i].Id" class="link-fx">
                                            @Model[i].PatternName
                                            @if (Model[i].IsSystemPattern)
                                            {
                                                <span class="badge bg-warning ms-1">سیستمی</span>
                                            }
                                        </a>
                                    </td>
                                    <td class="text-center d-none d-md-table-cell fs-sm">
                                        @(string.IsNullOrEmpty(Model[i].Description) ? "-" : 
                                          (Model[i].Description.Length > 50 ? Model[i].Description.Substring(0, 47) + "..." : Model[i].Description))
                                    </td>
                                    <td class="text-center">
                                        @switch (Model[i].AccessLevel)
                                        {
                                            case 1:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">مدیر سیستم</span>
                                                break;
                                            case 2:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-warning-light text-warning">مدیر</span>
                                                break;
                                            case 3:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">سرپرست</span>
                                                break;
                                            case 4:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-primary-light text-primary">کارشناس</span>
                                                break;
                                            case 5:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">کاربر عادی</span>
                                                break;
                                            default:
                                                <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-secondary-light text-secondary">نامشخص</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@Model[i].UsersCount</span>
                                        @if (Model[i].ActiveUsersCount != Model[i].UsersCount)
                                        {
                                            <br />
                                            <small class="text-muted">فعال: @Model[i].ActiveUsersCount</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (Model[i].IsActive)
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td class="text-center d-none d-lg-table-cell fs-sm">
                                        @(ConvertDateTime.ConvertMiladiToShamsi(Model[i].CreateDate, "yyyy/MM/dd"))
                                        <br />
                                        <small class="text-muted">@Model[i].CreatorName</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-alt-secondary" asp-action="Details" asp-route-id="@Model[i].Id" data-bs-toggle="tooltip" title="جزئیات">
                                                <i class="fa fa-fw fa-eye"></i>
                                            </a>
                                            <a class="btn btn-sm btn-alt-secondary" asp-action="ManagePermissions" asp-route-id="@Model[i].Id" data-bs-toggle="tooltip" title="مدیریت دسترسی‌ها">
                                                <i class="fa fa-fw fa-key"></i>
                                            </a>
                                            @if (!Model[i].IsSystemPattern)
                                            {
                                                <a class="btn btn-sm btn-alt-secondary" asp-action="Edit" asp-route-id="@Model[i].Id" data-bs-toggle="tooltip" title="ویرایش">
                                                    <i class="fa fa-fw fa-pencil-alt"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-alt-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa fa-fw fa-ellipsis-v"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-end fs-sm">
                                                    <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="loadModal('@Url.Action("Delete", new { id = Model[i].Id })')">
                                                        <i class="fa fa-fw fa-trash-alt me-1"></i> حذف
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i> هیچ الگوی نقشی تعریف نشده است.
                    <a asp-action="Create" class="btn btn-sm btn-primary ms-2">
                        <i class="fa fa-plus me-1"></i> ایجاد اولین الگو
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- END Page Content -->

<!-- Modal Container -->
<div class="modal fade" id="modal-rolepattern" tabindex="-1" role="dialog" aria-labelledby="modal-rolepattern" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i>
                    <h3 class="mt-2 mb-3">در حال بارگذاری...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadModal(url) {
            $('#modal-rolepattern .modal-content').html('<div class="modal-body text-center"><i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i><h3 class="mt-2 mb-3">در حال بارگذاری...</h3></div>');
            $('#modal-rolepattern').modal('show');

            $.get(url, function(data) {
                $('#modal-rolepattern .modal-content').html(data);
            });
        }

        $(document).ready(function() {
            $('.js-dataTable-responsive').DataTable({
                language: {
                    url: '/assets/js/plugins/datatables/i18n/fa.json'
                },
                autoWidth: false,
                responsive: true,
                pageLength: 25,
                order: [[6, "desc"]] // Order by create date descending
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}