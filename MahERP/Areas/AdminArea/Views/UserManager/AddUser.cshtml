@model AddUserViewModel
@{
    ViewData["Title"] = "AddUser";

}

<style>
    .required::after {
        content: " *";
        color: red;
        font-weight: bold;
    }
</style>

    <!-- Hero -->
    <div class="bg-body-light">
        <div class="content content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
                <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">
                    ایجاد کاربر جدید
                </h1>
                <nav aria-label="breadcrumb" class="flex-shrink-0 my-2 my-sm-0 ms-sm-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">کاربران</li>
                        <li aria-current="page" class="breadcrumb-item active">
                            ایجاد کاربر جدید
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- END Hero -->
    <!-- Page Content -->
    <div class="content">
        <!-- Form Submission in Options -->
        <div class="row">
            <div class="col-md-12">
                <form id="myform" asp-controller="UserManager" asp-action="AddUser" method="post" enctype="multipart/form-data">

                    <div class="block block-rounded">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">
                                فرم ایجاد کاربر جدید
                            </h3>

                            <div class="block-options">
                                <button class="btn btn-sm btn-hero btn-success" type="submit"><i class="fa fa-check opacity-50 me-1"></i>ثبت</button>
                                <a class="btn btn-sm btn-hero btn-secondary" asp-controller="UserManager" asp-action="Index" type="button">بازگشت</a>
                            </div>
                        </div>
                        <!-- Page Content -->
                        <div class="block block-rounded">

                            <div class="block-content">
                                <div class="row justify-content-center">
                                    <div class="row">

                                        <div class="form-floating  mb-3 col-6">
                                            <input asp-for="FirstName" class="form-control" id="example-text-input-floating" placeholder="نام" type="text">
                                            <label asp-for="FirstName" class="form-label input-label required" for="example-text-input-floating">نام</label>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating  mb-3 col-6">
                                            <input asp-for="LastName" class="form-control" id="example-text-input-floating" placeholder="نام خانوادگی" type="text">
                                            <label asp-for="LastName" class="form-label input-label required" for="example-text-input-floating">نام خانوادگی</label>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating  mb-3 col-6">
                                            <input asp-for="UserName" class="form-control" id="UserName" placeholder="نام کاربری" type="text">
                                            <label asp-for="UserName" class="form-label input-label required" for="example-text-input-floating">نام کاربری</label>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                            <div id="username-message" class="mt-2"></div>
                                        </div>

                                        <div class="form-floating  mb-3 col-6">
                                            <input asp-for="PhoneNumber" class="form-control" id="example-text-input-floating" placeholder="شماره تماس" type="text">
                                            <label asp-for="PhoneNumber" class="form-label input-label required" for="example-text-input-floating">شماره تماس</label>
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3 col-6">
                                            <div class="col-6">
                                                <label class="form-label required">جنسیت</label>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-check form-check-inline">
                                                    <input asp-for="Gender" checked="" class="form-check-input" type="radio" value="1" />
                                                    <label class="form-check-label" for="example-radios-inline1">آقا</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input asp-for="Gender" class="form-check-input" type="radio" value="2" />
                                                    <label class="form-check-label" for="example-radios-inline2">خانم</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating  mb-3 col-6">
                                            <input asp-for="Email" class="form-control" id="example-text-input-floating" placeholder="آدرس ایمیل" type="text">
                                            <label asp-for="Email" class="form-label input-label " for="example-text-input-floating">آدرس ایمیل</label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>


<!-- END Main Container -->
@section Scripts{


    <script>

        $("#UserName").on('keyup', function (event) {
            var pattern = /^[a-zA-Z0-9]*$/;
            if (!pattern.test(event.key)) {
                $('#UserName').val("");
            }
        });

        // بررسی موجود بودن یوزرنیم
        $("#UserName").on('blur', function () {
            var username = $(this).val();
            if (username.length > 0) {
                $.ajax({
                    url: '@Url.Action("CheckUsernameAvailability", "UserManager")',
                    type: 'POST',
        data: {
                             username: username,
                             __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                         },                    success: function (response) {
                        var messageDiv = $('#username-message');
                        if (response.status === 'exists') {
                            messageDiv.html('<div class="alert alert-warning">' + response.message + '</div>');
                        } else if (response.status === 'available') {
                            messageDiv.html('<div class="alert alert-success">' + response.message + '</div>');
                        } else {
                            messageDiv.html('<div class="alert alert-danger">' + response.message + '</div>');
                        }
                    },
                    error: function () {
                        $('#username-message').html('<div class="alert alert-danger">خطا در بررسی یوزرنیم</div>');
                    }
                });
            }
        });
    </script>

    <script>
        var removecoin = function () {
            $(".co-input").each(function (index, item) {
                $(item).val("");
            });
        }
    </script>
}