@model List<StakeholderBranch>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fa fa-user-tie me-2 text-success"></i>طرف حساب‌های شعبه</h4>
    <button type="button" class="btn btn-sm btn-success"
            onclick="openModal('@Url.Action("AddStakeholderToBranch", "Branch", new { branchId = ViewContext.RouteData.Values["id"] })')">
        <i class="fa fa-plus me-1"></i> افزودن طرف حساب
    </button>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-vcenter">
            <thead>
                <tr>
                    <th>نام طرف حساب</th>
                    <th>نوع شخص</th>
                    <th>نوع طرف حساب</th>
                    <th>تاریخ اختصاص</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody id="branchStakeholdersTableBody">
                @await Html.PartialAsync("_BranchStakeholdersTableRows", Model)
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fa fa-user-tie fa-3x text-muted mb-3"></i>
        <p class="text-muted">هیچ طرف حسابی به این شعبه اختصاص نیافته است</p>
        <button type="button" class="btn btn-primary"
                onclick="openModal('@Url.Action("AddStakeholderToBranch", "Branch", new { branchId = ViewContext.RouteData.Values["id"] })')">
            <i class="fa fa-plus me-1"></i> افزودن اولین طرف حساب
        </button>
    </div>
}