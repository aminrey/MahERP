@model BranchOrganization
@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form asp-controller="Branch" asp-action="RemoveOrganizationFromBranchPost" method="post" data-ajax-form="true">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="modal-header @ViewBag.ThemeClass">
                <h5 class="modal-title text-white">
                    <i class="fa fa-trash-alt me-2"></i>
                    @ViewBag.ModalTitle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="text-center py-4">
                    <div class="mb-4">
                        <i class="fa fa-exclamation-triangle fa-4x text-warning"></i>
                    </div>
                    <h4 class="mb-3">حذف سازمان از شعبه</h4>
                    
                    <div class="alert alert-danger">
                        <p class="mb-2">
                            آیا از حذف سازمان
                            <strong class="text-dark">@ViewBag.OrganizationName</strong>
                            از شعبه
                            <strong class="text-dark">@ViewBag.BranchName</strong>
                            مطمئن هستید؟
                        </p>
                    </div>

                    <div class="row text-start mt-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-building me-1"></i> شعبه:
                                </small>
                                <strong>@ViewBag.BranchName</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-building me-1"></i> سازمان:
                                </small>
                                <strong>@ViewBag.OrganizationName</strong>
                            </div>
                        </div>
                    </div>

                    <div class="row text-start">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-tag me-1"></i> نوع رابطه:
                                </small>
                                <strong>@Model.RelationTypeText</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fa fa-users me-1"></i> نمایش اعضا:
                                </small>
                                @if (Model.IncludeAllMembers)
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">غیرفعال</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.IncludeAllMembers)
                    {
                        <div class="alert alert-warning">
                            <i class="fa fa-exclamation-triangle me-1"></i>
                            <strong>توجه:</strong> با حذف این سازمان، تمام اعضای آن از دسترس در تسک‌های این شعبه خارج می‌شوند.
                        </div>
                    }

                    <p class="text-muted mt-3">
                        <i class="fa fa-info-circle me-1"></i>
                        این عملیات سازمان را از شعبه حذف می‌کند اما اطلاعات سازمان حفظ خواهد شد.
                    </p>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>
                    انصراف
                </button>
                <button type="button" class="btn btn-danger" data-save="modal">
                    <i class="fa fa-trash-alt me-1"></i>
                    حذف از شعبه
                </button>
            </div>
        </form>
    </div>
</div>