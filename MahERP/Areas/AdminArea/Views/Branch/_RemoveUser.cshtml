@model BranchUserViewModel
@{
    Layout = null;
}

<div class="modal-header @ViewBag.themeclass">
    <h5 class="modal-title text-white">@ViewBag.ViewTitle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="py-3 text-center">
        <i class="fa fa-exclamation-triangle fa-3x text-warning mb-3"></i>
        <h4>آیا از حذف این کاربر از شعبه اطمینان دارید؟</h4>
        <p class="text-muted mb-0">
            با حذف کاربر "<strong>@Model.UserFullName</strong>" از شعبه "<strong>@Model.BranchName</strong>"،
            این کاربر دیگر به شعبه دسترسی نخواهد داشت.
            <br><span class="text-danger">این عملیات قابل بازگشت نیست!</span>
        </p>
    </div>
</div>
<div class="modal-footer">
    <form method="post" action="@Url.Action("RemoveUserPost", "Branch")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">انصراف</button>
        <button type="submit" class="@ViewBag.ButonClass">
            <i class="fa fa-trash me-1"></i> حذف
        </button>
    </form>
</div>