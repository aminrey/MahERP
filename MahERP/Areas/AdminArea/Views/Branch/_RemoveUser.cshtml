@model BranchUserViewModel

<div class="block block-rounded block-transparent mb-0">
    <div class="block-header block-header-default @ViewBag.themeclass">
        <h3 class="block-title text-white">@ViewBag.ViewTitle</h3>
        <div class="block-options">
            <button type="button" class="btn-block-option text-white" data-bs-dismiss="modal" aria-label="Close">
                <i class="fa fa-fw fa-times"></i>
            </button>
        </div>
    </div>
    <div class="block-content">
        <div class="row justify-content-center text-center">
            <div class="col-sm-10 col-lg-8">
                <div class="mb-4">
                    <i class="fa fa-user-times fa-4x text-danger"></i>
                </div>
                <h3 class="mb-3">حذف کاربر از شعبه</h3>
                <p class="mb-4">
                    آیا از حذف کاربر <strong class="text-danger">@Model.UserFullName</strong> از شعبه <strong>@Model.BranchName</strong> اطمینان دارید؟
                </p>
                
                <div class="alert alert-warning mb-4">
                    <h5><i class="fa fa-exclamation-triangle me-1"></i> هشدار مهم</h5>
                    <ul class="text-start mb-0">
                        <li>کاربر دیگر دسترسی به این شعبه نخواهد داشت</li>
                        <li>تمام تسک‌های اختصاص داده شده به این کاربر در این شعبه باقی می‌ماند</li>
                        <li>سابقه فعالیت کاربر در این شعبه حفظ می‌شود</li>
                        <li>در صورت نیاز می‌توان کاربر را مجدداً به شعبه اضافه کرد</li>
                    </ul>
                </div>

                <div class="mb-4">
                    <strong>اطلاعات کاربر:</strong><br>
                    <span class="text-muted">نام:</span> @Model.UserFullName<br>
                    <span class="text-muted">نقش فعلی:</span> <span class="badge @(Model.Role == 2 ? "bg-danger" : Model.Role == 1 ? "bg-warning" : "bg-info")">@Model.RoleText</span><br>
                    <span class="text-muted">تاریخ اختصاص:</span> @ConvertDateTime.ConvertMiladiToShamsi(Model.AssignDate, "yyyy/MM/dd")
                </div>
            </div>
        </div>
    </div>
    <div class="block-content block-content-full text-end bg-body">
        <form method="POST" action="@Url.Action("RemoveUserPost", "Branch")" style="display: inline;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            
            <button type="button" class="btn btn-alt-secondary me-1" data-bs-dismiss="modal">
                <i class="fa fa-times me-1"></i> انصراف
            </button>
            <button type="submit" class="@ViewBag.ButonClass">
                <i class="fa fa-user-times me-1"></i> حذف کاربر از شعبه
            </button>
        </form>
    </div>
</div>