@model List<BranchUserViewModel>
@{
    ViewData["Title"] = "مدیریت کاربران شعبه " + ViewBag.BranchName;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">مدیریت کاربران شعبه @ViewBag.BranchName</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Branch")">شعب</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">کاربران @ViewBag.BranchName</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row items-push">
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddUser", "Branch", new { branchId = ViewBag.BranchId })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-user-plus text-success"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        افزودن کاربر جدید
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("Index", "Branch")">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-arrow-right text-primary"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        بازگشت به شعب
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->

    <!-- Branch Users Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="block block-rounded bg-primary-light">
                <div class="block-content py-3">
                    <div class="fs-4 fw-semibold text-primary text-center">
                        @Model.Count()
                    </div>
                    <div class="text-center">تعداد کل کاربران</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="block block-rounded bg-success-light">
                <div class="block-content py-3">
                    <div class="fs-4 fw-semibold text-success text-center">
                        @Model.Count(u => u.IsActive)
                    </div>
                    <div class="text-center">کاربران فعال</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="block block-rounded bg-warning-light">
                <div class="block-content py-3">
                    <div class="fs-4 fw-semibold text-warning text-center">
                        @Model.Count(u => !u.IsActive)
                    </div>
                    <div class="text-center">کاربران غیرفعال</div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Branch Users Statistics -->

    <!-- Users List -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">لیست کاربران شعبه</h3>
            <div class="block-options">
                <div class="dropdown">
                    <button type="button" class="btn btn-sm btn-alt-secondary" id="dropdown-user-filters" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-fw fa-filter"></i> فیلترها
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-user-filters">
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("UsersIndex", "Branch", new { branchId = ViewBag.BranchId })">
                            همه کاربران
                            <span class="badge bg-primary">@Model.Count()</span>
                        </a>
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("UsersIndex", "Branch", new { branchId = ViewBag.BranchId, isActive = true })">
                            کاربران فعال
                            <span class="badge bg-success">@Model.Count(u => u.IsActive)</span>
                        </a>
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("UsersIndex", "Branch", new { branchId = ViewBag.BranchId, isActive = false })">
                            کاربران غیرفعال
                            <span class="badge bg-warning">@Model.Count(u => !u.IsActive)</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-content">
            <!-- Users Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-vcenter js-dataTable-responsive">
                    <thead>
                        <tr>
                            <th class="text-center">نام کاربر</th>
                            <th class="text-center">نقش</th>
                            <th class="text-center">تاریخ اختصاص</th>
                            <th class="text-center">وضعیت</th>
                            <th class="text-center" style="width: 180px;">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @user.UserFullName
                                </td>
                                <td class="text-center">
                                    <span class="badge @(user.Role == 2 ? "bg-danger" : user.Role == 1 ? "bg-warning" : "bg-info")">
                                        @user.RoleText
                                    </span>
                                </td>
                                <td class="text-center">
                                    @ConvertDateTime.ConvertMiladiToShamsi(user.AssignDate, "yyyy/MM/dd")
                                </td>
                                <td class="text-center">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("EditUser", "Branch", new { id = user.Id })" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip" title="ویرایش">
                                        <i class="fa fa-fw fa-pencil-alt"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip"
                                            title="@(user.IsActive ? "غیرفعال کردن" : "فعال کردن")"
                                            onclick="openModal('@Url.Action("ToggleUserStatus", "Branch", new { id = user.Id })')">
                                        <i class="fa fa-fw @(user.IsActive ? "fa-ban" : "fa-check")"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-alt-danger" data-bs-toggle="tooltip" title="حذف از شعبه"
                                            onclick="openModal('@Url.Action("RemoveUser", "Branch", new { id = user.Id })')">
                                        <i class="fa fa-fw fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END Users Table -->

            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fa fa-users fa-3x text-muted mb-3"></i>
                    <p class="mb-3">هیچ کاربری در این شعبه یافت نشد.</p>
                    <a href="@Url.Action("AddUser", "Branch", new { branchId = ViewBag.BranchId })" class="btn btn-primary">
                        <i class="fa fa-user-plus me-1"></i> افزودن کاربر جدید
                    </a>
                </div>
            }
        </div>
    </div>
    <!-- END Users List -->
</div>
<!-- END Page Content -->

<!-- Modal Container for dynamic content -->
<div class="modal fade" id="modal-branch" tabindex="-1" role="dialog" aria-labelledby="modal-branch" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- Dynamic content will be loaded here -->
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i>
                    <h3 class="mt-2 mb-3">در حال بارگذاری...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Function to open modal and load content
        function openModal(url) {
            $('#modal-branch .modal-content').html('<div class="modal-body text-center"><i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i><h3 class="mt-2 mb-3">در حال بارگذاری...</h3></div>');
            $('#modal-branch').modal('show');

            // Load content via AJAX
            $.get(url, function(data) {
                $('#modal-branch .modal-content').html(data);
            });
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Initialize DataTable with Persian settings
            $('.js-dataTable-responsive').DataTable({
                responsive: true,
                paging: false,
                info: false,
                lengthChange: false,
                searching: true,
                ordering: true,
                autoWidth: false,
                language: {
                    search: "جستجو:",
                    searchPlaceholder: "جستجو در کاربران...",
                    emptyTable: "هیچ کاربری یافت نشد",
                    zeroRecords: "هیچ نتیجه‌ای یافت نشد"
                }
            });
        });
    </script>
}