@{
    ViewData["Title"] = "افزودن طرف حساب به شعبه";
    var branchId = ViewBag.BranchId;
    var branchName = ViewBag.BranchName;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">افزودن طرف حساب به شعبه</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Branch")">شعب</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Details", "Branch", new { id = branchId })">@branchName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">افزودن طرف حساب</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Add Stakeholder Form -->
    <form method="POST" action="@Url.Action("AddStakeholder", "Branch")" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" name="branchId" value="@branchId" />

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">افزودن طرف حساب به شعبه @branchName</h3>
                <div class="block-options">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-check me-1"></i> ذخیره
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="mb-4">
                            <label class="form-label" for="stakeholderId">انتخاب طرف حساب <span class="text-danger">*</span></label>
                            <select name="stakeholderId" id="stakeholderId" asp-items="ViewBag.Stakeholders" class="form-select">
                                <option value="">انتخاب کنید</option>
                            </select>
                            <div class="form-text">طرف حساب‌هایی که قبلاً به این شعبه اضافه شده‌اند، در این لیست نمایش داده نمی‌شوند.</div>
                        </div>

                        <div class="mb-4 text-center">
                            <a href="@Url.Action("AddStakeholder", "Stakeholder")" class="btn btn-alt-info">
                                <i class="fa fa-plus me-1"></i> افزودن طرف حساب جدید
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <button type="button" class="btn btn-alt-secondary" onclick="window.history.back();">
                    <i class="fa fa-arrow-right me-1"></i> انصراف
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ذخیره
                </button>
            </div>
        </div>
    </form>
    <!-- END Add Stakeholder Form -->
</div>
<!-- END Page Content -->