@model Stakeholder
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">حذف طرف حساب</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form method="POST" action="@Url.Action("DeleteStakeholderPost", "Stakeholder")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="text-center">
            <i class="fa fa-3x fa-exclamation-triangle text-danger mb-3"></i>
            <p>آیا از حذف طرف حساب <strong>@Model.FirstName @Model.LastName</strong> مطمئن هستید؟</p>
            <p class="text-muted">این عملیات قابل بازگشت نیست.</p>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">انصراف</button>
    <button type="button" class="btn btn-danger" data-save="modal-ajax-save">حذف</button>
</div>