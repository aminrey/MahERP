@model IEnumerable<Stakeholder>
@{
    ViewData["Title"] = "مدیریت طرف حساب‌ها";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">مدیریت طرف حساب‌ها</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item active" aria-current="page">طرف حساب‌ها</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row push">
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddStakeholder", "Stakeholder")">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-success mb-1">
                        <i class="fa fa-plus"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-success text-uppercase mb-0">
                        افزودن طرف حساب جدید
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("Index", "Stakeholder", new { type = 0 })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-primary mb-1">
                        <i class="fa fa-users"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-primary text-uppercase mb-0">
                        مشتریان
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("Index", "Stakeholder", new { type = 1 })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-info mb-1">
                        <i class="fa fa-truck"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-info text-uppercase mb-0">
                        تامین کنندگان
                    </p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AdvancedSearch", "Stakeholder")" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold text-dark mb-1">
                        <i class="fa fa-search"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-dark text-uppercase mb-0">
                        جستجوی پیشرفته
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->
    <!-- Search Form (visible on mobile) -->
    <div class="d-lg-none push">
        <div class="block block-rounded">
            <div class="block-content">
                <form method="POST" action="@Url.Action("Index", "Stakeholder")">
                    <div class="mb-4">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-alt" id="searchTerm" name="searchTerm" placeholder="جستجو...">
                            <button type="submit" class="btn btn-alt-secondary">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END Search Form -->
    <!-- Stakeholders -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">لیست طرف حساب‌ها</h3>
            <div class="block-options">
                <div class="dropdown">
                    <button type="button" class="btn btn-alt-secondary" id="dropdown-default-alt-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-fw fa-ellipsis-v"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-default-alt-secondary">
                        <a class="dropdown-item" href="@Url.Action("Index", "Stakeholder")">
                            <i class="fa fa-fw fa-users me-1"></i> همه طرف حساب‌ها
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Stakeholder", new { type = 0 })">
                            <i class="fa fa-fw fa-user-tie me-1"></i> مشتریان
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Stakeholder", new { type = 1 })">
                            <i class="fa fa-fw fa-truck me-1"></i> تامین کنندگان
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", "Stakeholder", new { type = 2 })">
                            <i class="fa fa-fw fa-handshake me-1"></i> همکاران
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("Index", "Stakeholder", new { includeDeleted = true })">
                            <i class="fa fa-fw fa-trash-alt me-1"></i> شامل حذف‌شده‌ها
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-content block-content-full">
            <!-- Search Form (desktop) -->
            <div class="d-none d-lg-block push">
                <form method="POST" action="@Url.Action("Index", "Stakeholder")" class="row g-3 align-items-center">
                    <div class="col-lg-4 col-xl-5">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-alt" id="searchTerm" name="searchTerm" placeholder="نام، ایمیل، تلفن یا کد ملی" value="@ViewBag.SearchTerm">
                            <button type="submit" class="btn btn-alt-primary">
                                <i class="fa fa-search me-1"></i> جستجو
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-8 col-xl-7 text-lg-end">
                        <div class="d-inline-block">
                            <select asp-items="StaticSelectLists.StakeholderTypes" class="form-select form-select-alt" id="type" name="type" onchange="this.form.submit()">
                                <option value="">همه انواع</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <!-- END Search Form -->
            <!-- اضافه کردن این بخش قبل از جدول -->
            @if (ViewBag.IncludeDeleted == true)
            {
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <h3 class="alert-heading h5 my-2">
                        <i class="fa fa-exclamation-triangle me-2"></i>
                        توجه!
                    </h3>
                    <p class="mb-0">در حال نمایش طرف حساب‌های حذف شده همراه با فعال‌ها هستید.</p>
                    <hr>
                    <div class="mb-0">
                        <a href="@Url.Action("Index", "Stakeholder")" class="btn btn-sm btn-alt-warning">
                            <i class="fa fa-arrow-left me-1"></i> بازگشت به نمایش عادی
                        </a>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <!-- Stakeholders Table -->
            <table class="table table-striped table-hover table-vcenter js-dataTable-full">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">شناسه</th>
                        <th class="text-center">نام</th>
                        <th class="text-center d-none d-sm-table-cell">شرکت</th>
                        <th class="text-center d-none d-lg-table-cell">تلفن</th>
                        <th class="text-center d-none d-lg-table-cell">ایمیل</th>
                        <th class="text-center d-none d-sm-table-cell">نوع</th>
                        <th class="text-center d-none d-xl-table-cell">تاریخ ثبت</th>
                        <th class="text-center" style="width: 100px;">وضعیت</th>
                        <th class="text-center" style="width: 180px;">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsDeleted ? "table-danger" : "")">
                            <td class="text-center fs-sm">
                                <a href="@Url.Action("Details", "Stakeholder", new { id = item.Id })">
                                    <strong>@item.Id</strong>
                                </a>
                            </td>
                            <td class="text-center fw-semibold fs-sm">
                                <a href="@Url.Action("Details", "Stakeholder", new { id = item.Id })">
                                    @item.FirstName @item.LastName
                                    @if (item.IsDeleted)
                                    {
                                        <span class="badge bg-danger ms-1">حذف شده</span>
                                    }
                                </a>
                            </td>
                            <td class="text-center d-none d-sm-table-cell fs-sm">
                                @(string.IsNullOrEmpty(item.CompanyName) ? "-" : item.CompanyName)
                            </td>
                            <td class="text-center d-none d-lg-table-cell fs-sm">
                                @(!string.IsNullOrEmpty(item.Mobile) ? item.Mobile : (!string.IsNullOrEmpty(item.Phone) ? item.Phone : "-"))
                            </td>
                            <td class="text-center d-none d-lg-table-cell fs-sm">
                                @(string.IsNullOrEmpty(item.Email) ? "-" : item.Email)
                            </td>
                            <td class="text-center d-none d-sm-table-cell">
                                @switch (item.StakeholderType)
                                {
                                    case 0:
                                        <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">مشتری</span>
                                        break;
                                    case 1:
                                        <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-primary-light text-primary">تامین کننده</span>
                                        break;
                                    case 2:
                                        <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">همکار</span>
                                        break;
                                    case 3:
                                        <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-warning-light text-warning">سایر</span>
                                        break;
                                }
                            </td>
                            <td class="text-center d-none d-xl-table-cell fs-sm">
                                @ConvertDateTime.ConvertMiladiToShamsi(item.CreateDate, "yyyy/MM/dd")
                            </td>
                            <td class="text-center">
                                @if (item.IsDeleted)
                                {
                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">حذف شده</span>
                                }
                                else if (item.IsActive)
                                {
                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-success-light text-success">فعال</span>
                                }
                                else
                                {
                                    <span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-danger-light text-danger">غیرفعال</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "Stakeholder", new { id = item.Id })" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip" title="مشاهده">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>

                                @if (!item.IsDeleted)
                                {
                                    <a href="@Url.Action("EditStakeholder", "Stakeholder", new { id = item.Id })" class="btn btn-sm btn-alt-secondary me-1" data-bs-toggle="tooltip" title="ویرایش">
                                        <i class="fa fa-fw fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-sm btn-alt-secondary me-1" href="@Url.Action("ActiveOrDeactiveStakeholder", "Stakeholder", new { id = item.Id })" data-toggle="modal-ajax" data-bs-toggle="tooltip" title="@(item.IsActive ? "غیرفعال کردن" : "فعال کردن")">
                                        <i class="fa fa-fw @(item.IsActive ? "fa-ban" : "fa-check")"></i>
                                    </a>
                                    <a class="btn btn-sm btn-alt-danger" href="@Url.Action("DeleteStakeholder", "Stakeholder", new { id = item.Id })" data-toggle="modal-ajax" data-bs-toggle="tooltip" title="حذف">
                                        <i class="fa fa-fw fa-trash-alt"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">حذف شده</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- END Stakeholders Table -->
        </div>
    </div>
    <!-- END Stakeholders -->
</div>
<!-- END Page Content -->
@section scripts {
    <script>
        $(document).ready(function() {
            $('.js-dataTable-full').DataTable({
                language: {
                    url: '/assets/js/plugins/datatables/i18n/fa.json'
                },
                autoWidth: false,
                responsive: true
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}