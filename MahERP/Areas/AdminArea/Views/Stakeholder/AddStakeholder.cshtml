@model StakeholderViewModel
@{
    ViewData["Title"] = "افزودن طرف حساب جدید";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">افزودن طرف حساب جدید</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Stakeholder")">طرف حساب‌ها</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">افزودن جدید</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Add Stakeholder Form -->
    <form method="POST" action="@Url.Action("AddStakeholder", "Stakeholder")" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">اطلاعات اصلی</h3>
                <div class="block-options">
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="fa fa-check me-1"></i> ذخیره طرف حساب
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">

                        <!-- راهنما -->
                        <div class="alert alert-info d-flex align-items-center mb-4">
                            <div class="flex-shrink-0">
                                <i class="fa fa-info-circle fa-2x"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="alert-heading mb-1">راهنمای ثبت</h5>
                                <p class="mb-0">ابتدا نوع شخص (حقیقی یا حقوقی) را انتخاب کنید تا فیلدهای مربوطه نمایش داده شود.</p>
                            </div>
                        </div>

                        <!-- نوع شخص -->
                        <div class="mb-4">
                            <label class="form-label" for="PersonType">نوع شخص <span class="text-danger">*</span></label>
                            <select asp-for="PersonType" class="form-select" id="PersonType" required>
                                <option value="">-- انتخاب کنید --</option>
                                <option value="0">شخص حقیقی</option>
                                <option value="1">شخص حقوقی</option>
                            </select>
                            <span asp-validation-for="PersonType" class="text-danger"></span>
                            <small class="text-muted">این انتخاب پس از ثبت قابل تغییر نیست</small>
                        </div>

                        <!-- نوع طرف حساب -->
                        <div class="mb-4">
                            <label class="form-label" for="StakeholderType">نوع طرف حساب <span class="text-danger">*</span></label>
                            <select asp-for="StakeholderType" asp-items="StaticSelectLists.StakeholderTypes" class="form-select" required></select>
                            <span asp-validation-for="StakeholderType" class="text-danger"></span>
                        </div>

                        <!-- فیلدهای شخص حقیقی -->
                        <div id="personFields" style="display: none;">
                            <div class="alert alert-primary-light mb-3">
                                <i class="fa fa-user me-2"></i>
                                <strong>اطلاعات شخص حقیقی</strong>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="FirstName">نام <span class="text-danger">*</span></label>
                                        <input asp-for="FirstName" class="form-control" placeholder="نام">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="LastName">نام خانوادگی <span class="text-danger">*</span></label>
                                        <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="NationalCode">کد ملی</label>
                                        <input asp-for="NationalCode" class="form-control" placeholder="کد ملی 10 رقمی" maxlength="10">
                                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="Gender">جنسیت</label>
                                        <select asp-for="Gender" class="form-select">
                                            <option value="">-- انتخاب کنید --</option>
                                            <option value="0">مرد</option>
                                            <option value="1">زن</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="BirthDate">تاریخ تولد</label>
                                <input asp-for="BirthDate" type="text" class="form-control js-flatpickr" placeholder="1370/01/01">
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- فیلدهای شخص حقوقی -->
                        <div id="companyFields" style="display: none;">
                            <div class="alert alert-success-light mb-3">
                                <i class="fa fa-building me-2"></i>
                                <strong>اطلاعات شخص حقوقی</strong>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="CompanyName">نام شرکت <span class="text-danger">*</span></label>
                                <input asp-for="CompanyName" class="form-control" placeholder="نام رسمی شرکت">
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="CompanyBrand">نام برند</label>
                                <input asp-for="CompanyBrand" class="form-control" placeholder="نام تجاری یا برند">
                                <span asp-validation-for="CompanyBrand" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="RegistrationNumber">شماره ثبت</label>
                                        <input asp-for="RegistrationNumber" class="form-control" placeholder="شماره ثبت 11 رقمی" maxlength="11">
                                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" for="EconomicCode">کد اقتصادی</label>
                                        <input asp-for="EconomicCode" class="form-control" placeholder="کد اقتصادی 12 رقمی" maxlength="12">
                                        <span asp-validation-for="EconomicCode" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="RegistrationDate">تاریخ ثبت شرکت</label>
                                <input asp-for="RegistrationDate" type="text" class="form-control js-flatpickr" placeholder="1390/01/01">
                                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="LegalRepresentative">نماینده قانونی</label>
                                <input asp-for="LegalRepresentative" class="form-control" placeholder="نام مدیرعامل یا نماینده قانونی">
                                <span asp-validation-for="LegalRepresentative" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="RegisteredAddress">آدرس ثبت شده</label>
                                <textarea asp-for="RegisteredAddress" class="form-control" rows="2" placeholder="آدرس ثبت شده در اسناد رسمی"></textarea>
                                <span asp-validation-for="RegisteredAddress" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="Website">وب‌سایت</label>
                                <input asp-for="Website" class="form-control" placeholder="https://example.com">
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- فیلدهای مشترک -->
                        <div class="alert alert-secondary-light mb-3">
                            <i class="fa fa-address-card me-2"></i>
                            <strong>اطلاعات تماس</strong>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Phone">تلفن ثابت</label>
                                    <input asp-for="Phone" class="form-control" placeholder="021-12345678">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Mobile">تلفن همراه</label>
                                    <input asp-for="Mobile" class="form-control" placeholder="0912xxxxxxx">
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="Email">ایمیل</label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="PostalCode">کد پستی</label>
                            <input asp-for="PostalCode" class="form-control" placeholder="کد پستی 10 رقمی" maxlength="10">
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="Address">آدرس</label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="آدرس کامل"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" for="Description">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="توضیحات اضافی"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label">وضعیت فعال</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <button type="button" class="btn btn-alt-secondary" onclick="window.history.back();">
                    <i class="fa fa-arrow-right me-1"></i> انصراف
                </button>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check me-1"></i> ذخیره طرف حساب
                </button>
            </div>
        </div>
    </form>
    <!-- END Add Stakeholder Form -->
</div>
<!-- END Page Content -->
@section Styles {
    <link rel="stylesheet" href="~/assets/js/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.fa.min.js"></script>

    <script>
        $(document).ready(function() {
            // راه‌اندازی Datepicker
            Dashmix.helpersOnLoad(['js-flatpickr']);

            // تابع نمایش/مخفی کردن فیلدها بر اساس نوع شخص
            function toggleFields() {
                const personType = $('#PersonType').val();

                if (personType === '0') {
                    // شخص حقیقی
                    $('#personFields').slideDown();
                    $('#companyFields').slideUp();

                    // اجباری کردن فیلدها
                    $('#FirstName, #LastName').attr('required', true);
                    $('#CompanyName').removeAttr('required');
                } else if (personType === '1') {
                    // شخص حقوقی
                    $('#personFields').slideUp();
                    $('#companyFields').slideDown();

                    // اجباری کردن فیلدها
                    $('#CompanyName').attr('required', true);
                    $('#FirstName, #LastName').removeAttr('required');
                } else {
                    // هیچکدام انتخاب نشده
                    $('#personFields, #companyFields').slideUp();
                    $('#FirstName, #LastName, #CompanyName').removeAttr('required');
                }
            }

            // Event handler برای تغییر نوع شخص
            $('#PersonType').on('change', function() {
                toggleFields();
            });

            // اجرای اولیه
            toggleFields();

            // Validation برای کد ملی
            $('#NationalCode').on('input', function() {
                const value = $(this).val();
                if (value.length > 0 && value.length !== 10) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Validation برای شماره ثبت
            $('#RegistrationNumber').on('input', function() {
                const value = $(this).val();
                if (value.length > 0 && value.length !== 11) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Validation برای کد اقتصادی
            $('#EconomicCode').on('input', function() {
                const value = $(this).val();
                if (value.length > 0 && value.length !== 12) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // Validation برای کد پستی
            $('#PostalCode').on('input', function() {
                const value = $(this).val();
                if (value.length > 0 && value.length !== 10) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}