@model StakeholderContactViewModel
@{
    ViewData["Title"] = "افزودن فرد مرتبط";
    var stakeholderId = ViewBag.StakeholderId;
    var stakeholderName = ViewBag.StakeholderName;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">افزودن فرد مرتبط جدید</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Stakeholder")">طرف حساب‌ها</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Details", "Stakeholder", new { id = stakeholderId })">@stakeholderName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">افزودن فرد مرتبط</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- New Contact Form -->
    <form method="POST" action="@Url.Action("AddContact", "Stakeholder")">
        @Html.AntiForgeryToken()
        <input asp-for="StakeholderId" type="hidden" />

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">افزودن فرد مرتبط برای @stakeholderName</h3>
                <div style="display: flex; gap: 10px;">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-check me-1"></i> ذخیره
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="mb-4">
                            <label class="form-label" for="FirstName">نام <span class="text-danger">*</span></label>
                            <input asp-for="FirstName" class="form-control" placeholder="نام کوچک را وارد کنید">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="LastName">نام خانوادگی <span class="text-danger">*</span></label>
                            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی را وارد کنید">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Position">سمت</label>
                            <input asp-for="Position" class="form-control" placeholder="سمت یا عنوان شغلی">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Phone">تلفن ثابت</label>
                            <input asp-for="Phone" class="form-control" placeholder="تلفن ثابت را وارد کنید">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Mobile">تلفن همراه</label>
                            <input asp-for="Mobile" class="form-control" placeholder="تلفن همراه را وارد کنید">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Email">ایمیل</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل را وارد کنید">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="ContactType">نوع ارتباط</label>
                            <select asp-for="ContactType" asp-items="StaticSelectLists.ContactTypes" class="form-select">
                                <option value="">انتخاب کنید</option>
                            </select>
                            <span asp-validation-for="ContactType" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Notes">یادداشت</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="یادداشت یا توضیحات اضافی"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-check">
                                <input asp-for="IsPrimary" type="checkbox" class="form-check-input">
                                <span class="form-check-label">مخاطب اصلی</span>
                            </label>
                            <div class="form-text">مخاطب اصلی به عنوان فرد ارتباطی پیش‌فرض برای این طرف حساب در نظر گرفته می‌شود</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-check">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input" checked>
                                <span class="form-check-label">وضعیت فعال</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <a href="@Url.Action("Details", "Stakeholder", new { id = stakeholderId })" class="btn btn-alt-secondary">
                    <i class="fa fa-arrow-right me-1"></i> انصراف
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ذخیره
                </button>
            </div>
        </div>
    </form>
    <!-- END New Contact Form -->
</div>
<!-- END Page Content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}