@model List<Contract>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fa fa-file-contract me-2 text-primary"></i>قراردادها</h4>
    <a href="@Url.Action("AddContract", "Contract", new { stakeholderId = ViewContext.RouteData.Values["id"] })" 
       class="btn btn-sm btn-primary">
        <i class="fa fa-plus me-1"></i> افزودن قرارداد
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-vcenter">
            <thead>
                <tr>
                    <th>شماره قرارداد</th>
                    <th>عنوان</th>
                    <th>تاریخ شروع</th>
                    <th>مبلغ</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contract in Model)
                {
                    <tr>
                        <td>@contract.ContractNumber</td>
                        <td>@contract.Title</td>
                        <td>@ConvertDateTime.ConvertMiladiToShamsi(contract.StartDate, "yyyy/MM/dd")</td>
                        <td>@contract.ContractValue?.ToString("N0")</td>
                        <td class="text-center">
                            @switch (contract.Status)
                            {
                                case 0: <span class="badge bg-info">پیش‌نویس</span> break;
                                case 1: <span class="badge bg-success">فعال</span> break;
                                case 2: <span class="badge bg-warning">تمام شده</span> break;
                                case 3: <span class="badge bg-danger">لغو شده</span> break;
                            }
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "Contract", new { id = contract.Id })" 
                               class="btn btn-sm btn-alt-secondary">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fa fa-file-contract fa-3x text-muted mb-3"></i>
        <p class="text-muted">هیچ قراردادی ثبت نشده است</p>
    </div>
}