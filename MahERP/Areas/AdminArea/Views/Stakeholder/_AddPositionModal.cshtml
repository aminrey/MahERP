@model MahERP.DataModelLayer.ViewModels.StakeholderViewModels.StakeholderOrganizationPositionViewModel

@{
    Layout = null;
}

<style>
    .modal {
        --bs-modal-width: 60%;
        transition: 0.3s;
    }
</style>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="block block-rounded block-themed block-transparent mb-0 modal-contents">
            <div class="block-header bg-primary-dark">
                <h3 class="block-title">
                    <i class="fa fa-id-badge me-2"></i>
                    افزودن سمت جدید
                </h3>
                <div class="block-options">
                    <button aria-label="Close" class="btn-block-option" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-fw fa-times"></i>
                    </button>
                </div>
            </div>

            <form asp-action="AddPosition" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrganizationId" />

                <div class="block-content">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- عنوان سمت -->
                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="مثال: مدیر بخش" required />
                        <label asp-for="Title" class="form-label">عنوان سمت *</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- توضیحات -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="توضیحات مختصر..."></textarea>
                        <label asp-for="Description" class="form-label">توضیحات</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <!-- سطح قدرت -->
                            <div class="form-floating mb-3">
                                <input asp-for="PowerLevel" type="number" class="form-control" min="0" max="100" required />
                                <label asp-for="PowerLevel" class="form-label">سطح قدرت *</label>
                                <small class="text-muted">عدد کمتر = قدرت بیشتر</small>
                                <span asp-validation-for="PowerLevel" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <!-- ترتیب نمایش -->
                            <div class="form-floating mb-3">
                                <input asp-for="DisplayOrder" type="number" class="form-control" min="1" required />
                                <label asp-for="DisplayOrder" class="form-label">ترتیب نمایش *</label>
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- سمت پیش‌فرض -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsDefault" type="checkbox" class="form-check-input" />
                            <label asp-for="IsDefault" class="form-check-label">سمت پیش‌فرض</label>
                        </div>
                    </div>

                    <!-- فعال -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">فعال</label>
                        </div>
                    </div>

                    <!-- راهنما -->
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle me-2"></i>
                        <strong>راهنما:</strong> سطح قدرت برای تعیین سلسله مراتب استفاده می‌شود. عدد کوچکتر نشان‌دهنده قدرت بیشتر است.
                    </div>
                </div>

                <div class="block-content block-content-full text-end bg-body">
                    <button class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal" type="button">
                        <i class="fa fa-times me-1"></i> انصراف
                    </button>
                    <button class="btn btn-sm btn-primary" data-save="modal-ajax-save" type="button">
                        <i class="fa fa-check me-1"></i> ذخیره
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}