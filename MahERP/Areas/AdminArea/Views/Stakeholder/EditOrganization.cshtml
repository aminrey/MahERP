@model MahERP.DataModelLayer.ViewModels.StakeholderViewModels.StakeholderOrganizationViewModel
@{
    ViewData["Title"] = "ویرایش واحد سازمانی";
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa fa-edit me-2"></i>
            @ViewData["Title"]
        </h3>
        <div class="block-options">
            <a asp-action="OrganizationChart" asp-route-stakeholderId="@ViewBag.StakeholderId" 
               class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-right me-1"></i> بازگشت
            </a>
        </div>
    </div>

    <div class="block-content block-content-full">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form asp-action="EditOrganization" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="StakeholderId" />
                    <input type="hidden" asp-for="ParentOrganizationId" />
                    <input type="hidden" asp-for="Level" />

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ManagerContactId" class="form-label"></label>
                        <select asp-for="ManagerContactId" class="form-select" asp-items="ViewBag.AvailableContacts">
                            <option value="">-- انتخاب کنید --</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" type="number" class="form-control" min="1" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <a asp-action="OrganizationChart" asp-route-stakeholderId="@ViewBag.StakeholderId" 
                               class="btn btn-secondary w-100">
                                <i class="fa fa-times me-1"></i> انصراف
                            </a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fa fa-check me-1"></i> ذخیره تغییرات
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}