@model List<StakeholderOrganizationPosition>
@{
    ViewData["Title"] = "مدیریت سمت‌ها - " + ViewBag.OrganizationTitle;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa fa-id-badge me-2"></i>
            @ViewData["Title"]
        </h3>
        <div class="block-options">
            <a asp-action="OrganizationChart" asp-route-stakeholderId="@ViewBag.StakeholderId" 
               class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-right me-1"></i> بازگشت
            </a>
            <button type="button" class="btn btn-sm btn-alt-success" 
                    data-toggle="modal-ajax"
                    href="@Url.Action("AddPositionModal", new { organizationId = ViewBag.OrganizationId })">
                <i class="fa fa-plus me-1"></i> سمت جدید
            </button>
        </div>
    </div>

    <div class="block-content">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>عنوان سمت</th>
                            <th>سطح قدرت</th>
                            <th>ترتیب نمایش</th>
                            <th class="text-center">پیش‌فرض</th>
                            <th class="text-center">وضعیت</th>
                            <th class="text-center">تعداد افراد</th>
                            <th class="text-center" style="width: 150px;">عملیات</th>
                        </tr>
                    </thead>
                    <tbody id="positionsTableBody">
                        @await Html.PartialAsync("_PositionsTableRows", Model)
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fa fa-id-badge fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">هیچ سمتی تعریف نشده است</h4>
                <p class="text-muted mb-4">برای شروع، اولین سمت را ایجاد کنید</p>
                <button type="button" class="btn btn-primary" 
                        data-toggle="modal-ajax"
                        href="@Url.Action("AddPositionModal", new { organizationId = ViewBag.OrganizationId })">
                    <i class="fa fa-plus me-1"></i> ایجاد اولین سمت
                </button>
            </div>
        }
    </div>
</div>

