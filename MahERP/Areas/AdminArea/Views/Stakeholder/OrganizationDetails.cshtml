@model StakeholderOrganizationViewModel
@{
    ViewData["Title"] = "جزئیات واحد - " + Model.Title;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa fa-building me-2"></i>
            @ViewData["Title"]
        </h3>
        <div class="block-options">
            <button type="button" class="btn btn-sm btn-alt-secondary" onclick="history.back()">
                <i class="fa fa-arrow-right me-1"></i> بازگشت
            </button>
            <a asp-action="EditOrganization" asp-route-id="@Model.Id" class="btn btn-sm btn-alt-primary">
                <i class="fa fa-edit me-1"></i> ویرایش
            </a>
        </div>
    </div>

    <div class="block-content">
        <!-- اطلاعات اصلی -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <i class="fa fa-info-circle me-2"></i> اطلاعات واحد
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless mb-0">
                            <tr>
                                <td class="fw-bold" style="width: 40%;">عنوان:</td>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">سطح:</td>
                                <td>سطح @Model.Level</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">واحد والد:</td>
                                <td>@(Model.ParentOrganizationTitle ?? "ندارد")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">مدیر واحد:</td>
                                <td>@(Model.ManagerName ?? "تعیین نشده")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">وضعیت:</td>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </td>
                            </tr>
                        </table>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <hr />
                            <p class="mb-0">
                                <strong>توضیحات:</strong><br />
                                @Model.Description
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <i class="fa fa-chart-bar me-2"></i> آمار واحد
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="py-3 bg-light rounded">
                                    <h3 class="mb-1">@(ViewBag.Positions?.Count ?? 0)</h3>
                                    <small class="text-muted">سمت</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="py-3 bg-light rounded">
                                    <h3 class="mb-1">@(ViewBag.Members?.Count ?? 0)</h3>
                                    <small class="text-muted">عضو</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="py-3 bg-light rounded">
                                    <h3 class="mb-1">@(Model.ChildOrganizations?.Count ?? 0)</h3>
                                    <small class="text-muted">زیرمجموعه</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- اعضای واحد -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fa fa-users me-2"></i> اعضای واحد
                <a asp-action="AddOrganizationMember" asp-route-organizationId="@Model.Id" 
                   class="btn btn-sm btn-success float-end">
                    <i class="fa fa-plus me-1"></i> افزودن عضو
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.Members != null && ViewBag.Members.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th>سمت</th>
                                    <th>نقش</th>
                                    <th>تاریخ پیوستن</th>
                                    <th>وضعیت</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in ViewBag.Members)
                                {
                                    <tr>
                                        <td>@member.Contact.FullName</td>
                                        <td>@(member.Position?.Title ?? "-")</td>
                                        <td>
                                            @if (member.IsSupervisor)
                                            {
                                                <span class="badge bg-warning">ناظر</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">عضو</span>
                                            }
                                        </td>
                                        <td>@member.JoinDate.ToString("yyyy/MM/dd")</td>
                                        <td>
                                            @if (member.IsActive)
                                            {
                                                <span class="badge bg-success">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">غیرفعال</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">هیچ عضوی ثبت نشده است</p>
                }
            </div>
        </div>

        <!-- سمت‌های واحد -->
        <div class="card">
            <div class="card-header">
                <i class="fa fa-id-badge me-2"></i> سمت‌های تعریف شده
                <a asp-action="ManagePositions" asp-route-organizationId="@Model.Id" 
                   class="btn btn-sm btn-primary float-end">
                    <i class="fa fa-cog me-1"></i> مدیریت سمت‌ها
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.Positions != null && ViewBag.Positions.Count > 0)
                {
                    <div class="row">
                        @foreach (var position in ViewBag.Positions)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card border">
                                    <div class="card-body">
                                        <h6 class="mb-2">
                                            @position.Title
                                            @if (position.IsDefault)
                                            {
                                                <span class="badge bg-success">پیش‌فرض</span>
                                            }
                                        </h6>
                                        <p class="small text-muted mb-2">سطح قدرت: @position.PowerLevel</p>
                                        <p class="small mb-0">
                                            اعضا: <strong>@(position.Members?.Count ?? 0)</strong> نفر
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">هیچ سمتی تعریف نشده است</p>
                }
            </div>
        </div>
    </div>
</div>