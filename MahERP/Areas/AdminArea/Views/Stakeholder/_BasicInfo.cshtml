@model StakeholderViewModel

<div class="row">
    <div class="col-md-6">
        <h4 class="mb-4"><i class="fa fa-user-circle me-2 text-primary"></i>اطلاعات شخصی</h4>
        
        @if (Model.PersonType == 0)
        {
            <div class="mb-3">
                <label class="form-label fw-bold">نام و نام خانوادگی</label>
                <div class="form-control-plaintext">@Model.FirstName @Model.LastName</div>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">کد ملی</label>
                <div class="form-control-plaintext">@(Model.NationalCode ?? "-")</div>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">جنسیت</label>
                <div class="form-control-plaintext">@Model.GenderText</div>
            </div>
        }
        else
        {
            <div class="mb-3">
                <label class="form-label fw-bold">نام شرکت</label>
                <div class="form-control-plaintext">@Model.CompanyName</div>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">شماره ثبت</label>
                <div class="form-control-plaintext">@(Model.RegistrationNumber ?? "-")</div>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">کد اقتصادی</label>
                <div class="form-control-plaintext">@(Model.EconomicCode ?? "-")</div>
            </div>
        }
    </div>

    <div class="col-md-6">
        <h4 class="mb-4"><i class="fa fa-address-book me-2 text-info"></i>اطلاعات تماس</h4>
        
        <div class="mb-3">
            <label class="form-label fw-bold">تلفن همراه</label>
            <div class="form-control-plaintext">@(Model.Mobile ?? "-")</div>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">تلفن ثابت</label>
            <div class="form-control-plaintext">@(Model.Phone ?? "-")</div>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">ایمیل</label>
            <div class="form-control-plaintext">@(Model.Email ?? "-")</div>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">آدرس</label>
            <div class="form-control-plaintext">@(Model.Address ?? "-")</div>
        </div>
    </div>
</div>