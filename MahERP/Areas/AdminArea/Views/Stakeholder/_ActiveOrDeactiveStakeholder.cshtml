@model Stakeholder
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">@ViewBag.ModalTitle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-controller="Stakeholder" asp-action="ActiveOrDeactiveStakeholderPost" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IsActive" />

        <div class="text-center">
            @if (Model.IsActive == true)
            {
                <i class="fa fa-3x fa-ban text-warning mb-3"></i>
                <p>آیا از غیرفعال کردن طرف حساب <strong>@Model.FirstName @Model.LastName</strong> مطمئن هستید؟</p>
                <p class="text-muted">طرف حساب قابل فعال‌سازی مجدد خواهد بود.</p>
            }
            else
            {
                <i class="fa fa-3x fa-check-circle text-success mb-3"></i>
                <p>آیا از فعال کردن طرف حساب <strong>@Model.FirstName @Model.LastName</strong> مطمئن هستید؟</p>
                <p class="text-muted">طرف حساب دوباره قابل استفاده خواهد بود.</p>
            }
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">انصراف</button>
    @if (Model.IsActive == true)
    {
        <button type="button" class="btn btn-warning" data-save="modal">غیرفعال کردن</button>
    }
    else
    {
        <button type="button" class="btn btn-success" data-save="modal">فعال کردن</button>
    }
</div>