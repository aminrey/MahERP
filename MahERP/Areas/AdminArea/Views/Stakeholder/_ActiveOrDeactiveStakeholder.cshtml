@model Stakeholder
@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form asp-controller="Stakeholder" asp-action="ActiveOrDeactiveStakeholderPost" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <div class="modal-header @ViewBag.themeclass">
                <h5 class="modal-title text-white">
                    <i class="fa fa-@(Model.IsActive ? "ban" : "check") me-2"></i>
                    @ViewBag.ModalTitle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="text-center py-4">
                    @if (Model.IsActive == true)
                    {
                        <div class="mb-4">
                            <i class="fa fa-ban fa-4x text-danger"></i>
                        </div>
                        <h4 class="mb-3">غیرفعال کردن طرف حساب</h4>
                        <div class="alert alert-warning">
                            <p class="mb-2">
                                آیا از غیرفعال کردن طرف حساب 
                                <strong class="text-dark">@Model.FirstName @Model.LastName</strong> 
                                مطمئن هستید؟
                            </p>
                            @if (Model.PersonType == 1 && !string.IsNullOrEmpty(Model.CompanyName))
                            {
                                <p class="mb-0 small">
                                    <strong>شرکت:</strong> @Model.CompanyName
                                </p>
                            }
                        </div>
                        <p class="text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            طرف حساب قابل فعال‌سازی مجدد خواهد بود.
                        </p>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fa fa-check-circle fa-4x text-success"></i>
                        </div>
                        <h4 class="mb-3">فعال کردن طرف حساب</h4>
                        <div class="alert alert-success">
                            <p class="mb-2">
                                آیا از فعال کردن طرف حساب 
                                <strong class="text-dark">@Model.FirstName @Model.LastName</strong> 
                                مطمئن هستید؟
                            </p>
                            @if (Model.PersonType == 1 && !string.IsNullOrEmpty(Model.CompanyName))
                            {
                                <p class="mb-0 small">
                                    <strong>شرکت:</strong> @Model.CompanyName
                                </p>
                            }
                        </div>
                        <p class="text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            طرف حساب دوباره قابل استفاده خواهد بود.
                        </p>
                    }
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i>
                    انصراف
                </button>
                @if (Model.IsActive == true)
                {
                    <button type="button" class="btn btn-danger" data-save="modal">
                        <i class="fa fa-ban me-1"></i>
                        غیرفعال کردن
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-success" data-save="modal">
                        <i class="fa fa-check me-1"></i>
                        فعال کردن
                    </button>
                }
            </div>
        </form>
    </div>
</div>