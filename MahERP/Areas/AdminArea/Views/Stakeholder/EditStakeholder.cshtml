@model StakeholderViewModel
@{
    ViewData["Title"] = $"ویرایش طرف حساب - {Model.FullName}";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">ویرایش طرف حساب</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Stakeholder")">طرف حساب‌ها</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Details", "Stakeholder", new { id = Model.Id })">@Model.FullName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">ویرایش</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Edit Stakeholder Form -->
    <form method="POST" action="@Url.Action("EditStakeholder", "Stakeholder")" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <input asp-for="CRMInfo.Id" type="hidden" />

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">اطلاعات اصلی</h3>
                <div class="block-options">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-check me-1"></i> ذخیره تغییرات
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="mb-4">
                            <label class="form-label" for="StakeholderType">نوع طرف حساب <span class="text-danger">*</span></label>
                            <select asp-for="StakeholderType" asp-items="StaticSelectLists.StakeholderTypes" class="form-select"></select>
                            <span asp-validation-for="StakeholderType" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="FirstName">نام <span class="text-danger">*</span></label>
                                    <input asp-for="FirstName" class="form-control" placeholder="نام کوچک طرف حساب را وارد کنید">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="LastName">نام خانوادگی <span class="text-danger">*</span></label>
                                    <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی طرف حساب را وارد کنید">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CompanyName">نام شرکت</label>
                            <input asp-for="CompanyName" class="form-control" placeholder="نام شرکت را وارد کنید">
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Phone">تلفن ثابت</label>
                                    <input asp-for="Phone" class="form-control" placeholder="تلفن ثابت را وارد کنید">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Mobile">تلفن همراه</label>
                                    <input asp-for="Mobile" class="form-control" placeholder="تلفن همراه را وارد کنید">
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="Email">ایمیل</label>
                                    <input asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="NationalCode">کد ملی</label>
                                    <input asp-for="NationalCode" class="form-control" placeholder="کد ملی را وارد کنید">
                                    <span asp-validation-for="NationalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label" for="PostalCode">کد پستی</label>
                                    <input asp-for="PostalCode" class="form-control" placeholder="کد پستی را وارد کنید">
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-check">
                                        <input asp-for="IsActive" class="form-check-input">
                                        <span class="form-check-label">وضعیت فعال</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Address">آدرس</label>
                            <textarea asp-for="Address" class="form-control" rows="4" placeholder="آدرس را وارد کنید"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="Description">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات اضافی را وارد کنید"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CRM Information -->
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">اطلاعات CRM</h3>
                <div class="block-options">
                    <button type="button" class="btn-block-option" data-toggle="block-option" data-action="content_toggle"></button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_LeadSource">منبع آشنایی</label>
                            <select asp-for="CRMInfo.LeadSource" asp-items="StaticSelectLists.LeadSources" class="form-select"></select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_SalesStage">مرحله فروش</label>
                            <select asp-for="CRMInfo.SalesStage" asp-items="StaticSelectLists.SalesStages" class="form-select"></select>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_PotentialValue">ارزش بالقوه (میلیون تومان)</label>
                                    <input asp-for="CRMInfo.PotentialValue" class="form-control" placeholder="ارزش بالقوه مشتری">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_CreditRating">رتبه اعتباری</label>
                                    <select asp-for="CRMInfo.CreditRating" asp-items="StaticSelectLists.CreditRatings" class="form-select">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_Industry">صنعت / حوزه فعالیت</label>
                            <input asp-for="CRMInfo.Industry" class="form-control" placeholder="صنعت یا حوزه فعالیت مشتری">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_EmployeeCount">تعداد کارمندان</label>
                                    <input asp-for="CRMInfo.EmployeeCount" class="form-control" placeholder="تعداد کارمندان">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_AnnualRevenue">گردش مالی سالانه (میلیون تومان)</label>
                                    <input asp-for="CRMInfo.AnnualRevenue" class="form-control" placeholder="گردش مالی سالانه">
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_SalesRepUserId">کارشناس فروش اختصاصی</label>
                            <select asp-for="CRMInfo.SalesRepUserId" asp-items="ViewBag.SalesReps" class="form-select">
                                <option value="">انتخاب کنید</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_Preferences">علاقه‌مندی‌ها و ترجیحات</label>
                            <textarea asp-for="CRMInfo.Preferences" class="form-control" rows="4" placeholder="علاقه‌مندی‌ها و ترجیحات مشتری"></textarea>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_InternalNotes">یادداشت‌های داخلی</label>
                            <textarea asp-for="CRMInfo.InternalNotes" class="form-control" rows="4" placeholder="یادداشت‌های داخلی (فقط برای استفاده داخلی)"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <button type="button" class="btn btn-alt-secondary" onclick="window.history.back();">
                    <i class="fa fa-arrow-right me-1"></i> انصراف
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ذخیره تغییرات
                </button>
            </div>
        </div>
    </form>
    <!-- END Edit Stakeholder Form -->
</div>
<!-- END Page Content -->
@section scripts {
    <script>
        $(document).ready(function() {
            // بررسی نوع طرف حساب و نمایش/عدم نمایش بخش های مرتبط
            $('#StakeholderType').change(function() {
                // اگر مشتری باشد، بخش CRM را نمایش بده
                if ($(this).val() == "0") {
                    $('.block-rounded:eq(1)').show();
                } else {
                    $('.block-rounded:eq(1)').hide();
                }
            });

            // اعمال تغییرات بر اساس مقدار اولیه
            $('#StakeholderType').trigger('change');
        });
    </script>
}