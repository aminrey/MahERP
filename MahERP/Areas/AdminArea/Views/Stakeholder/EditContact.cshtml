@model StakeholderContactViewModel
@{
    ViewData["Title"] = "ویرایش فرد مرتبط";
    var stakeholderName = ViewBag.StakeholderName;
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">ویرایش فرد مرتبط</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Stakeholder")">طرف حساب‌ها</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Details", "Stakeholder", new { id = Model.StakeholderId })">@stakeholderName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">ویرایش فرد مرتبط</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Edit Contact Form -->
    <form method="POST" action="@Url.Action("EditContact", "Stakeholder")">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <input asp-for="StakeholderId" type="hidden" />

        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">ویرایش فرد مرتبط برای @stakeholderName</h3>
                <div class="block-options">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-check me-1"></i> ذخیره تغییرات
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <!-- نام -->
                        <div class="mb-4">
                            <label class="form-label" for="FirstName">نام <span class="text-danger">*</span></label>
                            <input asp-for="FirstName" class="form-control" placeholder="نام کوچک را وارد کنید">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- نام خانوادگی -->
                        <div class="mb-4">
                            <label class="form-label" for="LastName">نام خانوادگی <span class="text-danger">*</span></label>
                            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی را وارد کنید">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- عنوان شغلی -->
                        <div class="mb-4">
                            <label class="form-label" for="JobTitle">عنوان شغلی</label>
                            <input asp-for="JobTitle" class="form-control" placeholder="مثال: مدیر فروش">
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <!-- دپارتمان -->
                        <div class="mb-4">
                            <label class="form-label" for="Department">دپارتمان</label>
                            <input asp-for="Department" class="form-control" placeholder="مثال: فروش، مالی، فنی">
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                      


                        <!-- تلفن ثابت -->
                        <div class="mb-4">
                            <label class="form-label" for="Phone">تلفن ثابت</label>
                            <input asp-for="Phone" class="form-control" placeholder="تلفن ثابت را وارد کنید">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- تلفن همراه -->
                        <div class="mb-4">
                            <label class="form-label" for="Mobile">تلفن همراه</label>
                            <input asp-for="Mobile" class="form-control" placeholder="تلفن همراه را وارد کنید">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>

                        <!-- ایمیل -->
                        <div class="mb-4">
                            <label class="form-label" for="Email">ایمیل</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل را وارد کنید">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- کد ملی -->
                        <div class="mb-4">
                            <label class="form-label" for="NationalCode">کد ملی</label>
                            <input asp-for="NationalCode" class="form-control" placeholder="کد ملی 10 رقمی" maxlength="10">
                            <span asp-validation-for="NationalCode" class="text-danger"></span>
                        </div>

                        <!-- یادداشت -->
                        <div class="mb-4">
                            <label class="form-label" for="Notes">یادداشت</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="یادداشت یا توضیحات اضافی"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- Checkboxes -->
                        <div class="mb-4">
                            <div class="form-check form-switch mb-2">
                                <input asp-for="IsPrimary" type="checkbox" class="form-check-input">
                                <label asp-for="IsPrimary" class="form-check-label">مخاطب اصلی</label>
                            </div>
                            <small class="text-muted d-block mb-3">
                                مخاطب اصلی به عنوان فرد ارتباطی پیش‌فرض برای این طرف حساب در نظر گرفته می‌شود
                            </small>

                            <div class="form-check form-switch mb-2">
                                <input asp-for="IsDecisionMaker" type="checkbox" class="form-check-input">
                                <label asp-for="IsDecisionMaker" class="form-check-label">تصمیم‌گیرنده</label>
                            </div>

                            <div class="form-check form-switch">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input">
                                <label asp-for="IsActive" class="form-check-label">وضعیت فعال</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <a href="@Url.Action("Details", "Stakeholder", new { id = Model.StakeholderId })" class="btn btn-alt-secondary">
                    <i class="fa fa-arrow-right me-1"></i> انصراف
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ذخیره تغییرات
                </button>
            </div>
        </div>
    </form>
    <!-- END Edit Contact Form -->
</div>
<!-- END Page Content -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}