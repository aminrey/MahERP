@model List<StakeholderContact>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fa fa-users me-2 text-success"></i>افراد مرتبط</h4>
    <a href="@Url.Action("AddContact", "Stakeholder", new { stakeholderId = ViewContext.RouteData.Values["id"] })" 
       class="btn btn-sm btn-success">
        <i class="fa fa-plus me-1"></i> افزودن شخص جدید
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-vcenter">
            <thead>
                <tr>
                    <th>نام</th>
                    <th>عنوان شغلی</th>
                    <th>تلفن</th>
                    <th>ایمیل</th>
                    <th class="text-center">وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.FirstName @contact.LastName</td>
                        <td>@(contact.JobTitle ?? "-")</td>
                        <td>@(contact.Phone ?? contact.Mobile ?? "-")</td>
                        <td>@(contact.Email ?? "-")</td>
                        <td class="text-center">
                            <span class="badge bg-@(contact.IsActive ? "success" : "danger")">
                                @(contact.IsActive ? "فعال" : "غیرفعال")
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("EditContact", "Stakeholder", new { id = contact.Id })" 
                               class="btn btn-sm btn-alt-secondary">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fa fa-users fa-3x text-muted mb-3"></i>
        <p class="text-muted">هیچ فرد مرتبطی ثبت نشده است</p>
    </div>
}