@model StakeholderViewModel
@{
    ViewData["Title"] = $"ویرایش اطلاعات CRM - {Model.FullName}";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">ویرایش اطلاعات CRM</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="نشانگر مسیر">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Stakeholder")">طرف حساب‌ها</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Details", "Stakeholder", new { id = Model.Id })">@Model.FullName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">ویرایش CRM</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Edit CRM Form -->
    <form method="POST" action="@Url.Action("EditCRM", "Stakeholder")">
        @Html.AntiForgeryToken()
        
        <!-- Hidden inputs برای اطلاعات اصلی طرف حساب -->
        <input asp-for="Id" type="hidden" />
        <input asp-for="FirstName" type="hidden" />
        <input asp-for="LastName" type="hidden" />
        <input asp-for="CompanyName" type="hidden" />
        <input asp-for="Phone" type="hidden" />
        <input asp-for="Mobile" type="hidden" />
        <input asp-for="Email" type="hidden" />
        <input asp-for="NationalCode" type="hidden" />
        <input asp-for="Address" type="hidden" />
        <input asp-for="PostalCode" type="hidden" />
        <input asp-for="Description" type="hidden" />
        <input asp-for="StakeholderType" type="hidden" />
        <input asp-for="IsActive" type="hidden" />
        <input asp-for="CreateDate" type="hidden" />
        <input asp-for="CRMInfo.Id" type="hidden" />
        
        <!-- نمایش اطلاعات کلی طرف حساب -->
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-user text-muted me-1"></i> اطلاعات طرف حساب
                </h3>
            </div>
            <div class="block-content">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">نام و نام خانوادگی</label>
                        <div class="form-control-plaintext fw-semibold">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">شرکت</label>
                        <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.CompanyName) ? "-" : Model.CompanyName)</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">نوع طرف حساب</label>
                        <div class="form-control-plaintext">@Model.StakeholderTypeText</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">وضعیت</label>
                        <div class="form-control-plaintext">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- اطلاعات CRM -->
        <div class="block block-rounded">
            <div class="block-header block-header-default">
                <h3 class="block-title">
                    <i class="fa fa-chart-line text-muted me-1"></i> اطلاعات CRM
                </h3>
                <div class="block-options">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="fa fa-check me-1"></i> ذخیره تغییرات
                    </button>
                </div>
            </div>
            <div class="block-content">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_LeadSource">منبع آشنایی</label>
                                    <select asp-for="CRMInfo.LeadSource" asp-items="StaticSelectLists.LeadSources" class="form-select">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                    <span asp-validation-for="CRMInfo.LeadSource" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_SalesStage">مرحله فروش</label>
                                    <select asp-for="CRMInfo.SalesStage" asp-items="StaticSelectLists.SalesStages" class="form-select">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                    <span asp-validation-for="CRMInfo.SalesStage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_PotentialValue">ارزش بالقوه (میلیون تومان)</label>
                                    <input asp-for="CRMInfo.PotentialValue" class="form-control number-format" placeholder="ارزش بالقوه مشتری">
                                    <span asp-validation-for="CRMInfo.PotentialValue" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_CreditRating">رتبه اعتباری</label>
                                    <select asp-for="CRMInfo.CreditRating" asp-items="StaticSelectLists.CreditRatings" class="form-select">
                                        <option value="">انتخاب کنید</option>
                                    </select>
                                    <span asp-validation-for="CRMInfo.CreditRating" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_Industry">صنعت / حوزه فعالیت</label>
                            <input asp-for="CRMInfo.Industry" class="form-control" placeholder="صنعت یا حوزه فعالیت مشتری">
                            <span asp-validation-for="CRMInfo.Industry" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_EmployeeCount">تعداد کارمندان</label>
                                    <input asp-for="CRMInfo.EmployeeCount" class="form-control" type="number" placeholder="تعداد کارمندان">
                                    <span asp-validation-for="CRMInfo.EmployeeCount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label" for="CRMInfo_AnnualRevenue">گردش مالی سالانه (میلیون تومان)</label>
                                    <input asp-for="CRMInfo.AnnualRevenue" class="form-control number-format" placeholder="گردش مالی سالانه">
                                    <span asp-validation-for="CRMInfo.AnnualRevenue" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_SalesRepUserId">کارشناس فروش اختصاصی</label>
                            <select asp-for="CRMInfo.SalesRepUserId" asp-items="ViewBag.SalesReps" class="form-select">
                                <option value="">انتخاب کنید</option>
                            </select>
                            <span asp-validation-for="CRMInfo.SalesRepUserId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_Preferences">علاقه‌مندی‌ها و ترجیحات</label>
                            <textarea asp-for="CRMInfo.Preferences" class="form-control" rows="4" placeholder="علاقه‌مندی‌ها و ترجیحات مشتری"></textarea>
                            <span asp-validation-for="CRMInfo.Preferences" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label" for="CRMInfo_InternalNotes">یادداشت‌های داخلی</label>
                            <textarea asp-for="CRMInfo.InternalNotes" class="form-control" rows="4" placeholder="یادداشت‌های داخلی (فقط برای استفاده داخلی)"></textarea>
                            <span asp-validation-for="CRMInfo.InternalNotes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-end">
                <a href="@Url.Action("Details", "Stakeholder", new { id = Model.Id })" class="btn btn-alt-secondary">
                    <i class="fa fa-arrow-right me-1"></i> بازگشت
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check me-1"></i> ذخیره تغییرات
                </button>
            </div>
        </div>
    </form>
    <!-- END Edit CRM Form -->
</div>
<!-- END Page Content -->

@section Scripts {
    <script>
        $(document).ready(function() {
            // اعمال فرمت عددی
            $('.number-format').each(function() {
                let value = $(this).val();
                if (value) {
                    value = value.toString().replace(/,/g, '').replace(/\.\d+/, '');
                    if (value !== '') {
                        value = parseInt(value, 10).toLocaleString('en-US');
                        $(this).val(value);
                    }
                }
            });
        });
    </script>
}