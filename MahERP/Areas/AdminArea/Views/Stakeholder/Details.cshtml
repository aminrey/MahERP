@model StakeholderViewModel
@{
    ViewData["Title"] = $"جزئیات طرف حساب - {Model.FullName}";
}

<!-- Hero -->
<div class="bg-image" style="background-image: url('/assets/media/photos/photo12.jpg');">
    <div class="bg-primary-dark-op">
        <div class="content content-full text-center py-6">
            <h1 class="h2 text-white mb-2">@Model.FullName</h1>
            <h2 class="h4 fw-normal text-white-75 mb-0">@Model.CompanyName</h2>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content content-full content-boxed">
    <!-- Quick Actions -->
    <div class="row items-push">
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("EditStakeholder", "Stakeholder", new { id = Model.Id })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-pencil-alt text-primary"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        ویرایش
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("ActiveOrDeactiveStakeholder", "Stakeholder", new { id = Model.Id })" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-@(Model.IsActive ? "ban text-danger" : "check text-success")"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        @(Model.IsActive ? "غیرفعال کردن" : "فعال کردن")
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("DeleteStakeholder", "Stakeholder", new { id = Model.Id })" data-toggle="modal-ajax">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-trash-alt text-danger"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        حذف
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddContact", "Stakeholder", new { stakeholderId = Model.Id })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-user-plus text-info"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        افزودن تماس
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddContract", "Contract", new { stakeholderId = Model.Id })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-file-contract text-warning"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        افزودن قرارداد
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddTask", "Task", new { stakeholderId = Model.Id })">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-tasks text-success"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        افزودن تسک
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->
    <!-- Stakeholder and CRM Info -->
    <div class="row">
        <!-- Stakeholder Info -->
        <div class="col-md-6 col-xl-7">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-user-tie text-muted me-1"></i> اطلاعات طرف حساب
                    </h3>
                    <div class="block-options">
                        <a href="@Url.Action("EditStakeholder", "Stakeholder", new { id = Model.Id })" class="btn btn-sm btn-alt-primary">
                            <i class="fa fa-pencil-alt me-1"></i> ویرایش
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">نام</label>
                                <div class="form-control-plaintext">@Model.FirstName</div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">نام خانوادگی</label>
                                <div class="form-control-plaintext">@Model.LastName</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">شرکت</label>
                                <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.CompanyName) ? "-" : Model.CompanyName)</div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">نوع طرف حساب</label>
                                <div class="form-control-plaintext">
                                    @switch (Model.StakeholderType)
                                    {
                                        case 0:
                                            <span class="badge bg-info">مشتری</span>
                                            break;
                                        case 1:
                                            <span class="badge bg-primary">تامین کننده</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-success">همکار</span>
                                            break;
                                        case 3:
                                            <span class="badge bg-warning">سایر</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">تلفن ثابت</label>
                                <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Phone) ? "-" : Model.Phone)</div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">تلفن همراه</label>
                                <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Mobile) ? "-" : Model.Mobile)</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">ایمیل</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">کد ملی</label>
                                <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.NationalCode) ? "-" : Model.NationalCode)</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">کد پستی</label>
                                <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.PostalCode) ? "-" : Model.PostalCode)</div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-4">
                                <label class="form-label">وضعیت</label>
                                <div class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">آدرس</label>
                        <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">توضیحات</label>
                        <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Stakeholder Info -->
        <!-- CRM Info -->
        <div class="col-md-6 col-xl-5">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-chart-line text-muted me-1"></i> اطلاعات CRM
                    </h3>
                    <div class="block-options">
                        <a href="@Url.Action("EditCRM", "Stakeholder", new { id = Model.Id })" class="btn btn-sm btn-alt-primary">
                            <i class="fa fa-pencil-alt me-1"></i> ویرایش
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    @if (Model.CRMInfo != null)
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">منبع آشنایی</label>
                                    <div class="form-control-plaintext">@Model.CRMInfo.LeadSourceText</div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">مرحله فروش</label>
                                    <div class="form-control-plaintext">@Model.CRMInfo.SalesStageText</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">آخرین تماس</label>
                                    <div class="form-control-plaintext">
                                        @(Model.CRMInfo.LastContactDate.HasValue? Model.CRMInfo.LastContactDate.Value.ToString("yyyy/MM/dd") : "-")
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">رتبه اعتباری</label>
                                    <div class="form-control-plaintext">
                                        @if (!string.IsNullOrEmpty(Model.CRMInfo.CreditRating))
                                        {
                                            switch (Model.CRMInfo.CreditRating)
                                            {
                                                case "A":
                                                    <span class="badge bg-success">A</span>
                                                    break;
                                                case "B":
                                                    <span class="badge bg-info">B</span>
                                                    break;
                                                case "C":
                                                    <span class="badge bg-warning">C</span>
                                                    break;
                                                case "D":
                                                    <span class="badge bg-danger">D</span>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">ارزش بالقوه</label>
                                    <div class="form-control-plaintext">
                                        @(Model.CRMInfo.PotentialValue.HasValue ? $"{Model.CRMInfo.PotentialValue.Value:N0} میلیون تومان" : "-")
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">صنعت</label>
                                    <div class="form-control-plaintext">
                                        @(string.IsNullOrEmpty(Model.CRMInfo.Industry) ? "-" : Model.CRMInfo.Industry)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">تعداد کارمندان</label>
                                    <div class="form-control-plaintext">
                                        @(Model.CRMInfo.EmployeeCount.HasValue ? $"{Model.CRMInfo.EmployeeCount.Value:N0} نفر" : "-")
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-4">
                                    <label class="form-label">گردش مالی سالانه</label>
                                    <div class="form-control-plaintext">
                                        @(Model.CRMInfo.AnnualRevenue.HasValue ? $"{Model.CRMInfo.AnnualRevenue.Value:N0} میلیون تومان" : "-")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">کارشناس فروش</label>
                            <div class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.CRMInfo.SalesRepUserId))
                                {
                                    <div class="d-flex align-items-center">
                                        <img class="img-avatar img-avatar32 me-2" src="/assets/media/avatars/avatar10.jpg" alt="کارشناس فروش">
                                        <span>@ViewBag.SalesRepName</span>
                                    </div>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">علاقه‌مندی‌ها و ترجیحات</label>
                            <div class="form-control-plaintext">
                                @(string.IsNullOrEmpty(Model.CRMInfo.Preferences) ? "-" : Model.CRMInfo.Preferences)
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">یادداشت‌های داخلی</label>
                            <div class="form-control-plaintext">
                                @(string.IsNullOrEmpty(Model.CRMInfo.InternalNotes) ? "-" : Model.CRMInfo.InternalNotes)
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fa fa-info-circle fa-3x text-muted mb-3"></i>
                            <p class="mb-3">اطلاعات CRM برای این طرف حساب ثبت نشده است.</p>
                            <a href="@Url.Action("EditCRM", "Stakeholder", new { id = Model.Id })" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> افزودن اطلاعات CRM
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- END CRM Info -->
    </div>
    <!-- END Stakeholder and CRM Info -->
    <!-- Contacts and Related Data -->
    <div class="row">
        <!-- Contacts -->
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-address-book text-muted me-1"></i> افراد مرتبط
                    </h3>
                    <div class="block-options">
                        <a href="@Url.Action("AddContact", "Stakeholder", new { stakeholderId = Model.Id })" class="btn btn-sm btn-alt-primary">
                            <i class="fa fa-plus me-1"></i> افزودن
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    @if (ViewBag.Contacts != null && ((List<StakeholderContact>)ViewBag.Contacts).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th>نام</th>
                                        <th>سمت</th>
                                        <th>تلفن</th>
                                        <th class="text-center">وضعیت</th>
                                        <th class="text-center" style="width: 100px;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in (List<StakeholderContact>)ViewBag.Contacts)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@contact.FirstName @contact.LastName</td>
                                            <td>@(string.IsNullOrEmpty(contact.Position) ? "-" : contact.Position)</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.Mobile))
                                                {
                                                    <span class="text-success">@contact.Mobile</span>
                                                }
                                                else if (!string.IsNullOrEmpty(contact.Phone))
                                                {
                                                    <span>@contact.Phone</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (contact.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">غیرفعال</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a href="@Url.Action("EditContact", "Stakeholder", new { id = contact.Id })" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="ویرایش">
                                                        <i class="fa fa-fw fa-pencil-alt"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="fa fa-fw fa-ellipsis-v"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-end fs-sm">
                                                        <a class="dropdown-item" href="javascript:void(0)" onclick="openModal('@Url.Action("ToggleContactStatus", "Stakeholder", new { id = contact.Id })')">
                                                            @(contact.IsActive ? "غیرفعال کردن" : "فعال کردن")
                                                        </a>
                                                        <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="openModal('@Url.Action("DeleteContact", "Stakeholder", new { id = contact.Id })')">
                                                            <i class="fa fa-fw fa-trash-alt me-1"></i> حذف
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fa fa-users fa-3x text-muted mb-3"></i>
                            <p class="mb-3">هیچ فرد مرتبطی برای این طرف حساب ثبت نشده است.</p>
                            <a href="@Url.Action("AddContact", "Stakeholder", new { stakeholderId = Model.Id })" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> افزودن فرد مرتبط
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- END Contacts -->
        <!-- Contracts -->
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-file-contract text-muted me-1"></i> قراردادها
                    </h3>
                    <div class="block-options">
                        <a href="@Url.Action("AddContract", "Contract", new { stakeholderId = Model.Id })" class="btn btn-sm btn-alt-primary">
                            <i class="fa fa-plus me-1"></i> افزودن
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    @if (ViewBag.Contracts != null && ((List<Contract>)ViewBag.Contracts).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th>عنوان</th>
                                        <th>شماره</th>
                                        <th>تاریخ شروع</th>
                                        <th>وضعیت</th>
                                        <th class="text-end">مبلغ</th>
                                        <th class="text-center" style="width: 100px;">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contract in (List<Contract>)ViewBag.Contracts)
                                    {
                                        <tr>
                                            <td class="fw-semibold">
                                                <a href="@Url.Action("Details", "Contract", new { id = contract.Id })">
                                                    @contract.Title
                                                </a>
                                            </td>
                                            <td>@contract.ContractNumber</td>
                                            <td>@contract.StartDate.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                @switch (contract.Status)
                                                {
                                                    case 0:
                                                        <span class="badge bg-info">پیش‌نویس</span>
                                                        break;
                                                    case 1:
                                                        <span class="badge bg-success">فعال</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-warning">در حال اتمام</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-danger">پایان یافته</span>
                                                        break;
                                                    case 4:
                                                        <span class="badge bg-dark">لغو شده</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end fw-semibold">
                                                @contract.ContractValue?.ToString("N0") ریال
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Details", "Contract", new { id = contract.Id })" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="مشاهده">
                                                    <i class="fa fa-fw fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fa fa-file-contract fa-3x text-muted mb-3"></i>
                            <p class="mb-3">هیچ قراردادی برای این طرف حساب ثبت نشده است.</p>
                            <a href="@Url.Action("AddContract", "Contract", new { stakeholderId = Model.Id })" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> افزودن قرارداد
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- END Contracts -->
    </div>
    <!-- END Contacts and Related Data -->
    <!-- Tasks and CRM Interactions -->
    <div class="row">
        <!-- Tasks -->
        <div class="col-xl-6">
            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title">
                        <i class="fa fa-tasks text-muted me-1"></i> تسک‌ها
                    </h3>
                    <div class="block-options">
                        <a href="@Url.Action("AddTask", "Task", new { stakeholderId = Model.Id })" class="btn btn-sm btn-alt-primary">
                            <i class="fa fa-plus me-1"></i> افزودن
                        </a>
                    </div>
                </div>
                <div class="block-content">
                    @if (ViewBag.Tasks != null && ((List<Tasks>)ViewBag.Tasks).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-vcenter">
                                <thead>
                                    <tr>
                                        <th>کد</th>
                                        <th>عنوان</th>
                                        <th>اولویت</th>
                                        <th>وضعیت</th>
                                        <th>مهلت</th>
