@model List<Contract>
@{
    ViewData["Title"] = ViewBag.Title ?? "مدیریت قراردادها";
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">@(ViewBag.Title ?? "مدیریت قراردادها")</h1>
            <nav class="flex-shrink-0 my-2 my-sm-0 ms-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">مدیریت</li>
                    <li class="breadcrumb-item active" aria-current="page">قراردادها</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->

<!-- Page Content -->
<div class="content">
    <!-- Quick Actions -->
    <div class="row items-push">
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("AddContract", "Contract")">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-plus text-success"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        افزودن قرارداد جدید
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="#" data-bs-toggle="modal" data-bs-target="#modal-search">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-search text-primary"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        جستجوی قرارداد
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("ActiveContracts", "Contract")">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-check-circle text-success"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        قراردادهای فعال
                    </p>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a class="block block-rounded block-link-shadow text-center h-100 mb-0" href="@Url.Action("ExpiredContracts", "Contract")">
                <div class="block-content py-5">
                    <div class="fs-3 fw-semibold mb-1">
                        <i class="fa fa-clock text-warning"></i>
                    </div>
                    <p class="fw-semibold fs-sm text-muted text-uppercase mb-0">
                        قراردادهای منقضی شده
                    </p>
                </div>
            </a>
        </div>
    </div>
    <!-- END Quick Actions -->

    <!-- Filter Toolbar -->
    <div class="block block-rounded">
        <div class="block-content block-content-full bg-body-light">
            <div class="row">
                <div class="col-md-6">
                    @if (ViewBag.StakeholderId != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="me-2">قراردادهای:</span>
                            <span class="badge bg-primary p-2">@ViewBag.StakeholderName</span>
                            <a href="@Url.Action("Index", "Contract")" class="btn btn-sm btn-alt-secondary ms-2">
                                <i class="fa fa-times"></i> حذف فیلتر
                            </a>
                        </div>
                    }
                    @if (ViewBag.StatusFilter != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="me-2">وضعیت:</span>
                            <span class="badge bg-primary p-2">@ViewBag.StatusText</span>
                            <a href="@Url.Action("Index", "Contract")" class="btn btn-sm btn-alt-secondary ms-2">
                                <i class="fa fa-times"></i> حذف فیلتر
                            </a>
                        </div>
                    }
                    @if (ViewBag.SearchTerm != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="me-2">جستجو برای:</span>
                            <span class="badge bg-primary p-2">@ViewBag.SearchTerm</span>
                            <a href="@Url.Action("Index", "Contract")" class="btn btn-sm btn-alt-secondary ms-2">
                                <i class="fa fa-times"></i> حذف فیلتر
                            </a>
                        </div>
                    }
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn btn-sm btn-alt-secondary" id="status-filter-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-fw fa-filter"></i> وضعیت
                        </button>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="status-filter-dropdown">
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("FilterByStatus", "Contract", new { status = 0 })">
                                پیش‌نویس
                                <span class="badge bg-info">@Model.Count(c => c.Status == 0)</span>
                            </a>
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("FilterByStatus", "Contract", new { status = 1 })">
                                فعال
                                <span class="badge bg-success">@Model.Count(c => c.Status == 1)</span>
                            </a>
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("FilterByStatus", "Contract", new { status = 2 })">
                                تمام شده
                                <span class="badge bg-warning">@Model.Count(c => c.Status == 2)</span>
                            </a>
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("FilterByStatus", "Contract", new { status = 3 })">
                                لغو شده
                                <span class="badge bg-danger">@Model.Count(c => c.Status == 3)</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Filter Toolbar -->

    <!-- Contracts List -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">لیست قراردادها</h3>
            <div class="block-options">
                <span class="badge bg-primary">تعداد: @Model.Count()</span>
            </div>
        </div>
        <div class="block-content">
            <!-- Contracts Table -->
            <div class="table-responsive">
                <table class="table table-borderless table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th class="text-center">شماره قرارداد</th>
                            <th class="text-center">عنوان</th>
                            <th class="text-center">طرف حساب</th>
                            <th class="text-center">تاریخ شروع</th>
                            <th class="text-center">تاریخ پایان</th>
                            <th class="text-center">مبلغ (تومان)</th>
                            <th class="text-center">وضعیت</th>
                            <th class="text-center" style="width: 100px;">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contract in Model)
                        {
                            <tr>
                                <td class="text-center fw-semibold">@contract.ContractNumber</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Details", "Contract", new { id = contract.Id })">@contract.Title</a>
                                </td>
                                <td class="text-center">
                                    @if (contract.Stakeholder != null)
                                    {
                                        <a href="@Url.Action("Details", "Stakeholder", new { id = contract.StakeholderId })">
                                            @contract.Stakeholder.FirstName @contract.Stakeholder.LastName
                                        </a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center">@contract.StartDate.ToString("yyyy/MM/dd")</td>
                                <td class="text-center">
                                    @(contract.EndDate.HasValue ? contract.EndDate.Value.ToString("yyyy/MM/dd") : "-")
                                </td>
                                <td class="text-center fw-semibold">
                                    @contract.ContractValue?.ToString("N0")
                                </td>
                                <td class="text-center">
                                    @switch (contract.Status)
                                    {
                                        case 0:
                                            <span class="badge bg-info">پیش‌نویس</span>
                                            break;
                                        case 1:
                                            <span class="badge bg-success">فعال</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-warning">تمام شده</span>
                                            break;
                                        case 3:
                                            <span class="badge bg-danger">لغو شده</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">نامشخص</span>
                                            break;
                                    }
                                    @if (!contract.IsActive)
                                    {
                                        <span class="badge bg-danger ms-1">غیرفعال</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", "Contract", new { id = contract.Id })" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="جزئیات">
                                            <i class="fa fa-fw fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditContract", "Contract", new { id = contract.Id })" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="ویرایش">
                                            <i class="fa fa-fw fa-pencil-alt"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-fw fa-ellipsis-v"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end fs-sm">
                                            <a class="dropdown-item" href="javascript:void(0)" onclick="openModal('@Url.Action("ChangeStatus", "Contract", new { id = contract.Id })')">
                                                تغییر وضعیت
                                            </a>
                                            <a class="dropdown-item" href="javascript:void(0)" onclick="openModal('@Url.Action("ToggleActivation", "Contract", new { id = contract.Id })')">
                                                @(contract.IsActive ? "غیرفعال کردن" : "فعال کردن")
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END Contracts Table -->

            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fa fa-file-contract fa-3x text-muted mb-3"></i>
                    <p class="mb-3">هیچ قراردادی یافت نشد.</p>
                    <a href="@Url.Action("AddContract", "Contract")" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i> افزودن قرارداد جدید
                    </a>
                </div>
            }
        </div>
    </div>
    <!-- END Contracts List -->
</div>
<!-- END Page Content -->

<!-- Search Modal -->
<div class="modal fade" id="modal-search" tabindex="-1" role="dialog" aria-labelledby="modal-search" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-rounded block-transparent mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">جستجوی قرارداد</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-fw fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <form action="@Url.Action("Search", "Contract")" method="get">
                        <div class="mb-4">
                            <label class="form-label" for="searchTerm">جستجو</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="عنوان، شماره قرارداد یا نام طرف حساب">
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-alt-secondary me-1" data-bs-dismiss="modal">انصراف</button>
                            <button type="submit" class="btn btn-primary">جستجو</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Search Modal -->

<!-- Modal Container for dynamic content -->
<div class="modal fade" id="modal-contract" tabindex="-1" role="dialog" aria-labelledby="modal-contract" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- Dynamic content will be loaded here -->
            <div class="modal-body">
                <div class="text-center">
                    <i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i>
                    <h3 class="mt-2 mb-3">در حال بارگذاری...</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Function to open modal and load content
        function openModal(url) {
            $('#modal-contract .modal-content').html('<div class="modal-body text-center"><i class="fa fa-3x fa-spinner fa-spin text-primary my-3"></i><h3 class="mt-2 mb-3">در حال بارگذاری...</h3></div>');
            $('#modal-contract').modal('show');

            // Load content via AJAX
            $.get(url, function(data) {
                $('#modal-contract .modal-content').html(data);
            });
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}