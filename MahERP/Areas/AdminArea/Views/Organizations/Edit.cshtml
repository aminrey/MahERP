@model OrganizationViewModel
@{
    ViewData["Title"] = "ویرایش - " + Model.DisplayName;
}

<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <i class="fa fa-building me-2"></i>
            @ViewData["Title"]
        </h3>
        <div class="block-options">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-alt-secondary">
                <i class="fa fa-arrow-right me-1"></i> بازگشت
            </a>
        </div>
    </div>

    <div class="block-content block-content-full">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <!-- اطلاعات اصلی -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <i class="fa fa-info-circle me-2"></i> اطلاعات اصلی
                        </div>
                        <div class="card-body">
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" placeholder="نام سازمان" required />
                                <label asp-for="Name">نام سازمان *</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Brand" class="form-control" placeholder="نام برند" />
                                <label asp-for="Brand">نام برند</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="OrganizationType" class="form-select" required>
                                    <option value="">-- انتخاب کنید --</option>
                                    <option value="0">شرکت</option>
                                    <option value="1">سازمان</option>
                                    <option value="2">موسسه</option>
                                    <option value="3">نهاد</option>
                                </select>
                                <label asp-for="OrganizationType">نوع سازمان *</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="LegalRepresentative" class="form-control" placeholder="نماینده قانونی" />
                                <label asp-for="LegalRepresentative">نماینده قانونی</label>
                            </div>

                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label">فعال</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- اطلاعات قانونی -->
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <i class="fa fa-file-contract me-2"></i> اطلاعات قانونی
                        </div>
                        <div class="card-body">
                            <div class="form-floating mb-3">
                                <input asp-for="RegistrationNumber" class="form-control" 
                                       placeholder="شماره ثبت" maxlength="11" />
                                <label asp-for="RegistrationNumber">شماره ثبت</label>
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                <small class="text-muted">11 رقم</small>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="EconomicCode" class="form-control" 
                                       placeholder="کد اقتصادی" maxlength="12" />
                                <label asp-for="EconomicCode">کد اقتصادی</label>
                                <span asp-validation-for="EconomicCode" class="text-danger"></span>
                                <small class="text-muted">12 رقم</small>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="RegistrationDatePersian" class="form-control date-picker" 
                                       placeholder="1400/01/01" />
                                <label asp-for="RegistrationDatePersian">تاریخ ثبت</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Website" type="url" class="form-control" 
                                       placeholder="https://example.com" />
                                <label asp-for="Website">وب‌سایت</label>
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- اطلاعات تماس -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <i class="fa fa-phone me-2"></i> اطلاعات تماس
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="PrimaryPhone" class="form-control" placeholder="021-12345678" />
                                <label asp-for="PrimaryPhone">تلفن اصلی</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="info@example.com" />
                                <label asp-for="Email">ایمیل</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="SecondaryPhone" class="form-control" placeholder="021-87654321" />
                                <label asp-for="SecondaryPhone">تلفن دوم</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="PostalCode" class="form-control" placeholder="کد پستی" />
                                <label asp-for="PostalCode">کد پستی</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Address" class="form-control" rows="2" 
                                  placeholder="آدرس کامل..."></textarea>
                        <label asp-for="Address">آدرس</label>
                    </div>
                </div>
            </div>

            <!-- توضیحات -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <i class="fa fa-sticky-note me-2"></i> توضیحات
                </div>
                <div class="card-body">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="توضیحات اضافی..."></textarea>
                        <label asp-for="Description">توضیحات</label>
                    </div>
                </div>
            </div>

            <!-- دکمه‌ها -->
            <div class="row">
                <div class="col-6">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-alt-secondary w-100">
                        <i class="fa fa-times me-1"></i> انصراف
                    </a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-save me-1"></i> ذخیره تغییرات
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/js/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.fa.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.date-picker').datepicker({
                format: 'yyyy/mm/dd',
                language: 'fa',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/assets/js/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
}