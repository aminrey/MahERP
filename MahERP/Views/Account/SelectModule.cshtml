@using MahERP.DataModelLayer.Enums
@{
    ViewData["Title"] = "انتخاب ماژول";
    var enabledModules = ViewBag.EnabledModules as List<ModuleType>;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/assets/css/oneui.min.css" rel="stylesheet" />
</head>
<body>
    <div id="page-container" class="main-content-boxed">
        <main id="main-container">
            <div class="hero bg-primary-dark">
                <div class="hero-inner">
                    <div class="content content-full text-center">
                        <div class="py-4">
                            <div class="display-3 fw-bold text-white mb-2">
                                <i class="fa fa-cube"></i>
                            </div>
                            <h1 class="h2 fw-bold text-white mb-2">انتخاب ماژول کاری</h1>
                            <h2 class="h4 fw-normal text-white-75 mb-0">
                                لطفاً ماژول مورد نظر خود را انتخاب کنید
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content content-full">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="block block-rounded">
                            <div class="block-header block-header-default">
                                <h3 class="block-title">
                                    <i class="fa fa-th-large text-primary me-1"></i>
                                    ماژول‌های در دسترس شما
                                </h3>
                            </div>
                            <div class="block-content">
                                <div class="row g-4">
                                    @if (enabledModules != null && enabledModules.Any())
                                    {
                                        foreach (var module in enabledModules)
                                        {
                                            <div class="col-md-4">
                                                <div class="block block-rounded block-link-shadow text-center h-100">
                                                    <div class="block-content block-content-full">
                                                        <div class="py-3">
                                                            <div class="mb-3">
                                                                <i class="@module.GetIcon() fa-4x text-@module.GetColor()"></i>
                                                            </div>
                                                            <h4 class="fw-bold mb-2">@module.GetDisplayName()</h4>
                                                            <p class="text-muted small mb-3">
                                                                @switch (module)
                                                                {
                                                                    case ModuleType.Core:
                                                                        <text>مدیریت سیستم و تنظیمات</text>
                                                                        break;
                                                                    case ModuleType.Tasking:
                                                                        <text>مدیریت تسک‌ها و زمان‌بندی</text>
                                                                        break;
                                                                    case ModuleType.CRM:
                                                                        <text>ارتباط با مشتریان</text>
                                                                        break;
                                                                }
                                                            </p>
                                                            <form asp-action="SelectModule" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="moduleType" value="@((byte)module)" />
                                                                <button type="submit" class="btn btn-@module.GetColor() w-100 mb-2">
                                                                    <i class="fa fa-sign-in-alt me-1"></i>
                                                                    ورود به ماژول
                                                                </button>
                                                                <div class="form-check form-switch d-flex justify-content-center">
                                                                    <input class="form-check-input" type="checkbox" 
                                                                           name="setAsDefault" value="true" 
                                                                           id="default_@((byte)module)">
                                                                    <label class="form-check-label ms-2" for="default_@((byte)module)">
                                                                        پیش‌فرض
                                                                    </label>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>

                                <div class="alert alert-info mt-4 d-flex align-items-start">
                                    <i class="fa fa-lightbulb fa-2x me-3"></i>
                                    <div>
                                        <h6 class="alert-heading">نکته:</h6>
                                        <p class="mb-0">
                                            با انتخاب گزینه "پیش‌فرض"، دفعات بعد مستقیماً به این ماژول هدایت خواهید شد.
                                            می‌توانید در هر زمان از منوی بالا، ماژول را تغییر دهید.
                                        </p>
                                    </div>
                                </div>

                                <div class="text-center mt-4">
                                    <a href="/Account/LogOut" class="btn btn-alt-secondary">
                                        <i class="fa fa-sign-out-alt me-1"></i>
                                        خروج از سیستم
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/assets/js/oneui.app.min.js"></script>
</body>
</html>